<UserControl x:Class="UcPnPPrevNextJog.JogBtn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cui="clr-namespace:CUI;assembly=CUI"
             xmlns:local="clr-namespace:UcPnPPrevNextJog"
             mc:Ignorable="d">
    <!--<cui:Button Background="Transparent" BorderBrush="Transparent" BorderThickness="0">-->
        <Grid x:Name="mainGrid" MouseDown="mainGrid_MouseDown" MouseUp="mainGrid_MouseUp" MouseLeave="mainGrid_MouseLeave">
            <Path StrokeThickness="5" Stroke="#080808" Stretch="None" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Path.Fill>
                    <RadialGradientBrush RadiusX="1.5" RadiusY="1.5">
                        <GradientStop Color="#FF2C2C2C" Offset="0"/>
                        <GradientStop Color="#FF252525" Offset="1"/>
                        <GradientStop Color="Black" Offset="0.723"/>
                        <GradientStop Color="#FF151515" Offset="0.297"/>
                    </RadialGradientBrush>
                </Path.Fill>

                <Path.Effect>
                    <DropShadowEffect BlurRadius="5" Direction="0" RenderingBias= "Quality" ShadowDepth="0" Color="#e8e8e8"/>
                </Path.Effect>

                <Path.Data>
                    <PathGeometry>
                        <PathGeometry.Figures>
                            <PathFigure StartPoint="0, 10" IsClosed="true">
                                <LineSegment Point="0, 110"/>
                                <ArcSegment Point="10, 120" Size="10 10"/>
                                <ArcSegment Point="20, 110" Size="10 10"/>
                                <LineSegment Point="20, 80"/>
                                <ArcSegment Point="30, 70" Size="10 10" SweepDirection="Clockwise"/>

                                <!--<LineSegment Point="90, 70"/>
                            <ArcSegment Point="100, 60" Size="10 10"/>
                            <LineSegment Point="100, 10"/>
                            <ArcSegment Point="90, 0" Size="10 10"/>-->

                                <LineSegment Point="110, 70"/>
                                <ArcSegment Point="120, 60" Size="10 10"/>
                                <LineSegment Point="120, 10"/>
                                <ArcSegment Point="110, 0" Size="10 10"/>

                                <LineSegment Point="10, 0"/>
                                <ArcSegment Point="0, 10" Size="10 10"/>
                            </PathFigure>
                        </PathGeometry.Figures>
                    </PathGeometry>
                </Path.Data>
            </Path>
        <!--<cui:Button Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
            
        </cui:Button>-->
        </Grid>
    <!--</cui:Button>-->

</UserControl>


