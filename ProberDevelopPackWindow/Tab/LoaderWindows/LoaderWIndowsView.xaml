<UserControl x:Class="ProberDevelopPackWindow.Tab.LoaderWIndowsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProberDevelopPackWindow.Tab"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:pi="clr-namespace:ProberInterfaces;assembly=ProberInterfaces"
             mc:Ignorable="d" 
             Height="1010" Width="1140">

    <UserControl.Resources>
        <ResourceDictionary>

            <ObjectDataProvider x:Key="getDataFromControlMode" MethodName="GetValues" ObjectType="{x:Type System:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="pi:ExecutionControlMode"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>

        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl>

            <TabItem Header="Window">
                <StackPanel Orientation="Vertical">
                    <Button Content="Show Barcode Reader" Margin="4" FontSize="16" FontWeight="Bold"
                    Command="{Binding OpenBarcodeReaderWindowCommand}"/>
                    <Button Content="Show Transfer Object" Margin="4" FontSize="16" FontWeight="Bold"
                    Command="{Binding OpenTransferObjectWindowCommand}"/>
                    <Button Content="Show Foup Setting" Margin="4" FontSize="16" FontWeight="Bold"
                    Command="{Binding OpenFoupSettingWindowCommand}"/>
                    <Button Content="Show Loader Job" Margin="4" FontSize="16" FontWeight="Bold"
                    Command="{Binding OpenLoaderJobWindowCommand}"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="Lamp">
                <StackPanel Orientation="Vertical">
                    <Button Content="Set Lamp State (IDLE)" Margin="4" FontSize="16" FontWeight="Bold"
                    Command="{Binding SetLampStateCommand}" CommandParameter="{x:Static pi:ModuleStateEnum.IDLE}"/>
                    <Button Content="Set Lamp State (RUNNING)" Margin="4" FontSize="16" FontWeight="Bold"
                    Command="{Binding SetLampStateCommand}" CommandParameter="{x:Static pi:ModuleStateEnum.RUNNING}"/>
                    <Button Content="Set Lamp State (PAUSED)" Margin="4" FontSize="16" FontWeight="Bold"
                    Command="{Binding SetLampStateCommand}" CommandParameter="{x:Static pi:ModuleStateEnum.PAUSED}"/>
                    <Button Content="Set Lamp State (ABORT)" Margin="4" FontSize="16" FontWeight="Bold"
                    Command="{Binding SetLampStateCommand}" CommandParameter="{x:Static pi:ModuleStateEnum.ABORT}"/>
                    <Button Content="Set Lamp State (ERROR)" Margin="4" FontSize="16" FontWeight="Bold"
                    Command="{Binding SetLampStateCommand}" CommandParameter="{x:Static pi:ModuleStateEnum.ERROR}"/>
                    <Button Content="Set Lamp State (UNDEFINED)" Margin="4" FontSize="16" FontWeight="Bold"
                    Command="{Binding SetLampStateCommand}" CommandParameter="{x:Static pi:ModuleStateEnum.UNDEFINED}"/>
                </StackPanel>

            </TabItem>

            <TabItem Header="Pre-Aligner">
                <StackPanel Orientation="Vertical" Background="White" Margin="10">

                    <CheckBox x:Name="enableCheckBox" Content="Enable" Margin="0 0 0 10"/>

                    <StackPanel Orientation="Horizontal">
                        <Label Content="Control Mode" />
                        <ComboBox x:Name="controlModeComboBox" 
					  ItemsSource="{Binding Source={StaticResource getDataFromControlMode}}"
					  SelectedItem="{Binding GPLoader.preAlignerControlItems.ControlMode}" Margin="0 0 0 10" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Label Content="Event Code" />
                        <ComboBox x:Name="eventCodeComboBox" 
					  ItemsSource="{Binding GPLoader.preAlignerControlItems.EventCodeEnums}"
					  SelectedItem="{Binding GPLoader.preAlignerControlItems.SelectedCode}" Margin="0 0 0 10" />
                    </StackPanel>

                    <Button Content="Clear" Command="{Binding ClearPreAlignerControlCommand}"/>
                </StackPanel>

            </TabItem>

        </TabControl>
    </Grid>
</UserControl>
