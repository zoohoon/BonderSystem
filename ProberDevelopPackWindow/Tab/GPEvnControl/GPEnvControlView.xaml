<UserControl x:Class="ProberDevelopPackWindow.Tab.GPEnvValveControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProberDevelopPackWindow.Tab"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" x:Name="ucwindow"
             Height="1010" Width="1140">
    <Grid>
        <TabControl>
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="2,0">
                                    <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="LightSkyBlue" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <!-- GP Valve-->
            <TabItem Header="GP Valve">
                <ListView  x:Name="CellListView" ItemsSource="{Binding Cells}" Background="WhiteSmoke" 
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="VerticalContentAlignment" Value="Stretch" />
                            <!--<Setter Property="IsEnabled" Value="{Binding IsEnableTransfer, Mode=TwoWay}"/>-->
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="4" Rows="3"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="DimGray" BorderThickness="1" VerticalAlignment="Top">
                                <Grid Width="320" Height="280">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition Height="4*"/>
                                    </Grid.RowDefinitions>
                                    <Label x:Name="StageIndexLB" Background="#3C454F" Margin="2" Content="{Binding Index}" ContentStringFormat="Stage #{0}"
                                           Foreground="WhiteSmoke" FontSize="14" FontWeight="DemiBold" VerticalContentAlignment="Center"/>
                                    <StackPanel Orientation="Vertical" Grid.Row="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Content="In" Foreground="Black" HorizontalContentAlignment="Right"/>
                                            <ToggleButton Grid.Column="1" Style="{DynamicResource ON_OFF_ToggleBtn}" 
                                                  IsChecked="{Binding CoolantInValveState}" 
                                                  >
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="Checked">
                                                        <i:InvokeCommandAction Command="{Binding DataContext.InValveOnCommand, ElementName=ucwindow}"  
                                                   CommandParameter="{Binding ElementName=StageIndexLB, Path=Content}"/>
                                                    </i:EventTrigger>
                                                    <i:EventTrigger EventName="Unchecked">
                                                        <i:InvokeCommandAction Command="{Binding DataContext.InValveOffCommand, ElementName=ucwindow}"  
                                                   CommandParameter="{Binding ElementName=StageIndexLB, Path=Content}"/>
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </ToggleButton>
                                        </Grid>
                                        <Grid >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Content="Out" Foreground="Black" HorizontalContentAlignment="Right" Margin="0"/>
                                            <ToggleButton Grid.Column="1" Style="{DynamicResource ON_OFF_ToggleBtn}" 
                                                  IsChecked="{Binding CoolantOutValveState}" Margin="0">
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="Checked">
                                                        <i:InvokeCommandAction Command="{Binding DataContext.OutValveOnCommand, ElementName=ucwindow}"  
                                                   CommandParameter="{Binding ElementName=StageIndexLB, Path=Content}"/>
                                                    </i:EventTrigger>
                                                    <i:EventTrigger EventName="Unchecked">
                                                        <i:InvokeCommandAction Command="{Binding DataContext.OutValveOffCommand, ElementName=ucwindow}"  
                                                   CommandParameter="{Binding ElementName=StageIndexLB, Path=Content}"/>
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </ToggleButton>
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Content="Dry Air" Foreground="Black" HorizontalContentAlignment="Right" Margin="0"/>
                                            <ToggleButton Grid.Column="1" Style="{DynamicResource ON_OFF_ToggleBtn}"
                                                  IsChecked="{Binding DryAirValveState}" Margin="0">
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="Checked">
                                                        <i:InvokeCommandAction Command="{Binding DataContext.DryAirValveOnCommand, ElementName=ucwindow}"  
                                                   CommandParameter="{Binding ElementName=StageIndexLB, Path=Content}"/>
                                                    </i:EventTrigger>
                                                    <i:EventTrigger EventName="Unchecked">
                                                        <i:InvokeCommandAction Command="{Binding DataContext.DryAirValveOffCommand, ElementName=ucwindow}"  
                                                   CommandParameter="{Binding ElementName=StageIndexLB, Path=Content}"/>
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </ToggleButton>
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Content="Purge" Foreground="Black" HorizontalContentAlignment="Right" Margin="0"/>
                                            <ToggleButton Grid.Column="1" Style="{DynamicResource ON_OFF_ToggleBtn}" 
                                                  IsChecked="{Binding PurgeValveState}" Margin="0">
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="Checked">
                                                        <i:InvokeCommandAction Command="{Binding DataContext.PurgeValveOnCommand, ElementName=ucwindow}"  
                                                   CommandParameter="{Binding ElementName=StageIndexLB, Path=Content}"/>
                                                    </i:EventTrigger>
                                                    <i:EventTrigger EventName="Unchecked">
                                                        <i:InvokeCommandAction Command="{Binding DataContext.PurgeValveOffCommand, ElementName=ucwindow}"  
                                                   CommandParameter="{Binding ElementName=StageIndexLB, Path=Content}"/>
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </ToggleButton>
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Content="Drain" Foreground="Black" HorizontalContentAlignment="Right" Margin="0"/>
                                            <ToggleButton Grid.Column="1" Style="{DynamicResource ON_OFF_ToggleBtn}" Margin="0"
                                                  IsChecked="{Binding DraninValveState}" >
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="Checked">
                                                        <i:InvokeCommandAction Command="{Binding DataContext.DrainAirValveOnCommand, ElementName=ucwindow}"  
                                                   CommandParameter="{Binding ElementName=StageIndexLB, Path=Content}"/>
                                                    </i:EventTrigger>
                                                    <i:EventTrigger EventName="Unchecked">
                                                        <i:InvokeCommandAction Command="{Binding DataContext.DrainAirValveOffCommand, ElementName=ucwindow}"  
                                                   CommandParameter="{Binding ElementName=StageIndexLB, Path=Content}"/>
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </ToggleButton>
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Content="Leak" Foreground="Black" HorizontalContentAlignment="Right" Margin="0"/>
                                            <ToggleButton Grid.Column="1" Style="{DynamicResource ON_OFF_ToggleBtn}" Margin="0"
                                                  IsChecked="{Binding LeakValveState}" >
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="Checked">
                                                        <i:InvokeCommandAction Command="{Binding DataContext.LeakValveOnCommand, ElementName=ucwindow}"  
                                                   CommandParameter="{Binding ElementName=StageIndexLB, Path=Content}"/>
                                                    </i:EventTrigger>
                                                    <i:EventTrigger EventName="Unchecked">
                                                        <i:InvokeCommandAction Command="{Binding DataContext.LeakValveOffCommand, ElementName=ucwindow}"  
                                                   CommandParameter="{Binding ElementName=StageIndexLB, Path=Content}"/>
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </ToggleButton>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
