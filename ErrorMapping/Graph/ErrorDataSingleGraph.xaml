<Controls:MetroWindow
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    x:Class="ErrorMapping.Graph.ErrorDataSingleGraph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:s="http://schemas.abtsoftware.co.uk/scichart"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ErrorMapping.Graph"
              Loaded="ErrorDataGraph_Loaded"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500">
    <!--<Controls:MetroWindow.Resources>

        -->
    <!-- The style for the rollover line -->
    <!--
        <Style x:Key="RolloverLineStyle" TargetType="Line">
            <Setter Property="Stroke" Value="DarkGreen"/>
            <Setter Property="StrokeThickness" Value="2"/>
            <Setter Property="StrokeDashArray" Value="2 2"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
        </Style>

    </Controls:MetroWindow.Resources>-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>




        <s:SciChartSurface Name="sciChartX" Grid.Row="0" Padding="0" BorderThickness="0"  >

            <s:SciChartSurface.Annotations>
                <s:TextAnnotation Text="ErrorDataX" HorizontalAnchorPoint="Center" VerticalAnchorPoint="Top" X1="0.5" Y1="0.01" CoordinateMode="Relative"/>
            </s:SciChartSurface.Annotations>

            <!--  Declare RenderableSeries  -->
            <s:SciChartSurface.RenderableSeries>

                <!-- Draw the original line -->
                <!-- Draw the spline series - custom renderable series -->
                <local:SplineLineRenderableSeries x:Name="HOR_SeriesX" Stroke="Red" StrokeThickness="2"  
                                                  IsSplineEnabled="False" UpSampleFactor="0" IsVisibleChanged="IsVisibleChangedX">



                    <local:SplineLineRenderableSeries.PointMarker>
                        <s:EllipsePointMarker Fill="White" Stroke="Red"/>
                    </local:SplineLineRenderableSeries.PointMarker>



                </local:SplineLineRenderableSeries>
                <local:SplineLineRenderableSeries x:Name="VER_SeriesX" Stroke="Yellow" StrokeThickness="2"  
                                                  IsSplineEnabled="False" UpSampleFactor="0" IsVisibleChanged="IsVisibleChangedX">



                    <local:SplineLineRenderableSeries.PointMarker>
                        <s:EllipsePointMarker Fill="White" Stroke="Yellow"/>
                    </local:SplineLineRenderableSeries.PointMarker>



                </local:SplineLineRenderableSeries>

            </s:SciChartSurface.RenderableSeries>

            <!--  Create an X Axis with Growby  -->
            <s:SciChartSurface.XAxis>
                <s:NumericAxis AxisTitle="Position" TextFormatting="#.############" ScientificNotation="None" DrawMajorBands="True"/>
            </s:SciChartSurface.XAxis>

            <!--  Create a Y Axis with Growby. Optional bands give a cool look and feel for minimal performance impact  -->
            <s:SciChartSurface.YAxis>
                <s:NumericAxis AxisTitle="ErrorValue" GrowBy="0.7, 0.7" DrawMajorBands="True"/>
            </s:SciChartSurface.YAxis>

            <s:SciChartSurface.ChartModifier>
                <s:ModifierGroup>
                    <s:RubberBandXyZoomModifier x:Name="RubberBandXyZoomModifierX" IsEnabled="True"/>
                    <s:ZoomPanModifier x:Name="ZoomPanModifierX" IsEnabled="False" ClipModeX="None"/>
                    <s:LegendModifier ShowLegend="True" LegendPlacement="Inside" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Right"/>
                    <s:RolloverModifier x:Name="RolloverModifierX" ShowAxisLabels="False" 
                                        UseInterpolation="True"
                                        ShowTooltipOn="Always"/>
                    <s:XAxisDragModifier/>
                    <s:YAxisDragModifier/>
                    <s:ZoomExtentsModifier/>
                </s:ModifierGroup>
            </s:SciChartSurface.ChartModifier>

        </s:SciChartSurface>
        <s:SciChartSurface Name="sciChartY" Grid.Row="1" Padding="0" BorderThickness="0" >

            <s:SciChartSurface.Annotations>
                <s:TextAnnotation Text="ErrorDataY" HorizontalAnchorPoint="Center" VerticalAnchorPoint="Top" X1="0.5" Y1="0.01" CoordinateMode="Relative"/>
            </s:SciChartSurface.Annotations>

            <!--  Declare RenderableSeries  -->
            <s:SciChartSurface.RenderableSeries>

                <!-- Draw the original line -->
                <!-- Draw the spline series - custom renderable series -->
                <local:SplineLineRenderableSeries x:Name="HOR_SeriesY" Stroke="Red" StrokeThickness="2"  
                                                  IsSplineEnabled="False" UpSampleFactor="0" IsVisibleChanged="IsVisibleChangedY">



                    <local:SplineLineRenderableSeries.PointMarker>
                        <s:EllipsePointMarker Fill="White" Stroke="Red"/>
                    </local:SplineLineRenderableSeries.PointMarker>



                </local:SplineLineRenderableSeries>
                <local:SplineLineRenderableSeries x:Name="VER_SeriesY" Stroke="Yellow" StrokeThickness="2"  
                                                  IsSplineEnabled="False" UpSampleFactor="0" IsVisibleChanged="IsVisibleChangedY">



                    <local:SplineLineRenderableSeries.PointMarker>
                        <s:EllipsePointMarker Fill="White" Stroke="Yellow"/>
                    </local:SplineLineRenderableSeries.PointMarker>



                </local:SplineLineRenderableSeries>

            </s:SciChartSurface.RenderableSeries>

            <!--  Create an X Axis with Growby  -->
            <s:SciChartSurface.XAxis>
                <s:NumericAxis AxisTitle="Position" TextFormatting="#.############" ScientificNotation="None" DrawMajorBands="True"/>
            </s:SciChartSurface.XAxis>

            <!--  Create a Y Axis with Growby. Optional bands give a cool look and feel for minimal performance impact  -->
            <s:SciChartSurface.YAxis>
                <s:NumericAxis AxisTitle="ErrorValue" GrowBy="0.7, 0.7" DrawMajorBands="True"/>
            </s:SciChartSurface.YAxis>

            <s:SciChartSurface.ChartModifier>
                <s:ModifierGroup>
                    <s:RubberBandXyZoomModifier x:Name="RubberBandXyZoomModifierY" IsEnabled="True"/>
                    <s:ZoomPanModifier x:Name="ZoomPanModifierY" IsEnabled="False" ClipModeX="None"/>
                    <s:LegendModifier ShowLegend="True" LegendPlacement="Inside" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Right"/>
                    <s:RolloverModifier x:Name="RolloverModifierY" ShowAxisLabels="False" 
                                        UseInterpolation="True"
                                        ShowTooltipOn="Always"/>
                    <s:XAxisDragModifier/>
                    <s:YAxisDragModifier/>
                    <s:ZoomExtentsModifier/>
                </s:ModifierGroup>
            </s:SciChartSurface.ChartModifier>

        </s:SciChartSurface>
     
    </Grid>
</Controls:MetroWindow>
