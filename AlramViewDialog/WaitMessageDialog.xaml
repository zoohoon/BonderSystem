<Window x:Class="AlarmViewDialog.WaitMessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlarmViewDialog"
        mc:Ignorable="d"
        Title="Please Wait"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Topmost="True"
        SizeToContent="WidthAndHeight"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <local:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter" />
    </Window.Resources>
    
    <Border Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1">
        <StackPanel Margin="20">
            <TextBlock Text="Processing, please wait..." FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="10"/>
            <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="10"/>
            <TextBlock Text="{Binding ElapsedTime, Converter={StaticResource TimeSpanToStringConverter}}" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Border>
</Window>
