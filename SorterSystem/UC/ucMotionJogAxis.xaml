        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <ToggleButton Grid.Column="0" Grid.ColumnSpan="2" FocusVisualStyle="{x:Null}" IsChecked="{Binding AxisObject.Status.AxisEnabled, Mode=OneWay}" Command="{Binding EnableAxisCommand}">
                <ToggleButton.Style>
                    <Style TargetType="{x:Type ToggleButton}">
                        <Setter Property="Content" Value="Disable" />
                        <Style.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Content" Value="Enable" />
                                <Setter Property="Background" Value="#00FF00" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ToggleButton.Style>
            </ToggleButton>
            <Grid Grid.Row="1" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Row="0" Grid.Column="0" Content="+" Command="{Binding PosRelMoveCommand}" IsEnabled="{Binding IsEnablePosButton}"/>
                <Button Grid.Row="0" Grid.Column="1" Content="Abs" Command="{Binding AbsMoveCommand}" IsEnabled="{Binding IsEnableAbsButton}"/>
                <Button Grid.Row="0" Grid.Column="2" Content="-" Command="{Binding NegRelMoveCommand}" IsEnabled="{Binding IsEnableNegButton}"/>
            </Grid>
            <Button Grid.Row="2" Grid.ColumnSpan="2" Content="HOME" Command="{Binding HomingCommand}" />
            <Button Grid.Row="3" Grid.ColumnSpan="2" Content="STOP" />
        </Grid>
    </Grid>
</UserControl>
