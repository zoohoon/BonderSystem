<UserControl x:Class="SorterSystem.UC.ucMotionJogAxis"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SorterSystem.UC"
             xmlns:s="clr-namespace:SorterSystem"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="120">
    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="2"/>
        </Style>
        <s:DoubleToString x:Key="dblToStr"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <!--<RowDefinition />-->
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Background="LightGray" Width="150" Content="{Binding AxisObject.Label, FallbackValue=None}"/>
            <Label Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Background="LightGray" Width="150" Content="{Binding AxisObject.Status.State, FallbackValue=Unkown}"/>

            <Label Grid.Column="0" Grid.Row="2">Position</Label>
            <TextBox Grid.Column="1" Grid.Row="2" IsReadOnly="true" Text="{Binding AxisObject.Status.Position.Command, Converter={StaticResource dblToStr}}" />
            <Label Grid.Column="0" Grid.Row="3">Actual</Label>
            <TextBox Grid.Column="1" Grid.Row="3" IsReadOnly="true" Text="{Binding AxisObject.Status.Position.Actual, Converter={StaticResource dblToStr}}" />

            <Label Grid.Column="0" Grid.Row="4">Relative</Label>
            <TextBox Grid.Column="1" Grid.Row="4" Text="{Binding RelMoveStepDist}" />

            <Label Grid.Column="0" Grid.Row="5">Velocity</Label>
            <TextBox Grid.Column="1" Grid.Row="5" Text="{Binding AxisObject.Param.Speed.Value}" />

            <Label Grid.Column="0" Grid.Row="6">Absolute</Label>
            <TextBox Grid.Column="1" Grid.Row="6" Text="{Binding AbsMovePosition}" />
            <!--<StackPanel Grid.Column="0" Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
