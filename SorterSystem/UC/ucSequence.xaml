<UserControl x:Class="SorterSystem.UC.ucSequence"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:SorterSystem.UC"
             xmlns:seq="clr-namespace:SorterSystem.VM"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="getSequenceType" MethodName="GetValues"
                            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="seq:EnumSequenceType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <Style TargetType="{x:Type DataGrid}">
            <Setter Property="CanUserAddRows" Value="False" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="5">
                <StackPanel Orientation="Horizontal">
                    <StackPanel.Resources>
                        <Style x:Key="StackPanelPadding" TargetType="{x:Type Control}">
                            <Setter Property="Margin" Value="5,0,0,0"/>
                            <Setter Property="Padding" Value="10,0,10,0"/>
                        </Style>
                        <Style BasedOn="{StaticResource StackPanelPadding}" TargetType="Button"/>
                        <Style BasedOn="{StaticResource StackPanelPadding}" TargetType="ComboBox"/>
                    </StackPanel.Resources>
                    <Button Width="70" Content="Add" Command="{Binding AddParamCommand}" />
                    <Button Width="70" Content="Set" Command="{Binding SetLocationCommand}" />
                    <Button Width="70" Content="Delete" Command="{Binding DelParamCommand}" IsEnabled="{Binding DelParamEnable}" />
                    <ComboBox Width="200" ItemsSource="{Binding Source={StaticResource getSequenceType}}" SelectedItem="{Binding SequenceTypeSelected}" />
                    <Button Margin="50,0,0,0" Content="LoadParam" Command="{Binding LoadParameterCommand}" />
                    <Button Content="SaveParam" Command="{Binding SaveParameterCommand}" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <DataGrid ItemsSource="{Binding SequenceLocationList}" Visibility="{Binding VisibleLocation}" SelectedItem="{Binding SequenceLocationSelected}" AutoGenerateColumns="false">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="Auto" Header="Name" Binding="{Binding Name}" />
                        <DataGridTextColumn Width="100" Header="X" Binding="{Binding Position.X}" />
                        <DataGridTextColumn Width="100" Header="Y" Binding="{Binding Position.Y}" />
                        <DataGridTextColumn Width="100" Header="Z" Binding="{Binding Position.Z}" />
                        <DataGridTextColumn Width="100" Header="PZ" Binding="{Binding Position.PZ}" />
                        <DataGridTextColumn Width="100" Header="T" Binding="{Binding Position.T}" />
                        <DataGridTextColumn Width="100" Header="Cam" Binding="{Binding Position.Cam}" />
                    </DataGrid.Columns>
                </DataGrid>
                <DataGrid ItemsSource="{Binding SequenceIOList}" Visibility="{Binding VisibleIOList}" SelectedItem="{Binding SequenceIOSelected}" AutoGenerateColumns="false">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="Auto" Header="Name" Binding="{Binding Name}" />
                        <DataGridTextColumn Width="100" Header="Key" Binding="{Binding Key}" />
                        <DataGridComboBoxColumn  Width="100" Header="Value" SelectedItemBinding="{Binding Value}">
                            <DataGridComboBoxColumn.ItemsSource>
                                <x:Array Type="System:Boolean">
                                    <System:Boolean>True</System:Boolean>
                                    <System:Boolean>False</System:Boolean>
                                </x:Array>
                            </DataGridComboBoxColumn.ItemsSource>
                        </DataGridComboBoxColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel.Resources>
                        <Style x:Key="StackPanelPadding" TargetType="{x:Type Control}">
                            <Setter Property="Margin" Value="5,0,0,0"/>
                        </Style>
                        <Style BasedOn="{StaticResource StackPanelPadding}" TargetType="Button"/>
                        <Style BasedOn="{StaticResource StackPanelPadding}" TargetType="ComboBox"/>
                    </StackPanel.Resources>
                    <Button Width="100" Content="↓" Command="{Binding AddActionCommand}" IsEnabled="{Binding IsParamSelected}"/>
                    <Button Width="100" Content="↑" Command="{Binding DelActionCommand}" IsEnabled="{Binding IsActionSelected}" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <DataGrid ItemsSource="{Binding SequenceActionList}" SelectedIndex="{Binding SequenceActionSelectedIndex}" SelectedItem="{Binding SequenceActionSelected}" AutoGenerateColumns="false">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="200" Header="Name" Binding="{Binding Name}" />
                            <DataGridComboBoxColumn  Width="150" Header="Action" ItemsSource="{Binding Source={StaticResource getSequenceType}}" SelectedItemBinding="{Binding Action}" />
                            <DataGridTextColumn Width="150" Header="Target" Binding="{Binding Target}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
                <Grid Grid.Column="1" Margin="1">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Button Grid.Row="0" Margin="1"  Content="↑" Command="{Binding ActionOrderUpCommand}" IsEnabled="{Binding IsActionSelected}" />
                    <Button Grid.Row="1" Margin="1"  Content="↓" Command="{Binding ActionOrderDownCommand}" IsEnabled="{Binding IsActionSelected}" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
