<dialogs:CustomDialog x:Class="ModuleManager.ModuleUpdaterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:dialogs="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             xmlns:local="clr-namespace:ModuleManager"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="640" MinHeight="640" >
    <dialogs:CustomDialog.Resources>
        <!--<ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ProgressBar.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>-->
        <local:BoolToVisibilityConverter x:Key="BtoVConv" />
    </dialogs:CustomDialog.Resources>
    <Grid HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--<ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" 
                     Value="50" Visibility="{Binding CircProgressVisibility}"
                     IsIndeterminate="True" 
                     HorizontalAlignment="Center" VerticalAlignment="Center" 
                     Width="32" Height="32"/>-->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            
            <ItemsControl Width="640" Height="480" ItemsSource="{Binding ModuleInfos}" 
                      Grid.IsSharedSizeScope="True" Grid.Row="0" 
                      ScrollViewer.VerticalScrollBarVisibility="Visible">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="AppModuleItem">
                        <Border x:Name="Border" Padding="8" BorderThickness="0 2 0 2" BorderBrush="DimGray" Margin="2">
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition SharedSizeGroup="Checkerz" Width="1*"/>
                                    <ColumnDefinition Width="480*"/>
                                    <ColumnDefinition Width="96*"/>
                                </Grid.ColumnDefinitions>

                                <materialDesign:PackIcon Kind="Apps" Grid.Column="0" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,16,0"/>
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="80*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock FontSize="24" FontWeight="Bold" Text="{Binding ModuleName}" Grid.Row="0"/>
                                    <TextBlock FontSize="12" Text="{Binding Description}" Grid.Row="1"/>
                                </Grid>
                                <Grid Grid.Column="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="32"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right">
                                        <TextBlock FontSize="12" FontWeight="Bold" Text="Current: " />
                                        <TextBlock FontSize="12" FontWeight="Bold" Text="{Binding InstalledVersion}"  />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
                                        <TextBlock FontSize="12" FontWeight="Bold" Text="Recent: " />
                                        <TextBlock FontSize="12" FontWeight="Bold" Text="{Binding RecentVersion}" />
                                    </StackPanel>

                                    <Button Command="{Binding UpdateCommand}" Margin="2" HorizontalAlignment="Center" Grid.Row="2" Visibility="{Binding IsNeedUpdate, Converter={StaticResource BtoVConv}}">
                                        <Button.Content>
                                            <materialDesign:PackIcon Kind="Download"  HorizontalAlignment="Center"  Width="24" Height="24"/>
                                        </Button.Content>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Border>
                        <!--<DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource MaterialDesignSelection}" />
                        </DataTrigger>
                    </DataTemplate.Triggers>-->
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="2">
            <Label Content="Module Server: \\ModuleServer\\WaferAlignment" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" Margin="8" VerticalAlignment="Center" Foreground="DimGray"/>
            <materialDesign:PackIcon Kind="Settings" Width="12" Height="12" Margin="8,0" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="8" HorizontalAlignment="Right" Grid.Row="1">
            <Button MinHeight="32" MinWidth="64" Margin="8" HorizontalAlignment="Right" Command="{Binding UpdatePanelCommand}">Update</Button>
            <Button MinHeight="32" MinWidth="64" Margin="8" HorizontalAlignment="Right" Command="{Binding ClosePanelCommand}">Done</Button>
        </StackPanel>
        
    </Grid>
</dialogs:CustomDialog>
