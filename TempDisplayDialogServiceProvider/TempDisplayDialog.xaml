<dialogs:CustomDialog x:Class="TempDisplayDialogServiceProvider.TempDisplayDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TempDisplayDialogServiceProvider"
             xmlns:dialogs="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             mc:Ignorable="d" FontSize="24"
             d:DesignHeight="450" d:DesignWidth="1024">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
          Margin="0 20">
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal"
                    VerticalAlignment="Center">
            <Label Padding="24" Foreground="Black" Content="Set Temp : "/>
            <TextBlock 
                Padding="24"
                VerticalAlignment="Center"
                Text="{Binding TempController.TempInfo.SetTemp.Value, StringFormat=\{0:0.0\}℃}"/>
            <Label Padding="24" Foreground="Black" Content="℃"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal"
                    VerticalAlignment="Center">
            <Label Padding="24" Foreground="Black" Content="Cur Temp : "/>
            <TextBlock 
                Padding="24"
                VerticalAlignment="Center"
                Text="{Binding TempController.TempInfo.CurTemp.Value, StringFormat=\{0:0.0\}℃}"/>
            <Label Padding="24" Foreground="Black" Content="℃"/>
            <Label Padding="24" Foreground="Black" Content="±"/>
            <Label Padding="24" Foreground="Black" Content="Deviation : "/>
            <TextBlock 
                Padding="24"
                VerticalAlignment="Center"
                Text="{Binding TempController.TempControllerDevParameter.TempToleranceDeviation.Value, StringFormat=\{0:0.0\}℃}"/>
            <Label Padding="24" Foreground="Black" Content="℃"/>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="20 0 0 0">
                <Label Content="Limit Time : " FontSize="16" Foreground="Black"/>
                <TextBlock Text="{Binding TempController.TempControllerParam.LimitRunTimeSeconds, StringFormat={}{0:0.0} }" 
                           VerticalAlignment="Center"
                           FontSize="16"></TextBlock>
                <Label Content="Sec" FontSize="16"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal"
                        VerticalAlignment="Center">
                <Label Content="Running Time : " FontSize="16" Foreground="Black"/>
                <TextBlock Text="{Binding TempController.RunTimeSpan.TotalSeconds, StringFormat={}{0:0.0} }" 
                           VerticalAlignment="Center"
                           FontSize="16"></TextBlock>
                <Label Content="Sec" FontSize="16"/>
            </StackPanel>
            
            <Button Grid.Column="2" Margin="8 8 8 8"
                    Content="Cancel"
                    Command="{Binding cmdCancelButtonClick}"/>
        </Grid>

        <!--<ProgressBar Grid.Row="3"
                     VerticalAlignment="Bottom"
                     Margin="0"
                     />-->
    </Grid>
</dialogs:CustomDialog>
