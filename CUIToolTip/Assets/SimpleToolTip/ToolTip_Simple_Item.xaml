<UserControl x:Class="CUIToolTip.Assets.SimpleToolTip.ToolTip_Simple_Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CUIToolTip.Assets.SimpleToolTip"
             mc:Ignorable="d" 
             x:Name="ToolTipControl"
             d:DesignHeight="150" d:DesignWidth="300"
             >
    <StackPanel>
        
        <TextBlock FontWeight="Bold" 
                   FontSize="14" 
                   Margin="0,0,0,5"
                   Text="{Binding Path = Title}">
        </TextBlock>

        <TextBlock FontWeight="Medium" 
                   FontSize="10" 
                   Foreground="Black"
                   TextWrapping="Wrap"
                   Text="{Binding Path = Description}">
        </TextBlock>
        
        <!--<Border BorderBrush="Silver" BorderThickness="0,1,0,0" Margin="0,8" />
        <WrapPanel>
            --><!--<Image Source="/WpfTutorialSamples;component/Images/help.png" Margin="0,0,5,0" />--><!--
            <TextBlock FontStyle="Italic">Press F1 for more help</TextBlock>
        </WrapPanel>-->
    </StackPanel>
</UserControl>
