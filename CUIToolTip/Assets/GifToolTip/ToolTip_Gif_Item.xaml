<UserControl x:Class="CUIToolTip.Assets.GifToolTip.ToolTip_Gif_Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CUIToolTip.Assets.GifToolTip"
             xmlns:conv="clr-namespace:ValueConverters;assembly=ValueConverters"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <conv:EmptyStringConverter x:Key="EmptyConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0" gif:ImageBehavior.AnimatedSource="{Binding ImgURL, Converter={StaticResource EmptyConverter},ConverterParameter='pack://application:,,,/Resources/giphy.gif'}"
            Margin="4" >
        </Image>

        <StackPanel Grid.Column="1">

            <TextBlock FontWeight="Bold" 
                   FontSize="14" 
                   Margin="0,0,0,5"
                   Text="{Binding Path = Title}">
            </TextBlock>

            <TextBlock FontWeight="Medium" 
                   FontSize="10" 
                   Foreground="Black"
                   TextWrapping="Wrap"
                   Text="{Binding Path = Description}">
            </TextBlock>
            
        </StackPanel>

    </Grid>
</UserControl>
