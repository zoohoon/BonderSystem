<UserControl x:Class="CUIToolTip.Assets.ImageToolTip.ToolTip_Image_Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CUIToolTip.Assets.ImageToolTip"
             xmlns:conv="clr-namespace:ValueConverters;assembly=ValueConverters"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">

    <UserControl.Resources>
        <ResourceDictionary>
            <conv:EmptyStringConverter x:Key="EmptyConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <!--Source="{Binding ImgURL, Converter={converters:EmptyStringConverter}, ConverterParameter='pack://application:,,,/WPFNotification;component/Resources/Images/notification-icon.png'}"-->

        <Image Grid.Column="0"
            Source="{Binding ImgURL, Converter={StaticResource EmptyConverter},ConverterParameter='pack://application:,,,/Resources/Cat1.jpg'}" 
            Margin="4" >
        </Image>
        
        <!--<Canvas Grid.Column="0" Width="100" Height="150">
            <Image 
               Source="{Binding ImgURL, Converter={StaticResource EmptyConverter},ConverterParameter='pack://application:,,,/Resources/Cat1.jpg'}" 
               Margin="4" >
            </Image>
        </Canvas>-->
        
        <StackPanel Grid.Column="1">
            
            <TextBlock FontWeight="Bold" 
                   FontSize="14" 
                   Margin="0,0,0,5"
                   Text="{Binding Path = Title}">
            </TextBlock>

            <TextBlock FontWeight="Medium" 
                   FontSize="10" 
                   Foreground="Black"
                   TextWrapping="Wrap"
                   Text="{Binding Path = Description}">
            </TextBlock>

            <!--<Border BorderBrush="Silver" BorderThickness="0,1,0,0" Margin="0,8" />
        <WrapPanel>
            -->
            <!--<Image Source="/WpfTutorialSamples;component/Images/help.png" Margin="0,0,5,0" />-->
            <!--
            <TextBlock FontStyle="Italic">Press F1 for more help</TextBlock>
        </WrapPanel>-->
        </StackPanel>
        
    </Grid>
    
    
</UserControl>
