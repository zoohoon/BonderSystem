                        <Border Grid.Row="1" Grid.Column="2" BorderThickness="1"  BorderBrush="White">
                            <Label HorizontalAlignment="Center" Foreground="Yellow" VerticalAlignment="Center" FontSize="20" Content="{Binding GPLoader.CSTCtrlStatus[1],Mode=TwoWay}"></Label>
                        </Border>
                        <Border Grid.Row="1" Grid.Column="3" BorderThickness="1"  BorderBrush="White">
                            <Label HorizontalAlignment="Center" Foreground="Yellow" VerticalAlignment="Center" FontSize="20" Content="{Binding GPLoader.CSTCtrlStatus[2],Mode=TwoWay}"></Label>
                        </Border>

                        <Border Grid.Row="2" Grid.Column="1" BorderThickness="1"  BorderBrush="White">
                            <Label HorizontalAlignment="Center" Foreground="LimeGreen" VerticalAlignment="Center" FontSize="20" Content="{Binding GPLoader.CSTCtrlCmds[0],Mode=TwoWay}"></Label>
