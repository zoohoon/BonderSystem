        <ItemsControl Grid.Column="0" ItemsSource="{Binding ArrowLineList}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="7.5*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <ListBox ItemsSource="{Binding TransferCmdList}" ItemContainerStyle="{StaticResource myLBStyle}" SelectedItem="{Binding SelectedTransferCmd}" DisplayMemberPath="CmdDesc"/>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Button Command="{Binding TransferCmdAddCommand}" Content="ADD" Grid.Row="0" Grid.Column="0" IsEnabled="{Binding LoaderController.ModuleState.State, Converter={StaticResource CommandButtonEnableConverter}}"/>
                    <Button Command="{Binding TransferCmdDelCommand}" Content="DEL" Grid.Row="0" Grid.Column="1" IsEnabled="{Binding LoaderController.ModuleState.State, Converter={StaticResource CommandButtonEnableConverter}}"/>
                    <Button Command="{Binding TransferCmdClearCommand}" Content="CLEAR" Grid.Row="1" Grid.Column="0" IsEnabled="{Binding LoaderController.ModuleState.State, Converter={StaticResource CommandButtonEnableConverter}}"/>
                    <Button Command="{Binding RunTestCommand}" Content="Run TEST" Grid.Row="1" Grid.Column="1" IsEnabled="{Binding LoaderController.ModuleState.State, Converter={StaticResource CommandButtonEnableConverter}}"/>
                    <Label Content="REPEAT" Grid.Row="2" FontSize="24" Grid.Column="0" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <CheckBox IsChecked="{Binding Path=TestRepeat}" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <Label Content="Sequence" Grid.Row="3" Grid.Column="0" Foreground="White" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <CheckBox IsChecked="{Binding Path=SequenceRepeat}" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <Button Command="{Binding AddScanJobCommand}" Content="ADD SCAN JOB" Grid.Row="4" Grid.Column="0" IsEnabled="{Binding LoaderController.ModuleState.State, Converter={StaticResource CommandButtonEnableConverter}}"/>
                    <Button Command="{Binding ScanCmdRunTestCommand}" Content="SCAN RepeatButton" Grid.Row="4" Grid.Column="1" IsEnabled="{Binding LoaderController.ModuleState.State, Converter={StaticResource CommandButtonEnableConverter}}"/>
                </Grid>
            </Grid>


            <Border Grid.Row="2" BorderBrush="White" BorderThickness="0.4" Margin="8"/>
            <StackPanel Grid.Row="2" Margin="16" HorizontalAlignment="Right">
                <Button Width="200" Height="80" FontSize="24" Content="SCAN CST" 
                        Command="{Binding ScanCSTCommand}" 
                        IsEnabled="{Binding LoaderController.ModuleState.State, Converter={StaticResource CommandButtonEnableConverter}}" 
                        FontWeight="Bold"/>
                <Button Grid.Column="1" Width="200" Height="80"  FontSize="24" Content="Transfer" 
                        Command="{Binding WaferTransferCommand}"  
                        IsEnabled="{Binding LoaderController.ModuleState.State, Converter={StaticResource CommandButtonEnableConverter}}" 
                        FontWeight="Bold"/>
            </StackPanel>
