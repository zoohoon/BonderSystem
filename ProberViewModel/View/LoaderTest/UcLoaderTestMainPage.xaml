                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <waferuc:UcWaferHandleIcon>
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                                    <i:InvokeCommandAction Command="{Binding Path=DataContext.HandleIconClickCommand, ElementName=_this}" >
                                                        <i:InvokeCommandAction.CommandParameter>
