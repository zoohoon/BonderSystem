<UserControl x:Class="WaferHandlingControl.WaferHandlingUC.UcSlotStatusRecord"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WaferHandlingControl.WaferHandlingUC"
             xmlns:vc="clr-namespace:ValueConverters;assembly=ValueConverters"
             mc:Ignorable="d" 
             d:DesignHeight="44" d:DesignWidth="576">
    <UserControl.Resources>
        <vc:EnumWaferStatusToColorConverter x:Key="EnumWaferStatusToColorConverter"/>
        <vc:EnumWaferStatusConverter x:Key="EnumWaferStatusConverter"/>
        <vc:EnumWaferStatusTextColorConverter x:Key="EnumWaferStatusTextColorConverter"/>
    </UserControl.Resources>

    <Grid Margin="1">
        <Grid.Background>
            <MultiBinding Converter="{StaticResource EnumWaferStatusToColorConverter}">
                <Binding Path="WaferStatus"/>
                <Binding Path="ModuleType"/>
            </MultiBinding>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="0" BorderBrush="White" BorderThickness="1" CornerRadius="3" Margin="1">
            <TextBlock Text="{Binding ID.Index}"  TextAlignment="Center" FontSize="15" VerticalAlignment="Center">
                <TextBlock.Foreground>
                    <MultiBinding Converter="{StaticResource EnumWaferStatusTextColorConverter}">
                        <Binding Path="WaferStatus"/>
                        <Binding Path="ModuleType"/>
                    </MultiBinding>
                </TextBlock.Foreground>
            </TextBlock>
        </Border>
        <Border Grid.Row="0" Grid.Column="1" BorderBrush="White" BorderThickness="1" CornerRadius="3" Margin="1">
            <!--<TextBlock Text="{Binding WaferStatus, Converter={StaticResource EnumWaferStatusConverter},ConverterParameter={ModuleType}}" Foreground="White" TextAlignment="Center" FontSize="15" VerticalAlignment="Center"  />-->
            <TextBlock TextAlignment="Center" FontSize="15" VerticalAlignment="Center">
                <TextBlock.Text>
                    <MultiBinding Converter="{StaticResource EnumWaferStatusConverter}">
                        <Binding Path="WaferStatus"/>
                        <Binding Path="ModuleType"/>
                    </MultiBinding>
                </TextBlock.Text>

                <TextBlock.Foreground>
                    <MultiBinding Converter="{StaticResource EnumWaferStatusTextColorConverter}">
                        <Binding Path="WaferStatus"/>
                        <Binding Path="ModuleType"/>
                    </MultiBinding>
                </TextBlock.Foreground>

            </TextBlock>
            <!--<TextBlock Text="{Binding WaferStatus, Converter={StaticResource EnumWaferStatusConverter},ConverterParameter={ModuleType}}" Foreground="White" TextAlignment="Center" FontSize="15" VerticalAlignment="Center"  />-->
        </Border>
        <Border Grid.Row="0" Grid.Column="2" BorderBrush="White" BorderThickness="1" CornerRadius="3" Margin="1">
            <TextBlock Text="{Binding Substrate.WaferState}" TextAlignment="Center" FontSize="15" VerticalAlignment="Center">
                <TextBlock.Foreground>
                    <MultiBinding Converter="{StaticResource EnumWaferStatusTextColorConverter}">
                        <Binding Path="WaferStatus"/>
                        <Binding Path="ModuleType"/>
                    </MultiBinding>
                </TextBlock.Foreground>
            </TextBlock>
        </Border>
        
    </Grid>

</UserControl>
