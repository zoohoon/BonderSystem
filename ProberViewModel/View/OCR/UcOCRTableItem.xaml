<UserControl x:Class="OCRView.UcOCRTableItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OCRView"
             mc:Ignorable="d" 
              d:DesignHeight="64" d:DesignWidth="636" >
    <Border BorderBrush="DarkGray" BorderThickness="0.5" CornerRadius="4">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <!--<ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>-->
            </Grid.ColumnDefinitions>

            <Label        Grid.Column="0" MinHeight="36" Margin="4" VerticalAlignment="Center" HorizontalContentAlignment="Center" Content="{Binding}"/>
            <CheckBox     Grid.Column="1" MinHeight="36" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <Button       Grid.Column="2" MinHeight="36" Margin="4" Style="{x:Null}" Background="Black" Foreground="#FFd6d9f4" Content="{Binding }" Command="{Binding }" Focusable="False"/>
            <Button       Grid.Column="3" MinHeight="36" Margin="4" Style="{x:Null}" Background="Black" Foreground="#FFd6d9f4" Content="{Binding }" Command="{Binding }" Focusable="False"/>
            <Button       Grid.Column="4" MinHeight="36" Margin="4" Style="{x:Null}" Background="Black" Foreground="#FFd6d9f4" Content="{Binding }" Command="{Binding }" Focusable="False"/>
            <Button       Grid.Column="5" MinHeight="36" Margin="4" Style="{x:Null}" Background="Black" Foreground="#FFd6d9f4" Content="{Binding }" Command="{Binding }" Focusable="False"/>
            <Button       Grid.Column="6" MinHeight="36" Margin="4" Style="{x:Null}" Background="Black" Foreground="#FFd6d9f4" Content="{Binding }" Command="{Binding }" Focusable="False"/>
            <ToggleButton Grid.Column="7" MinHeight="36" Margin="4" Content="{Binding }" Command="{Binding }"/>
            <!--<TextBlock Grid.Column="8"  Margin="4"/>
        <TextBlock Grid.Column="9"  Margin="4"/>
        <TextBlock Grid.Column="10" Margin="4"/>
        <TextBlock Grid.Column="11" Margin="4"/>-->
        </Grid>
    </Border>
</UserControl>
