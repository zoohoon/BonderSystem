<UserControl x:Class="PolishWaferManualPageView.PolishWaferManualPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PolishWaferManualPageView"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:interfacepolishwafer="clr-namespace:ProberInterfaces.PolishWafer;assembly=ProberInterfaces"
             xmlns:aniScroll="clr-namespace:UcAnimationScrollViewer;assembly=UcAnimationScrollViewer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>

        <ResourceDictionary>

            <ObjectDataProvider x:Key="getDataFromPWFocusingPointMode" MethodName="GetValues" ObjectType="{x:Type System:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="interfacepolishwafer:PWFocusingPointMode"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            
            <Style x:Key="UpButtonStyle" TargetType="{x:Type Button}">
                <Setter Property="Background" Value="{StaticResource Button.Static.Background}"/>
                <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border}"/>
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Padding" Value="1"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Grid>
                                <Border Name="UpButtonBorderStyle" Background="#333333">
                                    <Border.BitmapEffect>
                                        <DropShadowBitmapEffect x:Name="btnImageEffect"
                                    Color="LightGray"
                                    ShadowDepth="5"
                                    Softness="0"/>
                                    </Border.BitmapEffect>
                                </Border>
                                <Viewbox Margin="8">
                                    <Path Data="M1,21H23L12,2" Fill="White" Name="TryAngleIcon"/>
                                </Viewbox>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsDefaulted" Value="true">
                                    <Setter Property="BorderBrush" TargetName="UpButtonBorderStyle" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="true"/>
                                <Trigger Property="IsPressed" Value="true">
                                    <Setter Property="Fill" TargetName="TryAngleIcon" Value="{StaticResource Button.Pressed.Border}"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="false">
                                    <Setter Property="Background" TargetName="UpButtonBorderStyle" Value="{StaticResource Button.Disabled.Background}"/>
                                    <Setter Property="BorderBrush" TargetName="UpButtonBorderStyle" Value="{StaticResource Button.Disabled.Border}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="DwButtonStyle" TargetType="{x:Type Button}">
                <Setter Property="Background" Value="{StaticResource Button.Static.Background}"/>
                <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border}"/>
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Padding" Value="1"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Grid>
                                <Border Name="DwButtonBorderStyle" Background="#333333">
                                    <Border.BitmapEffect>
                                        <DropShadowBitmapEffect x:Name="btnImageEffect"
                                    Color="LightGray" 
                                    ShadowDepth="5"
                                    Softness="0"/>
                                    </Border.BitmapEffect>
                                </Border>
                                <Viewbox Margin="8">
                                    <Path Data="M1,2H23L12,21"
                                          Fill="White" Name="TryAngleIcon"
                                          />
                                </Viewbox>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsDefaulted" Value="true">
                                    <Setter Property="BorderBrush" TargetName="DwButtonBorderStyle" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="true"/>
                                <Trigger Property="IsPressed" Value="true">
                                    <Setter Property="Fill" TargetName="TryAngleIcon" Value="{StaticResource Button.Pressed.Border}"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="false">
                                    <Setter Property="Background" TargetName="DwButtonBorderStyle" Value="{StaticResource Button.Disabled.Background}"/>
                                    <Setter Property="BorderBrush" TargetName="DwButtonBorderStyle" Value="{StaticResource Button.Disabled.Border}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                            Margin="4,4,4,4" 
                            BorderBrush="WhiteSmoke" BorderThickness="1">
            <ContentControl  Margin="2"
                             VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                             DataContext="{Binding}" 
                             Content="{Binding Stage3DModel}"/>
        </Border>

        <Grid Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="40*"/>
                        <RowDefinition Height="8*"/>
                    </Grid.RowDefinitions>

                    <GroupBox  Grid.Column="0" BorderBrush="White" BorderThickness="1" 
                           Margin="0,0,0,0" FontSize="18" Foreground="White" Header="Source List">
                        <GroupBox.Style>
                            <Style BasedOn="{x:Null}"/>
                        </GroupBox.Style>
                        <Border  BorderThickness="0.5" BorderBrush="White">
                            <aniScroll:AnimationScrollViewer x:Name="TOViewer" Margin="8" Grid.Row="0"
                          VerticalScrollBarVisibility="Hidden">
                                <ListBox ItemsSource="{Binding PolishWaferparameters.SourceParameters}"
                         SelectedItem="{Binding SelectedSourceInfo}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Border Width="Auto" MinWidth="270" BorderBrush="White" BorderThickness="0.5">
                                                </Border>
                                                <Grid Margin="8" Height="32">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto"/>
                                                            <ColumnDefinition Width="auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Viewbox Grid.Column="0" Margin="0" Width="32">
                                                            <Path
                                            Stretch="Uniform"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Data="M9,7V17H11V13H13A2,2 0 0,0 15,11V9A2,2 0 0,0 13,7H9M11,9H13V11H11V9M5,3H19A2,2 0 0,1 21,5V19A2,2 0 0,1 19,21H5A2,2 0 0,1 3,19V5A2,2 0 0,1 5,3Z"
                                                Fill="#be8158">
                                                            </Path>
                                                        </Viewbox>
                                                        <Label Grid.Column="1" 
                                           Margin="0"
                                           Content="{Binding DefineName.Value}" Foreground="White">
                                                        </Label>
                                                    </Grid>
                                                </Grid>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </aniScroll:AnimationScrollViewer>
                        </Border>
                    </GroupBox>

                    <Border Grid.Row="1" BorderThickness="0.5" BorderBrush="White">
                        <Grid>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                            Margin="4"
                            Style="{StaticResource UpButtonStyle}"
                            Click="SourceUpBtnClick"/>

                            <Button Grid.Column="1"
                            Margin="4"
                            Style="{StaticResource DwButtonStyle}"
                            Click="SourceDwBtnClick"/>
                        </Grid>
                    </Border>
                </Grid>

                <Grid Grid.Column="1">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="40*"/>
                        <RowDefinition Height="8*"/>
                    </Grid.RowDefinitions>

                    <GroupBox  Grid.Column="0" BorderBrush="White" BorderThickness="1" 
                           Margin="0,0,0,0" FontSize="18" Foreground="White" Header="Transfer List">
                        <GroupBox.Style>
                            <Style BasedOn="{x:Null}"/>
                        </GroupBox.Style>
                        <Border  BorderThickness="0.5" BorderBrush="White">
                            <aniScroll:AnimationScrollViewer x:Name="svViewer" Margin="8" Grid.Row="0"
                          VerticalScrollBarVisibility="Hidden">
                                <ListBox ItemsSource="{Binding AssignedMappingInfos}"
                         SelectedItem="{Binding SelectedAssignedMappingInfo}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Border Width="Auto" MinWidth="270" BorderBrush="White" BorderThickness="0.5">
                                                </Border>
                                                <Grid Margin="8" Height="32">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto"/>
                                                            <ColumnDefinition Width="auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Viewbox Grid.Column="0" Margin="0" Width="32">
                                                            <Path
                                            Stretch="Uniform"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Data="M9,7V9H11V17H13V9H15V7H9M5,3H19A2,2 0 0,1 21,5V19A2,2 0 0,1 19,21H5A2,2 0 0,1 3,19V5A2,2 0 0,1 5,3Z"
                                                Fill="#be8158">
                                                            </Path>
                                                        </Viewbox>
                                                        <Label Grid.Column="1" 
                                           Margin="0"
                                           Content="{Binding Name}" Foreground="White">
                                                        </Label>
                                                    </Grid>
                                                </Grid>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </aniScroll:AnimationScrollViewer>
                        </Border>
                    </GroupBox>

                    <Border Grid.Row="1" BorderThickness="0.5" BorderBrush="White">
                        <Grid>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                            Margin="4"
                            Style="{StaticResource UpButtonStyle}"
                            Click="SourceUpBtnClick"/>

                            <Button Grid.Column="1"
                            Margin="4"
                            Style="{StaticResource DwButtonStyle}"
                            Click="SourceDwBtnClick"/>
                        </Grid>
                    </Border>
                </Grid>

            </Grid>

            <Grid Grid.Row="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Column="0" Margin="4 0 0 4"
                                  Header="{Binding SelectedSourceInfo.DefineName.Value, FallbackValue=Selected data does not exist}"
                                  HorizontalContentAlignment="Center"
                                  VerticalContentAlignment="Center"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  FontSize="14"
                                  >
                    <Grid>
                        <StackPanel MinWidth="290">

                            <Grid Margin="0,2,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Grid.Row="0" Content="MaxLimitCount" Margin="0,4,0,4"
                                                                   HorizontalContentAlignment="Center"
                                                                   Style="{DynamicResource TitleBorderLabel}"/>
                                <TextBox HorizontalContentAlignment="Center" Grid.Column="1"
                                                             VerticalAlignment="Center"
                                                             Text="{Binding SelectedSourceInfo.MaxLimitCount.Value}"
                                                             Style="{DynamicResource InputTextBox}"
                                                             FontSize="18"
                                                            IsReadOnly="True">
                                </TextBox>
                            </Grid>

                            <Grid Margin="0,2,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Grid.Row="0" Content="TouchCount" Margin="0,4,0,4"
                                                                   HorizontalContentAlignment="Center"
                                                                   Style="{DynamicResource TitleBorderLabel}"/>
                                <TextBox HorizontalContentAlignment="Center" Grid.Column="1"
                                                             VerticalAlignment="Center"
                                                             Text="{Binding SelectedSourceInfo.TouchCount.Value}"
                                                             Style="{DynamicResource InputTextBox}"
                                                             FontSize="18"
                                                            IsReadOnly="True">
                                </TextBox>
                            </Grid>

                            <Grid Margin="0,2,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Grid.Row="0" Content="CurrentAngle" Margin="0,4,0,4"
                                                                   HorizontalContentAlignment="Center"
                                                                   Style="{DynamicResource TitleBorderLabel}"/>
                                <TextBox HorizontalContentAlignment="Center" Grid.Column="1"
                                                             VerticalAlignment="Center"
                                                             Text="{Binding SelectedSourceInfo.CurrentAngle.Value}"
                                                             Style="{DynamicResource InputTextBox}"
                                                             FontSize="18" IsReadOnly="True">
                                </TextBox>
                            </Grid>

                            <Grid Margin="0,2,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Grid.Row="0" Content="RotateAngle" Margin="0,4,0,4"
                                                                   HorizontalContentAlignment="Center"
                                                                   Style="{DynamicResource TitleBorderLabel}"/>
                                <TextBox HorizontalContentAlignment="Center" Grid.Column="1"
                                                             VerticalAlignment="Center"
                                                             Text="{Binding SelectedSourceInfo.RotateAngle.Value}"
                                                             Style="{DynamicResource InputTextBox}"
                                                             FontSize="18" IsReadOnly="True">
                                </TextBox>
                            </Grid>

                            <Grid Margin="0,2,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Grid.Row="0" Content="Margin" Margin="0,4,0,4"
                                                                   HorizontalContentAlignment="Center"
                                                                   Style="{DynamicResource TitleBorderLabel}"/>
                                <TextBox HorizontalContentAlignment="Center" Grid.Column="1"
                                                             VerticalAlignment="Center"
                                                             Text="{Binding SelectedSourceInfo.Margin.Value}"
                                                             Style="{DynamicResource InputTextBox}"
                                                             FontSize="18" IsReadOnly="True">
                                </TextBox>
                            </Grid>

                            <Grid Margin="0,2,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Grid.Row="0" Content="FocusingPointMode" Margin="0,4,0,4"
                                                                   HorizontalContentAlignment="Center"
                                                                   Style="{DynamicResource TitleBorderLabel}"/>
                                <TextBox HorizontalContentAlignment="Center" Grid.Column="1"
                                                             VerticalAlignment="Center"
                                                             Text="{Binding SelectedSourceInfo.FocusingPointMode.Value}"
                                                             Style="{DynamicResource InputTextBox}"
                                                             FontSize="18" IsReadOnly="True">
                                </TextBox>
                            </Grid>

                            <Grid Margin="0,2,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Grid.Row="0" Content="Overdrive" Margin="0,4,0,4"
                                                                   HorizontalContentAlignment="Center"
                                                                   Style="{DynamicResource TitleBorderLabel}"/>
                                <TextBox HorizontalContentAlignment="Center" Grid.Column="1"
                                                             VerticalAlignment="Center"
                                                             Text="{Binding SelectedSourceInfo.OverdriveValue.Value}"
                                                             Style="{DynamicResource InputTextBox}"
                                                             FontSize="18" IsReadOnly="True">
                                </TextBox>
                            </Grid>

                            <Grid Margin="0,2,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Grid.Row="0" Content="ZClearance" Margin="0,4,0,4"
                                                                   HorizontalContentAlignment="Center"
                                                                   Style="{DynamicResource TitleBorderLabel}"/>
                                <TextBox HorizontalContentAlignment="Center" Grid.Column="1"
                                                             VerticalAlignment="Center"
                                                             Text="{Binding SelectedSourceInfo.ZClearance.Value}"
                                                             Style="{DynamicResource InputTextBox}"
                                                             FontSize="18" IsReadOnly="True">
                                </TextBox>
                            </Grid>
                            
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <Grid Grid.Column="1">

                    <StackPanel VerticalAlignment="Center" Orientation="Vertical">

                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <Button Width="45" Height="45" Margin="5"
                                    Content="Load"
                                    Command="{Binding LoadPolishWaferCommand}">
                            </Button>

                            <Button Width="45" Height="45" Margin="5"
                                    Content="UnLoad"
                                    Command="{Binding UnLoadPolishWaferCommand}">
                            </Button>
                            
                        </StackPanel>

                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">

                            <Button MinWidth="45" Width="Auto" Height="45" Margin="5"
                                    Content="Centering"
                                    Command="{Binding DoCenteringCommand}">
                            </Button>

                            <Button MinWidth="45" Width="Auto" Height="45" Margin="5"
                                    Content="Focusing"
                                    Command="{Binding DoFocusingCommand}">
                            </Button>

                            <Button MinWidth="45" Width="Auto" Height="45" Margin="5"
                                    Content="Cleaning"
                                    Command="{Binding DoCleaningCommand}">
                            </Button>

                            <Button MinWidth="45" Width="Auto" Height="45" Margin="5"
                                    Content="All"
                                    Command="{Binding DoPolishingAllCommand}">
                            </Button>
                            
                        </StackPanel>
                        
                    </StackPanel>
                </Grid>

            </Grid>



        </Grid>
    </Grid>
</UserControl>
