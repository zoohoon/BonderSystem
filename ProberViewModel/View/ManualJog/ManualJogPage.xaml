            <Grid.RowDefinitions>
                <RowDefinition Height="4.2*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.Column="1" Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="8*"/>
                </Grid.RowDefinitions>
                <GroupBox Grid.RowSpan="2" BorderBrush="White" BorderThickness="1" Margin="10,10,10,10" FontSize="18" Foreground="White" Header="">
                    <GroupBox.Style>
                        <Style BasedOn="{x:Null}"/>
                    </GroupBox.Style>
                    <ContentControl  Margin="2"
                                         VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                                         DataContext="{Binding}" 
                                         Content="{Binding Stage3DModel}" 
                                         />
                </GroupBox>

                <cui:Button Grid.Row="0" 
                            Opacity="0" 
                            Lockable="False"
                            Command="{Binding X2ViewChangeCommand}"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <cui:Button Grid.Column="0" 
                                Opacity="0"
                                Lockable="False"
                                Command="{Binding CWViewChangeCommand}"/>
                    <cui:Button Grid.Column="1" 
                                Opacity="0"
                                Lockable="False"
                                Command="{Binding CenterViewChangeCommand}"/>
                    <cui:Button Grid.Column="2" 
                                Opacity="0"
                                Lockable="False"
                                Command="{Binding CCWViewChangeCommand}"/>
                </Grid>
            </Grid>

            <!--<GroupBox Grid.Row="2" BorderBrush="White" BorderThickness="1" Margin="10,10,10,10" FontSize="18" Foreground="White" Header="Chuck Wafer Add/Remove">
                <GroupBox.Style>
                    <Style BasedOn="{x:Null}"/>
                </GroupBox.Style>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Grid.Row="0" Content="Load From Back" FontSize="19" Foreground="White" Command="{Binding LoadFromBackCommand}"/>


                    <Button Grid.Column="1" Grid.Row="0" Content="Unload To Back" FontSize="19" Foreground="White" Command="{Binding LoadFromBackCommand}"/>


                </Grid>
            </GroupBox>-->

            <GroupBox Grid.Row="2" BorderBrush="White" BorderThickness="1" Margin="10,10,10,10" FontSize="18" Foreground="White" Header="Manual Wafer Unload">
                <GroupBox.Style>
                    <Style BasedOn="{x:Null}"/>
                </GroupBox.Style>
                <Grid Margin="10,0,5,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border  Grid.Column="0" Grid.Row="0" BorderThickness="4" 
                             BorderBrush="{Binding LoaderController.LoaderInfo.StateMap.ChuckModules[0].WaferStatus, Converter={StaticResource WaferToColConv}}">
                        <TextBlock Margin="10,10,10,10" FontSize="22" 
                                   Foreground="{Binding LoaderController.LoaderInfo.StateMap.ChuckModules[0].WaferStatus, Converter={StaticResource WaferToColConv}}" Text="No Wafer&#10;On Chuck" VerticalAlignment="Stretch" HorizontalAlignment="Center"/>
                    </Border>
                    <Button Grid.Column="1" Grid.Row="0" Content="{Binding LoaderController.LoaderInfo.StateMap.ChuckModules[0].WaferStatus, Converter= {StaticResource WaferOnCSTButtonCon }}" Command="{Binding ManualWaferCommand}" FontSize="30"  Foreground="White"/>

                    <Border Grid.Column="0" Grid.Row="1" BorderThickness="4" 
                            BorderBrush="{Binding LoaderController.LoaderInfo.StateMap.PreAlignModules[0].WaferStatus, Converter={StaticResource WaferToColConv}}">
                        <TextBlock Margin="10,10,10,10" FontSize="22" 
                                   Foreground="{Binding LoaderController.LoaderInfo.StateMap.PreAlignModules[0].WaferStatus, Converter={StaticResource WaferToColConv}}" Text="No Wafer&#10; On PRE" VerticalAlignment="Stretch" HorizontalAlignment="Center"/>
                    </Border>
                    <Button Grid.Column="1" Grid.Row="1" Content="{Binding LoaderController.LoaderInfo.StateMap.PreAlignModules[0].WaferStatus, Converter= {StaticResource WaferOnCSTButtonCon }}"  Command="{Binding ManualPreCommand}"  FontSize="30"  Foreground="White"/>

                    <Border Grid.Column="0" Grid.Row="2" BorderThickness="4" 
                            BorderBrush="{Binding LoaderController.LoaderInfo.StateMap.ARMModules[0].WaferStatus, Converter={StaticResource WaferToColConv}}">
                        <TextBlock Margin="10,10,10,10" FontSize="22" 
                                   Foreground="{Binding LoaderController.LoaderInfo.StateMap.ARMModules[0].WaferStatus, Converter={StaticResource WaferToColConv}}" Text="No Wafer&#10; On Arm" VerticalAlignment="Stretch" HorizontalAlignment="Center" />
                    </Border>
                    <Button Grid.Column="1" Grid.Row="2" Command="{Binding ManualArmCommand}" Content="{Binding LoaderController.LoaderInfo.StateMap.ARMModules[0].WaferStatus, Converter= {StaticResource WaferOnCSTButtonCon }}" FontSize="30"  Foreground="White"/>


                    <Border Grid.Column="0" Grid.Row="3" BorderThickness="4" 
                            BorderBrush="{Binding LoaderController.LoaderInfo.StateMap.ARMModules[1].WaferStatus, Converter={StaticResource WaferToColConv}}">
                        <TextBlock Margin="10,10,10,10" FontSize="22" 
                                   Foreground="{Binding LoaderController.LoaderInfo.StateMap.ARMModules[1].WaferStatus, Converter={StaticResource WaferToColConv}}" Text="No Wafer&#10; On Arm2" VerticalAlignment="Stretch" HorizontalAlignment="Center"/>
                    </Border>
                    <Button Grid.Column="1" Grid.Row="4" Command="{Binding ManualArm2Command}" Content="{Binding LoaderController.LoaderInfo.StateMap.ARMModules[1].WaferStatus, Converter= {StaticResource WaferOnCSTButtonCon }}" FontSize="30"  Foreground="White"/>


                </Grid>
            </GroupBox>
        </Grid>

    </Grid>
</UserControl>
