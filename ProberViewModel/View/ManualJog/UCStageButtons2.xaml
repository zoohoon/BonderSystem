<UserControl x:Class="ProberViewModel.UCStageButtons2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManualJogView"
             mc:Ignorable="d" 
            d:DesignHeight="240" d:DesignWidth="50" Background="Transparent">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="JogButtonStyle" TargetType="{x:Type Button}">
                <Setter Property="FontSize" Value="19"></Setter>
                <Setter Property="FontFamily" Value="NanumGothic"></Setter>
                <Setter Property="MinHeight" Value="36"></Setter>
                <Setter Property="MinWidth" Value="48"></Setter>
                <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
                <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        </Grid.Resources>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
           
                <Button Content="WaferMoveMiddle"  Grid.Row="0" 
                Background="LightGray" FontSize="12" VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center" Width="128" Height="48" FontWeight="Bold"
                Command="{Binding WaferMoveMiddleCommand}"
                IsEnabled="{Binding StageButtonsVisibility}"/>

            <Button Content="WaferMoveRear"  Grid.Column="1"
                Background="LightGray" FontSize="12" VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center" Width="128" Height="48" FontWeight="Bold"
                Command="{Binding WaferMoveRearCommand}"
                IsEnabled="{Binding StageButtonsVisibility}"/>

            <Button Content="LoaderDoorOpen"  Grid.Column="2"
                Background="LightGray" FontSize="12" VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center" Width="128" Height="48" FontWeight="Bold"
                Command="{Binding LoaderDoorOpenCommand}"
                IsEnabled="{Binding StageButtonsVisibility}"/>

            <Button Content="LoaderDoorClose"  Grid.Column="3"
                Background="LightGray" FontSize="12" VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center" Width="128" Height="48" FontWeight="Bold"
                Command="{Binding LoaderDoorCloseCommand}"
                IsEnabled="{Binding StageButtonsVisibility}"/>

            <Button Content="ChuckPlainTest"  Grid.Column="4"
                Background="LightGray" FontSize="12" VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center" Width="128" Height="48" FontWeight="Bold"
                Command="{Binding MeasurementChuckPlainCommand}"
                IsEnabled="{Binding StageButtonsVisibility}"/>
        </Grid>
        
    </Grid>
</UserControl>
