<UserControl x:Class="ProberViewModel.PopupPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:local="clr-namespace:ProberViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="300">
    <UserControl.Resources>
        <Storyboard x:Key="ShowPopup">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" To="0, 0, 0, 0" DecelerationRatio=".8" Duration="0:0:0.3"/>
        </Storyboard>
        <Storyboard x:Key="HidePopup">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" To="0, 0, 0, -200" DecelerationRatio=".8" Duration="0:0:0.3"/>
        </Storyboard>
    </UserControl.Resources>
    <Grid>
        <ItemsControl Name="PopupItemsControl" ItemsSource="{Binding ModuleInfoCollection}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseLeftButtonUp" >
                    <i:InvokeCommandAction Command="{Binding Path=TochUpCommand}"
                                            CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}"/>
                </i:EventTrigger>
                <i:EventTrigger EventName="TouchUp">
                    <i:InvokeCommandAction Command="{Binding Path=TochUpCommand}"
                                            CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}"/>
                </i:EventTrigger>
                <i:EventTrigger EventName="MouseLeave">
                    <i:InvokeCommandAction Command="{Binding Path=TochLeftCommand}"
                                            CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}"/>
                </i:EventTrigger>
                <i:EventTrigger EventName="TouchLeave">
                    <i:InvokeCommandAction Command="{Binding Path=TochLeftCommand}"
                                            CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>


            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="1">
                    </UniformGrid>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Grid.Row="0" Grid.Column="0" BorderBrush="#FFd6d9f4" BorderThickness="0.5" CornerRadius="2" Margin="1">
                        
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonUp" >
                                <i:InvokeCommandAction Command="{Binding ElementName=PopupItemsControl, Path=DataContext.ItemSelectCommand}"
                                            CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Border}}}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>

                        <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="0">
                            <Label.Style>
                                <Style BasedOn="{x:Null}"></Style>
                            </Label.Style>
                            
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="80" Margin="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="25*"/>
                                    <ColumnDefinition Width="75*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Label  Grid.Column="1" Padding="0"
                                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                    <Label.Style>
                                        <Style BasedOn="{x:Null}"></Style>
                                    </Label.Style>
                                    
                                    <TextBlock  Text="{Binding ModuleName}" Margin="8, 0, 0, 0"
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Center" Padding="0"
                                                Foreground="White"
                                                />
                                </Label>

                                <Label Grid.Column="0"
                                       Padding="0"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                    <Label.Style>
                                        <Style BasedOn="{x:Null}"></Style>
                                    </Label.Style>

                                    <Grid>

                                        <Ellipse Height="15" Width="15" Stroke="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Ellipse.Style>
                                                <Style>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CommunicationModule.CommunicationState}" Value="UNAVAILABLE">
                                                            <Setter Property="Ellipse.Fill" Value="Black"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding CommunicationModule.CommunicationState}" Value="DISCONNECT">
                                                            <Setter Property="Ellipse.Fill" Value="Red"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding CommunicationModule.CommunicationState}" Value="CONNECTING">
                                                            <Setter Property="Ellipse.Fill" Value="Green"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>

                                        <Ellipse Grid.Column="1" 
                                                 Height="15" 
                                                 Width="15" 
                                                 Stroke="Transparent" 
                                                 HorizontalAlignment="Center" 
                                                 VerticalAlignment="Center" 
                                                 >
                                            <Ellipse.Fill>
                                                <RadialGradientBrush GradientOrigin="0,0" Center="0,0" RadiusX="0.8" RadiusY="0.8">
                                                    <GradientStop Color="#ffffff" Offset="0" />
                                                    <GradientStop Color="Transparent" Offset="1" />
                                                </RadialGradientBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        
                                        <!--<Ellipse Grid.Column="1" Height="20" Width="20" Stroke="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Ellipse.Fill>
                                                <RadialGradientBrush GradientOrigin="0.2,0.2" Center="0.2,0.2" RadiusX="0.8" RadiusY="0.8">
                                                    <GradientStop Color="#ffffff" Offset="0" />
                                                    <GradientStop Color="Transparent" Offset="1" />
                                                </RadialGradientBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>-->
                                        
                                    </Grid>
                                </Label>
                            </Grid>
                        </Label>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <Popup IsOpen="True" Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type Grid}}, Path=ActualWidth}">
            <StackPanel Name="popupStackPanel" Background="White" Margin="0, 0, 0, -200">
                <StackPanel.Style>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsPopupOpen}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <StaticResource ResourceKey="ShowPopup"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <StaticResource ResourceKey="HidePopup"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>

                <Border Grid.Row="0" Grid.Column="0" BorderBrush="#FFd6d9f4" BorderThickness="0.5" CornerRadius="2" Margin="1">
                    <Grid Margin="8" MinWidth="80" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock  Grid.Column="0"  Margin="8" Text="{Binding SelectModuleInfo.ModuleName}"/>
                        <Ellipse Grid.Column="1" Height="20" Width="20" Margin="8" Stroke="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Ellipse.Style>
                                <Style>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectModuleInfo.CommunicationModule.CommunicationState}" Value="UNAVAILABLE">
                                            <Setter Property="Ellipse.Fill" Value="Black"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SelectModuleInfo.CommunicationModule.CommunicationState}" Value="DISCONNECT">
                                            <Setter Property="Ellipse.Fill" Value="Red"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SelectModuleInfo.CommunicationModule.CommunicationState}" Value="CONNECTING">
                                            <Setter Property="Ellipse.Fill" Value="Green"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                        <Ellipse Grid.Column="1" Height="20" Width="20" Stroke="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Ellipse.Fill>
                                <RadialGradientBrush GradientOrigin="0.2,0.2" Center="0.2,0.2" RadiusX="0.8" RadiusY="0.8">
                                    <GradientStop Color="#ffffff" Offset="0" />
                                    <GradientStop Color="Transparent" Offset="1" />
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Grid>
                </Border>
                <ContentControl Content="{Binding SelectModuleInfo.Content}">
                    
                </ContentControl>
            </StackPanel>
        </Popup>
    </Grid>
</UserControl>
