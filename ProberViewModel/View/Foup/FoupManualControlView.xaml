<UserControl x:Class="FoupManualControl.FoupManualControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoupManualControl"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vc="clr-namespace:ValueConverters;assembly=ValueConverters"
             
            xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 


    mc:Ignorable="d" 
             d:DesignHeight="792" d:DesignWidth="500">
    <UserControl.Resources>
        <ResourceDictionary>
            <vc:FoupDockingPort40InManualColorCon x:Key="Dock40InManualConv"/>
            <vc:FoupDockingPort40OutManualColorCon x:Key="Dock40OutManualConv"/>
            <vc:FoupPlateLockManualColorCon x:Key="PlateLockManualConv"/>
            <vc:FoupPlateUnlockManualColorCon x:Key="PlateUnlockManualConv"/>
            <vc:FoupCoverUpManualColorCon x:Key="CoverUpManualConv"/>
            <vc:FoupCoverDownManualColorCon x:Key="CoverDownManualConv"/>
            <vc:FoupDockingPortInManualColorCon x:Key="DockInManualConv"/>
            <vc:FoupDockingPortOutManualColorCon x:Key="DockOutManualConv"/>
            <vc:FoupOpenerOpenManualColorCon x:Key="OpenerOpenManualConv"/>
            <vc:FoupOpenerCloseManualColorCon x:Key="OpenerCloseManualConv"/>

            <ResourceDictionary.MergedDictionaries>
                <!-- MahApps -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <!-- Material Design -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Dark.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.indigo.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.deeporange.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ToggleButton.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Slider.xaml" />
                <!-- Material Design: MahApps Compatibility -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.MahApps;component/Themes/MaterialDesignTheme.MahApps.Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.MahApps;component/Themes/MaterialDesignTheme.MahApps.Flyout.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid ShowGridLines="True">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="2.5*"/>
                </Grid.ColumnDefinitions>

                <Label Content="CYLINDER"
                       FontSize="18"
                       Foreground="White" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,0,0">
                </Label>

                <Label Grid.Column="1" 
                       FontSize="13"
                       Content="Extend" 
                       Foreground="White" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,0,0">

                </Label>

                <Label Grid.Column="2" 
                       FontSize="12"
                       Content="Retract" 
                       Foreground="White" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,0,0">
                </Label>


            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="2.5*"/>
                </Grid.ColumnDefinitions>

                <Grid  Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Label Content="DOCKING&#10;PLATE" Grid.Row="0"
                           Margin="0,0,0,0"
                       FontSize="16"
                       Foreground="White" 
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center">
                    </Label>

                    <Label Content="DOCKING&#10;PORT" Grid.Row="1"
                           Margin="0,0,0,0"
                       FontSize="16"
                       Foreground="White" 
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center">
                    </Label>

                    <Label Content="DOCKING&#10;PORT40" Grid.Row="2"
                           Margin="0,0,0,0"
                       FontSize="16"
                       Foreground="White" 
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center">
                    </Label>

                    <Label Content="OPENER&#10;ROTATE" Grid.Row="3"
                           Margin="0,0,0,0"
                       FontSize="16"
                       Foreground="White" 
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center">
                    </Label>

                    <Label Content="COVER&#10;SLIDE" Grid.Row="4"
                           Margin="0,0,0,0"
                       FontSize="16"
                       Foreground="White" 
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center">
                    </Label>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Button  Grid.Row="0" Margin="3,3,3,3" Background="black" 
                            BorderBrush="Transparent" BorderThickness="0" Padding="0"                             
                    Height="50" Command="{Binding cmdCSTLock}">
                        <Viewbox Width="36" Height="36">
                            <Canvas Width="24" Height="24">
                                <Path Data="M12,2A7,7 0 0,1 19,9C19,11.38 17.81,13.47 16,14.74V17A1,1 0 0,1 15,18H9A1,1 0 0,1 8,17V14.74C6.19,13.47 5,11.38 5,9A7,7 0 0,1 12,2M9,21V20H15V21A1,1 0 0,1 14,22H10A1,1 0 0,1 9,21M12,4A5,5 0 0,0 7,9C7,11.05 8.23,12.81 10,13.58V16H14V13.58C15.77,12.81 17,11.05 17,9A5,5 0 0,0 12,4Z" 
                                      Fill="{Binding Path=FoupController.FoupModuleInfo.DockingPlateState,Converter={StaticResource PlateLockManualConv}}"/>
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <Button Grid.Row="1"  Margin="3,3,3,3" Background="black" 
                            BorderBrush="Transparent" BorderThickness="0" Padding="0"
                    Height="50" Command="{Binding cmdDPLoad}">
                        <Viewbox Width="36" Height="36">
                            <Canvas Width="24" Height="24">
                                <Path Data="M12,2A7,7 0 0,1 19,9C19,11.38 17.81,13.47 16,14.74V17A1,1 0 0,1 15,18H9A1,1 0 0,1 8,17V14.74C6.19,13.47 5,11.38 5,9A7,7 0 0,1 12,2M9,21V20H15V21A1,1 0 0,1 14,22H10A1,1 0 0,1 9,21M12,4A5,5 0 0,0 7,9C7,11.05 8.23,12.81 10,13.58V16H14V13.58C15.77,12.81 17,11.05 17,9A5,5 0 0,0 12,4Z"  
                                      Fill="{Binding Path=FoupController.FoupModuleInfo.DockingPortState,Converter={StaticResource DockInManualConv}}"/>
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <Button Grid.Row="2" Margin="3,3,3,3" Background="black" 
                            BorderBrush="Transparent" BorderThickness="0" Padding="0"
                    Height="50" Command="{Binding cmdDP40Load}">
                        <Viewbox Width="36" Height="36">
                            <Canvas Width="24" Height="24">
                                <Path Data="M12,2A7,7 0 0,1 19,9C19,11.38 17.81,13.47 16,14.74V17A1,1 0 0,1 15,18H9A1,1 0 0,1 8,17V14.74C6.19,13.47 5,11.38 5,9A7,7 0 0,1 12,2M9,21V20H15V21A1,1 0 0,1 14,22H10A1,1 0 0,1 9,21M12,4A5,5 0 0,0 7,9C7,11.05 8.23,12.81 10,13.58V16H14V13.58C15.77,12.81 17,11.05 17,9A5,5 0 0,0 12,4Z"  
                                      Fill="{Binding Path=FoupController.FoupModuleInfo.DockingPort40State,Converter={StaticResource Dock40InManualConv}}"/>
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <Button Grid.Row="3" Margin="3,3,3,3" Background="black" 
                            BorderBrush="Transparent" BorderThickness="0" Padding="0"
                    Height="50" Command="{Binding cmdROTOpen}">
                        <Viewbox Width="36" Height="36">
                            <Canvas Width="24" Height="24">
                                <Path Data="M12,2A7,7 0 0,1 19,9C19,11.38 17.81,13.47 16,14.74V17A1,1 0 0,1 15,18H9A1,1 0 0,1 8,17V14.74C6.19,13.47 5,11.38 5,9A7,7 0 0,1 12,2M9,21V20H15V21A1,1 0 0,1 14,22H10A1,1 0 0,1 9,21M12,4A5,5 0 0,0 7,9C7,11.05 8.23,12.81 10,13.58V16H14V13.58C15.77,12.81 17,11.05 17,9A5,5 0 0,0 12,4Z"  
                                      Fill="{Binding Path=FoupController.FoupModuleInfo.OpenerState,Converter={StaticResource OpenerOpenManualConv}}"/>
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <Button Grid.Row="4" Margin="3,3,3,3" Background="black" 
                            BorderBrush="Transparent" BorderThickness="0" Padding="0"
                    Height="50" Command="{Binding cmdFOCUp}">
                        <Viewbox Width="36" Height="36" >
                            
                            <Canvas Width="24" Height="24">

                                <Path Data="M12,2A7,7 0 0,1 19,9C19,11.38 17.81,13.47 16,14.74V17A1,1 0 0,1 15,18H9A1,1 0 0,1 8,17V14.74C6.19,13.47 5,11.38 5,9A7,7 0 0,1 12,2M9,21V20H15V21A1,1 0 0,1 14,22H10A1,1 0 0,1 9,21M12,4A5,5 0 0,0 7,9C7,11.05 8.23,12.81 10,13.58V16H14V13.58C15.77,12.81 17,11.05 17,9A5,5 0 0,0 12,4Z"  
                                      Fill="{Binding Path=FoupController.FoupModuleInfo.FoupCoverState,Converter={StaticResource CoverUpManualConv}}"/>
                            </Canvas>
                        </Viewbox>
                    </Button>


                </Grid>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Button  Grid.Row="0" Margin="3,3,3,3" Background="black" 
                            BorderBrush="Transparent" BorderThickness="0" Padding="0"
                    Height="50" Command="{Binding cmdCSTUnlock}">
                        <Viewbox Width="36" Height="36">
                            <Canvas Width="24" Height="24">
                                <Path Data="M12,2A7,7 0 0,1 19,9C19,11.38 17.81,13.47 16,14.74V17A1,1 0 0,1 15,18H9A1,1 0 0,1 8,17V14.74C6.19,13.47 5,11.38 5,9A7,7 0 0,1 12,2M9,21V20H15V21A1,1 0 0,1 14,22H10A1,1 0 0,1 9,21M12,4A5,5 0 0,0 7,9C7,11.05 8.23,12.81 10,13.58V16H14V13.58C15.77,12.81 17,11.05 17,9A5,5 0 0,0 12,4Z"  
                                      Fill="{Binding Path=FoupController.FoupModuleInfo.DockingPlateState,Converter={StaticResource PlateUnlockManualConv}}"/>
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <Button Grid.Row="1"  Margin="3,3,3,3" Background="black" 
                            BorderBrush="Transparent" BorderThickness="0" Padding="0"
                    Height="50" Command="{Binding cmdDPUnLoad}">
                        <Viewbox Width="36" Height="36">
                            <Canvas Width="24" Height="24">
                                <Path Data="M12,2A7,7 0 0,1 19,9C19,11.38 17.81,13.47 16,14.74V17A1,1 0 0,1 15,18H9A1,1 0 0,1 8,17V14.74C6.19,13.47 5,11.38 5,9A7,7 0 0,1 12,2M9,21V20H15V21A1,1 0 0,1 14,22H10A1,1 0 0,1 9,21M12,4A5,5 0 0,0 7,9C7,11.05 8.23,12.81 10,13.58V16H14V13.58C15.77,12.81 17,11.05 17,9A5,5 0 0,0 12,4Z" 
                                      Fill="{Binding Path=FoupController.FoupModuleInfo.DockingPortState,Converter={StaticResource DockOutManualConv}}"/>
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <Button Grid.Row="2" Margin="3,3,3,3" Background="black" 
                            BorderBrush="Transparent" BorderThickness="0" Padding="0"
                    Height="50" Command="{Binding cmdDP40UnLoad}">
                        <Viewbox Width="36" Height="36">
                            <Canvas Width="24" Height="24">
                                <Path Data="M12,2A7,7 0 0,1 19,9C19,11.38 17.81,13.47 16,14.74V17A1,1 0 0,1 15,18H9A1,1 0 0,1 8,17V14.74C6.19,13.47 5,11.38 5,9A7,7 0 0,1 12,2M9,21V20H15V21A1,1 0 0,1 14,22H10A1,1 0 0,1 9,21M12,4A5,5 0 0,0 7,9C7,11.05 8.23,12.81 10,13.58V16H14V13.58C15.77,12.81 17,11.05 17,9A5,5 0 0,0 12,4Z"  
                                      Fill="{Binding Path=FoupController.FoupModuleInfo.DockingPort40State,Converter={StaticResource Dock40OutManualConv}}"/>
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <Button Grid.Row="3" Margin="3,3,3,3" Background="black" 
                            BorderBrush="Transparent" BorderThickness="0" Padding="0"
                    Height="50" Command="{Binding cmdROTClose}">
                        <Viewbox Width="36" Height="36">
                            <Canvas Width="24" Height="24">
                                <Path Data="M12,2A7,7 0 0,1 19,9C19,11.38 17.81,13.47 16,14.74V17A1,1 0 0,1 15,18H9A1,1 0 0,1 8,17V14.74C6.19,13.47 5,11.38 5,9A7,7 0 0,1 12,2M9,21V20H15V21A1,1 0 0,1 14,22H10A1,1 0 0,1 9,21M12,4A5,5 0 0,0 7,9C7,11.05 8.23,12.81 10,13.58V16H14V13.58C15.77,12.81 17,11.05 17,9A5,5 0 0,0 12,4Z"  
                                      Fill="{Binding Path=FoupController.FoupModuleInfo.OpenerState,Converter={StaticResource OpenerCloseManualConv}}"/>
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <Button Grid.Row="4" Margin="3,3,3,3" Background="black" 
                            BorderBrush="Transparent" BorderThickness="0" Padding="0"
                    Height="50" Command="{Binding cmdFOCDown}">
                        <Viewbox Width="36" Height="36">
                            <Canvas Width="24" Height="24">
                                <Path Data="M12,2A7,7 0 0,1 19,9C19,11.38 17.81,13.47 16,14.74V17A1,1 0 0,1 15,18H9A1,1 0 0,1 8,17V14.74C6.19,13.47 5,11.38 5,9A7,7 0 0,1 12,2M9,21V20H15V21A1,1 0 0,1 14,22H10A1,1 0 0,1 9,21M12,4A5,5 0 0,0 7,9C7,11.05 8.23,12.81 10,13.58V16H14V13.58C15.77,12.81 17,11.05 17,9A5,5 0 0,0 12,4Z"  
                                      Fill="{Binding Path=FoupController.FoupModuleInfo.FoupCoverState,Converter={StaticResource CoverDownManualConv}}"/>
                            </Canvas>
                        </Viewbox>
                    </Button>

                </Grid>

                <!--<ItemsControl ItemsSource="{Binding Buttons.list}" Grid.ColumnSpan="3" >

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>

                        <DataTemplate>

                            <Grid>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0" ></Button>

                            </Grid>

                        </DataTemplate>

                    </ItemsControl.ItemTemplate>

                </ItemsControl>-->

            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions>
            <Label     Grid.Row="0" 
                       Content="INPUT"
                       FontSize="18"
                       Foreground="White" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,0,0">
            </Label>

            <ScrollViewer Grid.Row="1" Margin="4">
                <Grid                
                   ScrollViewer.CanContentScroll="True" 
                   ScrollViewer.VerticalScrollBarVisibility="Visible">

                    <ItemsControl ItemsSource="{Binding FilteredInputPorts, UpdateSourceTrigger=PropertyChanged}" Margin="4">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="180" Height="36">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="45"/>
                                        <ColumnDefinition Width="175*"/>
                                    </Grid.ColumnDefinitions>
                                    <ToggleButton VerticalAlignment="Center" Margin="4" 
                                          IsChecked="{Binding Path=Value}" 
                                          ToolTip="{Binding Path=Key.Value}"
                                          IsEnabled="True">
                                    </ToggleButton>
                                    <Label Grid.Column="1" 
                               HorizontalContentAlignment="Left" 
                               VerticalAlignment="Center">
                                        <Grid>
                                            <TextBlock Text="{Binding Path=Key.Value}" 
                                           ToolTip="{Binding Path=Key.Value}" 
                                           TextWrapping="WrapWithOverflow" TextTrimming="CharacterEllipsis"
                                           TextAlignment="Center" FontWeight="Bold"/>
                                        </Grid>
                                    </Label>

                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>

            <Label     Grid.Row="2" 
                       Content="OUTPUT"
                       FontSize="18"
                       Foreground="White" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,0,0">
            </Label>
            
            <ScrollViewer Grid.Row="3" Margin="4">
                <Grid
                    ScrollViewer.CanContentScroll="True" 
                   ScrollViewer.VerticalScrollBarVisibility="Visible">

                    <ItemsControl ItemsSource="{Binding FilteredOutputPorts}" Margin="4" TextSearch.TextPath="@Key">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="180" Height="36" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="45"/>
                                        <ColumnDefinition Width="175*"/>
                                    </Grid.ColumnDefinitions>
                                    <ToggleButton VerticalAlignment="Center" Margin="4" 
                                      IsChecked="{Binding Path=Value}" 
                                      ToolTip="{Binding Path=Key.Value}">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Checked">
                                                <i:InvokeCommandAction Command="{Binding OutputOnCommand}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="Unchecked">
                                                <i:InvokeCommandAction Command="{Binding OutputOffCommand}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </ToggleButton>
                                    <Label Grid.Column="1" 
                               HorizontalContentAlignment="Left" 
                               VerticalAlignment="Center">
                                        <Grid>
                                            <TextBlock Text="{Binding Path=Key.Value}" 
                                           ToolTip="{Binding Path=Key.Value}" 
                                           TextWrapping="WrapWithOverflow" TextTrimming="CharacterEllipsis"
                                           TextAlignment="Center" FontWeight="Bold"/>
                                        </Grid>
                                    </Label>

                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
