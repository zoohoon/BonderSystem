<UserControl x:Class="FoupE84Control.FoupE84ControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoupE84Control"
             mc:Ignorable="d" 
             d:DesignHeight="792" d:DesignWidth="500">
    <Grid>

        <Grid.Resources>
            
            <Style TargetType="{x:Type Button}">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="Margin" Value="1,1,1,1"/>
            </Style>
            
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="4*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.Column="0">
                    <TextBlock Text="OP Mode"></TextBlock>
                </Button>
                
                <Button Grid.Row="0" Grid.Column="1">
                    <TextBlock Text="HO SIG &#10; Status"></TextBlock>
                    <!--<TextBlock>HO SIG <LineBreak/> status </TextBlock>-->
                </Button>

                <Button Grid.Row="1" Grid.Column="0">
                    <TextBlock Text="EMG STUP"></TextBlock>
                </Button>
                
                <Button Grid.Row="1" Grid.Column="1">
                    <TextBlock Text="E84 INIT"></TextBlock>
                </Button>

                <Button Grid.Row="2" Grid.ColumnSpan="2">
                    <TextBlock Text="PIO SIGNAL"></TextBlock>
                </Button>
                
            </Grid>

            <Grid Grid.Column="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0">
                    <TextBlock Text="JOB RECOVERY"></TextBlock>
                </Button>
                <Button Grid.Row="1">
                    <TextBlock Text="Read RFID"></TextBlock>
                </Button>

            </Grid>
            
        </Grid>

        <Button Grid.Row="1">
            <TextBlock Text="PIO SIGNAL"></TextBlock>
        </Button>
        
    </Grid>
</UserControl>
