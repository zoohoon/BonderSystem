<Controls:MetroWindow
     xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
           x:Class="OPUSV3DView.OPUSV3D"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OPUSV3DView"
             mc:Ignorable="d" 
             WindowStyle="ToolWindow"
    xmlns:ps="clr-namespace:ProberSimulator;assembly=ProberSimulator"
    WindowStartupLocation="CenterScreen"
    ShowCloseButton="true"
    ShowMaxRestoreButton="False"
    ShowMinButton="False"
    ResizeMode="NoResize"
    Closing="MetroWindow_Closing"
             d:DesignHeight="700" d:DesignWidth="700" Background="Black"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="3*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.RowSpan="2" Background="Transparent" >

            <ps:OPUS5_3D HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                CamPosition="{Binding CamPosition}"
                CamLookDirection="{Binding CamLookDirection}"
                CamUpDirection="{Binding CamUpDirection}" Margin="0,0,0,-90"
                 />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                <Label Content="{Binding MotionManager.UpdateProcTime}" ContentStringFormat="{}Curr. {0:000.0} ms"/>
                <Label Content="{Binding MotionManager.MaxUpdateProcTime}" ContentStringFormat="{}Max. {0:000.0} ms"/>
            </StackPanel>

        </Grid>
        <!--<ContentControl  DataContext="{Binding}" Content="{Binding Stage3DModel}"  Width="600" Height="600"  
                                    Margin="-70" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>-->
        <Button Grid.Row="0" Opacity="0" Click="X2ViewChangeCommand"/>
        <Label Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right" 
               Foreground="Yellow" FontSize="18" FontWeight="Bold"
               Content="{Binding ZFM.ForceValue}" ContentStringFormat="P. Force: {0:0.00}Kg"/>

        <Grid Grid.Row="1" Background="Transparent" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Opacity="0" Click="CWViewChangeCommand"
                                 />
            <Button Grid.Column="1" Opacity="0" Click="CenterViewChangeCommand"
                                />
            <Button Grid.Column="2" Opacity="0" Click="CCWViewChangeCommand"
                                />

        </Grid>
        <Grid Grid.Row="2" Background="Transparent" Margin="0,0,10,0" >
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="0.7*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Border  Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Margin="37,0,0,-20" >
                <Label x:Name="POSXLabel" Content="X : "  />
            </Border>
            <Border  Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" Margin="-45,0,0,-20">
                <Label x:Name="lb_posx" Grid.Row="0" Content="{Binding Path=XAxis.Status.Position.Actual}" 
                       ContentStringFormat="{}{0:0.0}" 
                        />
            </Border>
            <Border  Grid.Row="0" Grid.Column="2" HorizontalAlignment="Left" Margin="37,0,0,-20">
                <Label x:Name="POSYLabel" Content="Y : " />
            </Border>
            <Border  Grid.Row="0" Grid.Column="3" HorizontalAlignment="Right" Margin="-45,0,0,-20">
                <Label x:Name="lb_posy"  Content="{Binding YAxis.Status.Position.Actual }" 
                       ContentStringFormat="{}{0:0.0}" 
                      />
            </Border>
            <Border  Grid.Row="0" Grid.Column="4" HorizontalAlignment="Left" Margin="24,0,0,-20">
                <Label Content="T : "  />
            </Border>
            <Border  Grid.Row="0" Grid.Column="5" HorizontalAlignment="Right" Margin="-45,0,0,-20">

                <Label x:Name="lb_post"  Content="{Binding TAxis.Status.Position.Actual}" 
                       ContentStringFormat="{}{0:0.0}"/>
            </Border>
            <Border  Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Margin="37,0,0,-20">
                <Label Content="Z : " />
            </Border>
            <Border  Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Margin="-45,0,0,-20">
                <Label x:Name="lb_posz" Content="{Binding ZAxis.Status.Position.Actual }" 
                       ContentStringFormat="{}{0:0.0}"  
                        />
            </Border>
            <Border  Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" Margin="28,0,0,-20">
                <Label Content="PZ : "  />
            </Border>
            <Border  Grid.Row="1" Grid.Column="3" HorizontalAlignment="Right" Margin="-45,0,0,-20">
                <Label x:Name="lb_pospz"  Content="{Binding PZAxis.Status.Position.Actual}" 
                       ContentStringFormat="{}{0:0.0}"/>
            </Border>
            <Border  Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" Margin="0,0,0,-20" >
                <Label x:Name="RawXLabel" Foreground="Yellow" Content="Raw__X : "  />
            </Border>
            <Border  Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Margin="-45,0,0,-20">
                <Label x:Name="lb_rawx" Grid.Row="0" Foreground="Yellow" Content="{Binding Path=XAxis.Status.RawPosition.Actual}" 
                       ContentStringFormat="{}{0:0.0}"  
                        />
            </Border>
            <Border  Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" Margin="0,0,0,-20">
                <Label x:Name="RawYLabel"  Foreground="Yellow" Content="Raw__Y : " />
            </Border>
            <Border  Grid.Row="2" Grid.Column="3" HorizontalAlignment="Right" Margin="-45,0,0,-20">
                <Label x:Name="lb_rawy"  Foreground="Yellow" Content="{Binding YAxis.Status.RawPosition.Actual }" 
                       ContentStringFormat="{}{0:0.0}"  
                      />
            </Border>
            <Border  Grid.Row="2" Grid.Column="4" HorizontalAlignment="Left" Margin="-10,0,0,-20">
                <Label Content="Raw__T : "  Foreground="Yellow"/>
            </Border>
            <Border  Grid.Row="2" Grid.Column="5" HorizontalAlignment="Right" Margin="-45,0,0,-20">
                <Label x:Name="lb_rawz"  Foreground="Yellow" Content="{Binding TAxis.Status.RawPosition.Actual }" 
                       ContentStringFormat="{}{0:0.0}"  
                        />
            </Border>



            <Border  Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center"  Margin="-14,0,0,0" >
                <Label  Content="Comp__X : "   Foreground="Yellow"/>
            </Border>
            <Border  Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center"  Margin="-19,0,0,0">
                <Label x:Name="lb_compx" Grid.Row="0" Foreground="Yellow" Content="{Binding Path=XAxis.Status.Position.Comp}" 
                       ContentStringFormat="{}{0:0.000}"  
                        />
            </Border>
            <Border  Grid.Row="3" Grid.Column="2" HorizontalAlignment="Center" Margin="-14,0,0,0">
                <Label  Content="Comp__Y : " Foreground="Yellow" />
            </Border>
            <Border  Grid.Row="3" Grid.Column="3" HorizontalAlignment="Center"  Margin="17,0,0,0">
                <Label x:Name="lb_compy" Foreground="Yellow"  Content="{Binding YAxis.Status.Position.Comp }" 
                       ContentStringFormat="{}{0:0.000}"  
                      />
            </Border>
            <Border  Grid.Row="3" Grid.Column="4" HorizontalAlignment="Center" Margin="-35,0,0,0">
                <Label Content="Comp__T : "  Foreground="Yellow" />
            </Border>
            <Border  Grid.Row="3" Grid.Column="5" HorizontalAlignment="Center" Margin="15,0,0,0">
                <Label x:Name="lb_compt" Foreground="Yellow" Content="{Binding TAxis.Status.Position.Comp }" 
                       ContentStringFormat="{}{0:0.000}"  
                        />
            </Border>
        </Grid>
