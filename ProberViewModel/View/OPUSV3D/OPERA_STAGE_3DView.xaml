<UserControl x:Class="OPUSV3DView.OPERA_STAGE_3DView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
               xmlns:local="clr-namespace:OPUSV3DView"
             mc:Ignorable="d" 
             xmlns:ps="clr-namespace:ProberSimulator;assembly=ProberSimulator"
             d:DesignHeight="700" d:DesignWidth="700" Background="Black"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="3*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.RowSpan="2" Background="Transparent" >

            <ps:OPUS5_3D HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                CamPosition="{Binding CamPosition}"
                CamLookDirection="{Binding CamLookDirection}"
                CamUpDirection="{Binding CamUpDirection}" Margin="0,0,-90,-90"
                 />

        </Grid>
   

        <Grid Grid.Row="1" Background="Transparent" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Grid Grid.Row="2" Background="Transparent" Margin="0,0,0,30" >
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="0.7*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Border  Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Margin="37,0,0,-20" >
                <Label x:Name="POSXLabel" Content="X : "   FontSize="18"/>
            </Border>
            <Border  Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" Margin="-45,0,0,-20">
                <Label x:Name="lb_posx" Grid.Row="0" Content="{Binding Path=XAxis.Status.Position.Actual}"  FontSize="18"
                       ContentStringFormat="{}{0:0.0}" 
                        />
            </Border>
            <Border  Grid.Row="0" Grid.Column="2" HorizontalAlignment="Left" Margin="37,0,0,-20">
                <Label x:Name="POSYLabel" Content="Y : "  FontSize="18"/>
            </Border>
            <Border  Grid.Row="0" Grid.Column="3" HorizontalAlignment="Right" Margin="-45,0,0,-20">
                <Label x:Name="lb_posy"  Content="{Binding YAxis.Status.Position.Actual }"  FontSize="18"
                       ContentStringFormat="{}{0:0.0}" 
                      />
            </Border>
            <Border  Grid.Row="0" Grid.Column="4" HorizontalAlignment="Left" Margin="24,0,0,-20">
                <Label Content="T : "   FontSize="18"/>
            </Border>
            <Border  Grid.Row="0" Grid.Column="5" HorizontalAlignment="Right" Margin="-45,0,0,-20">

                <Label x:Name="lb_post"  Content="{Binding TAxis.Status.Position.Actual}"  FontSize="18"
                       ContentStringFormat="{}{0:0.0}"/>
            </Border>
            <Border  Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Margin="37,0,0,-20">
                <Label Content="Z : "  FontSize="18"/>
            </Border>
            <Border  Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Margin="-45,0,0,-20">
                <Label x:Name="lb_posz" Content="{Binding ZAxis.Status.Position.Actual }"  FontSize="18"
                       ContentStringFormat="{}{0:0.0}"  
                        />
            </Border>
            <Border  Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" Margin="28,0,0,-20">
                <Label Content="PZ : "   FontSize="18"/>
            </Border>
            <Border  Grid.Row="1" Grid.Column="3" HorizontalAlignment="Right" Margin="-45,0,0,-20">
                <Label x:Name="lb_pospz"  Content="{Binding PZAxis.Status.Position.Actual}"  FontSize="18"
                       ContentStringFormat="{}{0:0.0}"/>
            </Border>
    
        
        </Grid>
