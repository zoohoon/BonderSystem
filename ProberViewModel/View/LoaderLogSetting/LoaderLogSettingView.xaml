<Window x:Class="LoaderLogSettingViewModule.LoaderLogSettingView"
        x:Name="SettingWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoaderLogSettingViewModule"
             xmlns:dialogs="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:Enum="clr-namespace:ProberInterfaces.Enum;assembly=ProberInterfaces" 
             xmlns:MahAppsControls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             Width=" 800" Height="1100" Background="DimGray" MaxWidth="800" MinWidth="800" MaxHeight="1100" MinHeight="900"
             WindowStyle="None" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Resources>
            <ResourceDictionary>

                <System:Double x:Key="DialogTitleFontSize">26</System:Double>
                <System:Double x:Key="DialogMessageFontSize">15</System:Double>

                <Style x:Key="TitleLabel" TargetType="Label">
                    <Setter Property="Margin" Value="0 5 0 0"/>
                    <Setter Property="Background" Value="WhiteSmoke" />
                    <Setter Property="FontSize" Value="25" />
                </Style>
                <Style x:Key="ContentLabel" TargetType="Label">
                    <Setter Property="Margin" Value="0 5 0 0"/>
                    <Setter Property="FontSize" Value="18" />
                </Style>
                <Style x:Key="ContentTextBox" TargetType="TextBox">
                    <Setter Property="Margin" Value="4"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="TextAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="18" />
                </Style>
                <Style x:Key="DefaultButton" TargetType="Button">
                    <Setter Property="Margin" Value="4"/>
                    <Setter Property="FontSize" Value="18" />
                </Style>
                <local:ImageFormatConverter x:Key="ImageFormatConvert"/>
                <local:GetIndexConverter x:Key="GetIndexConvert"/>
            </ResourceDictionary>

        </Grid.Resources>

        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="1000" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Content="Log and Image Upload Path" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="Black" FontSize="16" FontWeight="Bold"/>

        <MahAppsControls:MetroAnimatedSingleRowTabControl Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" SelectedIndex="{Binding SelectedType}">
            <MahAppsControls:MetroAnimatedSingleRowTabControl.Resources>
                <SolidColorBrush x:Key="AccentColorBrush" Color="#9370d8"/>
                <SolidColorBrush x:Key="HighlightBrush" Color="#7260b5"/>
            </MahAppsControls:MetroAnimatedSingleRowTabControl.Resources>

            <MahAppsControls:MetroTabItem
                        Header="Loader" BorderThickness="1" BorderBrush="Black"
                        MahAppsControls:ControlsHelper.HeaderFontSize="20"
                        MahAppsControls:ControlsHelper.HeaderMargin="8"
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.4*" />
                        <RowDefinition Height="0.5*" />
                        <RowDefinition Height="0.6*" />
                    </Grid.RowDefinitions>

                    <GroupBox Header="Server Setting" Grid.ColumnSpan="2" Grid.Row="0" Margin="10 0 10 0">
                        <ScrollViewer>
                            <StackPanel Orientation="Vertical" Grid.Column="0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Grid.Row="0" Content="Log Enable" Foreground="Black" FontSize="14" FontWeight="Bold"/>
                                    <ToggleButton AutomationProperties.AutomationId="tglLogEnable" HorizontalAlignment="Left" IsChecked="{Binding UploadEnable}" Grid.Column="1" Grid.Row="0">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Checked">
                                                <i:InvokeCommandAction Command="{Binding UpLoadEnableCommand}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="Unchecked">
                                                <i:InvokeCommandAction Command="{Binding UpLoadDisableCommand}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </ToggleButton>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Grid.Row="0" Content="Use Stage Log Parameter" Foreground="Black" FontSize="14" FontWeight="Bold"/>
                                    <ToggleButton AutomationProperties.AutomationId="tglLogEnable" HorizontalAlignment="Left" IsChecked="{Binding CanUseStageLogParam}" Grid.Column="1" Grid.Row="0">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Checked">
                                                <i:InvokeCommandAction Command="{Binding CanUseStageLogParamEnable}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="Unchecked">
                                                <i:InvokeCommandAction Command="{Binding CanUseStageLogParamDisable}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </ToggleButton>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Content="User Name" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="14" FontWeight="Bold" Foreground="Black"/>
                                    <TextBox AutomationProperties.AutomationId="txtUserName" Margin="0 0 10 0"
                                             Grid.Column="1"  Text="{Binding UserName}" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown"/>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Password" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="Black" FontSize="14" FontWeight="Bold"/>
                                    <TextBox AutomationProperties.AutomationId="txtPassword" Margin="0 0 10 0"
                                             Grid.Column="1"  Text="{Binding Password}"  FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown" />
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Content="Auto Log Upload Time Interval (m)" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="14" FontWeight="Bold" Foreground="Black"/>
                                    <TextBox AutomationProperties.AutomationId="txtTimeInterval" Margin="0 0 10 0"
                                             Grid.Column="1"  Text="{Binding AutoLogUploadTimeInterval}" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown"/>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </GroupBox>
                    <GroupBox Header="Loader Log Upload Path Setting" Grid.ColumnSpan="2" Grid.Row="1" Margin="10 0 10 0">
                        <ScrollViewer>
                            <StackPanel Orientation="Vertical" Grid.Column="0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Loader log path " VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="Black" FontSize="14" FontWeight="Bold"/>
                                    <TextBox AutomationProperties.AutomationId="txtLoaderSystemLogPath" Margin="0 0 10 0"
                                             Grid.Column="1" Text="{Binding LoaderSystem}" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown" />
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label  Content="OCR path " VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="Black" FontSize="14" FontWeight="Bold"/>
                                    <TextBox AutomationProperties.AutomationId="txtOCRPath" Margin="0 0 10 0"
                                             Grid.Column="1" Text="{Binding LoaderOCR}" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown" />
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label  Content="DeviceUpLoad path " VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="Black" FontSize="14" FontWeight="Bold"/>
                                    <TextBox AutomationProperties.AutomationId="txtDeviceUpload" Margin="0 0 10 0"
                                             Grid.Column="1" Text="{Binding LoaderUploadDevice}" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown" />
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label  Content="DeviceDownLoad path " VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="Black" FontSize="14" FontWeight="Bold"/>
                                    <TextBox AutomationProperties.AutomationId="txtDeviceDownload" Margin="0 0 10 0"
                                             Grid.Column="1" Text="{Binding LoaderDownloadDevice}" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label  Content="ResultMap UpLoad path " VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="Black" FontSize="14" FontWeight="Bold"/>
                                    <TextBox Grid.Column="1" Text="{Binding LoaderUploadResultMap}" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown" Margin="0 0 10 0"/>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label  Content="ResultMap DownLoad path " VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="Black" FontSize="14" FontWeight="Bold" Grid.ColumnSpan="2"/>
                                    <TextBox Grid.Column="1" Text="{Binding LoaderDownloadResultMap}" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown" Grid.ColumnSpan="2" Margin="0 0 10 0"/>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label  Content="ODTP Upload path " VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="Black" FontSize="14" FontWeight="Bold" Grid.ColumnSpan="2"/>
                                    <TextBox Grid.Column="1" Text="{Binding LoaderUploadODTP}" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown" Grid.ColumnSpan="2" Margin="0 0 10 0" />
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </GroupBox>
                    <GroupBox Header="Stage Log Upload Path Setting (If not use stage log parameter)" Grid.ColumnSpan="2" Grid.Row="2" Margin="10 0 10 0" IsEnabled="{Binding CanUseStageLogParam, Converter={StaticResource BoolToOppositeBoolConverter}}">
                        <ScrollViewer>
                            <StackPanel Orientation="Vertical">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label  Content="Debug log path " VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="Black" FontSize="14" FontWeight="Bold"/>
                                    <TextBox Grid.Column="1" Text="{Binding StageSystem}" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown" Margin="0 0 10 0"/>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label  Content="Pin log path " VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="Black" FontSize="14" FontWeight="Bold"/>
                                    <TextBox Grid.Column="1" Text="{Binding StagePin}" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown" Margin="0 0 10 0"/>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label  Content="PMI log path " VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="Black" FontSize="14" FontWeight="Bold"/>
                                    <TextBox Grid.Column="1" Text="{Binding StagePMI}" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown" Margin="0 0 10 0"/>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label  Content="Temperature log path " VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="Black" FontSize="14" FontWeight="Bold"/>
                                    <TextBox Grid.Column="1" Text="{Binding StageTemp}" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown" Margin="0 0 10 0"/>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label  Content="LOT log path " VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="Black" FontSize="14" FontWeight="Bold"/>
                                    <TextBox Grid.Column="1" Text="{Binding StageLOT}" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown" Margin="0 0 10 0" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label  Content="PMI image upload path " VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="Black" FontSize="14" FontWeight="Bold"/>
                                    <TextBox Grid.Column="1" Text="{Binding LoaderUploadPMIImage}" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown" Margin="0 0 10 0" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label  Content="Pin tip size validation image path" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="Black" FontSize="14" FontWeight="Bold"/>
                                    <TextBox Grid.Column="1" Text="{Binding StagePinTipValidationResultImage}" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown" Margin="0 0 10 0" />
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </MahAppsControls:MetroTabItem>
            <MahAppsControls:MetroTabItem
                        Header="Cells" BorderThickness="1" BorderBrush="Black"
                        MahAppsControls:ControlsHelper.HeaderFontSize="20"
                        MahAppsControls:ControlsHelper.HeaderMargin="8"
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden">
                <MahAppsControls:MetroAnimatedSingleRowTabControl Grid.Row="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" ItemsSource="{Binding StageLogParamList}" SelectedIndex="{Binding SelectedIndex}">
                    <MahAppsControls:MetroAnimatedSingleRowTabControl.Resources>
                        <SolidColorBrush x:Key="AccentColorBrush" Color="#9370d8"/>
                        <SolidColorBrush x:Key="HighlightBrush" Color="#7260b5"/>
                    </MahAppsControls:MetroAnimatedSingleRowTabControl.Resources>
                    <!-- Header-->
                    <MahAppsControls:MetroAnimatedSingleRowTabControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock>
                                    <TextBlock Text="{Binding StageIndex, Converter={StaticResource GetIndexConvert}}"/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </MahAppsControls:MetroAnimatedSingleRowTabControl.ItemTemplate>
                    <!-- Content-->
                    <MahAppsControls:MetroAnimatedSingleRowTabControl.ContentTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.2*" />
                                </Grid.RowDefinitions>

                                <GroupBox Grid.ColumnSpan="2" Header="Stage Log Upload Path" IsEnabled="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.CanUseStageLogParam}">
                                    <ScrollViewer Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" Grid.RowSpan="3" >
                                        <StackPanel Orientation="Vertical" Grid.Column="0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="3*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Content="Debug log path" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="Black" FontSize="14" FontWeight="Bold"/>
                                                <TextBox AutomationProperties.AutomationId="txtStageSystemLogPath"
                                             Grid.Column="1" Text="{Binding StageSystemUpDownLoadPath.Value}"  FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown" />
                                            </Grid>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="3*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Content="Pin log path " VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="Black" FontSize="14" FontWeight="Bold"/>
                                                <TextBox AutomationProperties.AutomationId="txtPinLogPath"
                                             Grid.Column="1" Text="{Binding StagePinUpDownLoadPath.Value}" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown" />
                                            </Grid>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="3*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label  Content="PMI log path " VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="Black" FontSize="14" FontWeight="Bold"/>
                                                <TextBox AutomationProperties.AutomationId="txtPMILogPath"
                                             Grid.Column="1" Text="{Binding StagePMIUpDownLoadPath.Value}" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown" />
                                            </Grid>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="3*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Content="Temperature log path " VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="Black" FontSize="14" FontWeight="Bold"/>
                                                <TextBox AutomationProperties.AutomationId="txtTempLogPath"
                                             Grid.Column="1" Text="{Binding StageTempUpDownLoadPath.Value}" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown" />
                                            </Grid>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="3*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Content="LOT log path " VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="Black" FontSize="14" FontWeight="Bold"/>
                                                <TextBox AutomationProperties.AutomationId="txtLotLogPath"
                                             Grid.Column="1" Text="{Binding StageLOTUpDownLoadPath.Value}" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown" />
                                            </Grid>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="3*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Content="PMI image upload path " VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="Black" FontSize="14" FontWeight="Bold"/>
                                                <TextBox AutomationProperties.AutomationId="txtLotLogPath"
                                             Grid.Column="1" Text="{Binding StagePMIImageUploadPath.Value}" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown" />
                                            </Grid>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="3*"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Content="Pin tip size validation image path" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="Black" FontSize="14" FontWeight="Bold"/>
                                                <TextBox AutomationProperties.AutomationId="txtLotLogPath"
                                             Grid.Column="1" Text="{Binding StagePinTipValidationResultUploadPath.Value}" FontFamily="Gothic" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"  Height="40" FontSize="16" Background="RosyBrown" />
                                            </Grid>
                                        </StackPanel>
                                    </ScrollViewer>
                                </GroupBox>
                            </Grid>
                        </DataTemplate>
                    </MahAppsControls:MetroAnimatedSingleRowTabControl.ContentTemplate>
                </MahAppsControls:MetroAnimatedSingleRowTabControl>
            </MahAppsControls:MetroTabItem>
        </MahAppsControls:MetroAnimatedSingleRowTabControl>
        <Button AutomationProperties.AutomationId="btnOK"
                            Grid.Column="0" Grid.Row="4" Style="{StaticResource DefaultButton}" Content="OK" Height="40" VerticalAlignment="Bottom"
                            Command="{Binding OKCommand}"
                            CommandParameter="{Binding ElementName=SettingWindow}"/>
        <Button AutomationProperties.AutomationId="btnCANCEL"
                            Grid.Column="1" Grid.Row="4" Style="{StaticResource DefaultButton}" Content="CANCEL" Height="40" VerticalAlignment="Bottom"
                            Command="{Binding CancelCommand}"
                            CommandParameter="{Binding ElementName=SettingWindow}"/>
    </Grid>
</Window>
