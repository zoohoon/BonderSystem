                                         Margin="8"
                                         Foreground="White"
                                         Text="{Binding TempController.ChillerModule.Parameter.AdvancedOptionProperty.CardChangeTempDev}"
                                         VerticalContentAlignment="Center"
                                         HorizontalContentAlignment="Right"/>

                                <Label Grid.Row="5" Grid.Column="1"
                                       VerticalContentAlignment="Center"
                                       Content="Transit Temp('C) &#x09;&#x09; :"/>
                                <TextBox Grid.Row="5" Grid.Column="2"
                                         Margin="8"
                                         Foreground="White"
                                         Text="{Binding TempController.ChillerModule.Parameter.AdvancedOptionProperty.intTempDownTransitDegree}"
                                         VerticalContentAlignment="Center"
                                         HorizontalContentAlignment="Right"/>

                                <Label Grid.Row="6" Grid.Column="1"
                                       VerticalContentAlignment="Center"
                                       Content="Dew Point Offset value('C)&#x09; :"/>
                                <TextBox Grid.Row="6" Grid.Column="2"
                                         Margin="8"
                                         Foreground="White"
                                         Text="{Binding TempController.ChillerModule.Parameter.AdvancedOptionProperty.intDewPointOffsetValue}"
                                         VerticalContentAlignment="Center"
                                         HorizontalContentAlignment="Right"/>

                                <Label Grid.Row="7" Grid.Column="1"
                                       VerticalContentAlignment="Center"
                                       Content="Log Frequency(sec) &#x09; :"/>
                                <TextBox Grid.Row="7" Grid.Column="2"
                                         Margin="8"
                                         Foreground="White"
                                         Text="{Binding TempController.ChillerModule.Parameter.AdvancedOptionProperty.intLoggingDelay}"
                                         VerticalContentAlignment="Center"
                                         HorizontalContentAlignment="Right"/>

                                <Label Grid.Row="8" Grid.Column="1"
                                       VerticalContentAlignment="Center"
                                       Content="Chiller Temp. Offset &#x09; :"/>
                                <TextBox Grid.Row="8" Grid.Column="2"
                                         Margin="8"
                                         Foreground="White"
                                         Text="{Binding TempController.ChillerModule.Parameter.AdvancedOptionProperty.ChillerTempOffset}"
                                         VerticalContentAlignment="Center"
                                         HorizontalContentAlignment="Right"/>

                                <CheckBox Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="2"
                                          Foreground="White"
                                          IsChecked="{Binding TempController.ChillerModule.Parameter.AdvancedOptionProperty.bSaveCommLog}"
                                          VerticalContentAlignment="Center"
                                          HorizontalContentAlignment="Center"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Content="Save Comm. Log File&#x09;&#x09;"/>

                                <CheckBox Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="2"
                                          Foreground="White"
                                          IsChecked="{Binding TempController.ChillerModule.Parameter.AdvancedOptionProperty.bControlDryAirByProber}"
                                          VerticalContentAlignment="Center"
                                          HorizontalContentAlignment="Center"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Content="Dry Air Control By Prober&#x09;&#x09;"/>

                                <CheckBox Grid.Row="12" Grid.Column="1" Grid.ColumnSpan="2"
                                          Foreground="White"
                                          IsChecked="{Binding TempController.ChillerModule.Parameter.AdvancedOptionProperty.bTouchPanelUnLock}"
                                          VerticalContentAlignment="Center"
                                          HorizontalContentAlignment="Center"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Content="Unlock Touch Panel&#x09;&#x09;"/>

                            </Grid>
                        </GroupBox>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="72*"/>
                                <RowDefinition Height="40*"/>
                                <RowDefinition Height="16*"/>
                                <RowDefinition Height="24*"/>
                                <RowDefinition Height="24*"/>
                            </Grid.RowDefinitions>

                            <GroupBox Header="Communication" Margin="8" FontSize="16" 
                                      Grid.Row="0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="56*"/>
                                            <ColumnDefinition Width="80*"/>
                                        </Grid.ColumnDefinitions>

                                        <Label HorizontalContentAlignment="Center"
                                               VerticalContentAlignment="Center"
                                               FontSize="16"
                                               Content="Chiller Address : "/>
                                        <TextBox Grid.Column="1" Margin="8"
                                                 Foreground="White"
                                                 IsEnabled="True"
                                                 Text="{Binding TempController.ChillerModule.Parameter.HBC_Net_Address}"
                                                 HorizontalContentAlignment="Right"
                                                 VerticalContentAlignment="Center"/>
                                    </Grid>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="56*"/>
                                            <ColumnDefinition Width="80*"/>
                                        </Grid.ColumnDefinitions>

                                        <Label HorizontalContentAlignment="Center"
                                               VerticalContentAlignment="Center"
                                               FontSize="16"
                                               Content="NETIO Address : "/>
                                        <TextBox Grid.Column="1" Margin="8"
                                                 Foreground="White"
                                                 IsEnabled="False"
                                                 HorizontalContentAlignment="Right"
                                                 VerticalContentAlignment="Center"/>
                                    </Grid>

                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0" Margin = "8"
                                                FontSize="16"
                                                Command="{Binding ResetDRReaderCommand}"
                                                Content="Reset DP READER"/>
                                        <Button Grid.Column="1" Margin = "8"
                                                FontSize="16"
                                                Command="{Binding ChillerConnectionCommand}"
                                                Content="Chiller Connection"/>
                                    </Grid>
                                </Grid>
                            </GroupBox>

                            <GroupBox Grid.Row="1" FontSize="16" Margin="8" Header="Manual Operation">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Column="0" Margin="8"
                                           HorizontalContentAlignment="Center"
                                           VerticalContentAlignment="Center"
                                           Content="Chuck Temp :"
                                           />

                                    <TextBox Grid.Column="1" Margin="8"
                                             Foreground="White"
                                             Text="{Binding ManualChuckTemp}"
                                             HorizontalContentAlignment="Right"
                                             VerticalContentAlignment="Center"
                                             />

                                    <Button Grid.Column="2" Margin="8"
                                            Command="{Binding ManualChuckTempCommand}"
                                            Content="SET Chuck"
                                            />
                                </Grid>
                            </GroupBox>

                            <Grid Grid.Row="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0" Margin="16"
                                        FontSize="16"
                                        Content="Chiller Emul Mode"
                                        Command="{Binding Test3}"/>

                                <Button Grid.Column="1" Margin="16"
                                        FontSize="16"
                                        Content="Apply and Save"
                                        Command="{Binding ApplyNSaveCommand}"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

    </Grid>
</UserControl>
