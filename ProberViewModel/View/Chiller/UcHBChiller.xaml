<UserControl x:Class="UcChillerScreen.UcHBChiller"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:UcChillerScreen"
             mc:Ignorable="d" 
             d:DesignHeight="940" d:DesignWidth="1280">
    <UserControl.Resources>
        <sys:String x:Key="REVERSE">REVERSE</sys:String>
        <local:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Column="0" Header="CHUCK-SET TEMP."
                          Margin="8" FontSize="16">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontSize="16"
                               Text="{Binding TempController.SetTemp}"/>
                </GroupBox>
                <GroupBox Grid.Column="1" Header="CHUCK-CUR. TEMP."
                          Margin="8" FontSize="16">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontSize="16"
                               Text="{Binding TempController.CurTemp}"/>
                </GroupBox>
                <GroupBox Grid.Column="2" Header="DEW POINT"
                          Margin="8" FontSize="16">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontSize="16"
                               Text="{Binding TempController.DewPointModule.CurDewPoint}"/>
                </GroupBox>

            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <GroupBox Grid.Column="0" Header="PROCESS TEMP"
                          Margin="8" FontSize="16">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontSize="16"
                               Text="{Binding TempController.ChillerModule.ChillerComm.gHB_GetTemp}"/>
                </GroupBox>
                <GroupBox Grid.Column="1" Header="INTERANAL TEMP"
                          Margin="8" FontSize="16">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontSize="16"
                               Text="{Binding TempController.ChillerModule.ChillerComm.gHB_CoolTemp}"/>
                </GroupBox>
                <GroupBox Grid.Column="2" Header="PUMP SPEED"
                          Margin="8" FontSize="16">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontSize="16"
                               Text="{Binding TempController.ChillerModule.ChillerComm.gHB_PumpSpeed}"/>
                </GroupBox>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Column="0" Header="CHILLER STATUS"
                          Margin="8" FontSize="16">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontSize="16"
                               Text="{Binding TempController.ChillerModule.ChillerGlobal.gHBC_Connection}"/>
                </GroupBox>

                <Button Grid.Column="2" Margin="16" Foreground="LightGray"
                        Content="Clear Alarm" FontSize="24"
                        Command="{Binding ChillerClearAlarmCommand}">
                    <Button.Background>
                        <SolidColorBrush Color="Red" Opacity="0.7"/>
                    </Button.Background>
                    <Button.BitmapEffect>
                        <DropShadowBitmapEffect Color="White" Direction="320" ShadowDepth="10" Opacity="0.2"/>
                    </Button.BitmapEffect>

                </Button>

            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <TabControl TabStripPlacement="Right" Background="Transparent" BorderBrush="Gray" BorderThickness="1">
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource {x:Type TabItem}}">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="HeaderTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <Border x:Name="grid" Background="DimGray">
                                        <ContentPresenter>
                                            <ContentPresenter.Content>
                                                <TextBlock x:Name="tbHeader" Margin="4" Text="{TemplateBinding Content}"/>
                                            </ContentPresenter.Content>
                                            <ContentPresenter.LayoutTransform>
                                                <RotateTransform Angle="90" />
                                            </ContentPresenter.LayoutTransform>
                                        </ContentPresenter>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type TabItem}},Path=IsSelected}" Value="True">
                                            <Setter TargetName="grid" Property="Background" Value="LightGray"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

