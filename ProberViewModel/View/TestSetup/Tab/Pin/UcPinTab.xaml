<UserControl x:Class="TestSetupDialog.Tab.Pin.UcPinTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestSetupDialog.Tab.Pin"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1250" Background="#FF1C1C1F">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="18*"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="White" BorderThickness="1" Margin="8" HorizontalAlignment="Left">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Dut" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="Pin" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="Result" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="3" Text="X" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="4" Text="Y" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="5" Text="Z" Foreground="White" HorizontalAlignment="Center"/>
                </Grid>
            </Border>
            <ListBox ItemsSource="{Binding PinItemList}" Grid.Row="1">
                <ListBox.ItemTemplate>
                    <ItemContainerTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="350"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" BorderBrush="White" BorderThickness="1">
                                    <TextBlock Grid.Column="0" Text="{Binding DutNum}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border Grid.Column="1" BorderBrush="White" BorderThickness="1">
                                <TextBlock Grid.Column="1" Text="{Binding PinNum}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <Border Grid.Column="2" BorderBrush="White" BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding PinResult}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <Button Grid.Column="1" Content="Pass" Command="{Binding PassCommand}"/>
                                    <Button Grid.Column="2" Content="Fail" Command="{Binding FailCommand}"/>
                                    <Button Grid.Column="3" Content="None" Command="{Binding NoneCommand}"/>
                                </Grid>
                            </Border>
                            <!--X-->
                            <Border Grid.Column="3" BorderBrush="White" BorderThickness="1" IsEnabled="{Binding SettingEnable}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" Text="{Binding XPosValue}" HorizontalContentAlignment="Center" VerticalAlignment="Center" CaretBrush="White" PreviewTextInput="TextBox_PreviewTextInput"/>
                                        <Button Grid.Column="1" Content="SET" Command="{Binding XPosSetCommand}"/>
                                    </Grid>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" Text="{Binding XRelPosStr, UpdateSourceTrigger=PropertyChanged}" HorizontalContentAlignment="Center" VerticalAlignment="Center"  CaretBrush="White" PreviewTextInput="TextBox_PreviewTextInput"/>
                                        <Button Grid.Column="1" Content="SET REL" Command="{Binding XRelPosSetCommand}"/>
                                    </Grid>
                                </Grid>
                            </Border>
                            <!--Y-->
                            <Border Grid.Column="4" BorderBrush="White" BorderThickness="1" IsEnabled="{Binding SettingEnable}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" Text="{Binding YPosValue}" HorizontalContentAlignment="Center" VerticalAlignment="Center"  CaretBrush="White" PreviewTextInput="TextBox_PreviewTextInput"/>
                                        <Button Grid.Column="1" Content="SET" Command="{Binding YPosSetCommand}"/>
                                    </Grid>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" Text="{Binding YRelPosStr, UpdateSourceTrigger=PropertyChanged}" HorizontalContentAlignment="Center" VerticalAlignment="Center"  CaretBrush="White" PreviewTextInput="TextBox_PreviewTextInput"/>
                                        <Button Grid.Column="1" Content="SET REL" Command="{Binding YRelPosSetCommand}"/>
                                    </Grid>
                                </Grid>

                            </Border>
                            <!--Z-->
                            <Border Grid.Column="5" BorderBrush="White" BorderThickness="1" IsEnabled="{Binding SettingEnable}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" Text="{Binding ZPosValue}" HorizontalContentAlignment="Center" VerticalAlignment="Center"  CaretBrush="White" PreviewTextInput="TextBox_PreviewTextInput"/>
                                        <Button Grid.Column="1" Content="SET" Command="{Binding ZPosSetCommand}"/>
                                    </Grid>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" Text="{Binding ZRelPosStr, UpdateSourceTrigger=PropertyChanged}" HorizontalContentAlignment="Center" VerticalAlignment="Center"  CaretBrush="White" PreviewTextInput="TextBox_PreviewTextInput"/>
                                        <Button Grid.Column="1" Content="SET REL" Command="{Binding ZRelPosSetCommand}"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </ItemContainerTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Width="100" Height="100" Content="Enable&#x0a;PNP Button" Command="{Binding EnablePNPBtnCommand}"/>
            <Button Grid.Column="1" Width="100" Height="100" Content="Disable&#x0a;PNP Button" Command="{Binding DisablePNPBtnCommand}"/>
            <Button Grid.Column="2" Width="100" Height="100" Content="Refresh" Command="{Binding RefreshCommand}"/>
        </Grid>
    </Grid>
</UserControl>
