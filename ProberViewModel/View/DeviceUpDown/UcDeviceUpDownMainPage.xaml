<UserControl x:Class="DeviceUpDownMainPageView.UcDeviceUpDownMainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:devexp="clr-namespace:DeviceUpDownControl;assembly=DeviceUpDownControl"
             xmlns:local="clr-namespace:DeviceUpDownMainPageView"
             mc:Ignorable="d" 
             d:DesignHeight="892" d:DesignWidth="1280" Background="Transparent" >

    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <!--Title-->
        <Label Grid.Column="0" Grid.Row="0" 
               Content="Local"
               Foreground="White"
               FontSize="30"
               FontWeight="Bold"
               Margin="8 0"
               VerticalContentAlignment="Center"
               HorizontalAlignment="Center"/>
        <Label Grid.Column="2" Grid.Row="0" 
               Content="FTP Server"
               Foreground="White" 
               FontSize="30"
               FontWeight="Bold"
               Margin="8 0"
               VerticalContentAlignment="Center"
               HorizontalAlignment="Center"/>
        <!--Left Explorer-->
        <devexp:UcDeviceExplorer Grid.Column="0" Grid.Row="1" DataContext="{Binding LocalDeviceExplorer}"/>
        <!--Between Explorer-->
        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center">
            <Label Content="Load" 
                   Foreground="White"
                   HorizontalContentAlignment="Center"
                   FontSize="24"/>
            <Button 
                    Command="{Binding LoadCommand}"
                    Style="{DynamicResource ControlButtonStyle}"
                    FontSize="24" 
                    FontWeight="ExtraBold" 
                    Height="80"
                    Margin="8">
                <Image Source="{Binding LoadButtonIcon}"
                       Margin="8"/>
            </Button>
        </StackPanel>
        <!--Right Explorer-->
        <devexp:UcDeviceExplorer Grid.Column="2" Grid.Row="1" DataContext="{Binding ServerDeviceExplorer}"/>

        <!--Left Button-->
        <Grid Grid.Column="0" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="3"
                    Margin="8"
                    Style="{DynamicResource ControlButtonStyle}"
                    Command="{Binding RefreshLocalCommand}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Image Source="pack://application:,,,/ImageResourcePack;component/Images/Rotation_Search_B.png"/>
                    <TextBlock Grid.Row="1" Text="Refresh Local" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold" Foreground="White"/>
                </Grid>
            </Button>
        </Grid>

        <!--Right Button-->
        <Grid Grid.Column="2" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    IsEnabled="{Binding UploadFolderEnable}"
                    Command="{Binding UploadFolderCommand}" 
                    Style="{DynamicResource ControlButton2Style}"
                    Margin="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Image Source="pack://application:,,,/ImageResourcePack;component/Images/cloud-upload_B.png"/>
                    <TextBlock Grid.Row="1" Text="Upload" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold" Foreground="White"/>
                </Grid>
            </Button>
            <Button Grid.Column="1"
                    IsEnabled="{Binding DownloadFolderEnable}" 
                    Command="{Binding DownloadFolderCommand}"
                    Style="{DynamicResource ControlButton2Style}"
                    Margin="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Image Source="pack://application:,,,/ImageResourcePack;component/Images/cloud-download_B.png"/>
                    <TextBlock Grid.Row="1" Text="Download" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold" Foreground="White"/>
                </Grid>
            </Button>
            <Button Grid.Column="2"
                    Command="{Binding RefreshServerCommand}" 
                    Margin="8"
                    Style="{DynamicResource ControlButtonStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Image Source="pack://application:,,,/ImageResourcePack;component/Images/Rotation_Search_B.png"/>
                    <TextBlock Grid.Row="1" Text="Refresh Server" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold" Foreground="White"/>
                </Grid>
            </Button>
            <Button Grid.Column="3"
                    Command="{Binding CheckConnectionCommand}" 
                    Margin="8"
                    Style="{DynamicResource ControlButtonStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Image Grid.Row="0" Source="pack://application:,,,/ImageResourcePack;component/Images/LanCable.png" Margin="5"/>
                    <TextBlock Grid.Row="1" Text="Test Network" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold" Foreground="White"/>
                </Grid>
            </Button>

        </Grid>
    </Grid>
</UserControl>
