<Window x:Class="ProberViewModel.GPLoaderJobWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProberViewModel"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:pi="clr-namespace:ProberInterfaces;assembly=ProberInterfaces"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:lp="clr-namespace:LoaderParameters;assembly=LoaderParameters"
        mc:Ignorable="d"
        Title="LoaderJob Window" Height="570" Width="900" Background="DimGray">

    <Window.Resources>
        <ResourceDictionary>


        </ResourceDictionary>
    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.ColumnSpan="2" Grid.RowSpan="4" Grid.Row="0" Grid.Column="0" >
            <GroupBox Header="Loader Job" Foreground="White">
                <ListView Name="myListView" ItemsSource="{Binding LoaderModule.LoaderJobViewList}" HorizontalContentAlignment="Center" Foreground="White"  >
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="CurrentHolder" Width="150" DisplayMemberBinding="{Binding CurrentHolder}"/>
                            <GridViewColumn Header="DstHolder" Width="150" DisplayMemberBinding="{Binding DstHolder}"/>
                            <GridViewColumn Header="OriginHolder" Width="150" DisplayMemberBinding="{Binding OriginHolder}"/>
                            <GridViewColumn Header="JobDone" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox  IsChecked="{Binding JobDone}" IsEnabled="False" Style="{x:Null}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
        </Border>
        <Grid  Grid.Row="0" Grid.Column="2" >
            <StackPanel Orientation="Vertical">
                <Label Content="Process Module :" Padding="0" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="13"></Label>
                <Label Content="State :"  Padding="0" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="13"></Label>
            </StackPanel>
        </Grid>
        <Grid  Grid.Row="0" Grid.Column="3" >
            <StackPanel Orientation="Vertical">
                <Label  HorizontalAlignment="Left" Padding="0" VerticalAlignment="Center" FontSize="13" Content="{Binding LoaderModule.ProcModuleInfo.ProcModule}"></Label>
                <Label  HorizontalAlignment="Left" Padding="0" VerticalAlignment="Center" FontSize="13" Content="{Binding LoaderModule.ProcModuleInfo.ProcModuleState}"></Label>
            </StackPanel>
        </Grid>









    </Grid>

</Window>
