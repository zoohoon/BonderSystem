<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:NodeConverter="clr-namespace:NodeConverter;assembly=NodeConverter"
                    xmlns:local="clr-namespace:SoakingSettingView">

    <Style x:Key="TextBlockStyle" TargetType="TextBlock">
        <Setter Property="Margin" Value="3"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    
    <Style x:Key="ReadOnlyValueStyle" TargetType="TextBlock">
        <Setter Property="Width" Value="100"/>
        <Setter Property="Margin" Value="3"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    <Style x:Key="TextBoxStyle" TargetType="TextBox">
        <Setter Property="Width" Value="100" />
        <Setter Property="Margin" Value="3" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style x:Key="ComboxStyle" TargetType="ComboBox">
        <Setter Property="Width" Value="100" />
        <Setter Property="Margin" Value="3" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Width" Value="100" />
        <Setter Property="Margin" Value="3" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>

    <ControlTemplate x:Key="ListNodeControlTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Style="{StaticResource TextBlockStyle}"
                       Text="{Binding Text}">
                <TextBlock.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="New" Command="{Binding NewItemCommand}"/>
                    </ContextMenu>
                </TextBlock.ContextMenu>
            </TextBlock>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="ClassNodeControlTemplate">
        <ControlTemplate.Resources>
            <NodeConverter:BooleanToVisiblityConverter x:Key="BooleanToVisiblityConverter" />
        </ControlTemplate.Resources>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Style="{StaticResource TextBlockStyle}"
                       Text="{Binding Text}" >
                <TextBlock.ContextMenu>
                    <ContextMenu  Visibility="{Binding IsListItemNode, Converter={StaticResource BooleanToVisiblityConverter}}">
                        <MenuItem Header="Remove" Command="{Binding RemoveItemCommand}" />
                    </ContextMenu>
                </TextBlock.ContextMenu>
                
            </TextBlock>

        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="ReadOnlyNodeControlTemplate">
        <ControlTemplate.Resources>
            <NodeConverter:BooleanToVisiblityConverter x:Key="BooleanToVisiblityConverter" />
        </ControlTemplate.Resources>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Style="{StaticResource TextBlockStyle}"
                       Text="{Binding Text}"  >
            </TextBlock>
            <TextBlock Grid.Column="1"   Style="{StaticResource ReadOnlyValueStyle}"
                       Text="{Binding Value}"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="NumericNodeControlTemplate">
        <ControlTemplate.Resources>
            <NodeConverter:BooleanToVisiblityConverter x:Key="BooleanToVisiblityConverter" />
        </ControlTemplate.Resources>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Style="{StaticResource TextBlockStyle}"
                       Text="{Binding Text}"  >
                <TextBlock.ContextMenu>
                    <ContextMenu  Visibility="{Binding IsListItemNode, Converter={StaticResource BooleanToVisiblityConverter}}">
                        <MenuItem Header="Remove" Command="{Binding RemoveItemCommand}" />
                    </ContextMenu>
                </TextBlock.ContextMenu>
            </TextBlock>
            <TextBox Grid.Column="1"   Style="{StaticResource TextBoxStyle}"
                     Text="{Binding Value}"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="BoolNodeControlTemplate">
        <ControlTemplate.Resources>
            <NodeConverter:BooleanToVisiblityConverter x:Key="BooleanToVisiblityConverter" />
        </ControlTemplate.Resources>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Style="{StaticResource TextBlockStyle}"
                           Text="{Binding Text}"  >
                <TextBlock.ContextMenu>
                    <ContextMenu  Visibility="{Binding IsListItemNode, Converter={StaticResource BooleanToVisiblityConverter}}">
                        <MenuItem Header="Remove" Command="{Binding RemoveItemCommand}" />
                    </ContextMenu>
                </TextBlock.ContextMenu>
            </TextBlock>
            <CheckBox Grid.Column="1"  Style="{StaticResource CheckBoxStyle}"
                          IsChecked="{Binding Value}"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="EnumNodeControlTemplate">
        <ControlTemplate.Resources>
            <NodeConverter:BooleanToVisiblityConverter x:Key="BooleanToVisiblityConverter" />
        </ControlTemplate.Resources>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Style="{StaticResource TextBlockStyle}"
                           Text="{Binding Text}" >
                <TextBlock.ContextMenu>
                    <ContextMenu  Visibility="{Binding IsListItemNode, Converter={StaticResource BooleanToVisiblityConverter}}">
                        <MenuItem Header="Remove" Command="{Binding RemoveItemCommand}" />
                    </ContextMenu>
                </TextBlock.ContextMenu>
            </TextBlock>
            <ComboBox Grid.Column="1"  Style="{StaticResource ComboxStyle}"
                          ItemsSource="{Binding Range}" SelectedItem="{Binding Value}" />
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="GUIDNodeControlTemplate">
        <ControlTemplate.Resources>
            <NodeConverter:BooleanToVisiblityConverter x:Key="BooleanToVisiblityConverter" />
        </ControlTemplate.Resources>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Style="{StaticResource TextBlockStyle}"
                       Text="{Binding Text}"  >
                <TextBlock.ContextMenu>
                    <ContextMenu  Visibility="{Binding IsListItemNode, Converter={StaticResource BooleanToVisiblityConverter}}">
                        <MenuItem Header="Remove" Command="{Binding RemoveItemCommand}" />
                    </ContextMenu>
                </TextBlock.ContextMenu>
               
            </TextBlock>
            <TextBox Grid.Column="1"   Style="{StaticResource TextBoxStyle}"
                     Text="{Binding Value}"/>
        </Grid>
    </ControlTemplate>



    <ControlTemplate x:Key="UndefinedNodeControlTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Style="{StaticResource TextBlockStyle}"
                           Foreground="Red"
                           Text="{Binding Text}"  />
        </Grid>
    </ControlTemplate>

    <HierarchicalDataTemplate DataType="{x:Type NodeConverter:ListNode}" ItemsSource="{Binding Nodes}" >
        <ContentControl Template="{StaticResource ListNodeControlTemplate}" />
    </HierarchicalDataTemplate>

    <HierarchicalDataTemplate DataType="{x:Type NodeConverter:ClassNode}" ItemsSource="{Binding Nodes}" >
        <ContentControl Template="{StaticResource ClassNodeControlTemplate}" />
    </HierarchicalDataTemplate>

    <DataTemplate DataType="{x:Type NodeConverter:ReadOnlyNode}" >
        <ContentControl Template="{StaticResource ReadOnlyNodeControlTemplate}" />
    </DataTemplate>

    <DataTemplate DataType="{x:Type NodeConverter:StringNode}" >
        <ContentControl Template="{StaticResource NumericNodeControlTemplate}" />
    </DataTemplate>

    <DataTemplate DataType="{x:Type NodeConverter:BoolNode}" >
        <ContentControl Template="{StaticResource BoolNodeControlTemplate}" />
    </DataTemplate>

    <DataTemplate DataType="{x:Type NodeConverter:NumericNode}" >
        <ContentControl Template="{StaticResource NumericNodeControlTemplate}" />
    </DataTemplate>

    <DataTemplate DataType="{x:Type NodeConverter:EnumNode}" >
        <ContentControl Template="{StaticResource EnumNodeControlTemplate}" />
    </DataTemplate>

    <DataTemplate DataType="{x:Type NodeConverter:GUIDNode}" >
        <ContentControl Template="{StaticResource GUIDNodeControlTemplate}" />
    </DataTemplate>

    <DataTemplate DataType="{x:Type NodeConverter:UndefinedNode}" >
        <ContentControl Template="{StaticResource UndefinedNodeControlTemplate}" />
    </DataTemplate>
    
</ResourceDictionary>