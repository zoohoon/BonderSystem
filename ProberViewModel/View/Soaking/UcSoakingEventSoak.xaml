<UserControl x:Class="SoakingSettingView.UcSoakingEventSoak"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:SoakingSettingView" xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="1280" Background="Transparent">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SettingControlStyle;component/SettingViewStyleDictionaly.xaml" />
                <ResourceDictionary Source="SoakingParamTemplates.xaml" />                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="#1F1F1F">
        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition Height="110"/>
            <RowDefinition Height="110"/>
            <RowDefinition Height="130"/>
        </Grid.RowDefinitions>

        <!-- Enable -->
        <Grid Grid.Row="0">
            <Grid Margin="0, 0, 0, -10">
                <Border Margin="20, 30, 20. 20" BorderThickness="1.5" BorderBrush="DarkGray" CornerRadius="5">
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <Label FontSize="13"
                                   Content="Enable Soaking : "
                                   FontWeight="Normal"
                                   VerticalAlignment="Bottom"
                                   HorizontalAlignment="Left"
                                   Margin="0, 0, 0, 10" />
                            <ToggleButton Grid.Column="1"
                                          VerticalAlignment="Bottom"
                                          HorizontalAlignment="Left"
                                          Margin="5, 0, 0, 5" 
                                          Foreground="White"    
                                          IsChecked="{Binding IsEnableSoaking}"
                                          Style="{StaticResource ON_OFF_ToggleBtn}"
                                          />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
            <Border Background="#38393e"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="30, 13, 10, 10"
                    CornerRadius="10"
                    Height="32"
                                        >
                <Label Content="Enable" VerticalAlignment="Center" Margin="0" FontSize="13"/>
            </Border>
        </Grid>

        <!-- Soaking -->
        <Grid Grid.Row="1">
            <Grid Margin="0, 0, 0, -10">
                <Border Margin="20, 30, 20. 20" BorderThickness="1.5" BorderBrush="DarkGray" CornerRadius="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Label FontSize="13"
                                   Content="Soaking Time : "
                                   FontWeight="Normal"
                                   VerticalAlignment="Bottom"
                                   HorizontalAlignment="Left"
                                   Margin="0, 0, 0, 10" />
                            <TextBox Name="EventSoakingTime_tb"
                                     Text="{Binding SoakingTime}"
                                     IsEnabled="{Binding IsEnableSoaking}"
                                     FontSize="13"
                                     FontWeight="Normal"
                                     Background="Transparent"
                                     Foreground="White"
                                     BorderBrush="White"
                                     BorderThickness="0, 0, 0, 1"
                                     ToolTip="{Binding TooltipSoakingTime}" ToolTipService.IsEnabled="True"
                                     VerticalAlignment="Bottom"
                                     HorizontalAlignment="Left"
                                     Height="30"
                                     Width="150"
                                     Margin="0, 0, 0, 10">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="PreviewMouseDown" >
                                        <i:InvokeCommandAction Command="{Binding TextBoxClickCommand}"
                                                               CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type TextBox}}}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBox>
                            <Label FontSize="13"
                                   Content="sec"
                                   FontWeight="Normal"
                                   VerticalAlignment="Bottom"
                                   HorizontalAlignment="Left"
                                   Margin="0, 0, 0, 10" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Label FontSize="13"
                                   Content="OD / Z Clearance : "
                                   FontWeight="Normal"
                                   VerticalAlignment="Bottom"
                                   HorizontalAlignment="Left"
                                   Margin="0, 0, 0, 10" />
                            <TextBox Name="EventSoakingOD_tb"
                                     Text="{Binding OD}"
                                     IsEnabled="{Binding IsEnableSoaking}"
                                     FontSize="13"
                                     FontWeight="Normal"
                                     Background="Transparent"
                                     Foreground="White"
                                     BorderBrush="White"
                                     BorderThickness="0, 0, 0, 1"
                                     ToolTip="{Binding TooltipODMax}" ToolTipService.IsEnabled="True"
                                     VerticalAlignment="Bottom"
                                     HorizontalAlignment="Left"
                                     Height="30"
                                     Width="150"
                                     Margin="0, 0, 0, 10">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="PreviewMouseDown" >
                                        <i:InvokeCommandAction Command="{Binding TextBoxClickCommand}"
                                                               CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type TextBox}}}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBox>
                            <Label FontSize="13"
                                   Content="um"
                                   FontWeight="Normal"
                                   VerticalAlignment="Bottom"
                                   HorizontalAlignment="Left"
                                   Margin="0, 0, 0, 10" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
            <Border Background="#38393e"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="30, 13, 10, 10"
                    CornerRadius="10"
                    Height="32"
                                        >
                <Label Content="Soaking" VerticalAlignment="Center" Margin="0" FontSize="13"/>
            </Border>
        </Grid>

        <!-- Pin Align -->
        <Grid Grid.Row="2" Visibility="{Binding VisiblePinAlignMode}">
            <Grid Margin="0, 0, 0, -10">
                <Border Margin="20, 30, 20. 20" BorderThickness="1.5" BorderBrush="DarkGray" CornerRadius="5">
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <Label FontSize="13"
                                   Content="Last Pin Align : "
                                   FontWeight="Normal"
                                   VerticalAlignment="Bottom"
                                   HorizontalAlignment="Left"
                                   Margin="0, 0, 0, 10" />
                            <ComboBox ItemsSource="{Binding PinAlignModeList}"
                                      SelectedItem="{Binding SelectedPinAlignMode}"
                                      IsEnabled="{Binding IsEnableSoaking}"
                                      FontSize="13"
                                      FontWeight="Normal"
                                      VerticalAlignment="Bottom"
                                      HorizontalAlignment="Left"
                                      Height="30"
                                      Width="150"
                                      Margin="0, 0, 0, 10" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
            <Border Background="#38393e"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="30, 13, 10, 10"
                    CornerRadius="10"
                    Height="32"
                    >
                <Label Content="Pin Align" VerticalAlignment="Center" Margin="0" FontSize="13"/>
            </Border>
        </Grid>

        <!-- Skip -->
        <Grid Grid.Row="3" Visibility="{Binding VisibleSoakingSkip}">
            <Grid Margin="0, 0, 0, -10">
                <Border Margin="20, 30, 20, 20" BorderThickness="1.5" BorderBrush="DarkGray" CornerRadius="5">
                    <Grid Margin="0, 0, 0, -20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Label FontSize="13"
                                       Content="Enable Event Soaking Skip : "
                                       FontWeight="Normal"
                                       VerticalAlignment="Bottom"
                                       HorizontalAlignment="Left"
                                       Margin="0, 0, 0, 10" />

                                <ToggleButton Grid.Column="1"
                                              VerticalAlignment="Bottom"
                                              HorizontalAlignment="Left"
                                              Margin="5, 0, 0, 5" 
                                              Foreground="White"    
                                              IsChecked="{Binding IsEnableSoakingSkip}"
                                              Style="{StaticResource ON_OFF_ToggleBtn}"/>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="1">
                            <Label FontSize="13"
                                   Content="{Binding TooltipIsEnableSoakingSkip}"
                                   FontWeight="Normal"
                                   VerticalAlignment="Bottom"
                                   HorizontalAlignment="Left"
                                   Margin="0, 0, 0, 20" />
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
            <Border Background="#38393e"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="30, 13, 10, 10"
                    CornerRadius="10"
                    Height="32"
                    >
                <Label Content="Skip" VerticalAlignment="Center" Margin="0" FontSize="13"/>
            </Border>
        </Grid>
        
    </Grid>
</UserControl>
