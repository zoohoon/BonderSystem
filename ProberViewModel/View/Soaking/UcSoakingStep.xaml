<UserControl x:Class="SoakingSettingView.UcSoakingStep"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:SoakingSettingView" xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="1280" Background="Transparent" >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SettingControlStyle;component/SettingViewStyleDictionaly.xaml" />
                <ResourceDictionary Source="SoakingParamTemplates.xaml" />
                <ResourceDictionary>
                    <local:ValueOffsetConverter x:Key="ValueOffsetConverter"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="0, 0, 0, -10">
        <Border Margin="20, 30, 20. 20" BorderThickness="1.5" BorderBrush="DarkGray" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="10"/>
                </Grid.ColumnDefinitions>

                <!-- Save Button, Template Button -->
                <Grid Grid.Column="1">
                    <StackPanel Orientation="Vertical">
                        <Button Width="40" Height="40" Style="{x:Null}" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" Margin="0, 30, 0, 0"    
                                Command="{Binding TemplateSaveCommand}">
                            <Button.Content>
                                <materialDesign:PackIcon Kind="ContentSave" Width="40" Height="40" Foreground="DarkOrange"  VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Button.Content>
                        </Button>
                        <Button Width="40" Height="40" Style="{x:Null}" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" Margin="0, 20, 0, 0"    
                                Command="{Binding TemplateEditCommand}">
                            <Button.Content>
                                <materialDesign:PackIcon Kind="BookOpenPageVariant" Width="40" Height="40" Foreground="DarkOrange" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Table : Soaking Step -->
                <Grid Grid.Column="2" Margin="0, 10, 0, 10" x:Name="G3X4D">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Content="Step" FontSize="12" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0"></Label>
                        <Label Grid.Column="1" Content="Time (Sec)" FontSize="12"  FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0"></Label>
                        <Label Grid.Column="2" Content="OD / Z Clearance (um)" FontSize="12"  FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0"></Label>
                    </Grid>
                    <Grid Grid.Row="1" Margin="15, 0, 50, 0" Background="DarkRed"/>
                    <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
                        <ScrollViewer.Resources>
                            <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">40</sys:Double>
                            <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarButtonHeightKey}">40</sys:Double>
                        </ScrollViewer.Resources>
                        <Grid Grid.Row="2" x:Name="G3X4E">
                            <ListView Grid.Row="1" 
                                      MaxHeight="{Binding ActualHeight, ElementName=G3X4D, Converter={StaticResource ValueOffsetConverter}, ConverterParameter='-60' }"
                                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                      VirtualizingPanel.IsContainerVirtualizable="True"
                                      VirtualizingPanel.IsVirtualizing="True"
                                      VirtualizingPanel.VirtualizationMode="Recycling"
                                      ScrollViewer.CanContentScroll="True"
                                      SelectionMode="Single" 
                                      Margin="20, 0, 15, 0"
                                      ItemsSource="{Binding SoakingStepsForBind, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                      SelectedItem="{Binding SelectedSoakingStep,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      SelectionChanged="ListView_SelectionChanged"
                                    >
                                <ListView.Resources>
                                    <Style TargetType="GridViewColumnHeader">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </Style>
                                </ListView.Resources>
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Height" Value="45" />
                                    </Style>
                                </ListView.ItemContainerStyle>

                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="90"/>
                                                    <ColumnDefinition Width="300"/>
                                                    <ColumnDefinition Width="300"/>
                                                </Grid.ColumnDefinitions>

                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="30"/>
                                                    <RowDefinition Height="15"/>
                                                </Grid.RowDefinitions>

                                                <Label Grid.Row="0" Grid.Column="0"
                                                         Content="{Binding StepIdx}" 
                                                         FontSize="13" Margin="0" Padding="0"
                                                         HorizontalContentAlignment="Center" 
                                                         VerticalAlignment="Bottom"/>

                                                <Border Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center">
                                                    <TextBox Grid.Row="0" Grid.Column="1"
                                                             Name="SoakingStepSoakingTime_tb"
                                                             Text="{Binding SoakingTimeSec}" 
                                                             Width="100"
                                                             IsReadOnly="{Binding IsReadonlySoakingTimeSec}"
                                                             Background="Transparent"
                                                             FontSize="13" Margin="0"
                                                             Foreground="{Binding SoakingTimeSecBackColor}"
                                                             BorderBrush="White"
                                                             BorderThickness="{Binding SoakingTimeSecBorderThickness}"
                                                             ToolTip="{Binding DataContext.TooltipSoakingTimeMin, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}" ToolTipService.IsEnabled="True"
                                                             HorizontalContentAlignment="Center" 
                                                             VerticalAlignment="Bottom">
                                                        <i:Interaction.Triggers>
                                                            <i:EventTrigger EventName="PreviewMouseDown" >
                                                                <i:InvokeCommandAction Command="{Binding DataContext.TextBoxClickCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"
                                                                                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type TextBox}}}"/>
                                                            </i:EventTrigger>
                                                        </i:Interaction.Triggers>
                                                    </TextBox>
                                                </Border>

                                                <Border Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center">
                                                    <TextBox Text="{Binding OD}" 
                                                             Name="SoakingStepSoakingOD_tb"
                                                             Width="100"
                                                             FontSize="13" Margin="0"
                                                             Background="Transparent"
                                                             Foreground="White"
                                                             BorderBrush="White"
                                                             BorderThickness="0, 0, 0, 1"
                                                             ToolTip="{Binding DataContext.TooltipODMax, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}" ToolTipService.IsEnabled="True"
                                                             HorizontalContentAlignment="Center" 
                                                             VerticalAlignment="Bottom">
                                                        <i:Interaction.Triggers>
                                                            <i:EventTrigger EventName="PreviewMouseDown" >
                                                                <i:InvokeCommandAction Command="{Binding DataContext.TextBoxClickCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"
                                                                                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type TextBox}}}"/>
                                                            </i:EventTrigger>
                                                        </i:Interaction.Triggers>
                                                    </TextBox>
                                                </Border>

                                                <Grid Grid.Row="1" Grid.ColumnSpan="3"
                                                    Height="5"
                                                    Margin="0, 0, 25, 0"
                                                    Visibility="{Binding IsSamplePinAlign}" Background="#AAAC00"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </ScrollViewer>
                    <Grid Grid.Row="3" Margin="15, 0, 50, 0" Background="DarkRed" Visibility="{Binding ShowLastFullPinAlign}"/>
                </Grid>

                <!-- Legend -->
                <Grid Grid.Column="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="1" Grid.Column="0" Margin="2">
                        <Label Content="Full Pin Align : " FontSize="12" Margin="0"/>
                    </Grid>
                    <Grid Grid.Row="2" Grid.Column="0" Margin="2">
                        <Label Content="Sample Pin Align : " FontSize="12" Margin="0"/>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="1" Margin="4, 6, 4, 6">
                        <Label Content="" FontSize="12" Background="DarkRed" Margin="0"/>
                    </Grid>

                    <Grid Grid.Row="2" Grid.Column="1" Margin="4, 6, 4, 6">
                        <Label Content="" FontSize="12" Background="#AAAC00" Margin="0"/>
                    </Grid>
                </Grid>

                <!-- Button : ADD, DELETE, DELETE ALL -->
                <Grid Grid.Column="4">
                    <StackPanel Orientation="Vertical">
                        <Button Content="Add" FontSize="13" Height="30" Margin="5, 20, 20, 0"
                                Command="{Binding StepAddCommand}"></Button>
                        <Button Content="Delete" FontSize="13" Height="30" Margin="5, 20, 20, 0"
                                Command="{Binding StepDeleteCommand}"></Button>
                        <Button Content="Delete All" FontSize="13" Height="30" Margin="5, 20, 20, 0"
                                Command="{Binding StepDeleteAllCommand}"></Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
        <Border Background="#38393e"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="30, 13, 10, 10"
                    CornerRadius="10"
                    Height="32"
                    >
            <Label Content="Config Soaking Step" 
                   FontSize="13"
                   VerticalAlignment="Center" Margin="0"/>
        </Border>
    </Grid>
</UserControl>
