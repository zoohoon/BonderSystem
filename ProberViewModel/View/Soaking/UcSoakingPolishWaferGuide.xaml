<UserControl x:Class="SoakingSettingView.UcSoakingPolishWaferGuide"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoakingSettingView"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="370" x:Name="SoakingPolishWaferGuide" FontSize="10">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="{x:Type Label}">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="{Binding Path=FontSize, ElementName=SoakingPolishWaferGuide}"/>
                <Setter Property="Margin" Value="0"/>
                <Setter Property="Padding" Value="0"/>
            </Style>
            <Style x:Key="Use" TargetType="{x:Type Border}">
                <Setter Property="Background" Value="DarkGreen"/>
            </Style>
            <Style x:Key="NotUse" TargetType="{x:Type Border}">
                <Setter Property="Background" Value="DarkGoldenrod"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border BorderThickness="1" BorderBrush="Wheat">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label  Grid.Column="0" Content="Lot State"/>
                <Label  Grid.Column="1" Content="Pre Heating"/>
                <Label  Grid.Column="2" Content="Recovery"/>
                <Label  Grid.Column="3" Content="Maintain"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="RUN"/>

                <Border Grid.Column="1"  Style="{StaticResource Use}">
                    <Label Content="USE" />
                </Border>
                <Border  Grid.Column="2" Style="{StaticResource Use}">
                    <Label Content="USE"  />
                </Border>
                <Border Grid.Column="3" Style="{StaticResource NotUse}">
                    <Label Content="NOT" />
                </Border>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label  Grid.Column="0" Content="IDLE"/>
                <Border Grid.Column="1" Style="{StaticResource Use}">
                    <Label   Content="USE" />
                </Border>
                <Border  Grid.Column="2" Style="{StaticResource Use}">
                    <Label   Content="USE"  />
                </Border>
                <Border Grid.Column="3" Style="{StaticResource Use}">
                    <Label  Content="USE" />
                </Border>

            </Grid>
            
        </Grid>
    </Border>
</UserControl>
