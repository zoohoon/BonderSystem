<UserControl x:Class="SoakingSettingView.UcSoakingOD"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="1280" Background="Transparent">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/FlatButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="0, 0, 0, -10">
        <Border Margin="20, 30, 20. 20" BorderThickness="1.5" BorderBrush="DarkGray" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- OD -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Label FontSize="13"
                           Content="OD / Z Clearance : "
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Left"
                           Margin="0, 0, 0, 10" />
                    <TextBox Name="WaitingOD_tb"
                             Text="{Binding NotExistWaferObj_OD}"
                             FontSize="13"
                             Background="Transparent"
                             Foreground="White"
                             BorderBrush="White"
                             BorderThickness="0, 0, 0, 1"
                             ToolTip="{Binding TooltipODMax}" ToolTipService.IsEnabled="True"
                             VerticalAlignment="Bottom"
                             HorizontalAlignment="Left"
                             Height="30"
                             Width="150"
                             Margin="0, 0, 0, 10">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="PreviewMouseDown" >
                                <i:InvokeCommandAction Command="{Binding TextBoxClickCommand}"
                                                       CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type TextBox}}}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                    <Label FontSize="13"
                           Content="um"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Left"
                           Margin="0, 0, 0, 10" />
                </StackPanel>
                <!-- Pin Align Period -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border VerticalAlignment="Bottom"
                            Margin="10, 0, 0, 14">
                        <CheckBox FontSize="12"
                                  Content="Pin Align Period : "
                                  IsChecked="{Binding EnableWaitingPinAlign}"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"
                                  Foreground="White">
                            <CheckBox.LayoutTransform>
                                <ScaleTransform ScaleX="1.2" ScaleY="1.2" />
                            </CheckBox.LayoutTransform>
                        </CheckBox>
                    </Border>
                    <TextBox Name="WaitingPinAlignPeriodTime_tb"
                             Text="{Binding WaitingPinAlignPeriod}"
                             IsEnabled="{Binding EnableWaitingPinAlign}"
                             FontSize="13"
                             Background="Transparent"
                             Foreground="White"
                             BorderBrush="White"
                             BorderThickness="0, 0, 0, 1"
                             VerticalAlignment="Bottom"
                             HorizontalAlignment="Left"
                             Height="30"
                             Width="150"
                             Margin="10, 0, 0, 10">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="PreviewMouseDown" >
                                <i:InvokeCommandAction Command="{Binding TextBoxClickCommand}"
                                                       CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type TextBox}}}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                    <Label FontSize="13"
                           Content="sec"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Left"
                           Margin="0, 0, 0, 10" />
                </StackPanel>
            </Grid>
        </Border>
        <Border Background="#38393e"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="30, 13, 10, 10"
                    CornerRadius="10"
                    Height="32"
                    >
            <Label Content="When wafer is not available"
                   FontSize="13"
                      VerticalAlignment="Center"
                      Foreground="white"
                      Margin="0, 0, 0, 0"
               >
            </Label>
        </Border>
    </Grid>
</UserControl>
