                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                        <Label Content="Multiple" Foreground="White"></Label>
                        <RadioButton Height="50" Name="Multiple_1" Foreground="White" FontSize="15" GroupName="Multiple" 
                                         IsChecked="{Binding GroupIndex, Converter={StaticResource IndexBooleanConverter}, ConverterParameter=1}" VerticalContentAlignment="Center">x 1</RadioButton>
                        <RadioButton Height="50" Name="Multiple_10" Foreground="White" FontSize="15" GroupName="Multiple"
                                         IsChecked="{Binding GroupIndex, Converter={StaticResource IndexBooleanConverter}, ConverterParameter=2}" VerticalContentAlignment="Center">x 10</RadioButton>
                        <RadioButton Height="50" Name="Multiple_100" Foreground="White" FontSize="15" GroupName="Multiple"
                                         IsChecked="{Binding GroupIndex, Converter={StaticResource IndexBooleanConverter}, ConverterParameter=3}" VerticalContentAlignment="Center">x 100</RadioButton>
                    </StackPanel>

                    <!--<Button Height="20" Grid.Row="1" Command="{Binding TestCommand}"></Button>-->

                    <Border Background="Black"
                            BorderBrush="LightGray" 
                            BorderThickness="1" 
