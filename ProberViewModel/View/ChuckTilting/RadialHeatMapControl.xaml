<UserControl x:Class="ChuckTiltingViewControl.RadialHeatMapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChuckTiltingViewControl"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400" Height="500" Width="500">
    <UserControl.Resources>
        <local:AngleToNormPosConverter x:Key="AngleToNormPos" />
        <local:HeightToColorConverter x:Key="HeightToColorPos" />
    </UserControl.Resources>
    <Grid>
        <Ellipse>
            <Ellipse.Fill>
                <RadialGradientBrush GradientOrigin="{Binding RValue, Converter={StaticResource AngleToNormPos}}" Center="0.5,0.5" RadiusX="1" RadiusY="1">
                <!--<RadialGradientBrush GradientOrigin="0.5,1"  Center="0.5,0.5" RadiusX="1" RadiusY="1">-->
                    <RadialGradientBrush.GradientStops>
                        <GradientStop Color="{Binding TValue, Converter={StaticResource HeightToColorPos}}" Offset="0.1" />
                        <GradientStop Color="Green" Offset="0.8" />
                    </RadialGradientBrush.GradientStops>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</UserControl>
