                                            VerticalContentAlignment="Center"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Center"
                                            Text="{Binding  ProbingModule.FirstContactHeight}"
                                            />

                            <Button         AutomationProperties.AutomationId="FirstContactSetbtn"
