<UserControl x:Class="ProberViewModel.ManualContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prober="clr-namespace:ProberInterfaces;assembly=ProberInterfaces"
             xmlns:MapUC="clr-namespace:MapView;assembly=MapView"
             xmlns:conv="clr-namespace:ValueConverters;assembly=ValueConverters"
             xmlns:pnpcontrol="clr-namespace:PnPControl;assembly=PnPControl"
             xmlns:local="clr-namespace:ProberViewModel"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"  
             xmlns:UcPnPPrevNextJog="clr-namespace:UcPnPPrevNextJog;assembly=UcPnPPrevNextJog"
             xmlns:UcCircularShapedJog="clr-namespace:UcCircularShapedJog;assembly=UcCircularShapedJog"
             xmlns:cui="clr-namespace:CUI;assembly=CUI"
             mc:Ignorable="d"
             IsEnabled="{Binding CanUsingManualContactControl}"
             d:DesignHeight="892" d:DesignWidth="1580">
    <UserControl.Resources>

        <ResourceDictionary>
            <local:ZStateToChuckIconConverter x:Key="zStateToChuckIconConverter"/>
            <local:ZStateToBtnContentConverter x:Key="zStateToBtnContentConverter"/>
            <local:IsSetAllContactConverter x:Key="SetContactForConv" />
            <local:BoolReverseConverter x:Key="BoolReverseConv" />
            <local:GetObjectNameConverter x:Key="GetobjNameConv" />
            <local:StateToColorConverter x:Key="StateToColorConv" />
            <local:IsProbingStartPosAllContactConverter x:Key="IsProbingStartPosAllContactConverter" />
            <local:IsProbingStartPosFirstContactConverter x:Key="IsProbingStartPosFirstContactConverter" />
            <local:ZStateToBorderBrushConverter x:Key="ZStateToBorderBrushConv"/>
            <conv:LotStateToStringConverter x:Key="BtoVConv" />
            <conv:LotStateToStringConverter2 x:Key="BtoVConv2" />
            <conv:BoolToVisibleOrHiddenConverter x:Key="BtoVConv3" />
            <conv:BoolToHiddenOrVisibleConverter x:Key="BtoVConv4" />

            <Storyboard x:Key="ShowGroupBoxNoMargin">
                <ThicknessAnimation Storyboard.TargetProperty="Margin" To="0" DecelerationRatio=".8" Duration="0:0:0.3"/>
            </Storyboard>
            <Storyboard x:Key="ShowGroupBox">
                <ThicknessAnimation Storyboard.TargetProperty="Margin" To="8" DecelerationRatio=".8" Duration="0:0:0.3"/>
            </Storyboard>
            <Storyboard x:Key="HideGroupBox">
                <ThicknessAnimation Storyboard.TargetProperty="Margin" To="120" DecelerationRatio=".8" Duration="0:0:0.3"/>
            </Storyboard>

            <DataTemplate x:Key="MapViewTemplate" DataType="{x:Type prober:IWaferObject}" >
                <MapUC:ucWaferMapviewer MinHeight="200" MinWidth="200" Opacity="1" 
                                      WaferObject="{Binding }"
                                      UnderDutDices="{Binding RelativeSource={RelativeSource Mode=FindAncestor,
                                                                              AncestorType={x:Type UserControl}},
                                                  Path=DataContext.ProbingModule.ProbingProcessStatus.UnderDutDevs, Mode=TwoWay,
                                                    UpdateSourceTrigger=PropertyChanged}"
                                      Grid.RowSpan="2" Margin="4" 
                                      CurrXYIndex="{Binding RelativeSource={RelativeSource Mode=FindAncestor,
                                                                              AncestorType={x:Type UserControl}},
                                                  Path=DataContext.MCM.MXYIndex, Mode=TwoWay,
                                                    UpdateSourceTrigger=PropertyChanged}" 
                                      EnalbeClickToMove="True"
                                      CoordinateManager="{Binding RelativeSource={RelativeSource Mode=FindAncestor, 
                                                   AncestorType={x:Type UserControl}}, Path=DataContext.MCM.CoordinateManager, Mode=TwoWay}"
                                      IsCrossLineVisible="True"
                                      MapViewEncoderVisiability="True">
                </MapUC:ucWaferMapviewer>
            </DataTemplate>

            <pnpcontrol:TemplateSelector x:Key="ViewTargetTemplateSelector" 
                                    MapViewDataTemplate="{StaticResource MapViewTemplate}"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ToggleButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding ControlLoadedCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.4*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="696*"/>
            </Grid.RowDefinitions>

            <!--<Grid   Margin="8" HorizontalAlignment="Center"
                    Width="{Binding ActualHeight, RelativeSource={RelativeSource Mode=Self}}"-->
            <Grid  Margin="8" HorizontalAlignment="Center">
                <!--<Grid.RowDefinitions>
                    <RowDefinition Height="80*"/>
                    <RowDefinition Height="16*"/>
                </Grid.RowDefinitions>-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="0.5*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="8*"/>
                    <!--<RowDefinition Height="*"/>-->
                </Grid.RowDefinitions>

                <!--<Grid   Grid.Row="0" Grid.Column="1"
                        Width="{Binding ActualHeight, RelativeSource={RelativeSource Mode=Self}}" >-->
                <Grid   Grid.Row="0" Grid.Column="1">
                    <ContentControl Content="{Binding MCM.ViewTarget}" 
                                    VerticalAlignment="Stretch" 
                                    HorizontalAlignment="Stretch"
                                    ContentTemplateSelector="{StaticResource ViewTargetTemplateSelector}"
                                    Width="890"/>
                    <!--<Grid Grid.Row="0" Width="100" Height="150" VerticalAlignment="Bottom" HorizontalAlignment="Right" Opacity="1" Margin="8,20">
                        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Opacity="0.25" Visibility="{Binding MCM.LotOPModule.ZoomVisiability}" >
                            <RepeatButton  HorizontalAlignment="Right" VerticalAlignment="Top" Content="+" Background="Black" Foreground="White" Command="{Binding ZoomInCommand}" Width="50" Height="50" FontSize="40" FontWeight="Black" />
                            <RepeatButton  HorizontalAlignment="Right" VerticalAlignment="Top" Content="-" Background="Black" Foreground="White" Command="{Binding ZoomOutCommand}" Width="50" Height="50" FontSize="40" FontWeight="Black" />
                        </StackPanel>
                    </Grid>-->
                    <Grid Grid.Row="0" Width="160" Height="152" IsHitTestVisible="False"
                          VerticalAlignment="Bottom" HorizontalAlignment="Left" 
                          Background="Gray"
                          Visibility="{Binding IsVisiblePanel,Converter={StaticResource BtoVConv3}}"
                          Opacity="0.8" Margin="20 0 0 20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label      Grid.Row="0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Margin="8" Padding="0 0 8 0"
                                    Content="{Binding MCM.MachinePosition.X}" ContentStringFormat="X : {0:F2}"
                                    Foreground="White" AutomationProperties.AutomationId="lblMachinePositionX"/>

                        <Label      Grid.Row="1"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Margin="8" Padding="0 0 8 0"
                                    Content="{Binding MCM.MachinePosition.Y}" ContentStringFormat="Y : {0:F2}"
                                    Foreground="White" AutomationProperties.AutomationId="lblMachinePositionY"/>

                        <Label      Grid.Row="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Margin="8" Padding="0 0 8 0"
                                    Content="{Binding MCM.MachinePosition.Z}" ContentStringFormat="Z : {0:F2}"
                                    Foreground="White" AutomationProperties.AutomationId="lblMachinePositionZ"/>

                        <Label      Grid.Row="3"
                                    HorizontalAlignment="Left"
                                    FontSize="16"
                                    Margin="8" Padding="0 0 8 0"
                                    Content="{Binding MCM.MachinePosition.T}" ContentStringFormat="T : {0:F2}"
                                    Foreground="White" AutomationProperties.AutomationId="lblMachinePositionT"/>
                    </Grid>
                </Grid>

            </Grid>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="160*"/>
                <RowDefinition Height="160*"/>
                <RowDefinition Height="200*"/>
            </Grid.RowDefinitions>

