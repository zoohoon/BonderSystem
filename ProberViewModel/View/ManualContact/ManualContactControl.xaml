                                            FontSize="16"
                                            Margin="8"
                                            Command="{Binding FirstContactSetCommand}"
                                            Style="{DynamicResource ControlButtonStyle}"
                                            Content="Set"/>



                            <RadioButton    AutomationProperties.AutomationId="AllContactrdo"
                                            Grid.Row="1" Grid.Column="0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            IsHitTestVisible="False"
                                            IsEnabled="{Binding ProbingModule.ProbingModuleSysParamRef.OverDriveStartPosition.Value,
                                                Converter={StaticResource IsProbingStartPosAllContactConverter}}"
                                            IsChecked="{Binding ProbingModule.ProbingModuleSysParamRef.OverDriveStartPosition.Value,
                                               Converter={StaticResource IsProbingStartPosAllContactConverter}}"
                                            VerticalContentAlignment="Center"
                                            />

                                <Label          Grid.Row="1" Grid.Column="1"
                                            FontSize="16"
                                            Margin="0" Padding="0 0 8 0"
                                            HorizontalContentAlignment="Right"
                                            VerticalContentAlignment="Center"
                                            IsEnabled="{Binding ProbingModule.ProbingModuleSysParamRef.OverDriveStartPosition.Value,
                                                Converter={StaticResource IsProbingStartPosAllContactConverter}}"
                                            Content="All&#x0a;Contact :"/>

                            <TextBox        AutomationProperties.AutomationId="AllContacttxt"
                                            Grid.Row="1" Grid.Column="2"
                                            Margin="8"
                                            IsEnabled="False"
                                            FontSize="16" Foreground="White"
                                            VerticalAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Center"
                                            Text="{Binding  ProbingModule.AllContactHeight}"
                                            />

                            <Button         AutomationProperties.AutomationId="AllContactSetbtn"
                                            Grid.Row="1" Grid.Column="3"
                                            Margin="8"
                                            FontSize="16"
                                            Style="{DynamicResource ControlButtonStyle}"
                                            Command="{Binding AllContactSetCommand}"
                                            IsEnabled="{Binding ProbingModule.ProbingModuleSysParamRef.OverDriveStartPosition.Value,
                                                Converter={StaticResource IsProbingStartPosAllContactConverter}}"
                                            Content="Set"
                                                />

                                <Button Grid.Row="2" Grid.Column="3" AutomationProperties.AutomationId="RestContactStartPositionbtn"
                                Content="Reset"
                                Margin="8"
                                Style="{DynamicResource ControlButtonStyle}"
                                Command="{Binding ResetContactStartPositionCommand}"/>
                            </Grid>
                            <!--</GroupBox>-->
                        </DockPanel>
                        </TabItem>
                        <TabItem Header="CPC Setting" Background="DimGray" BorderThickness="1" BorderBrush="Black" Foreground="White" Visibility="{Binding MCM.CPC_Visibility}">
                            <DockPanel>
                                <Border DockPanel.Dock="Top" Margin="0,0,0,0" Background="#3C454F">
                                    <Label Padding="0" FontWeight="DemiBold" Content="CPC"
                                   Foreground="WhiteSmoke" FontSize="12" 
                                   VerticalAlignment="Center" />
                                </Border>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="80*"/>
                                        <RowDefinition Height="80*"/>
                                        <RowDefinition Height="80*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="65*"/>
                                        <ColumnDefinition Width="161"/>
                                        <ColumnDefinition Width="161*"/>
                                    </Grid.ColumnDefinitions>

                                

                                    <Label          Grid.Row="0" Grid.Column="0"
                                            FontSize="16"
                                            Margin="0" Padding="0 0 8 0"
                                            HorizontalContentAlignment="Right"
                                            VerticalContentAlignment="Center"
                                            IsEnabled="True"
                                            Content="Z0 :"/>

                                    <TextBox  Grid.Row="0"  Grid.Column="1" Margin="0"
                                            Focusable="False"
                                            FontSize="20" Foreground="White"
                                            VerticalAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Center"
                                            IsEnabled="False"
                                            Text="{Binding MCM.CPC_Z0}"
                                         />



                                    <Label          Grid.Row="1" Grid.Column="0"
                                            FontSize="16"
                                            Margin="0" Padding="0 0 8 0"
                                            HorizontalContentAlignment="Right"
                                            VerticalContentAlignment="Center"
                                            IsEnabled="true"
                                            Content="Z1 :"/>

                                    <TextBox  Grid.Row="1"  Grid.Column="1" Margin="0"
                                            Focusable="False"
                                            FontSize="20" Foreground="White"
                                            VerticalAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Center"
                                            Text="{Binding MCM.CPC_Z1}"
                                            >
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseUp">
                                                <i:InvokeCommandAction Command="{Binding CPC_Z1_ClickCommand}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </TextBox>



                                    <Label          Grid.Row="2" Grid.Column="0"
                                            FontSize="16"
                                            Margin="0" Padding="0 0 8 0"
                                            HorizontalContentAlignment="Right"
                                            VerticalContentAlignment="Center"
                                            IsEnabled="{Binding ProbingModule.ProbingModuleSysParamRef.OverDriveStartPosition.Value,
                                                Converter={StaticResource IsProbingStartPosFirstContactConverter}, Mode=TwoWay}"
                                            Content="Z2 :"/>

                                    <TextBox  Grid.Row="2"  Grid.Column="1" Margin="0"
                                            Focusable="False"
                                            FontSize="20" Foreground="White"
                                            VerticalAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Center"
                                            IsEnabled="true"
                                            Text="{Binding MCM.CPC_Z2}"
                                            >
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseUp">
                                                <i:InvokeCommandAction Command="{Binding CPC_Z2_ClickCommand}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </TextBox>





                                </Grid>
                                <!--</GroupBox>-->
                            </DockPanel>
                        </TabItem>
                    </TabControl>
                </Border>
            </Grid>

            <Grid Grid.Row="1" Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320*"/>
                    <ColumnDefinition Width="160*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Row="0" BorderBrush="#474343" BorderThickness="0.8">
                    <DockPanel>


                        <Border DockPanel.Dock="Top"
                            Margin="0,0,0,0" Background="#3C454F">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Padding="0" FontWeight="DemiBold" Content="Z Up Utility"
                                   Foreground="WhiteSmoke" FontSize="12" 
                                   VerticalAlignment="Center" />
                                <Label Padding="0" Grid.Column="1" FontWeight="DemiBold" Content="{Binding ZFM.ForceValue}" ContentStringFormat="P. Force: {0:0.00}Kg"
                                   Foreground="WhiteSmoke" FontSize="12" 
                                   VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Margin="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0"
                                      Grid.ColumnSpan="2"
                                      Margin="0">

                                    <Border BorderThickness="3" BorderBrush="{Binding MCM.IsZUpState, Converter={StaticResource ZStateToBorderBrushConv}}">
                                        <Viewbox Width="200">
                                            <Image Margin="8,8,8,2" Source="{Binding MCM.IsZUpState, Converter={StaticResource zStateToChuckIconConverter}}"/>
                                        </Viewbox>
                                    </Border>

                                </Grid>
                            </Grid>
                            <Grid    Grid.Row="1" Margin="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox    AutomationProperties.AutomationId="Overdrivetxt"
                                            Grid.Column="0" Margin="0"
                                            Focusable="False"
                                            FontSize="20" Foreground="White"
                                            VerticalAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Center"
                                            IsEnabled="{Binding MCM.IsZUpState, Converter={StaticResource BoolReverseConv}}"
                                            Text="{Binding MCM.OverDrive}"
                                            >
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseUp">
                                            <i:InvokeCommandAction Command="{Binding OverDriveTBClickCommand}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
                            </Grid>
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="16*"/>
                                    <ColumnDefinition Width="8*"/>
                                </Grid.ColumnDefinitions>
                                <Button AutomationProperties.AutomationId="ChangeZUpStatebtn"
                                        Grid.Column="0" FontSize="24"
                                        Margin="8"
                                        Command="{Binding ChangeZUpStateCommand}"                                        
                                        Content="Drive Z"/>
                                <Button AutomationProperties.AutomationId="SetOverDrivebtn"
                                        Grid.Column="1"
                                        Margin="0 8 0 8"                                        
                                        Content="    Set&#x0a;OverDrive"
                                        Style="{DynamicResource ControlButtonStyle}"
                                        FontSize="16"
                                        Command="{Binding SetOverDriveCommand}">
                                </Button>
                            </Grid>
                        </Grid>
                    </DockPanel>
                </Border>
                <Grid  Grid.Column="1"
                       Visibility="{Binding MCM.IsZUpState, Converter={StaticResource BtoVConv3}}"
                       Margin="0">
                    <Grid.Style>
                        <Style>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding MCM.IsZUpState}" Value="True">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <StaticResource ResourceKey="ShowGroupBoxNoMargin"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                    <DataTrigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <StaticResource ResourceKey="HideGroupBox"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.ExitActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <!--<Border Grid.Row="0" BorderBrush="#474343" BorderThickness="0.8" Visibility="Hidden">

                        <DockPanel>
