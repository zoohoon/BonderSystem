<Window x:Class="ProberViewModel.TemplateTransferObjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProberViewModel"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:pi="clr-namespace:ProberInterfaces;assembly=ProberInterfaces"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:lp="clr-namespace:LoaderParameters;assembly=LoaderParameters"
        mc:Ignorable="d"
        Title="Transfer Object Template Information" Height="570" Width="900" Background="DimGray">

    <Window.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <!--<ResourceDictionary Source="Dictionary1.xaml"/>-->
                <ResourceDictionary Source="/ProberViewModel;component/View/TransferObjectTemplate/Template/Standard.xaml" />
                <ResourceDictionary Source="/ProberViewModel;component/View/TransferObjectTemplate/Template/Polish.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <ObjectDataProvider x:Key="getDataFromEnumWaferType" MethodName="GetValues" ObjectType="{x:Type System:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="pi:EnumWaferType"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            
            <ObjectDataProvider x:Key="getDataFromEnumModuleType" MethodName="GetValues" ObjectType="{x:Type System:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <!--<x:Type TypeName="lp:ModuleTypeEnum"/>-->
                    <x:Type TypeName="pi:ModuleTypeEnum"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>

            <ObjectDataProvider x:Key="getDataFromEnumSubsStatus" MethodName="GetValues" ObjectType="{x:Type System:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <!--<x:Type TypeName="lp:ModuleTypeEnum"/>-->
                    <x:Type TypeName="pi:EnumSubsStatus"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            
            <!--<DataTemplate x:Key="TrasnferObjectTemplate" DataType="{x:Type lp:TransferObject}">
                <local:TrasferObjectItem/>
            </DataTemplate>-->

            <!--<DataTemplate x:Key="DataTemplate1">
                <Grid>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding TransferObj.Type.Value}"></TextBlock>
                    </StackPanel>
                </Grid>
            </DataTemplate>

            <DataTemplate x:Key="DataTemplate2">
                <Grid >
                    <Rectangle HorizontalAlignment="Left" Height="30" Width="100" StrokeThickness="1" Fill="Red"></Rectangle>
                    <TextBlock Text="BBB"></TextBlock>
                </Grid>
            </DataTemplate>-->

            <!--<DataTemplate x:Key="DataTemplate3">
                <Grid >
                    <TextBlock Text="CCC"></TextBlock>
                </Grid>
            </DataTemplate>-->

            <local:TransferObjectSelectDataTemplate x:Key="TransferObjectTemplateSelector">
            </local:TransferObjectSelectDataTemplate>

        </ResourceDictionary>
    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="165"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8.5*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal">
                
                <ComboBox  AutomationProperties.AutomationId="cbWaferType"
                    Margin="0,4,0,4" Grid.Column="0" Width="400"
                       Style="{x:Null}"
                       VerticalContentAlignment="Center"
                       HorizontalContentAlignment="Center"
                       Foreground="Black"
                       FontSize="18"
                       ItemsSource="{Binding Source={StaticResource getDataFromEnumWaferType}}"
                       SelectedItem="{Binding SelectedType}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding ChangedTypeCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ComboBox>

                <ComboBox  AutomationProperties.AutomationId="cbsubsStatus"
                           Margin="0,4,0,4" Grid.Column="0" Width="400"
                       Style="{x:Null}"
                       VerticalContentAlignment="Center"
                       HorizontalContentAlignment="Center"
                       Foreground="Black"
                       FontSize="18"
                       ItemsSource="{Binding Source={StaticResource getDataFromEnumSubsStatus}}"
                       SelectedItem="{Binding SelectedSubsStatus}">
                    <!--<i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding ChangedSubsStatusCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>-->
                </ComboBox>
                
                <GroupBox Header="Origin Horlder" >
                    <StackPanel Orientation="Horizontal">
                        <ComboBox  Margin="0,4,0,4" Grid.Column="0" Width="150" Height="50"
                       Style="{x:Null}"
                       VerticalContentAlignment="Center"
                       HorizontalContentAlignment="Center"
                       Foreground="Black"
                       FontSize="18"
                       ItemsSource="{Binding Source={StaticResource getDataFromEnumModuleType}}"
                       SelectedItem="{Binding OriginModuleType ,Mode=TwoWay}">
                        </ComboBox>
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal" >
                                <Label Content="Foup:"  Visibility="{Binding IsVisible ,Mode=TwoWay}"></Label>
                                <ComboBox SelectedIndex="{Binding FoupIndex , Mode=TwoWay}"  Visibility="{Binding IsVisible ,Mode=TwoWay}" Width="50">
                                    <ComboBoxItem >1</ComboBoxItem>
                                    <ComboBoxItem >2</ComboBoxItem>
                                    <ComboBoxItem >3</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                            <Label Content="Index:"></Label>
                            <ComboBox SelectedIndex="{Binding OriginIndex , Mode=TwoWay}" Width="50">
                                <ComboBoxItem >1</ComboBoxItem>
                                <ComboBoxItem >2</ComboBoxItem>
                                <ComboBoxItem >3</ComboBoxItem>
                                <ComboBoxItem >4</ComboBoxItem>
                                <ComboBoxItem >5</ComboBoxItem>
                                <ComboBoxItem >6</ComboBoxItem>
                                <ComboBoxItem >7</ComboBoxItem>
                                <ComboBoxItem >8</ComboBoxItem>
                                <ComboBoxItem >9</ComboBoxItem>
                                <ComboBoxItem >10</ComboBoxItem>
                                <ComboBoxItem >11</ComboBoxItem>
                                <ComboBoxItem >12</ComboBoxItem>
                                <ComboBoxItem >13</ComboBoxItem>
                                <ComboBoxItem >14</ComboBoxItem>
                                <ComboBoxItem >15</ComboBoxItem>
                                <ComboBoxItem >16</ComboBoxItem>
                                <ComboBoxItem >17</ComboBoxItem>
                                <ComboBoxItem >18</ComboBoxItem>
                                <ComboBoxItem >19</ComboBoxItem>
                                <ComboBoxItem >20</ComboBoxItem>
                                <ComboBoxItem >21</ComboBoxItem>
                                <ComboBoxItem >22</ComboBoxItem>
                                <ComboBoxItem >23</ComboBoxItem>
                                <ComboBoxItem >24</ComboBoxItem>
                                <ComboBoxItem >25</ComboBoxItem>
                            </ComboBox>
                            </StackPanel>
                            <!--<TextBox VerticalAlignment="Center" Width="100" Text="{Binding OriginIndex , Mode=TwoWay}"></TextBox>-->
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
            <CheckBox AutomationProperties.AutomationId="chkEmul"
                      Grid.Column="1" IsChecked="{Binding EmulChecked}" Content="Emul" HorizontalAlignment="Center" VerticalAlignment="Center">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2" />
                </CheckBox.LayoutTransform>
            </CheckBox>
         
        </Grid>

        <Grid Grid.Row="1" >
            <ContentControl Content="{Binding TransferObj}" ContentTemplateSelector="{StaticResource TransferObjectTemplateSelector}"/>
        </Grid>
        <Grid Grid.Row="2">
            <StackPanel Orientation="Horizontal">
                <Label Content="CardPRESENCEState : " VerticalContentAlignment="Center" />
                <ComboBox  Margin="0,4,0,4" Grid.Column="0" Width="400"
                       Text="{Binding SelectedCardPresenceStatus}"
                       Style="{x:Null}"
                       VerticalContentAlignment="Center"
                       HorizontalContentAlignment="Center"
                       Foreground="Black"
                       FontSize="18"
                       ItemsSource="{Binding CardPresenceStatusInfos}"
                       SelectedItem="{Binding SelectedCardPresenceStatus}">
                    <!--<i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding SetCardPresenceCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>-->
                </ComboBox>
                <Button Content="Update" Command="{Binding Path= SetCardPresenceCommand}" Width="100" Style="{x:Null}"/>
            </StackPanel>
        </Grid>
    </Grid>

</Window>
