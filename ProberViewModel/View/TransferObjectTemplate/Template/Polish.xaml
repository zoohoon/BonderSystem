<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="Polish">
        <Grid>
            <StackPanel>
                
                <StackPanel Orientation="Horizontal">
                    <Label Content="Current Angle"></Label>
                    <TextBox VerticalAlignment="Center" Width="100" Text="{Binding PolishWaferInfo.CurrentAngle.Value}"></TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Rotate Angle"></Label>
                    <TextBox VerticalAlignment="Center" Width="100" Text="{Binding PolishWaferInfo.RotateAngle.Value}"></TextBox>
                </StackPanel>
                
            </StackPanel>
        </Grid>
    </DataTemplate>

