                                                </i:InvokeCommandAction.CommandParameter>
                                            </i:InvokeCommandAction>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=ClickControlCommand}"
                                                                   CommandParameter="AUXOUT0"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
                            </Grid>

                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>

        </TabControl>

        <Border Grid.Row="1" Margin="4" BorderBrush="Black" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Margin="4,0,0,0" Padding="0" Content="{Binding PropertyName}" Foreground="Black" FontSize="14" FontWeight="DemiBold" />
                <Label Margin="4,0,0,0" Padding="0" Grid.Row="1" VerticalContentAlignment="Center"
                       Content="{Binding Description}" Foreground="Black" FontSize="14"/>
            </Grid>

        </Border>
    </Grid>
</UserControl>