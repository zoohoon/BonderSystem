<UserControl x:Class="ProberViewModel.View.E84.Setting.E84ControlSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:pi="clr-namespace:ProberInterfaces;assembly=ProberInterfaces"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:ProberViewModel.View.E84.Setting"
             mc:Ignorable="d"  x:Name="ucDialog" Height="700" Width="400"
             Background="White">
    <UserControl.Resources>
        <local:MultiBindingParamConverter x:Key="MultiBindingParamConverter"/>
        <local:BoolToIntConverter x:Key="BoolToIntConverter"/>
        <local:ModeChangeEnableConverter x:Key="ModeChangeEnableConverter"/>
        <local:BoolToBrushConverter x:Key="BoolToBrushConv"/>
        <local:BoolConverter x:Key="BoolConv"/>
        <local:ConnectIsEnableConverter x:Key="ConnectIsEnableConv"/>
        <Style TargetType="TabControl">
            <Setter Property="Margin" Value="4"/>
        </Style>
        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <TabControl>
            <TabControl.Resources>
                <Style TargetType="{x:Type Label}">
                    <Setter Property="FontSize" Value="14"/>
                </Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="DemiBold"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </TabControl.Resources>
            <!-- Main-->
            <TabItem Header="MAIN">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="1.5*"/>
                    </Grid.RowDefinitions>

                    <GroupBox Grid.Row="0" Header="CONNECT">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Margin="2" Content="ATTACH" Style="{x:Null}"
                                    Command="{Binding SetAttatchedCommand}" IsEnabled="{Binding IsAttatched, Converter={StaticResource BoolConv}}"/>
                                <Button Grid.Column="1" Margin="2" Content="DETACH" Style="{x:Null}"
                                    Command="{Binding SetDetachedCommand}" IsEnabled="{Binding IsAttatched}"/>
                            </Grid>
                            <Grid Grid.Row="1" Background="Silver" Margin="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="5*"/>
                                    <ColumnDefinition Width="5*"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Kind="PowerPlug" Grid.Column="0"
                                    Foreground="{Binding IsConnected, Converter={StaticResource BoolToBrushConv}}" Width="32" Height="32"/>
                                <Button Grid.Column="1" Grid.Row="1" Margin="4" Content="CONNECT" 
                                        Command="{Binding ChangeConnectCommand}" 
                                        CommandParameter="{x:Static pi:E84ComStatus.CONNECTED}"
                                        Style="{x:Null}">
                                    <Button.IsEnabled >
                                        <MultiBinding Converter="{StaticResource ConnectIsEnableConv}">
                                            <Binding Path="IsAttatched"/>
                                            <Binding Path="IsDisConnected"/>
                                        </MultiBinding>
                                    </Button.IsEnabled>
                                </Button>
                                <Button Grid.Column="2" Margin="4" Content="DISCONNECT"  IsEnabled="{Binding IsConnected}"
                                    Command="{Binding ChangeConnectCommand}" 
                                        CommandParameter="{x:Static pi:E84ComStatus.DISCONNECTED}" Style="{x:Null}"/>
                            </Grid>
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="1" Header="MODE">
                        <Grid>
                            <Grid.IsEnabled >
                                <MultiBinding Converter="{StaticResource ModeChangeEnableConverter}" Mode="TwoWay">
                                    <Binding Path="E84Controller.ModulestateEnum"/>
                                    <Binding Path="IsDisConnected"/>
                                </MultiBinding>
                            </Grid.IsEnabled>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Grid.Row="0" Margin="4" Content="AUTO" IsEnabled="{Binding IsManualMode}"
                                    Command="{Binding ChangeModeCommand}" CommandParameter="{x:Static pi:E84Mode.AUTO}" Style="{x:Null}"/>
                            <Button Grid.Column="1" Grid.Row="0" Margin="4" Content="MANUAL"  IsEnabled="{Binding IsAutoMode}"
                                    Command="{Binding ChangeModeCommand}" CommandParameter="{x:Static pi:E84Mode.MANUAL}" Style="{x:Null}"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="2" Header="COMMUNICATION">
                        <Grid>
                            <Grid.IsEnabled >
                                <MultiBinding Converter="{StaticResource ModeChangeEnableConverter}" Mode="TwoWay">
                                    <Binding Path="E84Controller.ModulestateEnum"/>
                                    <Binding Path="IsDisConnected"/>
                                </MultiBinding>
                            </Grid.IsEnabled>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Grid.Row="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Content="Timeout(milli sec)"/>
                            <TextBox Grid.Column="1" Grid.Row="0" Margin="4" Text="{Binding E84Controller.CommModule.RecoveryTimeout, Mode=OneWay}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="PreviewMouseDown" >
                                        <i:InvokeCommandAction Command="{Binding Path=TextBoxClickCommand}">
                                            <i:InvokeCommandAction.CommandParameter>
                                                <MultiBinding Converter="{StaticResource MultiBindingParamConverter}">
                                                    <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type TextBox}}"/>
                                                    <Binding>
                                                        <Binding.Source>
                                                            <system:String>RecoveryTimeout</system:String>
                                                        </Binding.Source>
                                                    </Binding>
                                                </MultiBinding>
                                            </i:InvokeCommandAction.CommandParameter>
                                        </i:InvokeCommandAction>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                        <i:InvokeCommandAction Command="{Binding Path=ClickControlCommand}"
								   CommandParameter="RecoveryTimeout"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBox>
                            <Label Grid.Column="0" Grid.Row="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Content="Retry Count"/>
                            <TextBox Grid.Column="1" Grid.Row="1" Margin="4" Text="{Binding E84Controller.CommModule.RetryCount, Mode=OneWay}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="PreviewMouseDown" >
                                        <i:InvokeCommandAction Command="{Binding Path=TextBoxClickCommand}">
                                            <i:InvokeCommandAction.CommandParameter>
                                                <MultiBinding Converter="{StaticResource MultiBindingParamConverter}">
                                                    <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type TextBox}}"/>
                                                    <Binding>
                                                        <Binding.Source>
                                                            <system:String>RetryCount</system:String>
                                                        </Binding.Source>
                                                    </Binding>
                                                </MultiBinding>
                                            </i:InvokeCommandAction.CommandParameter>
                                        </i:InvokeCommandAction>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                        <i:InvokeCommandAction Command="{Binding Path=ClickControlCommand}"
								   CommandParameter="RetryCount"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBox>
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="3" Header="GROUP MODE">
                        <Grid>
                            <Grid.IsEnabled >
                                <MultiBinding Converter="{StaticResource ModeChangeEnableConverter}" Mode="TwoWay">
                                    <Binding Path="E84Controller.ModulestateEnum"/>
                                    <Binding Path="IsDisConnected"/>
                                </MultiBinding>
                            </Grid.IsEnabled>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <ListView Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2" Margin="4"
                                      ItemsSource="{Binding E84Infos}" IsEnabled="False">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <TextBlock Text="{Binding FoupIndex, StringFormat=LoadPort Num.{0}}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <Button Grid.Column="0" Grid.Row="2" Margin="2" Content="AUTO"
                                    Command="{Binding GroupChangeModeCommand}" CommandParameter="{x:Static pi:E84Mode.AUTO}" Style="{x:Null}"/>
                            <Button Grid.Column="1" Grid.Row="2" Margin="2" Content="MANUAL"
                                    Command="{Binding GroupChangeModeCommand}" CommandParameter="{x:Static pi:E84Mode.MANUAL}" Style="{x:Null}"/>
                            <Label Grid.ColumnSpan="2" Grid.Row="3" Content="Change the mode of all connected E84 modules."/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <!-- Init & LP -->
            <TabItem Header="INIT">
                <Grid>
                    <Grid.IsEnabled >
                        <MultiBinding Converter="{StaticResource ModeChangeEnableConverter}" Mode="TwoWay">
                            <Binding Path="E84Controller.ModulestateEnum"/>
                            <Binding Path="IsDisConnected"/>
                        </MultiBinding>
                    </Grid.IsEnabled>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition  Height="3*"/>
                    </Grid.RowDefinitions>
                    <GroupBox Header="BASIC">
                        <StackPanel>
                            <Grid Margin="2">
                                <!-- Ethernet_ID-->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Ethernet__ID">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=ClickControlCommand}"
                                                                   CommandParameter="EhternetID"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Label>
                                <TextBox Grid.Column="1" Text="{Binding E84Controller.CommModule.NetId, Mode=OneWay}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewMouseDown" >
                                            <i:InvokeCommandAction Command="{Binding Path=TextBoxClickCommand}">
                                                <i:InvokeCommandAction.CommandParameter>
                                                    <MultiBinding Converter="{StaticResource MultiBindingParamConverter}">
                                                        <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type TextBox}}"/>
                                                        <Binding>
                                                            <Binding.Source>
                                                                <system:String>EhternetID</system:String>
                                                            </Binding.Source>
                                                        </Binding>
                                                    </MultiBinding>
                                                </i:InvokeCommandAction.CommandParameter>
                                            </i:InvokeCommandAction>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=ClickControlCommand}"
                                                                   CommandParameter="EhternetID"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Grid.Row="1" Header="CLAMP">
                        <StackPanel>
                            <!-- Action Type -->
                            <Grid Margin="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Action__Type">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=ClickControlCommand}"
                                                                   CommandParameter="ActionType"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Label>
                                <ComboBox Grid.Column="1" 
                                           SelectedValue="{Binding E84Controller.CommModule.DisableClampEvent, Mode=OneWay}">
                                    <ComboBox.Items>
                                        <system:Boolean>True</system:Boolean>
                                        <system:Boolean>False</system:Boolean>
                                    </ComboBox.Items>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="SelectionChanged">
                                            <i:InvokeCommandAction Command="{Binding Path=ComboBoxSelectionChanged}">
                                                <i:InvokeCommandAction.CommandParameter>
                                                    <MultiBinding Converter="{StaticResource MultiBindingParamConverter}">
                                                        <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type ComboBox}}"/>
                                                        <Binding>
                                                            <Binding.Source>
                                                                <system:String>ActionType</system:String>
                                                            </Binding.Source>
                                                        </Binding>
                                                    </MultiBinding>
                                                </i:InvokeCommandAction.CommandParameter>
                                            </i:InvokeCommandAction>
                                        </i:EventTrigger>

                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=ClickControlCommand}"
                                                                   CommandParameter="ActionType"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ComboBox>
                            </Grid>

                            <!-- Input Type -->
                            <Grid Margin="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Input__Type">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=ClickControlCommand}"
                                                                   CommandParameter="InputType"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Label>
                                <ComboBox Grid.Column="1" 
                                           SelectedValue="{Binding E84Controller.CommModule.ClampComType, Mode=OneWay}">
                                    <ComboBox.Items>
                                        <system:Boolean>True</system:Boolean>
                                        <system:Boolean>False</system:Boolean>
                                    </ComboBox.Items>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="SelectionChanged">
                                            <i:InvokeCommandAction Command="{Binding Path=ComboBoxSelectionChanged}">
                                                <i:InvokeCommandAction.CommandParameter>
                                                    <MultiBinding Converter="{StaticResource MultiBindingParamConverter}">
                                                        <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type ComboBox}}"/>
                                                        <Binding>
                                                            <Binding.Source>
                                                                <system:String>InputType</system:String>
                                                            </Binding.Source>

                                                        </Binding>
                                                    </MultiBinding>
                                                </i:InvokeCommandAction.CommandParameter>
                                            </i:InvokeCommandAction>
                                        </i:EventTrigger>

                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=ClickControlCommand}"
                                                                   CommandParameter="InputType"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ComboBox>
                            </Grid>

                            <!-- Timer-->
                            <Grid Margin="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Timer">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=ClickControlCommand}"
                                                                   CommandParameter="Timer"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Label>
                                <TextBox Grid.Column="1" Text="{Binding E84Controller.CommModule.ClampOffWaitTime, Mode=OneWay}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewMouseDown" >
                                            <i:InvokeCommandAction Command="{Binding Path=TextBoxClickCommand}">
                                                <i:InvokeCommandAction.CommandParameter>
                                                    <MultiBinding Converter="{StaticResource MultiBindingParamConverter}">
                                                        <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type TextBox}}"/>
                                                        <Binding>
                                                            <Binding.Source>
                                                                <system:String>Timer</system:String>
                                                            </Binding.Source>
                                                        </Binding>
                                                    </MultiBinding>
                                                </i:InvokeCommandAction.CommandParameter>
                                            </i:InvokeCommandAction>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=ClickControlCommand}"
                                                                   CommandParameter="Timer"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
                            </Grid>

                            <!-- Use Clamp -->
                            <Grid Margin="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Use__Clamp">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=ClickControlCommand}"
                                                                   CommandParameter="UseClamp"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Label>
                                <ComboBox Grid.Column="1" 
                                           SelectedValue="{Binding E84Controller.CommModule.UseClamp, Mode=OneWay}">
                                    <ComboBox.Items>
                                        <system:Boolean>True</system:Boolean>
                                        <system:Boolean>False</system:Boolean>
                                    </ComboBox.Items>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="SelectionChanged">
                                            <i:InvokeCommandAction Command="{Binding Path=ComboBoxSelectionChanged}">
                                                <i:InvokeCommandAction.CommandParameter>
                                                    <MultiBinding Converter="{StaticResource MultiBindingParamConverter}">
                                                        <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type ComboBox}}"/>
                                                        <Binding>
                                                            <Binding.Source>
                                                                <system:String>UseClamp</system:String>
                                                            </Binding.Source>
                                                        </Binding>
                                                    </MultiBinding>
                                                </i:InvokeCommandAction.CommandParameter>
                                            </i:InvokeCommandAction>
                                        </i:EventTrigger>

                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=ClickControlCommand}"
                                                                   CommandParameter="UseClamp"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ComboBox>
                            </Grid>

                        </StackPanel>
                    </GroupBox>
                    <GroupBox Grid.Row="2" Header="LOAD__PORT">
                        <StackPanel>
                            <!-- Use LP1 -->
                            <Grid Margin="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Use__LP1">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=ClickControlCommand}"
                                                                   CommandParameter="UseLP1"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Label>
                                <ComboBox Grid.Column="1" 
                                           SelectedValue="{Binding E84Controller.CommModule.UseLP1, Mode=OneWay}">
                                    <ComboBox.Items>
                                        <system:Boolean>True</system:Boolean>
                                        <system:Boolean>False</system:Boolean>
                                    </ComboBox.Items>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="SelectionChanged">
                                            <i:InvokeCommandAction Command="{Binding Path=ComboBoxSelectionChanged}">
                                                <i:InvokeCommandAction.CommandParameter>
                                                    <MultiBinding Converter="{StaticResource MultiBindingParamConverter}">
                                                        <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type ComboBox}}"/>
                                                        <Binding>
                                                            <Binding.Source>
                                                                <system:String>UseLP1</system:String>
                                                            </Binding.Source>
                                                        </Binding>
                                                    </MultiBinding>
                                                </i:InvokeCommandAction.CommandParameter>
                                            </i:InvokeCommandAction>
                                        </i:EventTrigger>

                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=ClickControlCommand}"
                                                                   CommandParameter="UseLP1"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ComboBox>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- E84 -->
            <TabItem Header="E84">
                <Grid>
                    <Grid.IsEnabled >
                        <MultiBinding Converter="{StaticResource ModeChangeEnableConverter}" Mode="TwoWay">
                            <Binding Path="E84Controller.ModulestateEnum"/>
                            <Binding Path="IsDisConnected"/>
                        </MultiBinding>
                    </Grid.IsEnabled>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="3*"/>
                    </Grid.RowDefinitions>
                    <GroupBox Header="LIGHT__CURTAIN">
                        <StackPanel>
                            <!-- Use ES -->
                            <Grid Margin="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Use__ES">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=ClickControlCommand}"
                                                                   CommandParameter="UseES"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Label>
                                <ComboBox Grid.Column="1"
                                          SelectedValue="{Binding E84Controller.CommModule.EsIsLinkedLightCurtain, Mode=OneWay}">
                                    <ComboBox.Items>
                                        <system:Boolean>True</system:Boolean>
                                        <system:Boolean>False</system:Boolean>
                                    </ComboBox.Items>

                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="SelectionChanged">
                                            <i:InvokeCommandAction Command="{Binding Path=ComboBoxSelectionChanged}">
                                                <i:InvokeCommandAction.CommandParameter>
                                                    <MultiBinding Converter="{StaticResource MultiBindingParamConverter}">
                                                        <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type ComboBox}}"/>
                                                        <Binding>
                                                            <Binding.Source>
                                                                <system:String>UseES</system:String>
                                                            </Binding.Source>
                                                        </Binding>
                                                    </MultiBinding>
                                                </i:InvokeCommandAction.CommandParameter>
                                            </i:InvokeCommandAction>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=ClickControlCommand}"
                                                                   CommandParameter="UseES"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ComboBox>
                            </Grid>

                            <!-- Use HO_AVBL -->
                            <Grid Margin="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Use__HO__AVBL">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=ClickControlCommand}"
                                                                   CommandParameter="UseHOAVBL"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Label>
                                <ComboBox Grid.Column="1"
                                          SelectedValue="{Binding E84Controller.CommModule.HoAvblIsLinkedLightCurtain, Mode=OneWay}">
                                    <ComboBox.Items>
                                        <system:Boolean>True</system:Boolean>
                                        <system:Boolean>False</system:Boolean>
                                    </ComboBox.Items>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="SelectionChanged">
                                            <i:InvokeCommandAction Command="{Binding Path=ComboBoxSelectionChanged}">
                                                <i:InvokeCommandAction.CommandParameter>
                                                    <MultiBinding Converter="{StaticResource MultiBindingParamConverter}">
                                                        <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type ComboBox}}"/>
                                                        <Binding>
                                                            <Binding.Source>
                                                                <system:String>UseHOAVBL</system:String>
                                                            </Binding.Source>
                                                        </Binding>
                                                    </MultiBinding>
                                                </i:InvokeCommandAction.CommandParameter>
                                            </i:InvokeCommandAction>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=ClickControlCommand}"
                                                                   CommandParameter="UseHOAVBL"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>

                                </ComboBox>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Grid.Row="1" Header="SEQUENCE__OPTION">
                        <StackPanel>
                            <!-- Ready Off -->
                            <Grid Margin="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Ready__Off">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Path=ClickControlCommand}"
                                                                   CommandParameter="ReadyOff"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Label>
                                <ComboBox Grid.Column="1"
                                          SelectedValue="{Binding E84Controller.CommModule.DisableReadOffEvent, Mode=OneWay}">
                                    <ComboBox.Items>
                                        <system:Boolean>True</system:Boolean>
                                        <system:Boolean>False</system:Boolean>
                                    </ComboBox.Items>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="SelectionChanged">
                                            <i:InvokeCommandAction Command="{Binding Path=ComboBoxSelectionChanged}">
