<UserControl x:Class="UcMappingView.MappingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UcMappingView"
             xmlns:vc="clr-namespace:ValueConverters;assembly=ValueConverters"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:pnpcontrol="clr-namespace:PnPControl;assembly=PnPControl"
             xmlns:prober="clr-namespace:ProberInterfaces;assembly=ProberInterfaces"
             xmlns:MapUC="clr-namespace:MapView;assembly=MapView"
             xmlns:hjc="clr-namespace:HexagonJogControl;assembly=HexagonJogControl"
             xmlns:MahAppsControls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             mc:Ignorable="d" 
             Margin="16"
             d:DesignHeight="800" d:DesignWidth="780">
    <UserControl.Resources>
        <ResourceDictionary>
            <vc:BinaryImageConverter x:Key="imgConverter" />
            <vc:BoolToVisibleOrCollapsedConverter x:Key="visibleOrCollapsConv" />

            <DataTemplate x:Key="DisplayViewTemplate" DataType="{x:Type prober:IDisplayPort}" >
                <ContentControl Name="DisPlay" Content="{Binding}">
                </ContentControl>
            </DataTemplate>
            <pnpcontrol:TemplateSelector x:Key="ViewTargetTemplateSelector" 
                                    DisplayViewDataTemplate="{StaticResource DisplayViewTemplate}"/>
        </ResourceDictionary>
    </UserControl.Resources>

        
    <Grid Width="940">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="120*"/>
            <RowDefinition Height="72*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="60*"/>
        </Grid.ColumnDefinitions>

        <Border 
            Grid.Row="0"
            Grid.RowSpan="1"
            Grid.Column="0"
            Margin="4"
            BorderThickness="1"
            BorderBrush="White">
        </Border>
        
        <Grid Grid.Row="0" 
              Grid.Column="0"
              Margin="4">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="80*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
            </Grid>

            <Grid Grid.Row="1">
                <Border 
                    Grid.Row="0"
                    BorderThickness="1"
                    BorderBrush="White"/>

                <Border 
                    Grid.Row="1"
                    BorderThickness="1"
                    BorderBrush="White"/>

                <Viewbox>
                    <MapUC:MapViewControl 
                        MinHeight="480" MinWidth="480"
                        Opacity="1" Margin="8" 
                        EnalbeClickToMove="True"
                        IsCrossLineVisible="True"
                        WaferObject="{Binding StageSupervisor.WaferObject, Mode=TwoWay}" 
                        CurCamera="{Binding CurCam}"
                        CurrXYIndex="{Binding MXYIndex, Mode=TwoWay}"
                        CoordinateManager="{Binding CoordinateManager, Mode=TwoWay}"
                        RenderMode="{Binding MapViewControlMode}"
                        StageSyncEnalbe="True"/>
                </Viewbox>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80*"/>
                        <RowDefinition Height="16*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="1" Margin="8 12 8 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="2"
                                Content="+"
                                FontSize="24"
                                FontWeight="Bold"
                                Command="{Binding IncreaseZoomCommand}"
                                />
                        <Button Grid.Column="3"
                                Content="-"
                                FontSize="24"
                                FontWeight="Bold"
                                Command="{Binding DecreaseZoomCommand}"
                                />
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <Border Grid.Row="0"
                Grid.RowSpan="1"
                Grid.Column="1"
                Margin="4"
                BorderThickness="1"
                BorderBrush="White">
        </Border>
        
        <Grid Grid.Row="0" 
              Grid.Column="1"
              Margin="4">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="32*"/>
                <ColumnDefinition Width="8*"/>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="0">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="80*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Grid.RowSpan="1"
                        Grid.Column="1"
                        BorderThickness="1"
                        BorderBrush="White"/>
                
                <Grid Grid.Row="0"
                      Margin="4">
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0" 
                              Margin="4"
                              HorizontalContentAlignment="Center"
                              VerticalContentAlignment="Center"
                              Foreground="White"
                              ItemsSource="{Binding CamList}"
                              SelectedItem="{Binding CurCam}"
                              DisplayMemberPath="CameraChannel.Type"/>

                    <Button Grid.Column="1"
                            Margin="4"
                            Content="Change Cam"
                            IsEnabled="{Binding IsEnableChangeCamBtn}"
                            Command="{Binding ChangeCamCommand}"/>

                    <Button Grid.Column="2"
                            Margin="4"
                            Content="Stop CurCam"
                            IsEnabled="{Binding IsEnableStopCurCamBtn}"
                            Command="{Binding StopCurCameraCommand}"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Border Grid.Row="0"
                            Grid.RowSpan="1"
                            Grid.Column="1"
                            Margin="0"
                            BorderThickness="1"
                            BorderBrush="White"/>

                        <Grid Margin="0">
                            
                            <ContentControl Margin="0"
                                            Padding="0"
                                            Name="DisplayPortCC"
                                            Content="{Binding DisplayPort}" 
                                            VerticalAlignment="Stretch" 
                                            HorizontalAlignment="Stretch"
                                            ContentTemplateSelector="{StaticResource ViewTargetTemplateSelector}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDown">
                                        <i:InvokeCommandAction Command="{Binding MeasureDistanceCommand}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </ContentControl>
                            
                            <Image Source="{Binding OverlapImage}"
                                   IsHitTestVisible="False"
                                   Opacity="0.5"
                                   Width="480"
                                   Height="480"/>
                            <local:UcMeasureDistance Background="Transparent" Visibility="{Binding IsUsingLineTracer, Converter={StaticResource visibleOrCollapsConv}}"/>
                            <local:CenterRactangleDrawer Background="Transparent" Visibility="{Binding IsUsingCenterRactangleDrawer, Converter={StaticResource visibleOrCollapsConv}}"/>
                        </Grid>
                </Grid>
            </Grid>

            <Border Grid.Row="1"
                    Grid.RowSpan="1"
                    Grid.Column="1"
                    BorderThickness="1"
                    BorderBrush="White"/>

            <Grid Grid.Column="1">
                
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0"
                        Margin="8"
                        Content="Z Clearence"
                        Command="{Binding ZClearenceCommand}"/>
                <Button Grid.Row="1"
                        Margin="8"
                        Content="Z Up"
                        Command="{Binding ZUpCommand}"/>
                <Button Grid.Row="2"
                        Margin="8"
                        Content="Z Down"
                        Command="{Binding ZDownCommand}"/>
                <Button Grid.Row="3"
                        Margin="8"
                        Content="Move to Pin High Pos"
                        Command="{Binding MoveToPinHighPosCommand}"/>
            </Grid>
        </Grid>

        <Border Grid.Row="1"
                Grid.RowSpan="1"
                Grid.Column="0"
                Margin="4"
                BorderThickness="1"
                BorderBrush="White">
        </Border>
        
        <Grid Grid.Row="1" 
              Grid.Column="0"
              Margin="8">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Canvas Grid.Column="0" Margin="12 48">
                <Grid>
                    <Viewbox Width="232">
                        <hjc:UcHexagonJog DataContext="{Binding MotionJogViewModel}" 
                                          AssignedCamera="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext.CurCam}"/>
                    </Viewbox>
                </Grid>
            </Canvas>
            
            <Grid Grid.Column="1">
                
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <Button Margin="4"
                        Grid.Row="0"
                        Content="Set Overlap"
                        Command="{Binding SetOverlapCommand}"/>
                
                <Button Margin="4"
                        Grid.Row="1"
                        Content="Reset Overlap"
                        Command="{Binding ResetOverlapCommand}"/>
                
                <Viewbox Grid.Row="2"
                         Margin="-10">
                    <ToggleButton Margin="8"
                            Content="Distance measure"
                            Foreground="Red"
                            Command="{Binding MeasureDistanceModeCommand}"
                            IsChecked="{Binding IsMeasureDistanceMode}"
                            >
                    </ToggleButton>
                </Viewbox>
                
                <Viewbox Grid.Row="3"
                         Margin="-10">
                    <ToggleButton Margin="8"
                                Grid.Row="3"
                                Content="LineTracer Mode"
                                Foreground="Red"
                                Command="{Binding MeasureDistanceOnOffCommand}"
                                IsChecked="{Binding IsUsingLineTracer}"
                                >
                    </ToggleButton>
                </Viewbox>
                
                <Viewbox Grid.Row="4"
                         Margin="-10">
                    <ToggleButton Margin="8"
                                Grid.Row="3"
                                Content="Center Rect Drawer"
                                  Foreground="Red"
                                IsChecked="{Binding IsUsingCenterRactangleDrawer}"
                                >
                    </ToggleButton>
                </Viewbox>
                
                <Grid Grid.Row="5" Visibility="{Binding IsUsingCenterRactangleDrawer, Converter={StaticResource visibleOrCollapsConv}}">
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0"
                            Padding="0"
                            Margin="4"
                            Content="▲"
                            FontSize="24"
                            Command="{Binding UpCenterRectLengthCommand}"/>

                    <Button Grid.Column="1"
                            Padding="0"
                            Margin="4"
                            Content="▼"
                            FontSize="24"
                            Command="{Binding DownCenterRectLengthCommand}"/>
                </Grid>

                <Viewbox Grid.Row="6"
                         Margin="-10">
                    <ToggleButton Margin="8"
                                  Grid.Row="3"
                                  Content="PZ Mode(if : true)"
                                  Foreground="Red"
                                  IsChecked="{Binding IsPZMode}">
                    </ToggleButton>
                </Viewbox>
            </Grid>
        </Grid>

        <Border Grid.Row="1"
                Grid.RowSpan="1"
                Grid.Column="1"
                Margin="4"
                BorderThickness="1"
                BorderBrush="White">
        </Border>
        
        <Grid Grid.Row="1" 
              Grid.Column="1"
              Margin="8">
            
            <MahAppsControls:MetroAnimatedSingleRowTabControl>
                <MahAppsControls:MetroAnimatedSingleRowTabControl.Resources>
                    <SolidColorBrush x:Key="AccentColorBrush" Color="#9370d8"/>
                    <SolidColorBrush x:Key="HighlightBrush" Color="#7260b5"/>
                </MahAppsControls:MetroAnimatedSingleRowTabControl.Resources>
                <MahAppsControls:MetroTabItem Header="Mapping"
                                              MahAppsControls:ControlsHelper.HeaderFontSize="20" Margin="-2,-3,-2,1"
                                              FontSize="12">
                    <Grid Background="#333333" Margin="8">
                        
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Row="0"
                                Grid.Column="0"
                                Margin="4 8"
                                Command="{Binding WaferAlignCommand}">
                            <Button.Content>
                                <TextBlock Foreground="White"
                                           Text="Wafer Align"
                                           TextWrapping="Wrap">
                                </TextBlock>
                            </Button.Content>
                        </Button>
                        
                        <Button Grid.Row="0"
                                Grid.Column="1"
                                Margin="4 8"
                                Command="{Binding RegistePatternCommand}">
                            <Button.Content>
                                <TextBlock
                                        Foreground="White"
                                        Text="Pattern Registration"
                                        TextWrapping="Wrap"
                                        >
                                </TextBlock>
                            </Button.Content>
                        </Button>

                        <Button Grid.Row="1"
                                Grid.Column="0"
                                Margin="4 8"
                                Command="{Binding AutoFocusCommand}">
                            <Button.Content>
                                <TextBlock
                                        Foreground="White"
                                        Text="Auto Focus"
                                        TextWrapping="Wrap"
                                        >
                                </TextBlock>
                            </Button.Content>
                        </Button>

                        <Button Grid.Row="0"
                                Grid.Column="2"
                                Margin="4 8"
                                Command="{Binding MeasureCenterXCommand}">
                            <Button.Content>
                                <TextBlock Foreground="White"
                                           Text="Measure Center X"
                                           TextWrapping="Wrap">
                                </TextBlock>
                            </Button.Content>
                        </Button>
                        
                        <Button Grid.Row="1"
                                Grid.Column="2"
                                Margin="4 8"
                                Command="{Binding MeasureCenterYCommand}">
                            <Button.Content>
                                <TextBlock
                                        Foreground="White"
                                        Text="Measure Center Y"
                                        TextWrapping="Wrap"
                                        >
                                </TextBlock>
                            </Button.Content>
                        </Button>
                        
                        <Button Grid.Row="0"
                                Grid.Column="3"
                                Margin="4 8"
                                Command="{Binding MeasureCurRowCommand}">
                            <Button.Content>
                                <TextBlock
                                        Foreground="White"
                                        Text="Measure Now Row"
                                        TextWrapping="Wrap"
                                        >
                                </TextBlock>
                            </Button.Content>
                        </Button>
                        
                        <Button Grid.Row="1"
                                Grid.Column="3"
                                Margin="4 8"
                                Command="{Binding StopCommand}">
                            <Button.Content>
                                <TextBlock
                                        Foreground="White"
                                        Text="Stop"
                                        TextWrapping="Wrap"
                                        >
                                </TextBlock>
                            </Button.Content>
                        </Button>
                        
                        <Button Grid.Row="0"
                                Grid.Column="4"
                                Margin="4 8"
                                Command="{Binding}">
                            <Button.Content>
                                <TextBlock
                                        Foreground="White"
                                        Text="Graph"
                                        TextWrapping="Wrap"
                                        >
                                </TextBlock>
                            </Button.Content>
                        </Button>
                        
                        <Button Grid.Row="1"
                                Grid.Column="4"
                                Margin="4 8"
                                Command="{Binding}">
                            <Button.Content>
                                <TextBlock
                                        Foreground="White"
                                        Text="Export Error Table"
                                        TextWrapping="Wrap"
                                        >
                                </TextBlock>
                            </Button.Content>
                        </Button>
                        
                        <Button Grid.Row="0"
                                Grid.Column="5"
                                Margin="4 8"
                                Command="{Binding ReloadErrTableCommand}">
                            <Button.Content>
                                <TextBlock
                                        Foreground="White"
                                        Text="Reload Errordata"
                                        TextWrapping="Wrap"
                                        >
                                </TextBlock>
                            </Button.Content>
                        </Button>
                        
                        <Button 
                            Grid.Row="1"
                            Grid.Column="6"
                            Margin="4 8"
                            Command="{Binding InitErrTableCommand}"
                            >
                            <Button.Content>
                                <TextBlock
                                        Foreground="White"
                                        Text="Init Error Table"
                                        TextWrapping="Wrap"
                                        >
                                </TextBlock>
                            </Button.Content>
                        </Button>
                        <Button 
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="4 8"
                            Command="{Binding ViewRectCommand}"
                            >
                            <Button.Content>
                                <TextBlock
                                        Foreground="White"
                                        Text="View PT Rect"
                                        TextWrapping="Wrap"
                                        >
                                </TextBlock>
                            </Button.Content>
                        </Button>
                        <Button 
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="4 8"
                            Command="{Binding UCDisplayRectWidthPlusCommand}"
                            >
                            <Button.Content>
                                <TextBlock
                                        Foreground="White"
                                        Text="Plus Rect Width"
                                        TextWrapping="Wrap"
                                        >
                                </TextBlock>
                            </Button.Content>
                        </Button>
                        <Button 
                            Grid.Row="2"
                            Grid.Column="2"
                            Margin="4 8"
                            Command="{Binding UCDisplayRectWidthMinusCommand}"
                            >
                            <Button.Content>
                                <TextBlock
                                        Foreground="White"
                                        Text="Minus Rect Width"
                                        TextWrapping="Wrap"
                                        >
                                </TextBlock>
                            </Button.Content>
                        </Button>
                        <Button 
                            Grid.Row="2"
                            Grid.Column="3"
                            Margin="4 8"
                            Command="{Binding UCDisplayRectHeightPlusCommand}"
                            >
                            <Button.Content>
                                <TextBlock
                                        Foreground="White"
                                        Text="Pluse Rect Height"
                                        TextWrapping="Wrap"
                                        >
                                </TextBlock>
                            </Button.Content>
                        </Button>
                        <Button 
                            Grid.Row="2"
                            Grid.Column="4"
                            Margin="4 8"
                            Command="{Binding UCDisplayRectHeightMinusCommand}"
                            >
                            <Button.Content>
                                <TextBlock
                                        Foreground="White"
                                        Text="Minus Rect Height"
                                        TextWrapping="Wrap"
                                        >
                                </TextBlock>
                            </Button.Content>
                        </Button>
                        <StackPanel Grid.Row="3" Grid.Column="0"
                                    Grid.ColumnSpan="2">
                            <CheckBox x:Name="FirstErrorComp_CB" Foreground="White"  
                                      FontSize="12"
                                      Margin="12 0"
                                      IsChecked="{Binding Path=MotionManager.ErrorManager.CompensationModule.Enable1D,
                                Mode=TwoWay}">1 ErrComp</CheckBox>
                            <CheckBox x:Name="SecondErrorComp_CB" Foreground="White" 
                                      FontSize="12"
                                      Margin="12 0"
                                      IsChecked="{Binding Path=MotionManager.ErrorManager.CompensationModule.Enable2D, 
                                Mode=TwoWay}">2 ErrComp</CheckBox>
                            <Label Foreground="Yellow" Margin="0,0,0,-10"
                                   FontSize="12"
                                   Content="1st=>1Comp check"/>
                            <Label Foreground="Yellow"
                                   FontSize="12"
                                   Content="2st=>All Check"/>
                        </StackPanel>
                    </Grid>
                </MahAppsControls:MetroTabItem>
            </MahAppsControls:MetroAnimatedSingleRowTabControl>
        </Grid>
    </Grid>
</UserControl>
