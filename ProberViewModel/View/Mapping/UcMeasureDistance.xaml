<UserControl x:Class="UcMappingView.UcMeasureDistance"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UcMappingView"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="480">
    <local:LineDrawerCanvas
        CanvasWidth="{Binding CanvasWidth, Mode=OneWayToSource}"
        CanvasHeight="{Binding CanvasHeight, Mode=OneWayToSource}"
        MousePosition="{Binding MousePosition, Mode=OneWayToSource}"
        />
</UserControl>
