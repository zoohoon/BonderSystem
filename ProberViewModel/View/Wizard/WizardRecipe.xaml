<UserControl x:Class="WizardRecipeScreen.WizardRecipe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"         
             xmlns:local="clr-namespace:WizardRecipeScreen"
             mc:Ignorable="d" 
             d:DesignHeight="892" d:DesignWidth="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid Background="#2d2d2d" >
            <Label Content="RECIPE WIZARD" Foreground="WhiteSmoke" FontSize="50" FontWeight="ExtraBold"
               VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="BASE RECIPE" 
                   Foreground="WhiteSmoke" VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="28" FontWeight="DemiBold"/>
            <Border Grid.Column="1" Background="#D8D8D8" Margin="24">
                <Label Grid.Column="1" Foreground="Black"  FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Left"
                   Content="{Binding RecipePath}"/>
            </Border>
            
            <Button Grid.Column="2" Content="NEW" Margin="16" FontSize="35" FontWeight="Bold"
                    Command="{Binding SetWizardBasePathCommand}"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Margin="8" BorderBrush="WhiteSmoke" Background="WhiteSmoke">
                <ListBox x:Name="Recipelistbox" Margin="8" Foreground="Black" FontWeight="Bold" FontSize="16"
                          ItemsSource="{Binding RecipeNames}" SelectedIndex="{Binding SeletedIndex}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding RecipeChangedCommand}"
                                                   CommandParameter="{Binding SelectedValue, ElementName=Recipelistbox}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ListBox>
            </Border>

            <Grid  Grid.Column="1">
                <Border Margin="8" BorderBrush="WhiteSmoke" Background="WhiteSmoke">
                    <DataGrid BorderThickness="1" 
                              ItemsSource="{Binding WizardRecipeSummary.WizardRecipeSummaryInfos}"
                               AutoGenerateColumns="True">
                        <!--<DataGrid.Columns>
                            <DataGridTextColumn Header="Descriptor" Binding="{Binding Label}"/>
                            <DataGridTextColumn Header="Value" Binding="{Binding Value}"/>
                        </DataGrid.Columns>-->
                    </DataGrid>
                </Border>
            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2.5*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="RECIPE NAME " Foreground="WhiteSmoke" FontSize="28" FontWeight="DemiBold"
                   VerticalAlignment="Center"  HorizontalAlignment="Right" />

            <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" BorderBrush="WhiteSmoke" Background="WhiteSmoke"
                    VerticalAlignment="Stretch" Margin="12">
                <TextBox Foreground="Black" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Left" MinWidth="16"
                    Text="{Binding RecipeName}"/>
            </Border>
        </Grid>

        <StackPanel Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">

            <Button Width="200" Margin="8"  HorizontalAlignment="Right"
                Command="{Binding CreateRecipeFolderCommand}" Content="Create" FontSize="35" FontWeight="Bold">
                <!--<Button.Content>
                    <Image Source="pack://application:,,,/ImageResourcePack;component/Images/BeginArrow.png" 
                        VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                </Button.Content>-->
            </Button>
            
            <Button Width="200" Margin="8"  HorizontalAlignment="Right"
                Command="{Binding WizardBeginCommand}">
                <Button.Content>
                    <Image Source="pack://application:,,,/ImageResourcePack;component/Images/BeginArrow.png" 
                        VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                </Button.Content>
            </Button>
            
        </StackPanel>
        

    </Grid>
</UserControl>
