<UserControl x:Class="ProberViewModel.View.ScreenLock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProberViewModel.View"
             xmlns:conv="clr-namespace:ValueConverters;assembly=ValueConverters" 
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <UserControl.Resources>
        <ResourceDictionary>
            <conv:LockModeToVisibleConverter x:Key="LockModeToVisibleConv"/>
            <conv:ImageSourceConverter x:Key="ImageSourceConv"/>
            <BitmapImage x:Key="Background.Lock" UriSource="pack://application:,,,/ImageResourcePack;component/Images/SemicsBackground1_2.png"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid x:Name="PopupPanel" Visibility="{Binding LockMode, Converter={StaticResource LockModeToVisibleConv}, FallbackValue=Collapsed}">
            <Grid.Background>
                <ImageBrush ImageSource="{StaticResource Background.Lock}" 
                            Stretch="UniformToFill" Opacity="0.6">
                </ImageBrush>
            </Grid.Background>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Viewbox Width="120" Height="120" Grid.RowSpan="7">
                    <Canvas Width="40" Height="40" Opacity="0.6">
                        <Path Fill="Orange" Data="M12,17A2,2 0 0,0 14,15C14,13.89 13.1,13 12,13A2,2 0 0,0 10,15A2,2 0 0,0 12,17M18,8A2,2 0 0,1 20,10V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V10C4,8.89 4.9,8 6,8H7V6A5,5 0 0,1 12,1A5,5 0 0,1 17,6V8H18M12,3A3,3 0 0,0 9,6V8H15V6A3,3 0 0,0 12,3Z">
                            <Path.RenderTransform>
                                <ScaleTransform ScaleX="2" ScaleY="2"/>
                            </Path.RenderTransform>
                        </Path>
                    </Canvas>
                </Viewbox>
                <TextBlock Text="STAGE LOCK" Foreground="Orange" FontSize="25" Margin="20 20 0 0">
                </TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
