<UserControl x:Class="ProberViewModel.View.LogView.LogSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProberViewModel.View.LogView"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SettingControlStyle;component/SettingViewStyleDictionaly.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="{x:Type TabItem}">
                <Setter Property="FontSize" Value="36"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type TabItem}">
                            <Grid>
                                <Border Name="Border" Margin="0,0,0,0" Background="Transparent"
                  BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="5">
                                    <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              ContentSource="Header" Margin="12,2,12,2"
                              RecognizesAccessKey="True">
                                        <ContentPresenter.LayoutTransform>
                                            <RotateTransform Angle="360" />
                                        </ContentPresenter.LayoutTransform>
                                    </ContentPresenter>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Panel.ZIndex" Value="100" />
                                    <Setter TargetName="Border" Property="Background" Value="Gray" />
                                    <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="LightGray" />
                                    <Setter TargetName="Border" Property="BorderBrush" Value="Black" />
                                    <Setter Property="Foreground" Value="Gray" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <TabControl>
            <TabItem Header="GPIB">
                <StackPanel>
                    <StackPanel Height="16"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="0.01*"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="0.2*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <GridSplitter Grid.Column="1" Grid.RowSpan="9"
                            HorizontalAlignment="Center"
                              VerticalAlignment="Stretch"
                              Background="Gray" 
                              ShowsPreview="True"
                              Width="2"
                              />
                        <Label Grid.Column="0"
                               Content="Auto Remove"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               FontSize="18"
                               FontWeight="Normal"/>
                        <ToggleButton Grid.Column="2"
                                      HorizontalAlignment="Left"
                                      Margin="32,0,0,0"
                                      FontWeight="Normal"
                                      IsChecked="{Binding EnableDays, Mode=TwoWay}"/>
                        <!--<Button Content="Test" Grid.Column="2" Width="50" Margin="96,0,0,0" 
                                Command="{Binding AutoDeleteTestCommand}"/>-->
                        <Label Grid.Column="0"
                               Grid.Row="1"
                               Content="Period (days)"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               FontSize="18"
                               FontWeight="Normal"/>
                        <TextBox Grid.Column="2"
                                 Grid.Row="1"
                                 Text="{Binding KeepDays}" FontSize="18"                                 
                                 HorizontalAlignment="Left"                                 
                                 VerticalContentAlignment="Center"
                                 FontWeight="Normal"
                                 IsEnabled="{Binding EnableDays}"
                                 />

                        <Separator Background="Gray" Grid.ColumnSpan="4" Grid.Row="3"/>

                        <Label Grid.Column="0" Grid.Row="4"
                               Content="Auto Remove"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               FontSize="18"
                               FontWeight="Normal"/>
                        <ToggleButton Grid.Column="2" Grid.Row="4"
                                      HorizontalAlignment="Left"
                                      Margin="32,0,0,0"
                                      FontWeight="Normal"
                                      IsChecked="{Binding EnableSize, Mode=TwoWay}"/>
                        <!--<Button Content="Test" Grid.Row="4" Grid.Column="2" Width="50" Margin="96,0,0,0" 
                                Command="{Binding AutoDeleteMaxSizeTestCommand}"/>-->
                        <Label Grid.Column="0"
                               Grid.Row="5"
                               Content="Max log size [MB]"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               FontSize="18"
                               FontWeight="Normal"/>
                        <TextBox Grid.Column="2"
                                 Grid.Row="5"
                                 Text="{Binding MaxLogSize}" FontSize="18"                                 
                                 HorizontalAlignment="Left"                                 
                                 VerticalContentAlignment="Center"
                                 FontWeight="Normal"
                                 IsEnabled="{Binding EnableSize}"
                                 />

                        <Separator Background="Gray" Grid.ColumnSpan="4" Grid.Row="6"/>

                        <Label Grid.Column="0" Grid.Row="7"
                               Content="Auto Backup ( ZIP file )"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               FontSize="18"
                               FontWeight="Normal"/>
                        <ToggleButton Grid.Column="2" Grid.Row="7"
                                      HorizontalAlignment="Left"
                                      Margin="32,0,0,0"
                                      FontWeight="Normal"
                                      IsChecked="{Binding EnableZipfile, Mode=TwoWay}"/>
                        <!--<Button Content="Test" Grid.Row="7" Grid.Column="2" Width="50" Margin="96,0,0,0" 
                                Command="{Binding AutoBackupTestCommand}"/>-->
                        <Label Grid.Column="0"
                               Grid.Row="8"
                               Content="Backup Path : "
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               FontSize="18"
                               FontWeight="Normal"/>
                        <TextBox Grid.Column="2"
                                 Grid.Row="8"                                 
                                 FontSize="18"                                                                                            
                                 VerticalContentAlignment="Center"
                                 HorizontalContentAlignment="Stretch"
                                 Width="450"
                                 FontWeight="Normal"
                                 Text="{Binding FolderPath}"
                                 IsEnabled="{Binding EnableZipfile}"
                                 />
                        <Button Grid.Column="3"
                                 Grid.Row="8"        
                                Background="Transparent" 
                                BorderBrush="Transparent"
                                HorizontalAlignment="Left"    
                                Margin="0,4,35,8"
                                Command="{Binding FolderSelectCommand}"
                                Width="60">
                            <!--<Image Source="Image/Folder_None.png" />-->
                        </Button>
                        <Separator Background="Gray" Grid.ColumnSpan="4" Grid.Row="9"/>

                    </Grid>
                </StackPanel>
            </TabItem>
            <TabItem Header="GEM">

            </TabItem>
            <TabItem Header="Debug">

            </TabItem>
            <TabItem Header="Prolog">

            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
