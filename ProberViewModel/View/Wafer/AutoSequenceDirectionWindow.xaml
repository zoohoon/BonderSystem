<UserControl x:Class="SequenceMakerScreen.AutoSequenceDirectionWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SequenceMakerScreen"
             mc:Ignorable="d" 
              Height="640" Width="650">
    <UserControl.Resources>
        <Style x:Key="DefaultButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Margin" Value="2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Black"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="Black"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DefaultImage" TargetType="Image">
            <Setter Property="Margin" Value="0"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="8" Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="0.6*"/>
        </Grid.RowDefinitions>

        <Border Grid.ColumnSpan="4" BorderThickness="1" Background="Gray">
        </Border>

        <Button Command="{Binding Path=SequenceDir1}" Style="{DynamicResource ImageIConBtnStyle}" Grid.Row="1" Grid.Column="0" Margin="1">

         <!--<Image  Source="Images/Seq1.png" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>-->
            <Button.Background>
                <ImageBrush  ImageSource="Images/Seq1.png" />
            </Button.Background>
        </Button>
        <Button Command="{Binding Path=SequenceDir2}" Style="{StaticResource ImageIConBtnStyle}" Grid.Row="1" Grid.Column="1" Margin="1">
            <!--<Button.Content >
                <Image VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Source="pack://application:,,,/ImageResourcePack;component/Images/Seq2.png"/>
            </Button.Content>-->
            <Button.Background>
                <ImageBrush  ImageSource="Images/Seq2.png" />
            </Button.Background>
        </Button>
        <Button Command="{Binding Path=SequenceDir3}" Style="{StaticResource ImageIConBtnStyle}"  Grid.Row="1" Grid.Column="2" Margin="1">
            <!--<Button.Content>
                <Image Source="pack://application:,,,/ImageResourcePack;component/Images/Seq3.png" Stretch="Uniform"/>
            </Button.Content>-->
            <Button.Background>
                <ImageBrush  ImageSource="Images/Seq3.png" />
            </Button.Background>
        </Button>
        <Button  Command="{Binding Path=SequenceDir4}" Style="{StaticResource ImageIConBtnStyle}" Grid.Row="1" Grid.Column="3" Margin="1">
            <!--<Button.Content>
                <Image Source="pack://application:,,,/ImageResourcePack;component/Images/Seq4.png" Stretch="Uniform"/>
            </Button.Content>-->
            <Button.Background>
                <ImageBrush  ImageSource="Images/Seq4.png" />
            </Button.Background>
        </Button>
        <Button Command="{Binding Path=SequenceDir5}"  Style="{StaticResource ImageIConBtnStyle}" Grid.Row="2" Grid.Column="0" Margin="1">
            <!--<Button.Content>
                <Image Source="pack://application:,,,/ImageResourcePack;component/Images/Seq5.png" Stretch="Uniform"/>
            </Button.Content>-->
            <Button.Background>
                <ImageBrush  ImageSource="Images/Seq5.png" />
            </Button.Background>
        </Button>
        <Button Command="{Binding Path=SequenceDir6}"  Style="{StaticResource ImageIConBtnStyle}" Grid.Row="2" Grid.Column="1" Margin="1">
            <!--<Button.Content>
                <Image Source="pack://application:,,,/ImageResourcePack;component/Images/Seq6.png" Stretch="Uniform"/>
            </Button.Content>-->
            <Button.Background>
                <ImageBrush  ImageSource="Images/Seq6.png" />
            </Button.Background>
        </Button>
        <Button Command="{Binding Path=SequenceDir7}" Style="{StaticResource ImageIConBtnStyle}" Grid.Row="2" Grid.Column="2" Margin="1">
            <!--<Button.Content>
                <Image Source="pack://application:,,,/ImageResourcePack;component/Images/Seq7.png" Stretch="Uniform"/>
            </Button.Content>-->
            <Button.Background>
                <ImageBrush  ImageSource="Images/Seq7.png" />
            </Button.Background>
        </Button>
        <Button Command="{Binding Path=SequenceDir8}" Style="{StaticResource ImageIConBtnStyle}" Grid.Row="2" Grid.Column="3" Margin="1">
            <!--<Button.Content>
                <Image Source="pack://application:,,,/ImageResourcePack;component/Images/Seq8.png" Stretch="Uniform"/>
            </Button.Content>-->
            <Button.Background>
                <ImageBrush  ImageSource="Images/Seq8.png" />
            </Button.Background>
        </Button>
        <Grid Grid.Row="3" Grid.ColumnSpan="4" >
            <StackPanel >
                <Viewbox Height="32" HorizontalAlignment="Left" Margin="4" >
                    <CheckBox Content="Enable Forced Inserting Sequence." Style="{x:Null}"/>
                </Viewbox>
                <Viewbox Height="32" HorizontalAlignment="Left" Margin="4">
                    <CheckBox Content="Test Die Prb.Seq. nearby Edge in Single DUT." Style="{x:Null}" />
                </Viewbox>
                <Viewbox Height="32" HorizontalAlignment="Left" Margin="4" >
                    <CheckBox Content="Test Die Only." Style="{x:Null}" />
                </Viewbox>
                <Viewbox Height="32" HorizontalAlignment="Left" Margin="4">
                    <CheckBox Content="Avoid Overlap."  Style="{x:Null}"/>
                </Viewbox>
            </StackPanel>
        </Grid>

        <Button Grid.Row="4" Grid.ColumnSpan="4"  HorizontalAlignment="Right" Height="60" Width="200" FontSize="24" Margin="0,16,16,16" 
                    Style="{DynamicResource ControlButtonStyle}" Content="Apply" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
