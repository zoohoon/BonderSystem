<UserControl x:Class="PadSettingView_Standard.PadSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PadSettingView_Standard"
             xmlns:cui="clr-namespace:CUI;assembly=CUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SettingControlStyle;component/SettingViewStyleDictionaly.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <StackPanel>
            <Label Content="Pad"
                Foreground="White"
                FontWeight="Bold"
                FontSize="32"
                />
            <Separator Margin="4" Background="White"/>
            <StackPanel>
                <Border Margin="4,0,0,0" Background="#3C454F">
                    <Label Padding="0" FontWeight="DemiBold" Content="Pad Data Setting " Foreground="WhiteSmoke" FontSize="16" VerticalAlignment="Center" />
                </Border>
                <Grid Margin="16" HorizontalAlignment="Left">
                    <cui:Button GUID="21092926-C512-A80F-BFA6-EF25137B51A8" Style="{DynamicResource NormalTypeCUIButtonStyle}" 
                                AutomationProperties.AutomationId="PadSetupbtn"
                                HorizontalAlignment="Left" 
                                Height="52" Width="200" Margin="8"
                                Command="{Binding PadSetupCommand}" 
                                CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                                Content="Setup Start"/>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
