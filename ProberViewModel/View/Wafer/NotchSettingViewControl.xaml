<dialogs:CustomDialog x:Class="NotchSettingView.NotchSettingViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dialogs="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:local="clr-namespace:NotchSettingView"
             mc:Ignorable="d" Height="600">
    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Style="{DynamicResource TitleBorderLabel}" Foreground="Black"
               Content="Click the letter of the direction you want to set at 0."/>

        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="2.6*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="6*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1" Grid.Column="1">
                <Image Source="Image/compass.png" />
            </Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="1" Margin="2">
                <Button Style="{DynamicResource ImageIConBtnStyle}">
                    <Label Content="N" FontSize="24" FontWeight="DemiBold"/>
                </Button>
                <Label Style="{DynamicResource ContentBorderLabel}" FontSize="18"
                       Content="{Binding NotchNorthValue}" HorizontalContentAlignment="Center" Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="1" Margin="2">
                <Button Style="{DynamicResource ImageIConBtnStyle}">
                    <Label Content="S" FontSize="24" FontWeight="DemiBold"/>
                </Button>
                <Label Style="{DynamicResource ContentBorderLabel}" FontSize="18"
                       Content="{Binding NotchSouthValue}" HorizontalContentAlignment="Center" Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="2">
                <Button Style="{DynamicResource ImageIConBtnStyle}">
                    <Label Content="W" FontSize="24" FontWeight="DemiBold"/>
                </Button>
                <Label Style="{DynamicResource ContentBorderLabel}" FontSize="18"
                       Content="{Binding NotchWestValue}" HorizontalContentAlignment="Center" Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="2" Margin="2">
                <Button Style="{DynamicResource ImageIConBtnStyle}">
                    <Label Content="E" FontSize="24" FontWeight="DemiBold"/>
                </Button>
                <Label Style="{DynamicResource ContentBorderLabel}" FontSize="18"
                       Content="{Binding NotchEastValue}" HorizontalContentAlignment="Center" Width="100"/>
            </StackPanel>

            <Border Grid.ColumnSpan="3" Grid.RowSpan="3" VerticalAlignment="Top" 
                  HorizontalAlignment="Right" Width="160" Height="120" Margin="0,20,0,0"
                    BorderBrush="Black" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.ColumnSpan="2" Style="{DynamicResource TitleBorderLabel}" BorderThickness="0" Foreground="Black"
                         HorizontalContentAlignment="Center" Content="Direction."/>
                    <Button Grid.Row="1" Style="{DynamicResource ImageIConBtnStyle}" Margin="2">
                        <materialDesign:PackIcon Kind="RotateLeft" Height="60" Width="60"/>
                    </Button>
                    <Button Grid.Row="1"  Grid.Column="1"  Style="{DynamicResource ImageIConBtnStyle}"  Margin="2">
                        <materialDesign:PackIcon Kind="RotateRight" Height="60" Width="60"/>
                    </Button>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="2" Grid.ColumnSpan="3" >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Grid.Row="1" Margin="20,4,0,4" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Grid.Row="0" Content="Notch Angle" Margin="2" 
                               HorizontalContentAlignment="Center" Width="140"
                               Style="{DynamicResource TitleBorderLabel}" Foreground="Black"/>
                <TextBox Grid.Column="1" Grid.Row="0" Margin="2" Text="{Binding NotchAngle}"
                                 FontSize="18" Width="140" Height="40"
                                 HorizontalContentAlignment="Center"
                                 Style="{DynamicResource InputTextBox}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="PreviewMouseDown" >
                            <i:InvokeCommandAction Command="{Binding NotchAngleTextBoxClickCommand}"
                                                   CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type TextBox}}}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
            </Grid>

            <Button  HorizontalAlignment="Right" Grid.Row="1"  Height="48" Width="160" FontSize="24" Margin="0,0,4,4"  Content="OK" VerticalAlignment="Bottom"
                         Command="{Binding NotchSettingOKCommand}"/>
            <!--<Button Grid.Row="1"  Height="48" Width="160" FontSize="24" Margin="0,0,4,4" Content="CANCEL" VerticalAlignment="Bottom"-->
            <!--Command="{Binding NotchSettingCancelCommand}"/>-->
        </Grid>
    </Grid>
</dialogs:CustomDialog>
