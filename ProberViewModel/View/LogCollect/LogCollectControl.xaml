<UserControl x:Class="ProberViewModel.View.LogCollect.LogCollectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProberViewModel.View.LogCollect"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">

    <UserControl.Resources>

    </UserControl.Resources>
    
    <Grid Background="Black">
            
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10">
            <GroupBox>
                <GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <Grid Background="MediumPurple">
                            <TextBlock Text="DATE" FontSize="20" HorizontalAlignment="Left"/>
                        </Grid>
                    </DataTemplate>
                </GroupBox.HeaderTemplate>

                <StackPanel Orientation="Horizontal">
                    <DatePicker Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="150" Height="24" Foreground="White" 
                                SelectedDate="{Binding StartDate}" />
                    <Label Content="~" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Width="18"/>
                    <DatePicker HorizontalAlignment="Left" VerticalAlignment="Center" Width="150" Height="24" Foreground="White" 
                                SelectedDate="{Binding EndDate}" />
                </StackPanel>
            </GroupBox>
        </Grid>

        <Grid Grid.Row="1" Background="Black" Margin="10">
            <GroupBox>

                <GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <Grid Background="MediumPurple">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="LOADER" FontSize="20" HorizontalAlignment="Left"/>
                        </Grid>
                    </DataTemplate>
                </GroupBox.HeaderTemplate>

                <StackPanel Orientation="Horizontal">
                    <CheckBox Content="Loader" Foreground="White" FontSize="20" Margin="10" IsChecked="{Binding IncludeLoader}"/>
                </StackPanel>

            </GroupBox>
        </Grid>
        
        <Grid Grid.Row="2" Margin="10">
           
            <GroupBox>
                <GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <Grid Background="MediumPurple">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="CELL" FontSize="20" HorizontalAlignment="Left"/>
                            <CheckBox Grid.Column="2" Content="Check All" HorizontalAlignment="Right" 
                                      FontSize="20" 
                                      IsChecked="{Binding DataContext.IsCellAllChecked, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" 
                                      Command="{Binding DataContext.CheckCellAllCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"/>
                        </Grid>
                    </DataTemplate>
                </GroupBox.HeaderTemplate>
                <ListBox  ItemsSource="{Binding Cells}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected}" Content="{Binding Name}" IsEnabled="{Binding IsEnabled}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </GroupBox>
        </Grid>

        <Grid Grid.Row="3" Background="Black" Margin="10">
            <GroupBox>
                
                <GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <Grid Background="MediumPurple">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="LOG" FontSize="20" HorizontalAlignment="Left"/>
                            <CheckBox Grid.Column="2" Content="Check All" HorizontalAlignment="Right" 
                                      FontSize="20"
                                      IsChecked="{Binding DataContext.IsLogAllChecked, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" 
                                      Command="{Binding DataContext.CheckLogAllCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"/>
                        </Grid>
                    </DataTemplate>
                </GroupBox.HeaderTemplate>
                
                <ListView ItemsSource="{Binding LogCheckers}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </GroupBox>
        </Grid>

        <Grid Grid.Row="4" Background="Black" Margin="10">
            <GroupBox>
                
                <GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <Grid Background="MediumPurple">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="IMAGE" FontSize="20" HorizontalAlignment="Left"/>
                            <CheckBox Grid.Column="2" Content="Check All" HorizontalAlignment="Right" 
                                      FontSize="20"
                                      IsChecked="{Binding DataContext.IsImageAllChecked, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" 
                                      Command="{Binding DataContext.CheckImageAllCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"/>
                        </Grid>
                    </DataTemplate>
                </GroupBox.HeaderTemplate>
                
                <ListView ItemsSource="{Binding ImageCheckers}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </GroupBox>
        </Grid>

        <Grid Grid.Row="5" Background="Black" Margin="10">
            <GroupBox>

                <GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <Grid Background="MediumPurple">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ADDITIONAL" FontSize="20" HorizontalAlignment="Left"/>
                            <CheckBox Grid.Column="2" Content="Check All" HorizontalAlignment="Right" 
                                      FontSize="20"
                                      IsChecked="{Binding DataContext.IsAdditionalAllChecked, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" 
                                      Command="{Binding DataContext.CheckAdditionalAllCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"/>
                        </Grid>
                    </DataTemplate>
                </GroupBox.HeaderTemplate>

                <StackPanel Orientation="Horizontal">
                    <CheckBox Content="Loaded Device" Foreground="White" FontSize="20" Margin="10" IsChecked="{Binding IncludeLoadedDevice}"/>
                    <CheckBox Content="SystemParam" Foreground="White" FontSize="20" Margin="10" IsChecked="{Binding IncludeSystemParam}"/>
                    <CheckBox Content="Backup" Foreground="White" FontSize="20" Margin="10" IsChecked="{Binding IncludeBackupInfo}"/>
                    <CheckBox Content="SystemInfo" Foreground="White" FontSize="20" Margin="10" IsChecked="{Binding IncludeSystemInfo}"/>
                </StackPanel>
                
            </GroupBox>
        </Grid>
        
        <Grid Grid.Row="6" Margin="10">
            <GroupBox>
                <GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <Grid Background="MediumPurple">
                            <TextBlock Text="COMMAND" FontSize="20" HorizontalAlignment="Left"/>
                        </Grid>
                    </DataTemplate>
                </GroupBox.HeaderTemplate>

                <StackPanel Orientation="Horizontal">
                    <Button Content="Collect" VerticalAlignment="Center" Width="100" Height="50" FontSize="24"
                            Command="{Binding CollectLogCommand}"/>
                </StackPanel>
            </GroupBox>
        </Grid>
        
        <Grid Grid.Row="7" Margin="10">
            <Border BorderThickness="2" BorderBrush="White">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Output : " Foreground="White" Height="50" Width="100" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <TextBox Text="{Binding OutputFilePath}" Height="23" TextWrapping="Wrap" Width="535" Foreground="White" IsEnabled="False"/>
                    <Button Command="{Binding OpenOutputPathCommand}" Content="OPEN" Width="100" Height="50" FontSize="24"/>
                </StackPanel>
            </Border>
        </Grid>
        
    </Grid>
        
</UserControl>
