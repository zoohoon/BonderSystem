<UserControl x:Class="PMISettingView.PMISettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PMISettingView"
             xmlns:cui="clr-namespace:CUI;assembly=CUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SettingControlStyle;component/SettingViewStyleDictionaly.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <StackPanel>
            <Label Content="Probe Mark Inspection"
                Foreground="White"
                FontWeight="Bold"
                FontSize="56"
                />
            <Separator Margin="4" Background="White"/>
            <StackPanel>
                <Border Margin="4,0,0,0" Background="#3C454F">
                    <Label Padding="0" FontWeight="DemiBold" Content="Setup" Foreground="WhiteSmoke" FontSize="16" VerticalAlignment="Center" />
                </Border>
                <Grid Margin="16" HorizontalAlignment="Left">
                    <cui:Button AutomationProperties.AutomationId="btnSetup"
                                GUID="103482a3-ad4c-4e9f-88fe-a4df5877924b"
                                Style="{DynamicResource NormalTypeCUIButtonStyle}"
                                Height="52" Width="160" Margin="8"
                                Command="{Binding PMISetupCommand}" 
                                CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                                Content="Setup"/>
                </Grid>
            </StackPanel>
