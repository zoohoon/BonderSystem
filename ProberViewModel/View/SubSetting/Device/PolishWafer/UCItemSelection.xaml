<dialogs:CustomDialog x:Class="ItemSelectionControl.UCItemSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ItemSelectionControl"
             xmlns:dialogs="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="150*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Label Content="{Binding SelectionTitle}" FontStyle="Normal"
               Foreground="Black"
               FontWeight="Bold"
               FontSize="24"/>
        </Grid>
        
        <Grid Grid.Row="1">
            <Border BorderThickness="2" BorderBrush="Black">
                <ListView ItemsSource="{Binding SelectionSource}" SelectedItem="{Binding SelectionSelectedItem}"
                          SelectionMode="Single" IsEnabled="True" IsSynchronizedWithCurrentItem="True"
                          Style="{x:Null}"
                          >
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock FontSize="16" Height="24" Foreground="Black" FontWeight="Bold" 
                                       Text="{Binding DefineName.Value}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>
        </Grid>

        <Grid Grid.Row="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button AutomationProperties.AutomationId="btnOK"
                    Grid.Column="0" Width="150" Height="50" Content="OK" Command="{Binding SelectionOKButtonCommand}"></Button>
            <Button AutomationProperties.AutomationId="btnCancel"
                    Grid.Column="1" Width="150" Height="50" Content="CANCEL" Command="{Binding SelectionCancelButtonCommand}"></Button>
        </Grid>
    </Grid>
</dialogs:CustomDialog>
