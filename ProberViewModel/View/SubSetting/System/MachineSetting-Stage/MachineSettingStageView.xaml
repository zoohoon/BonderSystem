<UserControl x:Class="MachineSettingStageView.MachineSettingStageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MachineSettingStageView"
             xmlns:cui="clr-namespace:CUI;assembly=CUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SettingControlStyle;component/SettingViewStyleDictionaly.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <StackPanel>
            <Label Content="Machine Setup"
                Foreground="White"
                FontWeight="Bold"
                FontSize="56"
                />
            <Separator Margin="4" Background="White"/>
            <StackPanel>
                <Border Margin="4,0,0,0" Background="#3C454F">
                    <Label Padding="0" FontWeight="DemiBold" Content="STAGE" Foreground="WhiteSmoke" FontSize="16" VerticalAlignment="Center" />
                </Border>
                <Grid Margin="16" HorizontalAlignment="Left">
                    <cui:Button GUID="9ed68f49-c49f-4836-9e07-91dc26e9af77"
                                Height="52" Width="200"
                                Margin="8"
                                Style="{DynamicResource NormalTypeCUIButtonStyle}"
                                Command="{Binding MachineSetupCommand}" 
                                CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                                Content="Setup"/>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
