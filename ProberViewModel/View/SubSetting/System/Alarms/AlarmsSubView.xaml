<UserControl x:Class="AlarmsSubView.AlarmsSubView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AlarmsSubView"
             xmlns:cui="clr-namespace:CUI;assembly=CUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SettingControlStyle;component/SettingViewStyleDictionaly.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <StackPanel>
            <Label Content="Alarms"
                Foreground="White"
                FontWeight="Bold"
                FontSize="56"
                />
            <Separator Margin="4" Background="White"/>
            <StackPanel>
                <Border Margin="4,0,0,0" Background="#3C454F">
                    <Label Padding="0" FontWeight="DemiBold" Content="Setup" Foreground="WhiteSmoke" FontSize="16" VerticalAlignment="Center" />
                </Border>
                <Grid Margin="16" HorizontalAlignment="Left">
                    <cui:Button GUID="cdd988da-d8b9-4af3-ad2c-f15d943e15ad"
                                Style="{DynamicResource NormalTypeCUIButtonStyle}"
                                Command="{Binding AlarmsViewCommand}" 
                                CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                                Content="Setup"/>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
