<UserControl x:Class="UcGemSysSettingView.GemSysSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UcGemSysSettingView"
             xmlns:cui="clr-namespace:CUI;assembly=CUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SettingControlStyle;component/SettingViewStyleDictionaly.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <StackPanel>
            <Label Content="SECS/GEM"
                Foreground="White"
                FontWeight="Bold"
                FontSize="56"
                />
            <Separator Margin="4" Background="White"/>
            <StackPanel>
                <Border Margin="4,0,0,0" Background="#3C454F">
                    <Label Padding="0" FontWeight="DemiBold" Content="Communication" Foreground="WhiteSmoke" FontSize="16" VerticalAlignment="Center" />
                </Border>

                <Label Content="GEM ReInitialize"
                   Foreground="White"
                   FontSize="16"
                   />
                <Grid>
                    <cui:Button GUID="BBBB0268-46FE-49F7-81D4-564198965106"
                                Height="52" Width="200"
                                Margin="0 0 0 16"
                                Style="{DynamicResource NormalTypeCUIButtonStyle}"
                                Command="{Binding InitializeCommand}" 
                                Content="Initialize"/>
                </Grid>

                <Label Content="GEM Setting Dialog"
                   Foreground="White"
                   FontSize="16"
                   />
                <Grid>
                    <cui:Button GUID="5D828F9A-ACC3-4A82-A090-FC4E6A447C58"
                                Height="52" Width="200"
                                Margin="0 0 0 16"
                                Style="{DynamicResource NormalTypeCUIButtonStyle}"
                                Command="{Binding OpenSettingDialogCommand}" 
                                Content="Open Setting Dialog"/>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
