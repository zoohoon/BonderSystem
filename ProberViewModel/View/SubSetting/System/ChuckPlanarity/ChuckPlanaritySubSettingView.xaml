<UserControl x:Class="ChuckPlanaritySubSettingView.ChuckPlanaritySubSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChuckPlanaritySubSettingView"
             xmlns:cui="clr-namespace:CUI;assembly=CUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SettingControlStyle;component/SettingViewStyleDictionaly.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <StackPanel>
            <Label Content="Chuck Planarity"
                Foreground="White"
                FontWeight="Bold"
                FontSize="56"/>
            
            <Separator Margin="4" Background="White"/>
            
            <StackPanel>
                <Grid Margin="16" HorizontalAlignment="Left">
                    <cui:Button AutomationProperties.AutomationId="btnSetup"
                                GUID="a8af6b20-9e34-462c-abbc-0530bc07a232"
                                Height="52" Width="200"
                                Margin="8"
                                Style="{DynamicResource NormalTypeCUIButtonStyle}"
                                Command="{Binding PageSwitchingCommand}" 
                                CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                                Content="Setup"/>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
    
</UserControl>
