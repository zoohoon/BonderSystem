<UserControl x:Class="NeedleCleanSequencePageView.UcNeedleCleanSequencePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:converter="clr-namespace:ValueConverters;assembly=ValueConverters"
             xmlns:local="clr-namespace:NeedleCleanSequencePageView"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <converter:BrushToColorConverter x:Key="BrushToColorConverter"/>
            <converter:NumIncreaseConverter x:Key="NumIncreaseConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Sheet " FontSize="28"                                                               
                       Foreground="White"/>
            <TextBlock Text="{Binding NC.Index,
                       Converter={StaticResource NumIncreaseConverter},
                       ConverterParameter='1'}" 
                       FontSize="28"                                                                                     
                       Foreground="White"/>
            <TextBlock Text=" / Total Count : " FontSize="28"                                                      
                        Foreground="White"/>
            <TextBlock  Text="{Binding NC.TotalCount,Mode=TwoWay}" 
                        FontSize="28"                                                                   
                        Foreground="White"/>
            <TextBlock Text=" / Distance : " FontSize="28"                                                      
                        Foreground="White"                           
                        Visibility="{Binding NC.DistanceVisible}"/>
            <TextBlock  Text="{Binding NC.Distance,Mode=TwoWay}" 
                        FontSize="28"                                                                   
                        Foreground="White"
                        Visibility="{Binding NC.DistanceVisible}"/>
            
            </DockPanel>
        <Grid Width="870" Height="890" Grid.Row="1">
            <ItemsControl ItemsSource="{Binding NC.TempDutList}" Width="{Binding NC.SheetWidth}" Height="{Binding NC.SheetHeight}" Background="Beige">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas Name="canvas">
                            <!--<i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseDown">
                                    <i:InvokeCommandAction Command="{Binding MouseDownCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Canvas}}}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="MouseUp">
                                    <i:InvokeCommandAction Command="{Binding MouseUpCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Canvas}}}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="MouseMove">
                                    <i:InvokeCommandAction Command="{Binding MouseMoveCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Canvas}}}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>-->
                            
                            <Canvas.Background>
                                <ImageBrush ImageSource="{Binding NC.ImageSource}" Stretch="Uniform" Viewport="0, 0, 1, 1"/>
                            </Canvas.Background>
                            
                        </Canvas>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Canvas.Left" Value="{Binding DutSizeLeft,Mode=TwoWay}"/>
                        <Setter Property="Canvas.Top" Value="{Binding DutSizeTop,Mode=TwoWay}"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Rectangle x:Name="DutRect" Width="{Binding DutSizeWidth}" Height="{Binding DutSizeHeight}" Fill="Beige" Opacity="0.75" 
                                       Stroke="Gray" 
                                       StrokeDashArray="4 0" StrokeThickness="1"
                                       Visibility="{Binding DutVisibility}">
                                <!--<i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDown">
                                        <i:InvokeCommandAction Command="{Binding MouseDownCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Canvas} } }"/>
                                    </i:EventTrigger>
                                    
                                    <i:EventTrigger EventName="MouseUp">
                                        <i:InvokeCommandAction Command="{Binding MouseUpCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Rectangle}}}"/>
                                    </i:EventTrigger>
                        
                                </i:Interaction.Triggers>-->
                            </Rectangle>
                            <!--<TextBlock Text="AAAA" FontSize="32" Background="Beige" 
                                       Foreground="Black"                                        
                                       />-->
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>
