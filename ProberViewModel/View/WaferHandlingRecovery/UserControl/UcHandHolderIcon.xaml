<UserControl x:Class="WaferHandlingRecoveryControl.WaferHandleExplorerUC.UcHandHolderIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WaferHandlingRecoveryControl.WaferHandleExplorerUC"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <UserControl.Resources>
        <local:ModuleStatusToImageSource x:Key="ModuleStatusToImageSource"/>
    </UserControl.Resources>
    <Border x:Name="icon" MouseDown="icon_MouseDown" MouseUp="icon_MouseUp" MouseLeave="icon_MouseLeave" BorderThickness="2">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <!--<Image Grid.Column="0" Source="{Binding ID.ModuleType, Converter={StaticResource ModuleTypeToImageSource}}"/>-->
            <Image Grid.Column="0">
                <Image.Source>
                    <MultiBinding Converter="{StaticResource ModuleStatusToImageSource}">
                        <Binding Path="ID.ModuleType"/>
                        <Binding Path="Substrate"/>
                    </MultiBinding>
                </Image.Source>
            </Image>
            <TextBlock  Grid.Column="0" Text="{Binding ID.Label}" TextAlignment="Center" VerticalAlignment="Bottom" FontSize="15" FontWeight="Bold" Foreground="White" TextWrapping="Wrap"/>
            <TextBlock Grid.Column="1" Text="{Binding State}"  FontSize="20"  TextAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="White" TextWrapping="Wrap"/>
        </Grid>
    </Border>
</UserControl>
