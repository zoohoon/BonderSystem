<UserControl x:Class="WaferHandlingRecoveryControl.WaferHandleExplorerUC.UcSlotHolderIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WaferHandlingRecoveryControl.WaferHandleExplorerUC"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200" Background="Transparent">
    <UserControl.Resources>
        <local:StatusToBrushConverter x:Key="StatusToBrushConverter"/>
    </UserControl.Resources>
    <Border x:Name="icon" BorderBrush="White" BorderThickness="2" MouseDown="icon_MouseDown" MouseUp="icon_MouseUp" MouseLeave="icon_MouseLeave">
        <Grid>
            <Ellipse Fill="{Binding WaferStatus, Converter={StaticResource StatusToBrushConverter}}"  Stroke="White" MinHeight="20" Margin="2"/>
            <TextBlock Text="{Binding ID.Index, StringFormat=ID:{0}}" Foreground="White" TextAlignment="Left"  FontSize="14"/>
        </Grid>
    </Border>
</UserControl>
