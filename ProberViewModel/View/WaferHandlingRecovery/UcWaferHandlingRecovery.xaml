<UserControl x:Class="WaferHandlingRecoveryControl.UcWaferHandlingRecovery"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:uc="clr-namespace:WaferHandlingRecoveryControl.WaferHandleExplorerUC"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:local="clr-namespace:WaferHandlingRecoveryControl"
             mc:Ignorable="d" 
             d:DesignHeight="892" d:DesignWidth="1280" Background="Transparent">
    <UserControl.Resources>
        <local:MulitCommandParameterConverter x:Key="MulitCommandParameterConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <sys:Boolean x:Key="True">true</sys:Boolean>
        <sys:Boolean x:Key="False">false</sys:Boolean>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid IsEnabled="{Binding Enable}" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="8*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" BorderBrush="White" BorderThickness="2" IsEnabled="{Binding Enable}" Visibility="{Binding Enable, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding CassetteNum, StringFormat=#{0}}" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                            <TextBlock Grid.Column="0" Grid.Row="1" Text="READ" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                            <Button Grid.Column="1" Grid.Row="0" Content="▲" FontSize="24" Command="{Binding PrevCassetteCommand}"/>
                            <Button Grid.Column="1" Grid.Row="1" Content="▼" FontSize="24" Command="{Binding NextCassetteCommand}"/>
                        </Grid>
                    </Border>
                    <Border Grid.Row="1" BorderBrush="White" >
                        <ItemsControl ItemsSource="{Binding LoaderController.LoaderInfo.StateMap.Cassettes}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="1"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ItemsControl ItemsSource="{Binding Slots}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid Columns="1"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <uc:UcSlotHolderIcon>
                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                                            <i:InvokeCommandAction Command="{Binding DataContext.IconClickCommand, ElementName=_this}">
                                                                <i:InvokeCommandAction.CommandParameter>
                                                                    <MultiBinding Converter="{StaticResource MulitCommandParameterConverter}">
                                                                        <Binding />
                                                                        <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}"/>
                                                                        <Binding ElementName="_this"/>
                                                                    </MultiBinding>
                                                                </i:InvokeCommandAction.CommandParameter>
                                                            </i:InvokeCommandAction>
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                </uc:UcSlotHolderIcon>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </Grid>

                <Border Grid.Column="2" BorderBrush="White" BorderThickness="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="9*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <ItemsControl Grid.Row="0" ItemsSource="{Binding LoaderController.LoaderInfo.StateMap.HolderModulesWithoutSlot}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="1"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <uc:UcHandHolderIcon>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                                <i:InvokeCommandAction Command="{Binding DataContext.IconClickCommand, ElementName=_this}">
                                                    <i:InvokeCommandAction.CommandParameter>
                                                        <MultiBinding Converter="{StaticResource MulitCommandParameterConverter}">
                                                            <Binding />
                                                            <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}"/>
                                                            <Binding ElementName="_this"/>
                                                        </MultiBinding>
                                                    </i:InvokeCommandAction.CommandParameter>
                                                </i:InvokeCommandAction>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </uc:UcHandHolderIcon>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Grid.Row="0" Content="Add&#10;Translate" FontSize="10" FontWeight="Bold" Command="{Binding AddTranslateRecipeCommand}"/>
                            <Button Grid.Column="1" Grid.Row="0" Content="Do&#10;Translate" FontSize="10" FontWeight="Bold" Command="{Binding DoTranslateRecipeCommand}"/>
                            <Button Grid.Column="2" Grid.Row="0" Content="Clear&#10;Translate" FontSize="10" FontWeight="Bold" Command="{Binding ClearTranslateRecipeCommand}"/>
                            <Button Grid.Column="3" Grid.Row="0" Content="Scan" FontSize="10" FontWeight="Bold" Command="{Binding SacnCassetteCommand}"/>
                            <Button Grid.Column="4" Grid.Row="0" Content="Scan Clear" FontSize="10" FontWeight="Bold" Command="{Binding ScanClearCommand}"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
            <ItemsControl Grid.Column="0" ItemsSource="{Binding ArrowLineList}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>
