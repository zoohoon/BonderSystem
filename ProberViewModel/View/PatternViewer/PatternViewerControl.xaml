<UserControl x:Class="ProberViewModel.PatternViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProberViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="960" d:DesignWidth="960">
    <UserControl.Resources>
        <local:ByteToImgConverter x:Key="ByteToImgConverter"/>
    </UserControl.Resources>
   
    <Grid>
        <Border BorderThickness="2" BorderBrush="Red" Width="250" Height="250" Background="Black">
           <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
           <Image
            OpacityMask="{x:Null}" RenderOptions.BitmapScalingMode="NearestNeighbor"
               RenderOptions.EdgeMode="Aliased" 
               Stretch="UniformToFill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="{Binding ImgBuffer.SizeX}" MaxWidth="230" Height="{Binding ImgBuffer.SizeY}" MaxHeight="230"
               RenderTransformOrigin="0.5,0.5" Source="{Binding ImgBuffer, Converter={StaticResource ByteToImgConverter}}">
            <Image.RenderTransform>
                <ScaleTransform  ScaleX="1" ScaleY="1"/>
            </Image.RenderTransform>
          </Image>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <TextBlock Background="Black" FontSize="15" Padding="0" Foreground="White" Text="{Binding ImgBuffer.SizeX}"></TextBlock>

                    <TextBlock Background="Black" FontSize="15" Padding="0" Foreground="White" Text=" X "></TextBlock>
                    <TextBlock Background="Black" FontSize="15" Padding="0" Foreground="White" Text="{Binding ImgBuffer.SizeY}"></TextBlock>
            </StackPanel>
           </StackPanel>
        </Border>
    </Grid>
</UserControl>
