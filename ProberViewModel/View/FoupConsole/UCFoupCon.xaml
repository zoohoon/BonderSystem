<UserControl x:Class="UcFoupConsole.UCFoupCon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UcFoupConsole"
             mc:Ignorable="d" 
             d:DesignHeight="892" d:DesignWidth="280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="55*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            
        </Grid>
        
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <GroupBox  Header="Cassette Type" Grid.Row="0"  Margin="10,5,10,5">
                <Label x:Name="lb_Wafer_State" Margin="0,0,0,0" Foreground="White" HorizontalAlignment="Center" VerticalContentAlignment="Center" FontSize="15" Content="{Binding StageSupervisor.WaferObject.WaferDevObject.PhysInfo.WaferSizeEnum}"  ></Label>
            </GroupBox>
            <GroupBox  Header="Foup State"  Grid.Row="1" Margin="10,5,10,5">
                <Label x:Name="lb_CurrentState" Margin="0,0,0,0" Foreground="White" HorizontalAlignment="Center" FontSize="17" Content="{Binding FoupController.FoupModuleInfo.State}"  ></Label>
            </GroupBox>
            <Button x:Name="FO_Cover_Open_Btn" Width="Auto" Height="Auto" Grid.Row="2" Foreground="MediumOrchid" Command="{Binding cmdFOCoverOpen}" Margin="10,10,10,5" FontSize="20" >FO Cover Open</Button>
            <Button x:Name="FO_Cover_Close_Btn" Width="Auto" Height="Auto" Grid.Row="3" Foreground="MediumOrchid" Command="{Binding cmdFOCoverClose}" Margin="10,5,10,5" FontSize="20" >FO Cover Close</Button>
            <Button x:Name="LOAD_Btn" Width="Auto" Foreground="MediumOrchid" Height="Auto" Grid.Row="4" Command="{Binding cmdLOAD}" Margin="10,5,10,5" FontSize="20"   >LOAD</Button>
            <Button x:Name="UNLOAD_Btn" Width="Auto" Foreground="MediumOrchid" Height="Auto" Grid.Row="5" Command="{Binding cmdUNLOAD}" Margin="10,5,10,5"  FontSize="20" >UNLOAD</Button>
            <Button x:Name="CLOSE_Btn" Width="Auto" Foreground="MediumOrchid" Height="Auto" Grid.Row="6"  Margin="10,5,10,10"  FontSize="20" >CLOSE</Button>

        </Grid>
    </Grid>
</UserControl>
