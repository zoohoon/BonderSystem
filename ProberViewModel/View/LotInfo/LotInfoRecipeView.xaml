<UserControl x:Class="LotInfoRecipeControl.LotInfoRecipeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:local="clr-namespace:LotInfoRecipeControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Black">

    <UserControl.Resources>
        <ResourceDictionary>
            
            <Style x:Key="SwitchAccentToggleButton" TargetType="{x:Type ToggleButton}" BasedOn="{StaticResource ON_OFF_ToggleBtn}">
            </Style>

            <sys:Boolean x:Key="FalseValue">False</sys:Boolean>
            <sys:Boolean x:Key="TrueValue">True</sys:Boolean>

            <Style x:Key="Body_Content_DataGrid_Centering" TargetType="{x:Type DataGridCell}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type DataGridCell}">
                            <Border BorderBrush="Gray" BorderThickness="1" Height="31">
                                <Grid Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>

                <Style.Triggers>
                    <DataTrigger Binding="{Binding DoProceedProbing}" Value="True">
                        <Setter Property="Background" Value="Black"></Setter>
                        <Setter Property="Foreground" Value="White"></Setter>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding DoProceedProbing}" Value="False">
                        <Setter Property="Background" Value="DimGray"></Setter>
                        <Setter Property="Foreground" Value="Black"></Setter>
                        <Setter Property="FontWeight" Value="Light"/>
                    </DataTrigger>
                </Style.Triggers>
                
            </Style>

            <Style x:Key="Body_Content_DataGridColumnHeader_Centering" TargetType="{x:Type DataGridColumnHeader}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type DataGridColumnHeader}">
                            <Border BorderBrush="Gray" BorderThickness="1">
                                <Grid Background="DarkGray">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>

            <Style x:Key="Body_Content_DataGridRowHeader_Centering" TargetType="{x:Type DataGridRowHeader}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type DataGridRowHeader}">
                            <Border BorderBrush="Gray" BorderThickness="1">
                                <Grid Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <StackPanel>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid Grid.Row="0" ItemsSource="{Binding LotOPModule.LotInfo.WaferSummarys}" 
                    ScrollViewer.CanContentScroll="False"
                    VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                    VirtualizingPanel.VirtualizationMode="Recycling"
                    VirtualizingPanel.IsVirtualizing="True"
                      CanUserResizeRows="False"
                      CanUserResizeColumns="False"
                      CanUserSortColumns="False" 
                      CanUserAddRows="False" 
                      CanUserReorderColumns="False"
                      AutoGenerateColumns="False"
                      materialDesign:DataGridAssist.ColumnHeaderPadding="5"
                      Margin="5,5,5,5"
                      VerticalScrollBarVisibility="Hidden"
                      Background="Black"
                      CellStyle="{StaticResource Body_Content_DataGrid_Centering}"
                      ColumnHeaderStyle="{StaticResource Body_Content_DataGridColumnHeader_Centering}"
                      Name="MyDataGrid">
                    
                    <!--<DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DoProceedProbing}" Value="True">
                                    <Setter Property="Background" Value="Black"></Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding DoProceedProbing}" Value="False">
                                    <Setter Property="Background" Value="LightGray"></Setter>
                                    <Setter Property="Foreground" Value="Black"></Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>-->
                    
                    <!--RowHeaderStyle="{StaticResource Body_Content_DataGridRowHeader_Centering}"-->
                    
                    <DataGrid.Columns>

                        <materialDesign:MaterialDataGridTextColumn Width="30" Binding="{Binding SlotNumber}" Header="Slot" IsReadOnly="True">
                        </materialDesign:MaterialDataGridTextColumn>

                        <materialDesign:MaterialDataGridTextColumn Width="1*" Binding="{Binding WaferID}" Header="Wafer ID" IsReadOnly="True">
                        </materialDesign:MaterialDataGridTextColumn>

                        <materialDesign:MaterialDataGridTextColumn Width="1*" Binding="{Binding WaferStatus}" Header="Status" IsReadOnly="True">
                        </materialDesign:MaterialDataGridTextColumn>

                        <DataGridTemplateColumn Width="100">

                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Button Width="36" Height="36" 
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center" 
                                            VerticalContentAlignment="Center" 
                                            HorizontalContentAlignment="Center"
                                            BorderThickness="1"
                                            BorderBrush="White"
                                            Background="Black"
                                            Command="{Binding Path=DataContext.ChangeDoProceedProbingCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">
                                        <Canvas Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Path>
                                                <Path.Style>
                                                    <Style TargetType="{x:Type Path}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Path=DataContext.IsCanDoProceedProbing, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" Value="False">
                                                                <Setter Property="Data" Value="M12,17A2,2 0 0,0 14,15C14,13.89 13.1,13 12,13A2,2 0 0,0 10,15A2,2 0 0,0 12,17M18,8A2,2 0 0,1 20,10V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V10C4,8.89 4.9,8 6,8H7V6A5,5 0 0,1 12,1A5,5 0 0,1 17,6V8H18M12,3A3,3 0 0,0 9,6V8H15V6A3,3 0 0,0 12,3Z"></Setter>
                                                                <Setter Property="Fill" Value="#FEBE38"></Setter>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Path=DataContext.IsCanDoProceedProbing, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" Value="True">
                                                                <Setter Property="Data" Value="M18,8A2,2 0 0,1 20,10V20A2,2 0 0,1 18,22H6C4.89,22 4,21.1 4,20V10A2,2 0 0,1 6,8H15V6A3,3 0 0,0 12,3A3,3 0 0,0 9,6H7A5,5 0 0,1 12,1A5,5 0 0,1 17,6V8H18M12,17A2,2 0 0,0 14,15A2,2 0 0,0 12,13A2,2 0 0,0 10,15A2,2 0 0,0 12,17Z"></Setter>
                                                                <Setter Property="Fill" Value="#FEBE38"></Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                            </Path>
                                        </Canvas>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>

                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ToggleButton Style="{StaticResource SwitchAccentToggleButton}"
                                                  Width="AUTO"
                                                  VerticalAlignment="Center"
                                                  IsChecked="{Binding DoProceedProbing, UpdateSourceTrigger=PropertyChanged}"
                                                  IsEnabled="{Binding Path=DataContext.IsCanDoProceedProbing, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">

                                        <!--IsChecked="{Binding DoProceedProbing, ElementName=MyDataGrid, NotifyOnSourceUpdated=True}"-->
                                    </ToggleButton>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>

                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1">
                    <Button Foreground="White"
                            Width="200"
                        MinHeight="32" Margin="5,2,5,5" Content="Select All" IsEnabled="{Binding Path = IsCanDoProceedProbing}" Command="{Binding SelectAllDoProceedProbingCommand}"/>
                    <Button Foreground="White" 
                            Width="200"
                        MinHeight="32" Margin="5,2,5,5" Content="UnSelect All"  IsEnabled="{Binding Path = IsCanDoProceedProbing}" Command="{Binding UnSelectAllDoProceedProbingCommand}"/>
                </StackPanel>
            </Grid>
        </StackPanel>

    </Grid>
</UserControl>
