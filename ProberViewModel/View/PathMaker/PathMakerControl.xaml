<UserControl x:Class="PathMakerView.PathMakerControl"
             x:Name="ucwindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PathMakerView"
             xmlns:sd="clr-namespace:SharpDXRender;assembly=SharpDXRender"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:dp="clr-namespace:UcDisplayPort;assembly=UcDisplayPort"
             xmlns:sharprender="clr-namespace:SharpDXRender;assembly=SharpDXRender"
             xmlns:pi="clr-namespace:ProberInterfaces;assembly=ProberInterfaces"
             xmlns:vc="clr-namespace:ValueConverters;assembly=ValueConverters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:materialDesignConverters="clr-namespace:MaterialDesignThemes.Wpf.Converters;assembly=MaterialDesignThemes.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="940" d:DesignWidth="1280" Background="Transparent">

    <UserControl.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.CheckBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ListBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.PopupBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.RadioButton.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBlock.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ToggleButton.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <materialDesignConverters:BooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter" TrueValue="Collapsed" FalseValue="Visible" />
            <vc:NumericComparisonToBoolConverter x:Key="NumericComparisonToBoolConverter" ComparisonNumber="1" ComparisonType="IsEqualTo"/>
            
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="940"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <dp:DisplayPort Grid.Column="0" Name="Display"
                        StageSupervisor="{Binding StageSupervisor}"
                        AssignedCamera="{Binding AssignedCamera}"
                        GridVisibility="True">
        </dp:DisplayPort>
        
        <sharprender:RenderControl x:Name="mainRender" RenderLayerData="{Binding MainRenderLayer}"/>

        <Grid Grid.Column="1" ShowGridLines="True">

            <Grid.RowDefinitions>
                <RowDefinition Height="400"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="300"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" ShowGridLines="True">

                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Slider Grid.Row="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Value="{Binding ThresholdValue, Mode=TwoWay}"
                        Minimum="0" 
                        Maximum="255" 
                        Style="{StaticResource MaterialDesignDiscreteSlider}" 
                        Width="250" 
                        Height="40"
                        ToolTip="ThresholdSlider"/>

                <TextBox Grid.Row="0" 
                         HorizontalAlignment="Right"
                         Margin="0,0,5,5"
                         Foreground="White" 
                         Background="Black"
                         HorizontalContentAlignment="Center"
                         Text="{Binding ThresholdValue, UpdateSourceTrigger=PropertyChanged}" TextAlignment="Right" 
                         Width="30" Height="30"/>


                <UniformGrid Grid.Row="1" Margin="5,5,5,5" Columns="6">

                    <Button 
                    
                    Width="36"
                    Height="36"
                    Command="{Binding FileLoadCommand}">
                        <Viewbox Width="24" Height="24">
                            <Canvas Width="24" Height="24">
                                <Path Data="M5,20H19V18H5M19,9H15V3H9V9H5L12,16L19,9Z" Fill="Black" />
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <Button 
                    Width="36"
                    Height="36"
                    Command="{Binding LoadOriImageCommand}">
                        <Viewbox Width="24" Height="24">
                            <Canvas Width="24" Height="24">
                                <Path Data="M12,3A9,9 0 0,0 3,12H0L4,16L8,12H5A7,7 0 0,1 12,5A7,7 0 0,1 19,12A7,7 0 0,1 12,19C10.5,19 9.09,18.5 7.94,17.7L6.5,19.14C8.04,20.3 9.94,21 12,21A9,9 0 0,0 21,12A9,9 0 0,0 12,3M14,12A2,2 0 0,0 12,10A2,2 0 0,0 10,12A2,2 0 0,0 12,14A2,2 0 0,0 14,12Z" Fill="Black" />
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <Button 
                    Width="36"
                    Height="36"                    
                    Command="{Binding DrawingCommand}">
                        <Viewbox Width="24" Height="24">
                            <Canvas Width="24" Height="24">
                                <Path Data="M11,13.5V21.5H3V13.5H11M12,2L17.5,11H6.5L12,2M17.5,13C20,13 22,15 22,17.5C22,20 20,22 17.5,22C15,22 13,20 13,17.5C13,15 15,13 17.5,13Z" Fill="Black" />
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <Button 
                    Width="36"
                    Height="36"                    
                    Command="{Binding CropCommand}">
                        <Viewbox Width="24" Height="24">
                            <Canvas Width="24" Height="24">
                                <Path Data="M7,17V1H5V5H1V7H5V17A2,2 0 0,0 7,19H17V23H19V19H23V17M17,15H19V7C19,5.89 18.1,5 17,5H9V7H17V15Z" Fill="Black" />
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <Button 
                    Width="36"
                    Height="36"
                    Command="{Binding MaskingCommand}">
                        <Viewbox Width="24" Height="24">
                            <Canvas Width="24" Height="24">
                                <Path Data="M20,18H18V9.25L12,13L6,9.25V18H4V6H5.2L12,10.25L18.8,6H20M20,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V6C22,4.89 21.1,4 20,4Z" Fill="Black" />
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <Button 
                    Width="36"
                    Height="36"
                    Command="{Binding GetThresoldCommand}">
                        <Viewbox Width="24" Height="24">
                            <Canvas Width="24" Height="24">
                                <Path Data="M7,2H17A2,2 0 0,1 19,4V20A2,2 0 0,1 17,22H7A2,2 0 0,1 5,20V4A2,2 0 0,1 7,2M7,4V8H17V4H7M7,10V12H9V10H7M11,10V12H13V10H11M15,10V12H17V10H15M7,14V16H9V14H7M11,14V16H13V14H11M15,14V16H17V14H15M7,18V20H9V18H7M11,18V20H13V18H11M15,18V20H17V18H15Z" Fill="Black" />
                            </Canvas>
                        </Viewbox>
                    </Button>

                </UniformGrid>

                <UniformGrid Grid.Row="2" Margin="5,5,5,5" Columns="3" VerticalAlignment="Center">

                    <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Foreground="White"
                              IsChecked="{Binding FillChecked}">
                        Fill
                    </CheckBox>

                    <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Foreground="White"
                              IsChecked="{Binding OverlapChecked}">
                        Overlap
                    </CheckBox>

                    <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Foreground="White"
                              IsChecked="{Binding ColorDepthChecked}">
                        Color
                    </CheckBox>

                </UniformGrid>

                <UniformGrid Grid.Row="3" Columns="5" Rows="2" Margin="5,5,5,5">
                    
                    <Button 
                    Width="48"
                    Height="48"
                    Command="{Binding PathDrawingCommand}" CommandParameter="{x:Static pi:PathMarkupCommandEnum.Start}"
                        IsEnabled="{Binding StartCmdIsEnabled}">
                        <Viewbox Width="36" Height="36">
                            <Canvas Width="24" Height="24">
                                <Path Data="M4,9C5.31,9 6.42,9.83 6.83,11H22V13H6.83C6.42,14.17 5.31,15 4,15A3,3 0 0,1 1,12A3,3 0 0,1 4,9Z" Fill="Black" />
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <Button 
                    Width="48"
                    Height="48"
                    Command="{Binding PathDrawingCommand}" CommandParameter="{x:Static pi:PathMarkupCommandEnum.End}"
                        IsEnabled="{Binding EndCmdIsEnabled}">
                        <Viewbox Width="36" Height="36">
                            <Canvas Width="24" Height="24">
                                <Path Data="M20,9C18.69,9 17.58,9.83 17.17,11H2V13H17.17C17.58,14.17 18.69,15 20,15A3,3 0 0,0 23,12A3,3 0 0,0 20,9Z" Fill="Black" />
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <Button 
                    Width="48"
                    Height="48"
                    Command="{Binding PathDrawingCommand}" CommandParameter="{x:Static pi:PathMarkupCommandEnum.Clear}">
                        <Viewbox Width="36" Height="36">
                            <Canvas Width="24" Height="24">
                                <Path Data="M19.36,2.72L20.78,4.14L15.06,9.85C16.13,11.39 16.28,13.24 15.38,14.44L9.06,8.12C10.26,7.22 12.11,7.37 13.65,8.44L19.36,2.72M5.93,17.57C3.92,15.56 2.69,13.16 2.35,10.92L7.23,8.83L14.67,16.27L12.58,21.15C10.34,20.81 7.94,19.58 5.93,17.57Z" Fill="Black" />
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <Button 
                    Width="48"
                    Height="48"
                    Command="" >
                        <Viewbox Width="36" Height="36">
                            <Canvas Width="24" Height="24">
                                <Path Data="M12.5,8C9.85,8 7.45,9 5.6,10.6L2,7V16H11L7.38,12.38C8.77,11.22 10.54,10.5 12.5,10.5C16.04,10.5 19.05,12.81 20.1,16L22.47,15.22C21.08,11.03 17.15,8 12.5,8Z" Fill="Black" />
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <Button 
                    Width="48"
                    Height="48"
                    Command="" >
                        <Viewbox Width="36" Height="36">
                            <Canvas Width="24" Height="24">
                                <Path Data="M18.4,10.6C16.55,9 14.15,8 11.5,8C6.85,8 2.92,11.03 1.54,15.22L3.9,16C4.95,12.81 7.95,10.5 11.5,10.5C13.45,10.5 15.23,11.22 16.62,12.38L13,16H22V7L18.4,10.6Z" Fill="Black" />
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <!-- Line -->
                    <Button 
                        Command="{Binding PathDrawingCommand}" 
                        CommandParameter="{x:Static pi:PathMarkupCommandEnum.Line}"
                        IsEnabled="{Binding PathCommandIsEnabled}"
                        Height="48"
                        Width="48"
                        >
                        <TextBlock FontWeight="Bold" FontSize="18">Line</TextBlock>
                    </Button>

                    <!-- Arc -->
                    <Button 
                        Command="{Binding PathDrawingCommand}" 
                        CommandParameter="{x:Static pi:PathMarkupCommandEnum.Arc}"
                        IsEnabled="{Binding PathCommandIsEnabled}"
                        Height="48"
                        Width="48"
                        >
                        <TextBlock FontWeight="Bold" FontSize="18">Arc</TextBlock>
                    </Button>

                    <CheckBox Style="{StaticResource MaterialDesignCheckBox}" 
                              Foreground="White" FontSize="10"
                              VerticalAlignment="Center"
                              IsChecked="{Binding ArcInfo.isLargeArcFlag, Converter={StaticResource NumericComparisonToBoolConverter}}"
                              >
                        Large
                    </CheckBox>

                    <CheckBox Style="{StaticResource MaterialDesignCheckBox}" 
                              Foreground="White" FontSize="10"
                              VerticalAlignment="Center"
                              IsChecked="{Binding ArcInfo.sweepDirectionFlag, Converter={StaticResource NumericComparisonToBoolConverter}}"
                              >
                        Direction
                    </CheckBox>

                </UniformGrid>

                <!--<Button Grid.Row="4"
                    Width="48"
                    Height="48"
                        HorizontalAlignment="Left"
                        Margin="1,1,1,1"
                    Command="{Binding ThresholdCommand}">
                    <Viewbox Width="36" Height="36">
                        <Canvas Width="24" Height="24">
                            <Path Data="M11,2V4.07C7.38,4.53 4.53,7.38 4.07,11H2V13H4.07C4.53,16.62 7.38,19.47 11,19.93V22H13V19.93C16.62,19.47 19.47,16.62 19.93,13H22V11H19.93C19.47,7.38 16.62,4.53 13,4.07V2M11,6.08V8H13V6.09C15.5,6.5 17.5,8.5 17.92,11H16V13H17.91C17.5,15.5 15.5,17.5 13,17.92V16H11V17.91C8.5,17.5 6.5,15.5 6.08,13H8V11H6.09C6.5,8.5 8.5,6.5 11,6.08M12,11A1,1 0 0,0 11,12A1,1 0 0,0 12,13A1,1 0 0,0 13,12A1,1 0 0,0 12,11Z" Fill="Black" />
                        </Canvas>
                    </Viewbox>
                </Button>-->

                <Label Grid.Row="4"
                         Margin="5,5,5,5"
                         Foreground="White" 
                         Background="Black"
                         HorizontalContentAlignment="Center"
                         HorizontalAlignment="Left">
                    <TextBlock>XRad</TextBlock>
                </Label>
                
                <TextBox Grid.Row="4"
                         HorizontalAlignment="Left"
                         Margin="40,0,5,5"
                         Foreground="White" 
                         Background="Black"
                         HorizontalContentAlignment="Center"
                         Text="{Binding ArcInfo.XRad, UpdateSourceTrigger=PropertyChanged}" 
                         TextAlignment="Right" 
                         Width="30" Height="30"/>

                <Label Grid.Row="4"
                         Margin="80,5,5,5"
                         Foreground="White" 
                         Background="Black"
                         HorizontalContentAlignment="Center"
                         HorizontalAlignment="Left">
                    <TextBlock>YRad</TextBlock>
                </Label>
                
                <TextBox Grid.Row="4"
                         HorizontalAlignment="Left"
                         Margin="115,0,5,5"
                         Foreground="White" 
                         Background="Black"
                         HorizontalContentAlignment="Center"
                         Text="{Binding ArcInfo.YRad, UpdateSourceTrigger=PropertyChanged}" 
                         TextAlignment="Right" 
                         Width="30" Height="30"/>

                <Label Grid.Row="4"
                         Margin="155,5,5,5"
                         Foreground="White" 
                         Background="Black"
                         HorizontalContentAlignment="Center"
                         HorizontalAlignment="Left">
                    <TextBlock>Angle</TextBlock>
                </Label>

                <TextBox Grid.Row="4"
                         HorizontalAlignment="Left"
                         Margin="195,0,5,5"
                         Foreground="White" 
                         Background="Black"
                         HorizontalContentAlignment="Center"
                         Text="{Binding ArcInfo.rotationAngle, UpdateSourceTrigger=PropertyChanged}" 
                         TextAlignment="Right" 
                         Width="30" Height="30"/>

                <ToggleButton Grid.Row="4" Margin="5,5,5,5"
                              Width="100" Height="30" 
                                      VerticalAlignment="Center" 
                                      HorizontalAlignment="Right"
                                      Content="Drawing" FontSize="14" 
                                      Style="{StaticResource MaterialDesignSwitchDarkToggleButton}"
                                      Foreground="White"
                                      IsChecked="{Binding MainRenderLayer.CallRenderEnable}">
                </ToggleButton>

            </Grid>

            <UniformGrid Grid.Row="1" Columns="3" Rows="3" Margin="5">

                <!--Arrow Top Left-->
                <Button Margin="1,1,1,1" Command="{Binding CursorMoveCommand}" CommandParameter="{x:Static pi:CursorEnum.TOPLEFT}"
                        Height="40">
                    <Viewbox Width="36" Height="36">
                        <Canvas Width="24" Height="24">
                            <Path Data="M14.12,8.46L19.78,14.12L14.12,19.78L8.46,14.12L4.22,18.36V4.22H18.36L14.12,8.46M6.34,13.41L8.46,11.29L14.12,16.95L16.95,14.12L11.29,8.47L13.41,6.34H6.34V13.41Z" Fill="Black" />
                        </Canvas>
                    </Viewbox>
                </Button>

                <!--Arrow Up-->
                <Button Margin="1,1,1,1" Command="{Binding CursorMoveCommand}" CommandParameter="{x:Static pi:CursorEnum.UP}"
                        Height="40">
                    <Viewbox Width="36" Height="36">
                        <Canvas Width="24" Height="24">
                            <Path Data="M16,13V21H8V13H2L12,3L22,13H16M7,11H10V19H14V11H17L12,6L7,11Z" Fill="Black" />
                        </Canvas>
                    </Viewbox>
                </Button>

                <!--Arrow Top Right-->
                <Button Margin="1,1,1,1" Command="{Binding CursorMoveCommand}" CommandParameter="{x:Static pi:CursorEnum.TOPRIGHT}"
                        Height="40">
                    <Viewbox Width="36" Height="36">
                        <Canvas Width="24" Height="24">
                            <Path Data="M5.64,4.22H19.78V18.36L15.54,14.12L9.88,19.78L4.22,14.12L9.88,8.46L5.64,4.22M17.66,6.34H10.59L12.71,8.46L7.05,14.12L9.88,16.95L15.54,11.29L17.66,13.41V6.34H17.66Z" Fill="Black" />
                        </Canvas>
                    </Viewbox>
                </Button>

                <!--Arrow Left-->
                <Button Margin="1,1,1,1" Command="{Binding CursorMoveCommand}" CommandParameter="{x:Static pi:CursorEnum.LEFT}"
                        Height="40">
                    <Viewbox Width="36" Height="36">
                        <Canvas Width="24" Height="24">
                            <Path Data="M13,22L3,12L13,2V8H21V16H13V22M6,12L11,17V14H19V10H11V7L6,12Z" Fill="Black" />
                        </Canvas>
                    </Viewbox>
                </Button>

                <!--Plus-->
                <Button Margin="1,1,1,1" Command="{Binding PathPlusCommand}" IsEnabled="{Binding PlusCmdIsEnabled}"
                        Height="40">
                    <Viewbox Width="36" Height="36">
                        <Canvas Width="24" Height="24">
                            <Path Data="M17,13H13V17H11V13H7V11H11V7H13V11H17M19,3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3Z" Fill="Black" />
                        </Canvas>
                    </Viewbox>
                </Button>

                <!--Arrow Right-->
                <Button Margin="1,1,1,1" Command="{Binding CursorMoveCommand}" CommandParameter="{x:Static pi:CursorEnum.RIGHT}"
                        Height="40">
                    <Viewbox Width="36" Height="36">
                        <Canvas Width="24" Height="24">
                            <Path Data="M11,16H3V8H11V2L21,12L11,22V16M13,7V10H5V14H13V17L18,12L13,7Z" Fill="Black" />
                        </Canvas>
                    </Viewbox>
                </Button>

                <!--Arrow Bottom Left-->
                <Button Margin="1,1,1,1" Command="{Binding CursorMoveCommand}" CommandParameter="{x:Static pi:CursorEnum.BOTTOMLEFT}"
                        Height="40">
                    <Viewbox Width="36" Height="36">
                        <Canvas Width="24" Height="24">
                            <Path Data="M18.36,19.78H4.22V5.64L8.47,9.88L14.12,4.22L19.78,9.88L14.12,15.54L18.36,19.78M6.34,17.66H13.41L11.29,15.54L16.95,9.88L14.12,7.05L8.46,12.71L6.34,10.59V17.66Z" Fill="Black" />
                        </Canvas>
                    </Viewbox>
                </Button>

                <!--Arrow Down-->
                <Button Margin="1,1,1,1" Command="{Binding CursorMoveCommand}" CommandParameter="{x:Static pi:CursorEnum.DOWN}"
                        Height="40">
                    <Viewbox Width="36" Height="36">
                        <Canvas Width="24" Height="24">
                            <Path Data="M22,11L12,21L2,11H8V3H16V11H22M12,18L17,13H14V5H10V13H7L12,18Z" Fill="Black" />
                        </Canvas>
                    </Viewbox>
                </Button>

                <!--Arrow Bottom Right-->
                <Button Margin="1,1,1,1" Command="{Binding CursorMoveCommand}" CommandParameter="{x:Static pi:CursorEnum.BOTTOMRIGHT}"
                        Height="40">
                    <Viewbox Width="36" Height="36">
                        <Canvas Width="24" Height="24">
                            <Path Data="M9.88,15.54L4.22,9.88L9.88,4.22L15.54,9.88L19.78,5.64V19.78H5.64L9.88,15.54M17.66,10.59L15.54,12.71L9.88,7.05L7.05,9.88L12.71,15.54L10.59,17.66H17.66V10.59Z" Fill="Black" />
                        </Canvas>
                    </Viewbox>
                </Button>
            </UniformGrid>

            <TextBlock Grid.Row="2"
                           Text="Current Path Data" 
                           Foreground="White" 
                           FontSize="18" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center">
            </TextBlock>

            <Grid Grid.Row="3">

                <!--<Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    --><!--<RowDefinition Height="*"/>--><!--
                </Grid.RowDefinitions>-->

                <materialDesign:Card Width="340" Background="Black">
                    
                    <Grid>
                        
                        <Grid.RowDefinitions>
                            <RowDefinition Height="200" />
                            <RowDefinition Height="100" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="210"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                BorderBrush="Aquamarine" BorderThickness="2" Margin="2,2,2,2" Background="Black" Width="200" Height="180"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top">
                                <Path Margin="5,5,5,5" x:Name="path"  
                                      Data="{Binding CurrentPath.Data}" 
                                      Stretch="Uniform"
                                      Fill="{Binding CurrentPath.Fill}" 
                                      Stroke="White" 
                                      StrokeThickness="1">
                                </Path>
                            </Border>

                            <ListBox Grid.Column="1" 
                                     Height="100" 
                                     Width="100"
                                     VerticalAlignment="Top" 
                                     HorizontalAlignment="Left"
                                     Margin="2,2,2,2" 
                                     Background="Transparent"
                                     ItemsSource ="{Binding PathTemplate}"
                                     BorderThickness="3"
                                     BorderBrush="White">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Foreground="White"
                                            Text="{Binding Name}">
                                        </TextBlock>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <UniformGrid Grid.Column="1" Margin="-20,60,0,0" Columns="2" HorizontalAlignment="Center">
                                
                                <Button Grid.Column="1" Margin="5,5,5,5"
                                    Width="36"
                                    Height="36"
                                    Command="{Binding }">
                                    <Viewbox Width="24" Height="24">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" Fill="Black" />
                                        </Canvas>
                                    </Viewbox>
                                </Button>

                                <Button Grid.Column="1" Margin="5,5,5,5"
                                    Width="36"
                                    Height="36"
                                    Command="{Binding }">
                                    <Viewbox Width="24" Height="24">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M19,13H5V11H19V13Z" Fill="Black" />
                                        </Canvas>
                                    </Viewbox>
                                </Button>
                            </UniformGrid>
                        </Grid>

                        <!--<Image Source="Resources/Chartridge046_small.jpg" Height="140" Width="196" Stretch="UniformToFill" />-->

                        <!--<Button Grid.Row="0" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" 
                                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                Margin="0 0 16 -20">
                            <materialDesign:PackIcon Kind="Bike" />
                        </Button>-->

                        <StackPanel Grid.Row="1" Margin="4 0 4 0" >
                            
                            <TextBlock FontWeight="Bold" Foreground="White" FontSize="16">Path Information</TextBlock>

                            <TextBox TextWrapping="Wrap" 
                                       VerticalAlignment="Center" 
                                       Foreground="White"
                                       FontSize="14"
                                       Text="{Binding CurrentPath.Data, Mode=TwoWay}"
                                       >
                            </TextBox>
                            
                            <!--<TextBlock TextWrapping="Wrap" 
                                       VerticalAlignment="Center" 
                                       Foreground="White"
                                       FontSize="14"
                                       Text="{Binding CurrentPath.Data.Bounds.Width, StringFormat= Width : {0:#,#.0}}">
