<UserControl x:Class="GPCardChangeOPView.GPCardChageOPView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GPCardChangeOPView"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1250" Background="#FF1C1C1F">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <UniformGrid Grid.Column="0" Columns="1" Rows="12">
                <UniformGrid Columns="2" Rows="1">
                    <TextBlock Text="Card Contact Pos X : " Foreground="White"/>
                    <TextBlock Text="{Binding CardChangeDevParam.GP_CardContactPosX}" Foreground="White"/>
                </UniformGrid>
                <UniformGrid Columns="2" Rows="1">
                    <TextBlock Text="Card Contact Pos Y : " Foreground="White"/>
                    <TextBlock Text="{Binding CardChangeDevParam.GP_CardContactPosY}" Foreground="White"/>
                </UniformGrid>
                <UniformGrid Columns="2" Rows="1">
                    <TextBlock Text="Card Contact Pos  : T" Foreground="White"/>
                    <TextBlock Text="{Binding CardChangeDevParam.GP_CardContactPosT}" Foreground="White"/>
                </UniformGrid>
                <UniformGrid Columns="2" Rows="1">
                    <TextBlock Text="Card Contact Pos  : Z" Foreground="White"/>
                    <TextBlock Text="{Binding CardChangeDevParam.GP_CardContactPosZ}" Foreground="White"/>
                </UniformGrid>
                <UniformGrid Columns="2" Rows="1">
                    <TextBlock Text="Card Contact Offset  : Z" Foreground="White"/>
                    <TextBlock Text="{Binding CardChangeDevParam.GP_ContactCorrectionZ}" Foreground="White"/>
                </UniformGrid>
                <UniformGrid Columns="3" Rows="1">
                    <TextBlock Text="Contact Offset Z :" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBox Text="{Binding CardContactOffsetSettingZ}"   Foreground="White" VerticalAlignment="Center"/>
                    <Button Content="Apply" Command="{Binding CardContactSettingZCommand}"/>
                </UniformGrid>
                <UniformGrid Columns="1" Rows="1">
                </UniformGrid>
                <UniformGrid Columns="1" Rows="1">
                </UniformGrid>
            </UniformGrid>
            <Grid Grid.Column="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <GroupBox Grid.Row="0" Header="Read IO" Foreground="LightGreen" IsEnabled="{Binding UIEnable}">
                        <ScrollViewer Grid.Row="1" >
                            <ItemsControl ItemsSource="{Binding CardChangeInputs}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="1"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="1.5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Path=Key}" Foreground="White" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                            <ToggleButton Grid.Column="1" IsChecked="{Binding Path=Value}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>
                    <GroupBox Grid.Row="1" Header="Write IO" Foreground="LightGreen" IsEnabled="{Binding UIEnable}">
                        <ScrollViewer>
                            <ItemsControl ItemsSource="{Binding CardChangeOutputs}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="1"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="1.5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Path=Key}" Foreground="White" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                            <ToggleButton Grid.Column="1" IsChecked="{Binding Path=Value}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>
                    <UniformGrid Columns="2" Rows="1">

                    </UniformGrid>
                    <UniformGrid Grid.Row="2" Columns="4">
                        <TextBlock Text="Loading T: " Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15"/>
                        <TextBlock Text="{Binding CardChangeSysParam.GP_LoadingPosT}" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15"/>

                        <TextBox Text="{Binding ChuckThetaValue}" FontSize="20" Foreground="White"/>
                        <Button Content="Theta(Abs)" Command="{Binding RotateChuckCommand}"/>
                    </UniformGrid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <GroupBox Header="Command" Grid.Column="0" Foreground="LightGreen" FontSize="10" IsEnabled="{Binding UIEnable}">
                    <UniformGrid Rows="4" Columns="6">
                        <Button Content="Safety Down &#xa;Chuck" Margin="1" Command="{Binding SafetyDownChuckCommand}"/>
                        <Button Content="Safety Down &#xa;Card" Margin="1" Command="{Binding SafetyDownCardCommand}"/>
                        <Button Content="Move to &#xa;Loader" Margin="1" Command="{Binding MoveToLoaderCommand}"/>

                        <Button Content="Raise Pod" Margin="1" Command="{Binding RaisePodCommand}"/>
                        <Button Content="Drop Pod" Margin="1" Command="{Binding DropPodCommand}"/>

                        <Button Content="Sol Lock" Margin="1" Command="{Binding TopPlateSolLockCommand}"/>
                        <Button Content="Sol UnLock" Margin="1" Command="{Binding TopPlateSolUnLockCommand}"/>

                        <Button Content="Card Pod &#xa;Vac Off" Margin="1" Command="{Binding PCardPodVacuumOffCommand}"/>
                        <Button Content="Card Pod &#xa;Vac On" Margin="1" Command="{Binding PCardPodVacuumOnCommand}"/>

                        <Button Content="Pogo Card &#xa;Vac Off" Margin="1" Command="{Binding FogoPCardContactVacuumOffCommand}"/>
                        <Button Content="Pogo Card &#xa;Vac On" Margin="1" Command="{Binding FogoPCardContactVacuumOnCommand}"/>

                        <Button Content="Upplate Tester&#xa;Vac Off" Margin="1" Command="{Binding UpPlateTesterCOfftactVacuumOffCommand}"/>
                        <Button Content="Upplate Tester&#xa;Vac On" Margin="1" Command="{Binding UpPlateTesterContactVacuumOnCommand}"/>

                        <Button Content="Dock Card" Margin="1" Command="{Binding DockCardCommand}"/>
                        <Button Content="Undock Card" Margin="1" Command="{Binding UnDockCardCommand}"/>

                        <Button Content="Align &#xa;Card" Margin="1" Command="{Binding CardAlignCommand}"/>
                        <Button Content="Set Algin Pos &#xa;Card" Margin="1" Command="{Binding SetAlignPosCommand}"/>

                        <Button Content="Card Stuck Recovery" Background="LightGreen" Margin="1" Command="{Binding CardStuckRecoveryCommand}"/>

                        <Button Content="Ready to get &#xa;Card" Margin="1" Command="{Binding ReadyToGetCardCommand}"/>
                        <Button Content="Clear &#xa;Card Change" Margin="1" Command="{Binding ClearCardChangeCommand}"/>

                        <Button Content="PogoCardVac &#xa; On" Margin="1" Command="{Binding PogoCardVacOnCommand}"/>
                        <Button Content="PogoCardVac &#xa; Off" Margin="1" Command="{Binding PogoCardVacOffCommand}"/>
                        <Button Content="PogoCardRelease &#xa; On" Margin="1" Command="{Binding PogoCardReleaseOnCommand}"/>
                        <Button Content="PogoCardRelease &#xa; Off" Margin="1" Command="{Binding PogoCardReleaseOffCommand}"/>


                    </UniformGrid>
                </GroupBox>
                <GroupBox Header="Function" Grid.Column="1" Foreground="LightGreen" FontSize="10">
                    <UniformGrid Rows="3" Columns="4">
                        <Button Content="Small&#xa;Raise" Margin="1" Background="OrangeRed" Command="{Binding SmallRaiseChuckCommand}"/>
                        <Button Content="Small&#xa;Drop" Margin="1" Background="OrangeRed" Command="{Binding SmallDropChuckCommand}"/>
                        <Button Content="Big&#xa;Raise" Margin="1" Background="Red" Command="{Binding BigRaiseChuckCommand}"/>
                        <Button Content="Big&#xa;Drop" Margin="1" Background="Red" Command="{Binding BigDropChuckCommand}"/>
                        <Button Content="Test Run" Margin="1" Command="{Binding TestRunCommand}" Visibility="Hidden"/>
                        <Button Content="Test Stop" Margin="1" Command="{Binding TestStopCommand}" Visibility="Hidden"/>
                        <Button Content="Set CardChange" Margin="1" Command="{Binding SetCardChangeStateCommand}" Background="Violet"/>
                        <Button Content="UnSet CardChange" Margin="1" Command="{Binding UnSetCardChangeStateCommand}" Background="Violet"/>
                        <Button Content="Simulate &#xa;Contact" Margin="1" Command="{Binding SimulateContactCommand}"/>
                        <Button Content="Chuck Air On" Margin="1" Command="{Binding ChuckAirOnCommand}"/>
                        <Button Content="Chuck Air Off" Margin="1" Command="{Binding ChuckAirOffCommand}"/>
                        <Button Content="Force Card&#xa;Vacuum Off" Margin="1" Command="{Binding ForceCardVacuumOffCommand}" Background="Red"/>
                    </UniformGrid>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
