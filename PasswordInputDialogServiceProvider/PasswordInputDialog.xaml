<dialog:CustomDialog x:Class="PasswordInputDialogServiceProvider.PasswordInputDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PasswordInputDialogServiceProvider"
             xmlns:dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="160*"/>
            <ColumnDefinition Width="24*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32*"/>
                    <ColumnDefinition Width="80*"/>
                </Grid.ColumnDefinitions>
                <Label Content="{Binding LabelName}"
                       Foreground="Black"
                       FontSize="16"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"/>
                <PasswordBox Grid.Column="1"
                         Margin="8 16"
                         Name="pswdBox"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         FontSize="24"
                         />
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32*"/>
                    <ColumnDefinition Width="40*"/>
                    <ColumnDefinition Width="40*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1"
                        Margin="8 16 4 16"
                        FontSize="16"
                        Command="{Binding cmdAffirmativeButtonClick}"
                        CommandParameter="{Binding ElementName=pswdBox}"
                        Content="{Binding PositiveLabelName}"/>
                <Button Grid.Column="2"
                        Margin="4 16 8 16"
                        FontSize="16"
                        Command="{Binding cmdNegativeButtonClick}"
                        Content="{Binding NegetiveLabelName}"/>
            </Grid>
        </Grid>
    </Grid>
</dialog:CustomDialog>
