<UserControl x:Class="BinEditorControl.UcBinItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:local="clr-namespace:BinEditorControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="5" Visibility="{Binding RecordVisibility}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="Black" BorderBrush="White" BorderThickness="2">
            <TextBlock Text="{Binding BinTitle}" FontSize="14" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border x:Name="contentBox" Grid.Column="1" Background="{Binding BinContentColor}" BorderBrush="White" BorderThickness="2" MouseDown="contentBox_MouseDown" MouseUp="contentBox_MouseUp" MouseLeave="contentBox_MouseLeave">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDown" >
                    <i:InvokeCommandAction Command="{Binding ContentDownCommand}" CommandParameter="{Binding}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <TextBlock Text="{Binding BinContent}" TextTrimming="CharacterEllipsis"  FontSize="12"  HorizontalAlignment="Center" VerticalAlignment="Center">
            </TextBlock>
        </Border>
    </Grid>
</UserControl>
