    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" BorderBrush="#474343" BorderThickness="0.8" >
                <DockPanel>
                    <Border DockPanel.Dock="Top" Margin="0,0,0,0" Background="#3C454F">
                        <Label Padding="0" FontWeight="DemiBold" Content="Contact Origin"
                                                           Foreground="WhiteSmoke" FontSize="11" 
                                                           VerticalAlignment="Center" />
                    </Border>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80*"/>
                            <RowDefinition Height="80*"/>
                            <RowDefinition Height="80*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="65*"/>
                            <ColumnDefinition Width="161*"/>
                            <ColumnDefinition Width="161"/>
                            <ColumnDefinition Width="161*"/>
                        </Grid.ColumnDefinitions>

                        <RadioButton AutomationProperties.AutomationId="FirstContactrdo"
                                     Grid.Row="0" Grid.Column="0"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center"
                                     IsHitTestVisible="False"                                     
                                     IsEnabled="{Binding OverDriveStartPosition,
                                        Converter={StaticResource IsProbingStartPosFirstContactConv}}"
                                     IsChecked="{Binding OverDriveStartPosition,
                                        Converter={StaticResource IsProbingStartPosFirstContactConv}}"
                                     VerticalContentAlignment="Center"
                                     />

                        <Label  Grid.Row="0" Grid.Column="1"
                                FontSize="9"
                                Margin="0" Padding="0 0 8 0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                IsEnabled="{Binding OverDriveStartPosition,
                                    Converter={StaticResource IsProbingStartPosFirstContactConv}}"
                                Content="First&#x0a;Contact :"/>

                        <TextBox    AutomationProperties.AutomationId="FirstContacttxt"
                                    Grid.Row="0" Grid.Column="2"
                                    Margin="2"
                                    IsEnabled="False"
                                    FontSize="14" Foreground="White"
                                    VerticalAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Center"
                                    Text="{Binding FirstContactHeight}"/>

                        <Button AutomationProperties.AutomationId="FirstContactSetbtn"
                                Grid.Row="0" Grid.Column="3" FontSize="16" Margin="2"                                                                                                    
                                Command="{Binding Path=FirstContactSetCommand}"                                 
                                Style="{DynamicResource ControlButtonStyle}"
                                CommandParameter="{Binding StageIndex}"
                                IsEnabled="{Binding OverDriveStartPosition,
                                    Converter={StaticResource IsProbingStartPosFirstContactConv}}"
                                Content="Set"/>

                        <RadioButton    AutomationProperties.AutomationId="AllContactrdo"
                                        Grid.Row="1" Grid.Column="0"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        IsHitTestVisible="False"
                                        IsEnabled="{Binding OverDriveStartPosition,
                                            Converter={StaticResource IsProbingStartPosAllContactConv}}"
                                        IsChecked="{Binding OverDriveStartPosition,
                                           Converter={StaticResource IsProbingStartPosAllContactConv}}"
                                        VerticalContentAlignment="Center"
                                        />

                        <Label  Grid.Row="1" Grid.Column="1"
                                FontSize="9"
                                Margin="0" Padding="0 0 8 0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                IsEnabled="{Binding OverDriveStartPosition,
                                    Converter={StaticResource IsProbingStartPosAllContactConv}}"
                                Content="All&#x0a;Contact :"/>

                        <TextBox  AutomationProperties.AutomationId="AllContacttxt"
                                  Grid.Row="1" Grid.Column="2"
                                  Margin="2"
                                  IsEnabled="False"
                                  FontSize="14" Foreground="White"
                                  VerticalAlignment="Center"
                                  VerticalContentAlignment="Center"
                                  HorizontalAlignment="Stretch"
                                  HorizontalContentAlignment="Center"
                                  Text="{Binding AllContactHeight}"
                                  />

                        <Button AutomationProperties.AutomationId="AllContactSetbtn"
                                Grid.Row="1" Grid.Column="3"
                                Margin="2"
                                FontSize="16"
                                Style="{DynamicResource ControlButtonStyle}"
                                Command="{Binding Path=AllContactSetCommand}"  
                                IsEnabled="{Binding OverDriveStartPosition,
                                    Converter={StaticResource IsProbingStartPosAllContactConv}}"
                                Content="Set"
                                CommandParameter="{Binding StageIndex}"
                                />

                        <Button Grid.Row="2" Grid.Column="3" AutomationProperties.AutomationId="RestContactStartPositionbtn"
                                Content="Reset"
                                Margin="2"
                                Style="{DynamicResource ControlButtonStyle}"
                                Command="{Binding Path=ResetContactStartPositionCommand}"
                                CommandParameter="{Binding StageIndex}"/>
                    </Grid>
                </DockPanel>
            </Border>
            <Border Grid.Row="1" BorderBrush="#474343" BorderThickness="0.8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70*"/>
                        <RowDefinition Height="80*"/>
                        <RowDefinition Height="80*"/>
                        <RowDefinition Height="80*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150*"/>
                        <ColumnDefinition Width="100*"/>
                        <ColumnDefinition Width="60*"/>
                    </Grid.ColumnDefinitions>
                    <Border  DockPanel.Dock="Top" Margin="0,0,0,0" Background="#3C454F" Grid.ColumnSpan="3">
                        <Label Padding="0" FontWeight="DemiBold" Content="Overdrive / Z Clearance" 
                                                           Foreground="WhiteSmoke" FontSize="11" VerticalAlignment="Center" />
                    </Border>
                    <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
                        <StackPanel Orientation="Horizontal"  Grid.Column="0" >
                            <Label Content="Overdrive :  " Foreground="White" HorizontalContentAlignment="Center" FontSize="10" />
                            <TextBox AutomationProperties.AutomationId="txtOverDrive" Text="{Binding Path=ProbingDevCopyParam.OverDrive.Value}" MinWidth="130" 
                                                                 VerticalAlignment="Center"
                                                                 VerticalContentAlignment="Center"
                                                                 HorizontalAlignment="Stretch"
                                                                 HorizontalContentAlignment="Center" Foreground="White" FontSize="10">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="PreviewMouseDown" >
                                        <i:InvokeCommandAction Command="{Binding Path=OverDriveTextBoxClickCommand}" 
                                                                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type TextBox}}}" >
                                            <!--<i:InvokeCommandAction.CommandParameter>
                                                <MultiBinding Converter="{StaticResource MulitCommandParameterConverter}">
                                                    <Binding Path="Index" />
                                                    <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type TextBox}}"/>
                                                </MultiBinding>
                                            </i:InvokeCommandAction.CommandParameter>-->
                                        </i:InvokeCommandAction>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBox>

                            <!--<TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" FontSize="12" Text=" ㎛"/>-->

                        </StackPanel>
                    </StackPanel>
                    <Button AutomationProperties.AutomationId="OverdriveSetbtn" Grid.Row="1"
                                                        Grid.Column="2" FontSize="16" Margin="2"                                                        
                                                        Command="{Binding Path=SetOverDriveCommand}"
                                                        Style="{DynamicResource ControlButtonStyle}"
                                                        CommandParameter="{Binding StageIndex}"
                                                        Content="Set"/>
                    <StackPanel Grid.Row="2" Grid.ColumnSpan="2">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Z Clearance :" Foreground="White" HorizontalContentAlignment="Center" FontSize="10"/>
                            <TextBox AutomationProperties.AutomationId="txtZClearance" Text="{Binding Path=ProbingDevCopyParam.ZClearence.Value}" MinWidth="130"
                                                                 VerticalAlignment="Center"
                                                                 VerticalContentAlignment="Center"
                                                                 HorizontalAlignment="Stretch"
                                                                 HorizontalContentAlignment="Center" Foreground="White" FontSize="10">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="PreviewMouseDown" >
                                        <i:InvokeCommandAction Command="{Binding Path=ZClearanceTextBoxClickCommand}" 
                                                                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type TextBox}}}" >
                                            <!--<i:InvokeCommandAction.CommandParameter>
                                                <MultiBinding Converter="{StaticResource MulitCommandParameterConverter}">
                                                    <Binding Path="Index" />
                                                    <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type TextBox}}"/>
                                                </MultiBinding>
                                            </i:InvokeCommandAction.CommandParameter>-->
                                        </i:InvokeCommandAction>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBox>
                        </StackPanel>
                    </StackPanel>
                    <Button AutomationProperties.AutomationId="ZClearanceSetbtn" Grid.Row="2"
                                                        Grid.Column="2" FontSize="16" Margin="2"                                                        
                                                        Command="{Binding Path=SetZClearanceCommand}"
                                                        Style="{DynamicResource ControlButtonStyle}"
                                                        CommandParameter="{Binding StageIndex}"
                                                        Content="Set"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>

</UserControl>
