<dialog:CustomDialog x:Class="SingleInputDialogServiceProvider.SingleInputDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SingleInputDialogServiceProvider"
             xmlns:dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1024">
    <Grid>
        <Grid.Resources>
            <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        </Grid.Resources>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="160*"/>
            <ColumnDefinition Width="24*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Visibility="{Binding SubLabel, Converter={StaticResource StringToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48*"/>
                    <ColumnDefinition Width="80*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"
                       Content="Source :"
                       Foreground="Black"
                       FontSize="16"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"/>
                <Label Grid.Column="1"
                       Content="{Binding SubLabel}"
                       Foreground="Black"
                       FontSize="16"
                       HorizontalAlignment="Left"
                       Margin="8 16"
                       VerticalAlignment="Center"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="80*"/>
                </Grid.ColumnDefinitions>
                <Label 
                       Content="{Binding LabelName}"
                       Foreground="Black"
                       FontSize="16"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"/>
                <TextBox AutomationProperties.AutomationId="txtInputData"
                         Grid.Column="1"
                         Margin="8 8"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         Text="{Binding InputData}"
                         FontSize="24"
                         />
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32*"/>
                    <ColumnDefinition Width="40*"/>
                    <ColumnDefinition Width="40*"/>
                </Grid.ColumnDefinitions>
                <Button AutomationProperties.AutomationId="btnPositive"
                        Grid.Column="1"
                        Margin="8 16 4 16"
                        FontSize="16"
                        Command="{Binding cmdAffirmativeButtonClick}"
                        Content="{Binding PositiveLabelName}"/>
                <Button AutomationProperties.AutomationId="btnNegative"
                        Grid.Column="2"
                        Margin="4 16 8 16"
                        FontSize="16"
                        Command="{Binding cmdNegativeButtonClick}"
                        Content="{Binding NegetiveLabelName}"/>
            </Grid>
        </Grid>
    </Grid>
</dialog:CustomDialog>
