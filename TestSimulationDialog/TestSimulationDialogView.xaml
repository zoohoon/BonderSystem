<Window x:Class="TestSimulationDialog.TestSimulationDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:iop="clr-namespace:IOPanelControl;assembly=IOPanelControl"
             xmlns:local="clr-namespace:TestSimulationDialog"
             xmlns:vc="clr-namespace:ValueConverters;assembly=ValueConverters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             mc:Ignorable="d" 
             Height="1000" Width="1600" Background="#0F0F0F" ResizeMode="NoResize" Closing="Window_Closing">

    <Window.Resources>
        <ResourceDictionary>
            <local:BoolToOppositeBoolConverter x:Key="BoolReverseConv"/>
            <vc:BoolToVisibilityConverter x:Key="BoolToVisibilityConv" FalseEquivalent="Hidden" OppositeBooleanValue="False"/>
            <local:IOOverrideToForegroundConverter x:Key="IOOverrideToForegroundConv"/>
            <local:GetIndexMultiConverter x:Key="GetIndexMultiConv"/>
            <local:YourConverter x:Key="YourConv"/>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Border Grid.Column="2" Grid.RowSpan="1" BorderBrush="DimGray" BorderThickness="2" Margin="4" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TabControl Background="Black" SelectedIndex="{Binding SelectedIndex}">
                    <TabItem Header="Loader">

                        <ScrollViewer Grid.Row="0" Margin="4">
                            <Grid ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Visible">
                                <ItemsControl ItemsSource="{Binding LoaderFilteredPorts}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <materialDesign:Card Margin="10" Padding="15" BorderThickness="1" BorderBrush="White">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- 상단 섹션: IO 이름 -->
                                                    <TextBlock Grid.Row="0" Text="{Binding Path=Key}" ToolTip="{Binding Path=Key}" FontWeight="Bold" FontSize="16" Foreground="White" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,10"/>

                                                    <!-- 중앙 섹션: 채널 인덱스, 포트 인덱스, IOOverride 정보 -->
                                                    <Grid Grid.Row="1" Margin="0,0,0,10">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="1*"/>
                                                            <ColumnDefinition Width="1*"/>
                                                            <ColumnDefinition Width="1*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                            <TextBlock Text="{Binding ChannelIndex.Value, StringFormat=CI: {0:D}}" FontWeight="Bold" Foreground="White"/>
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                                            <TextBlock Text="{Binding PortIndex.Value, StringFormat=PI: {0:D}}" FontWeight="Bold" Foreground="White"/>
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                                            <TextBlock Text="{Binding IOOveride.Value}" FontWeight="Bold" Foreground="White"/>
                                                        </StackPanel>
                                                    </Grid>

                                                    <Grid Grid.Row="2" Margin="0,10,0,0">
                                                        <ToggleButton Grid.Column="1" Height="35" IsChecked="{Binding Path=Value}" ToolTip="{Binding Path=Key}" VerticalAlignment="Top"/>
                                                    </Grid>

                                                    <!-- 하단 섹션: 제어 토글 및 설정 -->
                                                    <Grid Grid.Row="3" Margin="0,10,0,0">

                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Grid Grid.Column="0">
                                                            <CheckBox Content="Forced" Foreground="White" IsChecked="{Binding ForcedIO.IsForced, Mode=TwoWay}" Style="{StaticResource MaterialDesignCheckBox}"/>
                                                        </Grid>

                                                        <Grid Grid.Column="1">
                                                            <ToggleButton Height="35" Visibility="{Binding ForcedIO.IsForced, Converter={StaticResource BoolToVisibilityConv}}" IsChecked="{Binding ForcedIO.ForecedValue}"/>
                                                        </Grid>

                                                    </Grid>
                                                </Grid>
                                            </materialDesign:Card>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="4"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </Grid>
                        </ScrollViewer>
                    </TabItem>
                    
                    <TabItem Header="Cells">
                        <TabControl x:Name="_DataList" Margin="10" ItemsSource="{Binding FilteredCellsIOs}" 
                                    SelectedIndex="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type Window}},Path=DataContext.SelectedCellIndex}">
                            <!-- Header -->
                            <TabControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock>
                                            <TextBlock.Text>
                                                <MultiBinding Converter="{StaticResource GetIndexMultiConv}" ConverterParameter="0">
                                                    <Binding Path="."/>
                                                    <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}" Path="ItemsSource"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </TabControl.ItemTemplate>

                            <!-- Content -->
                            <TabControl.ContentTemplate>
                                <DataTemplate x:Name="objectDataTemplate">
                                    <ScrollViewer Background="Black">
                                        <Grid ScrollViewer.CanContentScroll="True"
                                              ScrollViewer.VerticalScrollBarVisibility="Visible">


                                            <ItemsControl ItemsSource="{Binding}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <materialDesign:Card Margin="10" Padding="15" BorderThickness="1" BorderBrush="White">
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="*"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="75"/>
                                                                </Grid.RowDefinitions>

                                                                <!-- 상단 섹션: IO 이름 -->
                                                                <TextBlock Grid.Row="0" Text="{Binding Path=Key}" ToolTip="{Binding Path=Key}" FontWeight="Bold" FontSize="16" Foreground="White" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,10"/>

                                                                <!-- 중앙 섹션: 채널 인덱스, 포트 인덱스, IOOverride 정보 -->
                                                                <Grid Grid.Row="1" Margin="0,0,0,10">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="1*"/>
                                                                        <ColumnDefinition Width="1*"/>
                                                                        <ColumnDefinition Width="1*"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                                        <TextBlock Text="{Binding ChannelIndex.Value, StringFormat=CI: {0:D}}" FontWeight="Bold" Foreground="White"/>
                                                                    </StackPanel>

                                                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                                                        <TextBlock Text="{Binding PortIndex.Value, StringFormat=PI: {0:D}}" FontWeight="Bold" Foreground="White"/>
                                                                    </StackPanel>

                                                                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                                                        <TextBlock Text="{Binding IOOveride.Value}" FontWeight="Bold" Foreground="White"/>
                                                                    </StackPanel>
                                                                </Grid>

                                                                <Grid Grid.Row="2" Margin="0,10,0,0">
                                                                    <ToggleButton Grid.Column="1" Height="35" IsChecked="{Binding Path=Value}" ToolTip="{Binding Path=Key}" VerticalAlignment="Top"/>
                                                                </Grid>
                                                                
                                                                <!-- 하단 섹션: 제어 토글 및 설정 -->
                                                                <Grid Grid.Row="3" Margin="0,10,0,0">
                                                                    
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <Grid Grid.Column="0">
                                                                        <CheckBox Content="Forced" Foreground="White" IsChecked="{Binding ForcedIO.IsForced, Mode=TwoWay}" Style="{StaticResource MaterialDesignCheckBox}"/>
                                                                    </Grid>

                                                                    <Grid Grid.Column="1">
                                                                        <ToggleButton Height="35" Visibility="{Binding ForcedIO.IsForced, Converter={StaticResource BoolToVisibilityConv}}" IsChecked="{Binding ForcedIO.ForecedValue}"/>
                                                                    </Grid>
                                                                    
                                                                </Grid>

                                                                <Grid Grid.Row="4" Margin="0,10,0,0">
                                                                    <!-- 큰 Button -->
                                                                    <Button Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Height="45" Margin="4" Content="SET" Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type Window}},Path=DataContext.SetForcedIOCommand}" 
                                                                            HorizontalAlignment="Stretch">
                                                                        <Button.CommandParameter>
                                                                            <MultiBinding Converter="{StaticResource YourConv}">
                                                                                <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type TabControl}}" Path="ItemsSource"/>
                                                                                <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}" Path="ItemsSource"/>
                                                                                <Binding Path="."/>
                                                                            </MultiBinding>
                                                                        </Button.CommandParameter>
                                                                    </Button>
                                                                </Grid>
                                                                
                                                            </Grid>
                                                        </materialDesign:Card>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <UniformGrid Columns="4"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </Grid>
                                    </ScrollViewer>
                                </DataTemplate>
                            </TabControl.ContentTemplate>
                            
                        </TabControl>
                    </TabItem>
                </TabControl>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:PackIcon Grid.Column="0"
                                                     Kind="AccountSearch" 
                                                     Margin="10 0 8 0" 
                                                     Foreground="WhiteSmoke"
                                                     VerticalAlignment="Center" Height="32" Width="32"/>

                    <TextBox AutomationProperties.AutomationId="txtIOSearch"
                                     Grid.Column="1"
                                     materialDesign:HintAssist.Hint="Search" 
                                     Text="{Binding Path=SearchKeyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.IsFloating="True"
                                     Margin="4" VerticalAlignment="Center" Foreground="White" HorizontalAlignment="Stretch">
                    </TextBox>
                </Grid>
                    
            </Grid>
        </Border>
    </Grid>
</Window>
