<UserControl x:Class="UcCircularShapedJog.SelectBtn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UcCircularShapedJog"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid x:Name="mainGrid" MouseDown="mainGrid_MouseDown" MouseUp="mainGrid_MouseUp" MouseLeave="mainGrid_MouseLeave" Background="Transparent">
        <Path Stroke="White" StrokeThickness="8" Stretch="None" Width="100" Height="100" Fill="Transparent" >
            <Path.Data>
                <PathGeometry>
                    <PathGeometry.Figures>
                        <PathFigure StartPoint="30, 48">
                            <LineSegment Point="49, 63"/>
                            <LineSegment Point="70, 33"/>
                        </PathFigure>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
        </Path>
    </Grid>
</UserControl>

