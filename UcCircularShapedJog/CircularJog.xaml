                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FF9fa3ac" Offset="0"/>
                                            <GradientStop Color="Transparent" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#423f3f"/>
                                </Trigger>
                                <!--<Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Fill" TargetName="BtnBackground">
                                        <Setter.Value>
                                            <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                                <GradientStop Color="White" Offset="0"/>
                                                <GradientStop Color="White" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>-->
                                <Trigger Property="IsEnabled" Value="False">
                                    <!--<Setter Property="Fill" TargetName="BtnBackground" Value="#1c1a1a"/>-->
                                    <Setter Property="Fill" TargetName="BtnBackground" Value="#998e8e"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="Background" Value="#302e2e"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Margin" Value="8"/>
                <Setter Property="BorderBrush" Value="Red"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>
            <ValueConvert:EnableLockMultiConverter x:Key="LockConverter"/>
        </ResourceDictionary>
        
    </UserControl.Resources>
