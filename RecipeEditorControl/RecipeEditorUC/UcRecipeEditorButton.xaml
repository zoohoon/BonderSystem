<UserControl x:Class="RecipeEditorControl.RecipeEditorUC.UcRecipeEditorButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecipeEditorControl.RecipeEditorUC"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border x:Name="editBtn" BorderThickness="0.8"
            Margin="5"
            MouseDown="editBtn_MouseDown" 
            MouseUp="editBtn_MouseUp" 
            MouseLeave="editBtn_MouseLeave"
            >
        <Border.BitmapEffect>
            <DropShadowBitmapEffect x:Name="btnImageEffect"
                                    Color="LightGray"
                                    ShadowDepth="5.6"
                                    Softness="0"/>
        </Border.BitmapEffect>
        <Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
            </Grid>
            <TextBlock x:Name="btnText"
                   Grid.Row="0"
                   Foreground="White" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"                   
                   TextTrimming="CharacterEllipsis"
                   TextWrapping="NoWrap"/>
            <ContentControl x:Name="btnContent"/>
        </Grid>
    </Border>
</UserControl>
