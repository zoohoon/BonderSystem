<UserControl x:Class="RecipeEditorControl.RecipeEditorUC.UcRecipeEditorCmdButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecipeEditorControl.RecipeEditorUC"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <local:UcRecipeEditorButton Grid.Column="5" 
                                    BtnCaption="{Binding Caption}"                                      
                                    BtnCommand="{Binding BtnCommand}" 
                                    BtnCommandParameter="{Binding }"
                                    BtnForeground="Black"
                                    ShadowDepth="1"
                                    BtnBackground="White"
                                    />
    </Grid>
</UserControl>