<UserControl x:Class="ManualJogView.ChuckCenterOffsetMeasuerment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManualJogView"
             mc:Ignorable="d" 
            d:DesignHeight="210" d:DesignWidth="200" Background="Transparent">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="JogButtonStyle" TargetType="{x:Type Button}">
                <Setter Property="FontSize" Value="19"></Setter>
                <Setter Property="FontFamily" Value="NanumGothic"></Setter>
                <Setter Property="Margin" Value="8,8,8,8"></Setter>
                <Setter Property="MinHeight" Value="36"></Setter>
                <Setter Property="MinWidth" Value="48"></Setter>
                <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
                <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        </Grid.Resources>

        <Border Background="Black" BorderBrush="LightGray" BorderThickness="1.5" Grid.Column="0" Grid.RowSpan="3">
            <StackPanel Margin="0 0 0 0" >
                <StackPanel Orientation="Horizontal">
                    <Label Content="CenterXOffset" Foreground="Red" Margin="0 0 0 0 " FontSize="12"/>
                    <TextBox Text="{Binding ChuckCenterOffsetX}" Width="80" Foreground="LightGreen" Margin="0 0 0 0 " FontSize="12"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="CenterYOffset" Foreground="Red" Margin="0 0 0 0 " FontSize="12"/>
                    <TextBox Text="{Binding ChuckCenterOffsetY}" Width="80" Foreground="LightGreen" Margin="0 0 0 0 " FontSize="12"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="DegreeZ0" Foreground="Red" Margin="0 0 0 0 " FontSize="12"/>
                    <TextBox Text="{Binding DegreeZ0 }" Width="80" Foreground="LightGreen" Margin="0 0 0 0 " FontSize="12"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="DegreeZ1" Foreground="Red" Margin="0 0 0 0 " FontSize="12"/>
                    <TextBox Text="{Binding DegreeZ1}" Width="80" Foreground="LightGreen" Margin="0 0 0 0 " FontSize="12"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="DegreeZ2" Foreground="Red" Margin="0 0 0 0 " FontSize="12"/>
                    <TextBox Text="{Binding DegreeZ2}" Width="80" Foreground="LightGreen" Margin="0 0 0 0 " FontSize="12"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Radius" Foreground="Red" Margin="0 0 0 0 " FontSize="12"/>
                    <TextBox Text="{Binding Radius}" Width="80" Foreground="LightGreen" Margin="0 0 0 0 " FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
