<UserControl x:Class="ManualJogView.UCStageButtons2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManualJogView"
             mc:Ignorable="d" 
            d:DesignHeight="210" d:DesignWidth="100" Background="Transparent">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="JogButtonStyle" TargetType="{x:Type Button}">
                <Setter Property="FontSize" Value="19"></Setter>
                <Setter Property="FontFamily" Value="NanumGothic"></Setter>
                <Setter Property="MinHeight" Value="36"></Setter>
                <Setter Property="MinWidth" Value="48"></Setter>
                <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
                <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        </Grid.Resources>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Button Content="Wafer&#10;Move&#10;Middle"  Grid.Row="0" 
                Background="LightGray" FontSize="12" VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center" FontWeight="Bold"
                Command="{Binding WaferMoveMiddleCommand}"
                IsEnabled="{Binding StageButtonsVisibility}"/>

            <Button Content="Wafer&#10;Move&#10;Rear"  Grid.Row="0" Grid.Column="1"
                Background="LightGray" FontSize="12" VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center" FontWeight="Bold"
                Command="{Binding WaferMoveRearCommand}"
                IsEnabled="{Binding StageButtonsVisibility}"/>

            <Button Content="Loader&#10;Door&#10;Open"  Grid.Row="1" Grid.Column="0"
                Background="LightGray" FontSize="12" VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center" FontWeight="Bold"
                Command="{Binding LoaderDoorOpenCommand}"
                IsEnabled="{Binding StageButtonsVisibility}"/>

            <Button Content="Loader&#10;Door&#10;Close"  Grid.Row="1" Grid.Column="1"
                Background="LightGray" FontSize="12" VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center" FontWeight="Bold"
                Command="{Binding LoaderDoorCloseCommand}"
                IsEnabled="{Binding StageButtonsVisibility}"/>

            <Button Content="ChuckPlainTest"  Grid.Row="2" Grid.ColumnSpan="2"
                Background="LightGray" FontSize="12" VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center" FontWeight="Bold"
                Command="{Binding MeasurementChuckPlainCommand}"
                IsEnabled="{Binding StageButtonsVisibility}"/>
        </Grid>
        
    </Grid>
</UserControl>
