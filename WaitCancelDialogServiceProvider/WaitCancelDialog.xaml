<dialogs:CustomDialog x:Class="WaitCancelDialogServiceProvider.WaitCancelDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WaitCancelDialogServiceProvider"
             xmlns:dialogs="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             xmlns:MahControls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" Background="Transparent"
             AutomationProperties.AutomationId="DiagWaitCancel">

    <dialogs:CustomDialog.Resources>

        <LinearGradientBrush x:Key="OrangeBrush" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Orange" Offset="0"/>
            <GradientStop Color="Orange" Offset="1"/>
        </LinearGradientBrush>
        
    </dialogs:CustomDialog.Resources>
    
    <Grid Name="mainpane">

        <StackPanel Orientation="Vertical">

            <MahControls:ProgressRing Foreground="{DynamicResource OrangeBrush}"/>

            <TextBlock  
                 FontSize="25"
                 FontWeight="Bold"
                 Foreground="WhiteSmoke"
                 Text ="{Binding Message}"
                 TextWrapping="Wrap"
                 HorizontalAlignment="Center"/>
            <TextBlock  
                 FontSize="20"
                 FontWeight="Bold"
                 Foreground="WhiteSmoke"
                 Text="{Binding WaitTimerElapsed}" 
                 TextWrapping="Wrap"
                 HorizontalAlignment="Center"/>

            <Button x:Name="PART_NegativeButton"
                    Width="50"
                    Height="40"
                    Content="{Binding cancelButtonContent}"
                    IsEnabled="{Binding isEnableCancelButton}"
                    Visibility="{Binding IsUseCancelButton}"
                    Command="{Binding cmdNegativeButtonClick}"/>

        </StackPanel>
        
    </Grid>
</dialogs:CustomDialog>
