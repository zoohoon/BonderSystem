<UserControl x:Class="AppSelector.UCAppSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppSelector"
             xmlns:conv="clr-namespace:AppSelector.Converter"
             xmlns:valueConvert="clr-namespace:ValueConverters;assembly=ValueConverters"   
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"   
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="12"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             FontFamily="{DynamicResource MaterialDesignFont}" 
             mc:Ignorable="d" 
             x:Name="ucappseletor"
             Height="90" Width="520">

    <UserControl.Resources>
        <valueConvert:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter1" True="Visible" False="Collapsed"/>
        <valueConvert:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter2" True="Collapsed" False="Visible"/>
        <conv:BoolToVisibilityConverter x:Key="BtoVConv" />
    </UserControl.Resources>

    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.35*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        
        <Grid  Grid.Column="0">

            <Border Margin="4,0,4,4"
                    BorderBrush="#474343" BorderThickness="0.8" >
                <Label VerticalAlignment="Center" HorizontalAlignment="Center" 
                       FontSize="18" 
                       BorderThickness="0"
                       Style="{DynamicResource TitleBorderLabel}" 
                       Content="User Menu" 
                       />
            </Border>

            <DockPanel Width="30" Height="32" 
                       HorizontalAlignment="Right" VerticalAlignment="Top" 
                       IsEnabled="{Binding Path = IsEnabled, ElementName=ucappseletor}">
                <materialDesign:PopupBox DockPanel.Dock="Top"  
                                         PlacementMode="RightAndAlignTopEdges" 
                                         StaysOpen="True" >
                    <Grid MinWidth="212">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="360*"/>
                            <RowDefinition Height="80*"/>
                        </Grid.RowDefinitions>
                        <ItemsControl ItemsSource="{Binding AppItems}" Grid.IsSharedSizeScope="True" Grid.Row="0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="local:AppModuleItem">
                                    <Border x:Name="Border" Padding="8" BorderThickness="0 0 0 1" BorderBrush="{DynamicResource MaterialDesignDivider}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition SharedSizeGroup="Checkerz" Width="1*"/>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>
                                            <ToggleButton VerticalAlignment="Center" IsChecked="{Binding IsSelected}"
                                                              Style="{StaticResource MaterialDesignActionLightToggleButton}"
                                                              Content="{Binding Code}" />
                                            <StackPanel Margin="8 0 0 0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left">
                                                <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                                                <TextBlock Text="{Binding Description}" />
                                            </StackPanel>
                                            <StackPanel Margin="8 0 0 0" Grid.Column="2" VerticalAlignment="Center">
                                                <Button IsEnabled="{Binding IsSelected}"
                                                                Command="{Binding RaisePropertyCommand}">
                                                    <Image Source="pack://application:,,,/ImageResourcePack;component/Images/AppDeleteIcon.png"
                                                                   Height="20" Width="30"></Image>
                                                </Button>
                                                <!--<ToggleButton  Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                                                                       IsChecked="{Binding IsSelected}"
                                                                       Content="DEL">
                                                        </ToggleButton>-->
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource MaterialDesignSelection}" />
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!--<Grid Grid.Row="1" Margin="4">
                            <Grid.ColumnDefinitions>
                                --><!--<ColumnDefinition Width="48*" />
                                        <ColumnDefinition Width="96*" />--><!--
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            --><!--<Button Style="{StaticResource MaterialDesignFloatingActionLightButton}"
                                Command="{Binding SaveComand}"
                                materialDesign:ButtonProgressAssist.IsIndicatorVisible="{Binding IsSaving}"
                                materialDesign:ButtonProgressAssist.Value="{Binding SaveProgress}"
                                Grid.Column="0" HorizontalAlignment="Stretch" Width="32" Height="32" VerticalAlignment="Center">
                                --><!-- simple example of toggling/animating pack icon with a data trigger--><!--
                                <materialDesign:PackIcon Height="18" Width="18">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon" BasedOn="{StaticResource {x:Type materialDesign:PackIcon}}">
                                            <Setter Property="Kind" Value="CloudSync" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSaveComplete}" Value="True">
                                                    <Setter Property="Kind" Value="Check" />
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.8" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>
                            </Button>
                            <Viewbox Grid.Column="1" Grid.ColumnSpan="2">
                                <TextBlock Margin="8" FontWeight="Bold" TextWrapping="Wrap" Text="Save" />
                            </Viewbox>--><!--
                        </Grid>-->
                    </Grid>
                </materialDesign:PopupBox>
            </DockPanel>

        </Grid>


        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.RowSpan="2" >

                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="2,2,2,2">
                    <ItemsControl ItemsSource="{Binding LotOPModule.AppItems.Items}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="local:AppModuleItem">
                                <materialDesign:Badged Margin="2 8 -2.8 -10" Badge="{Binding Badge}" 
                                                   Visibility="{Binding IsSelected, Converter={StaticResource BtoVConv}}">
                                    <!--<Button Width="96" Content="{Binding Name}"
                                                        Command="{Binding SwitchPage }" 
                                                        CommandParameter="{Binding Content}">
                                                </Button>-->
                                    <Button AutomationProperties.AutomationId="{Binding Name}"
                                            Style="{DynamicResource ImageIConBtnStyle}" Width="54" Height="64" Margin="0,4,4,4"
                                            Command="{Binding SwitchPage }" 
                                            CommandParameter="{Binding Content}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <!--<RowDefinition Height="32*"/>
                                                        <RowDefinition Height="18*"/>-->
                                                <RowDefinition Height="2*"/>
                                                <RowDefinition Height="1*"/>
                                            </Grid.RowDefinitions>

                                            <Path   Data="{Binding PathData}" 
                                                    Visibility="{Binding IsPathData, Converter={StaticResource BooleanToVisibilityConverter1}}"
                                                    Height="40" 
                                                    Width="32" 
                                                    Grid.Row="0"
                                                    Fill="LightGray"
                                                    Stretch="Uniform"
                                                    HorizontalAlignment="Center"
                                                    />
                                            
                                            <materialDesign:PackIcon 
                                                    Kind="{Binding Icon}"
                                                    Visibility="{Binding IsPathData, Converter={StaticResource BooleanToVisibilityConverter2}}"
                                                    Height="40" 
                                                    Width="32" 
                                                    Grid.Row="0" 
                                                    HorizontalAlignment="Center" 
                                                    BorderBrush="LightGray"/>
                                            
                                            <TextBlock Text="{Binding Name}" FontSize="12" TextTrimming="CharacterEllipsis" Grid.Row="1" TextAlignment="Center"/>
                                            
                                        </Grid>
                                        
                                        <Button.Effect>
                                            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="8" BlurRadius="3" Opacity="0.7" />
                                        </Button.Effect>
                                    </Button>
                                </materialDesign:Badged>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Grid>
        <!--</DockPanel>-->

        <!--</materialDesign:DialogHost>-->
    </Grid>
</UserControl>
