<dialog:CustomDialog x:Class="UcDisplayPortDialogView.DisplayPortDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UcDisplayPortDialogView"
             xmlns:prober="clr-namespace:ProberInterfaces;assembly=ProberInterfaces"
             xmlns:dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             xmlns:pnpcontrol="clr-namespace:PnPControl;assembly=PnPControl"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600">
        
    <!--<dialog:CustomDialog.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="DisplayViewTemplate" DataType="{x:Type prober:IDisplayPort}" >
                <ContentControl Name="DisPlay" Content="{Binding }">
                </ContentControl>
            </DataTemplate>
            <pnpcontrol:TemplateSelector x:Key="ViewTargetTemplateSelector" 
                                    DisplayViewDataTemplate="{StaticResource DisplayViewTemplate}"/>
        </ResourceDictionary>
    </dialog:CustomDialog.Resources>-->

    <Grid Background="Black" Margin="10,5,10,10">
        <Grid.Resources>
            <ResourceDictionary>
                <DataTemplate x:Key="DisplayViewTemplate" DataType="{x:Type prober:IDisplayPort}" >
                    <ContentControl Name="DisPlay" Content="{Binding }">
                    </ContentControl>
                </DataTemplate>
                <pnpcontrol:TemplateSelector x:Key="ViewTargetTemplateSelector" 
                                    DisplayViewDataTemplate="{StaticResource DisplayViewTemplate}"/>
            </ResourceDictionary>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="480*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                Grid.Row="0"
                Padding="10"
                FontSize="20"
                Foreground="White"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Text="{Binding NameTag}"/>

            <TextBlock Grid.Column="1"
                Grid.Row="0"
                Padding="10"
                FontSize="20"
                Foreground="White"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Text="Align"/>

        </Grid>

        <Grid Grid.Row="1" Margin="10,10,10,10">
            <ContentControl Content="{Binding DisplayPort}" 
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Center"
                        ContentTemplateSelector="{StaticResource ViewTargetTemplateSelector}"
                        Background="Black"
                        Opacity="1"
                        Width="500"
                        Height="500"/>
        </Grid>
    </Grid>
</dialog:CustomDialog>