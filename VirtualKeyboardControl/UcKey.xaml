<UserControl x:Class="VirtualKeyboardControl.UcKey"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VirtualKeyboardControl"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Border x:Name="keyBorder" BorderBrush="White" Background="Transparent" BorderThickness="2" CornerRadius="5" Margin="2" MouseDown="keyBorder_MouseDown" MouseUp="keyBorder_MouseUp" MouseLeave="keyBorder_MouseLeave">
        <Grid Background="Transparent">
            <TextBlock x:Name="keyTextBlock" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>
