<UserControl x:Class="UcSideViewer.ExpanderItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UcSideViewer"
             Width="242" Background="Transparent">

    <Border BorderThickness="1" BorderBrush="#FF343434">
        <Expander x:Name="ExpanderHeader" HorizontalAlignment="Stretch" Background="Transparent" FontWeight="Bold" Width="250">
            <TextBlock x:Name="ExpanderContents" TextWrapping="Wrap" Margin="4" FontWeight="Bold"/>
        </Expander>
    </Border>
</UserControl>
