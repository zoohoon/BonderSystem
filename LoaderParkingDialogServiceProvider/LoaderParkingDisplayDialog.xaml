<dialogs:CustomDialog x:Class="LoaderParkingDialogServiceProvider.LoaderParkingDisplayDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoaderParkingDialogServiceProvider"
             xmlns:dialogs="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             mc:Ignorable="d" FontSize="24"
             d:DesignHeight="550" d:DesignWidth="1024">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="3" Grid.Row="1" Width="700" Text="{Binding LoaderParkingMessage}" FontSize="30" FontWeight="Bold"/>
        <Button Grid.Column="2" Grid.Row="2" Width="150" Height="80" Content="CLEAR" Command="{Binding OKCommand}"/>
    </Grid>
</dialogs:CustomDialog>
