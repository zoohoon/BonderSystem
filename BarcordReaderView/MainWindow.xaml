<Window x:Class="BarcordReaderView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarcordReaderView"
        mc:Ignorable="d"
        Title="Barcode Reader" Height="100" Width="500" Closed="Window_Closed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Column="0" Text="{Binding BacordString}" FontSize="24" Foreground="Black" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="5" IsReadOnly="True"/>
        <Button x:Name="ClearBtn" Grid.Column="1" Margin="10" Click="ClearBtn_Click">Clear</Button>
    </Grid>
</Window>
