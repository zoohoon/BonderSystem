<Window x:Class="SECS_Host.View.Dialog_ChangeConnInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SECS_Host.View"
        mc:Ignorable="d"
        Title="Dialog_ChangeConfInfo" Height="320" Width="640">
    <Grid>
        <GroupBox Header="Connect Infomation">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" DataContext="{Binding ConnInfo}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Device ID:"
                           HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
                    <Label Grid.Row="1" Grid.Column="0" Content="IP:"
                           HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
                    <Label Grid.Row="2" Grid.Column="0" Content="Port:"
                           HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
                    <Label Grid.Row="3" Grid.Column="0" Content="Retry Limit:"
                           HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
                    <Label Grid.Row="4" Grid.Column="0" Content="LinkTestInterval:"
                           HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
                    <Label Grid.Row="5" Grid.Column="0" Content="Connect Mode:"
                           HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>

                    <TextBox Grid.Row="0" Grid.Column="1" Margin="8"
                             Name="tbHost" Text="{Binding DeviceID}"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Margin="8" 
                             Name="tbIP" Text="{Binding IP}"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Margin="8" 
                             Name="tbPort" Text="{Binding Port}"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Margin="8" 
                             Name="tbRetryLimit" Text="{Binding RetryLimit}"/>
                    <TextBox Grid.Row="4" Grid.Column="1" Margin="8" 
                             Name="tbLinkTestInterval" Text="{Binding LinkTestInterval}"/>
                    <ComboBox Grid.Row="5" Grid.Column="1" Margin="8"
                             Name="combConnectMode" Text="{Binding ConnectMode}">
                        <ComboBoxItem>
                            <Label Content="Active"/>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <Label Content="Passive"/>
                        </ComboBoxItem>
                    </ComboBox>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <GroupBox Grid.Row="0" Header="Time Out" DataContext="{Binding ConnInfo}">
                        <ItemsControl ItemsSource="{Binding TimeoutTimeList}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="{Binding Name}"/>
                                        <Label Content=":"/>
                                        <TextBox Width="30" Text="{Binding TimeOutTime}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </GroupBox>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Name="btnDefalult" Grid.Column="0" Margin="8" Content="Defalult" IsEnabled="False"/>
                        <Button Name="btnApply" Grid.Column="1" Margin="8" Content="Apply"
                                Command="{Binding Path=ApplyConnInfoCommand}"/>
                    </Grid>
                </Grid>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
