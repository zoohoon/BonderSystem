<Window x:Class="SECS_Host.View.Dialog_RequestEquipSV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SECS_Host.View"
        mc:Ignorable="d"
        Title="Dialog_RequestEquipSV" Height="480" Width="800" Closing="Window_Closing">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="56*"/>
        </Grid.ColumnDefinitions>

        <DataGrid Grid.Column="0" Margin="8" ItemsSource="{Binding EquipCollection}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="V" Width="8" 
                                        Binding="{Binding IsChecked}"/>
                <DataGridTextColumn Header="SVNAME" IsReadOnly="True"
                                    Binding="{Binding SVNAME}" Width="7*"/>
                <DataGridTextColumn Header="SVID" IsReadOnly="True"
                                    Binding="{Binding SVID}" Width="5*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Column="1" Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Margin="8" Content="Request SV"
                    Command="{Binding Path=SendRequestStatusCommand}"/>

            <GroupBox   Grid.Row="1"    Grid.RowSpan="2"    Header="SV Trace">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition      Height="*"/>
                            <RowDefinition      Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition   Width="54*"/>
                            <ColumnDefinition   Width="72*"/>
                            <ColumnDefinition   Width="54*"/>
                            <ColumnDefinition   Width="72*"/>
                        </Grid.ColumnDefinitions>

                        <Label      Grid.Row="0"    Grid.Column="0"     Content="TRID :"/>
                        <TextBox    Grid.Row="0"    Grid.Column="1"     Margin="4"
                                    PreviewTextInput="TextBox_PreviewTextInput"
                                    Text="{Binding TRID}"   />

                        <Label      Grid.Row="0"    Grid.Column="2"     Content="DSPER :"/>
                        <TextBox    Grid.Row="0"    Grid.Column="3"     Margin="4" 
                                    PreviewTextInput="TextBox_PreviewTextInput"
                                    MaxLength="8"
                                    Text="{Binding DSPER}"  />

                        <Label      Grid.Row="1"    Grid.Column="0"     Content="TOTSMP :"/>
                        <TextBox    Grid.Row="1"    Grid.Column="1"     Margin="4"
                                    PreviewTextInput="TextBox_PreviewTextInput"
                                    Text="{Binding TOTSMP}" />

                        <Label      Grid.Row="1"    Grid.Column="2"     Content="REPGSZ :"/>
                        <TextBox    Grid.Row="1"    Grid.Column="3"     Margin="4" 
                                    PreviewTextInput="TextBox_PreviewTextInput"
                                    Text="{Binding REPGSZ}" />

                    </Grid>
                    <Button     Grid.Row="1"    Margin="8"  Content="Start SV Trace"
                                Command="{Binding Path=StartSVTraceCommand}"/>
                </Grid>
            </GroupBox>

            <Button Grid.Row="7" Margin="8" Content="Cancel"
                    Command="{Binding Path=DialogCancelCommand}"/>
        </Grid>
    </Grid>
</Window>
