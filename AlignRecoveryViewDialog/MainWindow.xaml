<Window x:Class="AlignRecoveryViewDialog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:AlignRecoveryViewDialog"
        mc:Ignorable="d"
         Title="Align Recovery " Height="400" Width="600" Background="Gray" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*"/>
            <RowDefinition Height="1.3*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Orientation="Horizontal">
            <Label FontSize="50" Margin="0" Padding="5" >CELL</Label>
            <Label FontSize="50" Margin="0" Padding="5" Content="{Binding Index}"></Label>
        </StackPanel>
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Border  BorderBrush="DimGray" BorderThickness="3" Margin="4">
                <ListView Grid.Row="2" 
                  x:Name="uiListView" 
                  HorizontalAlignment="Stretch" 
                  BorderBrush="Black" BorderThickness="1"
                  SelectionMode="Single" 
                  ItemsSource="{Binding RecoveryDataList}"
                  VirtualizingPanel.IsVirtualizing="False"
                  ScrollViewer.VerticalScrollBarVisibility="Disabled"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  >
                    <ListView.View>
                        <GridView  >
                            <GridView.ColumnHeaderContainerStyle>
                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                    <Setter Property="IsEnabled" Value="False"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Height" Value="0"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </GridView.ColumnHeaderContainerStyle>
                            <GridViewColumn Header=""   Width="200"  >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Label FontSize="20" Content="{Binding Path=ModuleName}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="" Width="150" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Label FontSize="20" Content="{Binding Path=State}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="" Width="230" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button IsEnabled="{Binding Path=IsRecovery}" Foreground="White" Width="100" Height="50" Margin="60,0,0,0" Background="Orange" HorizontalAlignment="Center" Command="{Binding Path=DataContext.GoToRecoveryCommand, RelativeSource={RelativeSource AncestorType={x:Type Window},Mode=FindAncestor}}"  CommandParameter="{Binding ModuleName}">RECOVERY</Button>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
        </Grid>
       
      
        <Grid Grid.Row="3"  Grid.Column="0" >
            <Button Name="CancelBtn" Click="CancelBtn_Click" FontSize="30" Foreground="Black">CANCEL</Button>
        </Grid>
    </Grid>
</Window>
