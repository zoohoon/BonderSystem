<UserControl x:Class="ChuckTiltHexagonJog.UcChuckTiltHexagonJog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChuckTiltHexagonJog"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>

        <Canvas Name="MainCanvas" Width="300" Height="300">
            <Line x:Name="ZAxisSepLineHor" Visibility="Hidden" Canvas.Left="50" Canvas.Top="50" X1="0" Y1="100" X2="200" Y2="100" StrokeThickness="3" Stroke="White" />
            <Line x:Name="ZAxisSepLineVer" Visibility="Hidden" Canvas.Left="50" Canvas.Top="50" X1="100" Y1="0" X2="100" Y2="200" StrokeThickness="3" Stroke="White" />

            <Label x:Name="ZAxisSmallPlusLabel"     Visibility="Hidden" Canvas.Left="60" Canvas.Top="60" Content="+" Foreground="White" Width="60" Height="60" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" FontWeight="Bold"/>
            <Label x:Name="ZAxisSmallMinusLabel"    Visibility="Hidden" Canvas.Left="60" Canvas.Bottom="60" Content="-" Foreground="White" Width="60" Height="60" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" FontWeight="Bold"/>
            <Label x:Name="ZAxisBigPlusLabel"       Visibility="Hidden" Canvas.Left="160" Canvas.Top="50" Content="+" Foreground="White" Width="60" Height="60" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="45" FontWeight="Bold"/>
            <Label x:Name="ZAxisBigMinusLabel"      Visibility="Hidden" Canvas.Left="160" Canvas.Bottom="70" Content="-" Foreground="White" Width="60" Height="60" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="45" FontWeight="Bold"/>

            <Grid x:Name="StickJog" Height="50" Width="50" Canvas.Left="125" Canvas.Top="125" >
                <Ellipse x:Name="StickJogEllip" Height="50" Width="50">
                    <Ellipse.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="White" Offset="0"/>
                        </LinearGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <TextBlock x:Name="ZLabel" Visibility="Hidden" Text="Z" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold"/>
            </Grid>
            <Ellipse x:Name="StickJogArea" 
                     Canvas.Left="40" 
                     Canvas.Top="40" 
                     Width="220" 
                     Height="220" 
                     MouseDown="StickJogArea_MouseDown" 
                     MouseUp="StickJogArea_MouseUp" 
                     MouseMove="StickJogArea_MouseMove" 
                     Opacity="0.25" Fill="White"
                     Stroke="Gray"
                     StrokeThickness="2"/>
        </Canvas>

        <!--UnVisible Button & For Command Binding-->
        <!--<Button x:Name="StickJogIndexMoveControl" Command="{Binding StickJogIndexMoveCommand}" Visibility="Collapsed"/>
        <Button x:Name="StickJogStepMoveControl" Command="{Binding StickJogStepMoveCommand}" Visibility="Collapsed"/>

        <Button x:Name="StickJogScanMoveChangeControl" Command="{Binding StickJogScanMoveChangeCommand}" Visibility="Collapsed"/>
        <Button x:Name="StickJogScanMoveEndControl" Command="{Binding StickJogScanMoveEndCommand}" Visibility="Collapsed"/>-->
    </Grid>
</UserControl>
