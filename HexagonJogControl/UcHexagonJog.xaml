<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HexagonJogControl"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             x:Class="HexagonJogControl.UcHexagonJog"
             mc:Ignorable="d" 
             x:Name="ucwindow"
             AutomationProperties.AutomationId="UCHexagonJog"
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ToggleButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" True="Collapsed" False="Visible"/>
            <Style x:Key="RoundButtonTemplate" TargetType="Button">
                <Setter Property="Background" Value="Brown"/>
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="30" Background="{TemplateBinding Background}"
                                BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">

                                </ContentPresenter>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <local:BtnTrapezoidArrow AutomationProperties.AutomationId="IndexMoveLeftUpbtn" 
                                 x:Name="IndexMoveLeftUpBtn" HorizontalAlignment="Left" VerticalAlignment="Top" MouseDown="BtnTrapezoidArrow_MouseDown"/>

        <local:BtnTrapezoidArrow AutomationProperties.AutomationId="IndexMoveRightUpbtn" 
                                 x:Name="IndexMoveRightUpBtn"  HorizontalAlignment="Right" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" MouseDown="BtnTrapezoidArrow_MouseDown" >
            <local:BtnTrapezoidArrow.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="90"/>
                </TransformGroup>
            </local:BtnTrapezoidArrow.RenderTransform>
        </local:BtnTrapezoidArrow>

        <local:BtnTrapezoidArrow AutomationProperties.AutomationId="IndexMoveLeftDownbtn" 
                                 x:Name="IndexMoveLeftDown" HorizontalAlignment="Left" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5" MouseDown="BtnTrapezoidArrow_MouseDown" >
            <local:BtnTrapezoidArrow.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="-90"/>
                </TransformGroup>
            </local:BtnTrapezoidArrow.RenderTransform>
        </local:BtnTrapezoidArrow>

        <local:BtnTrapezoidArrow AutomationProperties.AutomationId="IndexMoveRightDownbtn" 
                                 x:Name="IndexMoveRightDown"  HorizontalAlignment="Right" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5" MouseDown="BtnTrapezoidArrow_MouseDown">
            <local:BtnTrapezoidArrow.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="180"/>
                </TransformGroup>
            </local:BtnTrapezoidArrow.RenderTransform>
        </local:BtnTrapezoidArrow>

        <local:BtnTrapezoidArrow2 AutomationProperties.AutomationId="IndexMoveUpbtn" 
                                  x:Name="IndexMoveUp" HorizontalAlignment="Center" VerticalAlignment="Top" MouseDown="BtnTrapezoidArrow_MouseDown" Margin="100,-2,100,0" />

        <local:BtnTrapezoidArrow2 AutomationProperties.AutomationId="IndexMoveRightbtn" 
                                  x:Name="IndexMoveRight" HorizontalAlignment="Right" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" MouseDown="BtnTrapezoidArrow_MouseDown" Margin="0,100,-2,100" >
            <local:BtnTrapezoidArrow2.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="90"/>
                </TransformGroup>
            </local:BtnTrapezoidArrow2.RenderTransform>
        </local:BtnTrapezoidArrow2>

        <local:BtnTrapezoidArrow2 AutomationProperties.AutomationId="IndexMoveDownbtn" 
                                  x:Name="IndexMoveDown" HorizontalAlignment="Center" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5" MouseDown="BtnTrapezoidArrow_MouseDown" Margin="100,0,100,-2" >
            <local:BtnTrapezoidArrow2.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="180"/>
                </TransformGroup>
            </local:BtnTrapezoidArrow2.RenderTransform>
        </local:BtnTrapezoidArrow2>

        <local:BtnTrapezoidArrow2 AutomationProperties.AutomationId="IndexMoveLeftbtn" 
                                  x:Name="IndexMoveLeft" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" MouseDown="BtnTrapezoidArrow_MouseDown" Margin="-2,100,0,100" >
            <local:BtnTrapezoidArrow2.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="-90"/>
                </TransformGroup>
            </local:BtnTrapezoidArrow2.RenderTransform>
        </local:BtnTrapezoidArrow2>

        <Canvas x:Name="MainCanvas" Width="300" Height="300" PreviewKeyUp="MainCanvas_PreviewKeyUp">
            <Viewbox Canvas.Left="40" Canvas.Top="40">
                <Canvas Width="220" Height="220">
                    
                    <!--UP-->
                    <local:BtnTrapezoidArrow3 AutomationProperties.AutomationId="StepUpbtn" 
                                              x:Name="StepBtnUp" Canvas.Left="60" Canvas.Top="-16" RenderTransformOrigin="0.5,0.5" MouseDown="StepMoveBtn_MouseDown">
                        <local:BtnTrapezoidArrow3.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="315"/>
                            </TransformGroup>
                        </local:BtnTrapezoidArrow3.RenderTransform>
                    </local:BtnTrapezoidArrow3>
                    
                    <!--RIGHT-->
                    <local:BtnTrapezoidArrow3 AutomationProperties.AutomationId="StepRightbtn" 
                                              x:Name="StepBtnRight" Canvas.Right="-16" Canvas.Top="60" RenderTransformOrigin="0.5,0.5" MouseDown="StepMoveBtn_MouseDown">
                        <local:BtnTrapezoidArrow3.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="45"/>
                            </TransformGroup>
                        </local:BtnTrapezoidArrow3.RenderTransform>
                    </local:BtnTrapezoidArrow3>
                    
                    <!--DOWN-->
                    <local:BtnTrapezoidArrow3 AutomationProperties.AutomationId="StepDownbtn" 
                                              x:Name="StepBtnDown" Canvas.Left="60" Canvas.Bottom="-16" RenderTransformOrigin="0.5,0.5" MouseDown="StepMoveBtn_MouseDown">
                        <local:BtnTrapezoidArrow3.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="135"/>
                            </TransformGroup>
                        </local:BtnTrapezoidArrow3.RenderTransform>

                    </local:BtnTrapezoidArrow3>
                    
                    <!--LEFT-->
                    <local:BtnTrapezoidArrow3 AutomationProperties.AutomationId="StepLeftbtn" 
                                              x:Name="StepBtnLeft" Canvas.Left="-16" Canvas.Top="60" RenderTransformOrigin="0.5,0.5"  MouseDown="StepMoveBtn_MouseDown">
                        <local:BtnTrapezoidArrow3.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="225"/>
                            </TransformGroup>
                        </local:BtnTrapezoidArrow3.RenderTransform>
                    </local:BtnTrapezoidArrow3>

                    <!--RIGHTUP-->
                    <local:BtnTrapezoidArrow3 AutomationProperties.AutomationId="StepBtnRightUp" 
                                              x:Name="StepBtnRightUp" Canvas.Left="115" Canvas.Top="5" RenderTransformOrigin="0.5,0.5"  MouseDown="StepMoveBtn_MouseDown">
                        <local:BtnTrapezoidArrow3.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="360"/>
                            </TransformGroup>
                        </local:BtnTrapezoidArrow3.RenderTransform>
                    </local:BtnTrapezoidArrow3>

                    <!--RIGHTDOWN-->
                    <local:BtnTrapezoidArrow3 AutomationProperties.AutomationId="StepBtnRightDown" 
                                              x:Name="StepBtnRightDown" Canvas.Left="115" Canvas.Top="115" RenderTransformOrigin="0.5,0.5"  MouseDown="StepMoveBtn_MouseDown">
                        <local:BtnTrapezoidArrow3.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="90"/>
                            </TransformGroup>
                        </local:BtnTrapezoidArrow3.RenderTransform>
                    </local:BtnTrapezoidArrow3>

                    <!--LEFTDOWN-->
                    <local:BtnTrapezoidArrow3 AutomationProperties.AutomationId="StepBtnLeftDown" 
                                              x:Name="StepBtnLeftDown" Canvas.Left="5" Canvas.Top="115" RenderTransformOrigin="0.5,0.5"  MouseDown="StepMoveBtn_MouseDown">
                        <local:BtnTrapezoidArrow3.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="180"/>
                            </TransformGroup>
                        </local:BtnTrapezoidArrow3.RenderTransform>
                    </local:BtnTrapezoidArrow3>

                    <!--LEFTUP-->
                    <local:BtnTrapezoidArrow3 AutomationProperties.AutomationId="StepBtnLeftUp" 
                                              x:Name="StepBtnLeftUp" Canvas.Left="5" Canvas.Top="5" RenderTransformOrigin="0.5,0.5"  MouseDown="StepMoveBtn_MouseDown">
                        <local:BtnTrapezoidArrow3.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="270"/>
                            </TransformGroup>
                        </local:BtnTrapezoidArrow3.RenderTransform>

                    </local:BtnTrapezoidArrow3>
                    <!--RU-->
                    <local:BtnTrapezoidArrow3 AutomationProperties.AutomationId="StepZBigUpbtn" 
                                              x:Name="StepBtnZBigUp" Canvas.Left="115" Canvas.Top="5" RenderTransformOrigin="0.5,0.5" MouseDown="StepMoveBtn_MouseDown" BtnCaption="M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M13,7H11V11H7V13H11V17H13V13H17V11H13V7Z" BtnCaptionWidth="48" BtnCaptionAngle="0" BtnForeground="OrangeRed">
                        <local:BtnTrapezoidArrow3.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="0"/>
                            </TransformGroup>
                        </local:BtnTrapezoidArrow3.RenderTransform>
                    </local:BtnTrapezoidArrow3>
                    <!--RD-->
                    <local:BtnTrapezoidArrow3 AutomationProperties.AutomationId="StepZBigDownbtn"
                                              x:Name="StepBtnZBigDown" Canvas.Left="115" Canvas.Bottom="5" RenderTransformOrigin="0.5,0.5" MouseDown="StepMoveBtn_MouseDown" BtnCaption="M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M7,13H17V11H7" BtnCaptionWidth="48" BtnCaptionAngle="90" BtnForeground="OrangeRed">
                        <local:BtnTrapezoidArrow3.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="90"/>
                            </TransformGroup>
                        </local:BtnTrapezoidArrow3.RenderTransform>
                    </local:BtnTrapezoidArrow3>
                    <!--LD-->
                    <local:BtnTrapezoidArrow3 AutomationProperties.AutomationId="StepZSmallDownbtn"
                                              x:Name="StepBtnZSmallDown" Canvas.Left="5" Canvas.Bottom="5" RenderTransformOrigin="0.5,0.5" MouseDown="StepMoveBtn_MouseDown"  BtnCaption="M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M7,13H17V11H7" BtnCaptionWidth="24" BtnCaptionAngle="0" BtnForeground="OrangeRed">
                        <local:BtnTrapezoidArrow3.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="180"/>
                            </TransformGroup>
                        </local:BtnTrapezoidArrow3.RenderTransform>

                    </local:BtnTrapezoidArrow3>
                    <!--LU-->
                    <local:BtnTrapezoidArrow3 AutomationProperties.AutomationId="StepZSmallUpbtn"
                                              x:Name="StepBtnZSmallUp" Canvas.Left="5" Canvas.Top="5" RenderTransformOrigin="0.5,0.5"  MouseDown="StepMoveBtn_MouseDown"  BtnCaption="M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M13,7H11V11H7V13H11V17H13V13H17V11H13V7Z" BtnCaptionWidth="24" BtnCaptionAngle="0" BtnForeground="OrangeRed">
                        <local:BtnTrapezoidArrow3.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="270"/>
                            </TransformGroup>
                        </local:BtnTrapezoidArrow3.RenderTransform>
                    </local:BtnTrapezoidArrow3>
                </Canvas>
            </Viewbox>

        </Canvas>

        <ToggleButton AutomationProperties.AutomationId="StepMoveDistanceSwitchtbtn"
                      x:Name="StepMoveDistanceSwitch" 
                      Width="40" 
                      Height="40" 
                      Margin="260,10,-10,250"
                      Background="Gray"
                      Style="{StaticResource MaterialDesignActionToggleButton}">

            <materialDesign:ToggleButtonAssist.OnContent>
                <TextBlock Foreground="White"  Text="x10"/>
            </materialDesign:ToggleButtonAssist.OnContent>
                <TextBlock Foreground="White"  Text="x1"/>
        </ToggleButton>

        <ToggleButton AutomationProperties.AutomationId="XYZSwitchtbtn"
                      x:Name="XYZSwitch" 
                      Width="40" 
                      Height="40" 
                      Margin="260,0,-10,-250"
                      Background="Gray"
                      Style="{StaticResource MaterialDesignActionToggleButton}" Checked="XYZSwitch_Checked" Unchecked="XYZSwitch_Unchecked">

            <materialDesign:ToggleButtonAssist.OnContent>
                <TextBlock Foreground="White"  Text="Z"/>
            </materialDesign:ToggleButtonAssist.OnContent>
                <TextBlock Foreground="White"  Text="XY"/>
        </ToggleButton>
        
        <Button x:Name="XYZCustom" Content="CU" FontSize="18" Click="XYZCustom_Click"
                      Width="43" 
                      Height="43" 
                      Background="Gray"
                      Margin="-280,0,-10,250"
                Style="{StaticResource RoundButtonTemplate}">
        </Button>

        <Viewbox Grid.RowSpan="2" Grid.ColumnSpan="4" Width="24" Height="24" VerticalAlignment="Top" HorizontalAlignment="Center" 
                     Visibility="{Binding IsEnabled, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=ucwindow}">
            <Canvas Width="24" Height="24">
                <Canvas.Effect>
                    <DropShadowEffect Color="Green" Direction="90" Opacity="1" BlurRadius="2" ShadowDepth ="3"/>
                </Canvas.Effect>
                <Path Data="M12,17A2,2 0 0,0 14,15C14,13.89 13.1,13 12,13A2,2 0 0,0 10,15A2,2 0 0,0 12,17M18,8A2,2 0 0,1 20,10V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V10C4,8.89 4.9,8 6,8H7V6A5,5 0 0,1 12,1A5,5 0 0,1 17,6V8H18M12,3A3,3 0 0,0 9,6V8H15V6A3,3 0 0,0 12,3Z" Fill="#FEBE38"/>
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
