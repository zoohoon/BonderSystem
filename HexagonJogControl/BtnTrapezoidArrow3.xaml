<UserControl x:Class="HexagonJogControl.BtnTrapezoidArrow3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HexagonJogControl"
             mc:Ignorable="d" 
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
             d:DesignWidth="110" d:DesignHeight="110">
    <Grid>
        <Path x:Name="mainGrid1" Stroke="DarkGray" StrokeThickness="0.5" Stretch="None"  Width="100" Height="100" MouseDown="mainGrid_MouseDown" MouseUp="mainGrid_MouseUp" MouseLeave="mainGrid_MouseLeave">
            <Path.Fill>
                <RadialGradientBrush GradientOrigin="0 1">
                    <GradientStop Offset="0" Color="#FF494949" />
                    <GradientStop Offset="0.1" Color="Gray" />
                    <GradientStop Offset="0.5" Color="Black" />
                </RadialGradientBrush>
            </Path.Fill>
            <Path.Data>
                <PathGeometry>
                    <PathGeometry.Figures>
                        <PathFigure StartPoint="0, 0" IsClosed="true">
                            <LineSegment Point="0, 91"/>
                            <ArcSegment   Point="9, 100" Size="13 13" SweepDirection="Clockwise"/>
                            <LineSegment  Point="100, 100"/>
                            <ArcSegment  Point="0,0" Size="100 100"/>
                        </PathFigure>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
        </Path>

        <Path x:Name="mainGrid2" Stroke="DarkGray" StrokeThickness="0.5" Stretch="None"  Width="100" Height="100" MouseDown="mainGrid_MouseDown" MouseUp="mainGrid_MouseUp" MouseLeave="mainGrid_MouseLeave">
            <Path.Fill>
                <RadialGradientBrush GradientOrigin="1 0" >
                    <GradientStop Offset="0" Color="White" />
                    <GradientStop Offset="0.5" Color="#FF5B5B5B" />
                    <GradientStop Offset="1" Color="Transparent" />
                </RadialGradientBrush>
            </Path.Fill>
            <Path.Data>
                <PathGeometry>
                    <PathGeometry.Figures>
                        <PathFigure StartPoint="0, 0" IsClosed="true">
                            <LineSegment Point="0, 91"/>
                            <ArcSegment   Point="9, 100" Size="13 13" SweepDirection="Clockwise"/>
                            <LineSegment  Point="100, 100"/>
                            <ArcSegment  Point="0,0" Size="100 100"/>
                        </PathFigure>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
        </Path>

        <Path x:Name="mainGrid3" Stroke="DarkGray" StrokeThickness="0.5" Stretch="None"  Width="90" Height="90" MouseDown="mainGrid_MouseDown" MouseUp="mainGrid_MouseUp" MouseLeave="mainGrid_MouseLeave">
            <Path.Fill>
                <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0,1" EndPoint="1,0" >
                    <GradientStop Color="#FF6A6A6A" Offset="0.0" />
                    <GradientStop Color="Black" Offset="0.3" />
                    <GradientStop Color="Black" Offset="0.65" />
                    <GradientStop Color="#FF707070" Offset="0.7" />
                </LinearGradientBrush>
            </Path.Fill>

            <Path.Data>
                <PathGeometry>
                    <PathGeometry.Figures>
                        <PathFigure StartPoint="0, 0" IsClosed="true">
                            <LineSegment Point="0, 85"/>
                            <ArcSegment  Point="5,90" Size="15 15" SweepDirection="Clockwise"/>
                            <LineSegment  Point="90, 90"/>
                            <ArcSegment  Point="0,0" Size="90 90"/>
                        </PathFigure>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
        </Path>
        <Viewbox x:Name="ContentView" Margin="-10,0,0,-10" MouseDown="mainGrid_MouseDown" MouseUp="mainGrid_MouseUp" MouseLeave="mainGrid_MouseLeave">
            <Canvas Width="24" Height="24" RenderTransformOrigin="0.5,0.5" Background="Transparent">
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform x:Name="ContentRotater" Angle="45"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Canvas.RenderTransform>
                <Path x:Name="ContentData"/>
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>