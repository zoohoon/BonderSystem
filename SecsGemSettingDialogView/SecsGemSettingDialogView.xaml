<UserControl x:Class="UcSecsGemSettingDialog.SecsGemSettingDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UcSecsGemSettingDialog"
             xmlns:mahapp="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:pi="clr-namespace:ProberInterfaces;assembly=ProberInterfaces"
             mc:Ignorable="d"
             d:DesignHeight="640" d:DesignWidth="800">
    <UserControl.Resources>

        <ResourceDictionary>
            <local:IsGemEnableValueConverter x:Key="GemEnableToBoolCvt"/>
            <local:ControlStateToBoolConverter x:Key="ControlStateToBoolConverter"/>
            <local:EstablishToBoolConverter x:Key="EstablishToBoolConverter"/>
            <local:GemPassiveToBoolConverter x:Key="GemPassiveToBoolConverter"/>
            <local:GemIsOfflineStateToBoolConverter x:Key="GemIsOfflineStateToBoolConverter"/>
            <local:GemIsOnlineStateToBoolConverter x:Key="GemIsOnlineStateToBoolConverter"/>
            <local:BoolToVisibilityConverter x:Key="BtoVConv"/>
            <Style TargetType="{x:Type RadioButton}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type RadioButton}">
                            <BulletDecorator Background="White" Cursor="Hand">
                                <BulletDecorator.Bullet>
                                    <Viewbox>
                                        <Grid>
                                            <!--Define size of the Bullet-->
                                            <Polygon Name="TickMark"
                                                Points="4,16 14,28 28,5 12,22 4,16"
                                                Stroke="#FF0092B2"
                                                StrokeThickness="1"
                                                Visibility="Hidden"
                                                Fill="#FF0092B2"
                                                Margin="8">
                                            </Polygon>

                                            <Border CornerRadius="8,0,0,8" BorderBrush="#FF565656" BorderThickness="2" 
                                                />
                                        </Grid>
                                    </Viewbox>
                                </BulletDecorator.Bullet>

                                <!--Text element-->
                                <Border Background="#FF565656" CornerRadius="0,3,3,0">
                                    <TextBlock Margin="3,1,0,0" Foreground="#FFFFFFFF" FontFamily="Calibri" FontSize="18"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center">
                                        <ContentPresenter />
                                    </TextBlock>
                                </Border>
                            </BulletDecorator>

                            <!--If item is checked, trigger the visibility of the mark-->
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="true">
                                    <Setter TargetName="TickMark" Property="Visibility" Value="Visible"/>
                                </Trigger>

                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>

    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64*"/>
            <RowDefinition/>
            <RowDefinition Height="280*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <GroupBox   Grid.Row="0"
                        Grid.Column="0"
                        Margin="8"
                        Header="Online State"
                        Background="#3C454F"
                        FontWeight="DemiBold" 
                        Foreground="WhiteSmoke" 
                        BorderBrush="#3C454F"
                        FontSize="12"
                        >
                <Grid Grid.Row="0" Grid.Column="0"
                              Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           Content="{Binding  Gem.GemCommManager.SecsCommInformData.CommunicationState}"
                           Padding="0"
                           />

                    <Label Grid.Row="1"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           Content="{Binding Gem.GemCommManager.SecsCommInformData.ControlState}"
                           Padding="0"
                           />
                </Grid>
            </GroupBox>
            <GroupBox   Grid.Row="0"
                        Grid.Column="1"
                        Margin="8"
                        Header="GEM State"
                        Background="#3C454F"
                        FontWeight="DemiBold" 
                        Foreground="WhiteSmoke" 
                        BorderBrush="#3C454F"
                        FontSize="12"
                        >
                <Grid Grid.Row="0" Grid.Column="0"
                              Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           Content="{Binding  Gem.GemCommManager.SecsCommInformData.GemProcessVersion}"
                           Padding="0"
                           />

                    <Label Grid.Row="1"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           Content="XGEM"
                           Padding="0"
                           />
                </Grid>
            </GroupBox>
        </Grid>

        <Grid>
            <!-- GEM Type-->
            <!-- WCF -->
        </Grid>

        <Grid Grid.Row="2">
            <mahapp:MetroAnimatedTabControl>
                <TabItem Header="Main">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <GroupBox   Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="8"
                                    Header="Communication State"
                                    Background="#3C454F"
                                    FontWeight="DemiBold" 
                                    Foreground="WhiteSmoke" 
                                    BorderBrush="#3C454F"
                                    FontSize="12" 
                                    >
                            <Grid Grid.Row="0" Grid.Column="0"
                              Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <RadioButton Grid.Row="0"
                                             VerticalAlignment="Center"
                                             Content="Enable"
                                             Margin="4"
                                             IsChecked="{Binding Gem.GemCommManager.SecsCommInformData.Enable, 
                                                Converter={StaticResource GemEnableToBoolCvt},
                                                ConverterParameter=true}"
                                             Command="{Binding ChangeCommunicationStateCommand}"
                                             >
                                </RadioButton>
                                <RadioButton Grid.Row="1"
                                             VerticalAlignment="Center"
                                             Content="Disable"
                                             Margin="4"
                                             IsChecked="{Binding Gem.GemCommManager.SecsCommInformData.Enable, 
                                                Converter={StaticResource GemEnableToBoolCvt},
                                                ConverterParameter=false}"
                                             Command="{Binding ChangeCommunicationStateCommand}"
                                             />
                            </Grid>
                        </GroupBox>

                        <GroupBox   Grid.Row="0"
                                    Grid.Column="2"
                                    Margin="8"
                                    Header="Control State"
                                    Background="#3C454F"
                                    FontWeight="DemiBold" 
                                    Foreground="WhiteSmoke" 
                                    BorderBrush="#3C454F"
                                    FontSize="12" 
                                    >
                            <Grid Grid.Row="0" Grid.Column="0"
                              Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <RadioButton Grid.Row="0"
                                             VerticalAlignment="Center"
                                             Content="Offline"
                                             Margin="4"
                                             IsChecked="{Binding Gem.GemCommManager.SecsCommInformData.ControlState, Mode=OneWay,
                                                Converter={StaticResource ControlStateToBoolConverter},
                                                ConverterParameter=EQ_OFFLINE}" 
                                             Command="{Binding ChangeControlStateCommand}" CommandParameter="{x:Static pi:SecsEnum_ControlState.EQ_OFFLINE}"
                                             />
                                <RadioButton Grid.Row="1"
                                             VerticalAlignment="Center"
                                             Content="Online Local"
                                             Margin="4"
                                             IsChecked="{Binding Gem.GemCommManager.SecsCommInformData.ControlState, Mode=OneWay,
                                                Converter={StaticResource ControlStateToBoolConverter},
                                                ConverterParameter=ONLINE_LOCAL}"
                                             Command="{Binding ChangeControlStateCommand}" CommandParameter="{x:Static pi:SecsEnum_ControlState.ONLINE_LOCAL}"
                                             />
                                <RadioButton Grid.Row="2"
                                             VerticalAlignment="Center"
                                             Content="Online Remote"
                                             Margin="4"
                                             IsChecked="{Binding Gem.GemCommManager.SecsCommInformData.ControlState, Mode=OneWay,
                                                Converter={StaticResource ControlStateToBoolConverter},
                                                ConverterParameter=ONLINE_REMOTE}"
                                             Command="{Binding ChangeControlStateCommand}" CommandParameter="{x:Static pi:SecsEnum_ControlState.ONLINE_REMOTE}"
                                             />
                            </Grid>
                        </GroupBox>


                        <GroupBox   Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="8"
                                    Header="Time Request"
                                    Background="#3C454F"
                                    FontWeight="DemiBold" 
                                    Foreground="WhiteSmoke" 
                                    BorderBrush="#3C454F"
                                    FontSize="12" 
                                    Visibility="{Binding Isshortcut, Mode=TwoWay, Converter={StaticResource BtoVConv}}">
                            <Grid Grid.Row="0" Grid.Column="0"
                              Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock  Grid.Row="0"
                                        Grid.RowSpan="2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="DarkGray"
                                        Text="{Binding ClockSource.DateTimeStr, StringFormat='{}{0:yyyyMMddHHmmssff}', Mode=OneWay}"
                                        FontSize="24"
                                        />
                                <Button Grid.Row="2"
                                        Margin="0"
                                        Content="Time Request"
                                        Command="{Binding RequestTimeCommand}"
                                        />
                            </Grid>
                        </GroupBox>

                        <GroupBox   Grid.Row="1"
                                    Grid.Column="2"
                                    Margin="8"
                                    Header="Terminal Message"
                                    Background="#3C454F"
                                    FontWeight="DemiBold" 
                                    Foreground="WhiteSmoke" 
                                    BorderBrush="#3C454F"
                                    FontSize="12" 
                                    Visibility ="{Binding Isshortcut, Mode=OneWay, Converter={StaticResource BtoVConv}}">
                            <Grid Grid.Row="0" Grid.Column="0"
                              Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBox Grid.Row="0" Grid.RowSpan="2"
                                         Margin="0 0 0 8"
                                         mahapp:TextBoxHelper.Watermark="Terminal Msg"
                                         Text="{Binding TerminalMsg}"
                                        />
                                <Button Grid.Row="2"
                                        Content="Send"
                                        Command="{Binding SendTerminalMsgCommand}"
                                        />
                            </Grid>
                        </GroupBox>

                    </Grid>
                </TabItem>

                <TabItem Header="GEM Setting">
                    <Grid>
                        <StackPanel Margin="5">
                            <GroupBox   Grid.Row="0"
                                        Grid.Column="0"
                                        Header="Initiate Communication State"
                                        Background="#3C454F"
                                        FontWeight="DemiBold" 
                                        Foreground="WhiteSmoke" 
                                        BorderBrush="#3C454F"
                                        FontSize="12"
                                        MaxHeight="150"
                                    Visibility ="{Binding Isshortcut, Mode=OneWay, Converter={StaticResource BtoVConv}}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="80*"/>
                                        <RowDefinition Height="10*"/>
                                        <RowDefinition Height="80*"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="240*"/>
                                            <ColumnDefinition Width="240*"/>
                                            <ColumnDefinition Width="240*"/>
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Column="0"
                                       HorizontalContentAlignment="Center"
                                       VerticalContentAlignment="Center"
                                       Content="{Binding Gem.GemCommManager.SecsCommInformData.EstablishSource}"
                                       ContentStringFormat="{}}{0} Establish}"
                                       FontSize="16"
                                       />

                                        <RadioButton Grid.Column="1"
                                                VerticalAlignment="Center"
                                                Content="Prober Establish"
                                                Margin="4"
                                                IsChecked="{Binding Gem.GemCommManager.SecsCommInformData.Equipment_Initiated_Connected, 
                                                Converter={StaticResource EstablishToBoolConverter},
                                                ConverterParameter=PROBER}"
                                        Command="{Binding ChangeInitEstablishSourceCommand}"
                                            />
                                        <RadioButton Grid.Column="2"
                                            VerticalAlignment="Center"
                                            Content="Host Establish"
                                                 Margin="4"
                                                IsChecked="{Binding Gem.GemCommManager.SecsCommInformData.Equipment_Initiated_Connected, 
                                                Converter={StaticResource EstablishToBoolConverter},
                                                ConverterParameter=HOST}"
                                        Command="{Binding ChangeInitEstablishSourceCommand}"
                                            />
                                    </Grid>
                                    <Separator  Grid.Row="1"
                                            BorderThickness="1"
                                            BorderBrush="Black"/>
                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="240*"/>
                                            <ColumnDefinition Width="240*"/>
                                            <ColumnDefinition Width="240*"/>
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Column="0"
                                       HorizontalContentAlignment="Center"
                                       VerticalContentAlignment="Center"
                                       Content="{Binding Gem.GemCommManager.SecsCommInformData.DefaultCommState}"
                                       FontSize="16"
                                       />

                                        <RadioButton Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Content="Enable"
                                                 Margin="4"
                                                IsChecked="{Binding Gem.GemCommManager.SecsCommInformData.DefaultCommState, 
                                                Converter={StaticResource GemEnableToBoolCvt},
                                                ConverterParameter=true}"
                                        Command="{Binding ChangeInitEnableCommand}"
                                             />

                                        <RadioButton Grid.Column="2"
                                            VerticalAlignment="Center"
                                            Content="Disable"
                                                 Margin="4"
                                                IsChecked="{Binding Gem.GemCommManager.SecsCommInformData.DefaultCommState, 
                                                Converter={StaticResource GemEnableToBoolCvt},
                                                ConverterParameter=false}"
                                        Command="{Binding ChangeInitEnableCommand}"
                                             />
                                    </Grid>
                                </Grid>
                            </GroupBox>

                            <GroupBox   Grid.Row="1"
                                        Grid.Column="0"
                                        Header="Initiate Control State"
                                        Background="#3C454F"
                                        FontWeight="DemiBold" 
                                        Foreground="WhiteSmoke" 
                                        BorderBrush="#3C454F"
                                        FontSize="12"
                                        MaxHeight="100"
                                    >
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <RadioButton    Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Content="Offline"
                                                Margin="8"
                                                IsChecked="{Binding Gem.GemCommManager.SecsCommInformData.InitControlState,
                                                Converter={StaticResource GemIsOfflineStateToBoolConverter}}"
                                                Command="{Binding ChangeInitControlStateCommand}"
                                                    >
                                    </RadioButton>

                                    <RadioButton    Grid.Column="1"
                                                VerticalAlignment="Center"
                                                Content="Local"
                                                Margin="8"
                                                Command="{Binding ChangeInitControlStateCommand}"
                                                >
                                        <RadioButton.IsChecked>
                                            <MultiBinding Converter="{StaticResource GemIsOnlineStateToBoolConverter}"
                                                      ConverterParameter="LOCAL">
                                                <Binding Path="Gem.GemCommManager.SecsCommInformData.InitControlState"/>
                                                <Binding Path="Gem.GemCommManager.SecsCommInformData.OnLineSubState"/>
                                            </MultiBinding>
                                        </RadioButton.IsChecked>
                                    </RadioButton>
                                    <RadioButton    Grid.Column="2"
                                                VerticalAlignment="Center"
                                                Content="Remote"
                                                Margin="8"
                                                Command="{Binding ChangeInitControlStateCommand}"
                                                >
                                        <RadioButton.IsChecked>
                                            <MultiBinding Converter="{StaticResource GemIsOnlineStateToBoolConverter}"
                                                      ConverterParameter="REMOTE">
                                                <Binding Path="Gem.GemCommManager.SecsCommInformData.InitControlState"/>
                                                <Binding Path="Gem.GemCommManager.SecsCommInformData.OnLineSubState"/>
                                            </MultiBinding>
                                        </RadioButton.IsChecked>
                                    </RadioButton>
                                </Grid>
                            </GroupBox>

                            <GroupBox   Grid.Row="2"
                                        Grid.Column="0"
                                        Header="HSMS Parameter"
                                        Background="#3C454F"
                                        FontWeight="DemiBold" 
                                        Foreground="WhiteSmoke" 
                                        BorderBrush="#3C454F"
                                        FontSize="12"
                                        MaxHeight="300"
                                        Visibility ="{Binding Isshortcut, Mode=OneWay, Converter={StaticResource BtoVConv}}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="80*"/>
                                        <RowDefinition Height="80*"/>
                                        <RowDefinition Height="80*"/>
                                        <RowDefinition Height="80*"/>
                                        <RowDefinition Height="80*"/>
                                        <RowDefinition Height="120*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40*"/>
                                        <ColumnDefinition Width="80*"/>
                                        <ColumnDefinition Width="40*"/>
                                        <ColumnDefinition Width="80*"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Row="0" 
                                       Grid.Column="0"
                                       Margin="0 0 8 0"
                                       HorizontalContentAlignment="Right"
                                       Content="IP"
                                       />

                                    <TextBox  Grid.Row="0" 
                                       Grid.Column="1"
                                          Text="{Binding Gem.GemCommManager.SecsCommInformData.HSMSIP}"
                                       />

                                    <Label Grid.Row="1"
                                       Grid.Column="0"
                                       HorizontalContentAlignment="Right"
                                       Margin="0 0 8 0"
                                       Content="Port"
                                       />

                                    <TextBox  Grid.Row="1" 
                                       Grid.Column="1"
                                          Text="{Binding Gem.GemCommManager.SecsCommInformData.HSMSPort}"
                                       />

                                    <Label Grid.Row="2" 
                                       Grid.Column="0"
                                       HorizontalContentAlignment="Right"
                                       Margin="0 0 8 0"
                                       Content="Device ID"
                                       />

                                    <TextBox  Grid.Row="2" 
                                       Grid.Column="1"
                                          Text="{Binding Gem.GemCommManager.SecsCommInformData.HSMSDeviceID}"
                                       />
                                    <Label Grid.Row="3" 
                                       Grid.Column="0"
                                       HorizontalContentAlignment="Right"
                                       Margin="0 0 8 0"
                                       Content="LinkTest Interval"
                                       />

                                    <TextBox  Grid.Row="3" 
                                       Grid.Column="1"
                                          Text="{Binding Gem.GemCommManager.SecsCommInformData.HSMSLinkTestInterval}"
                                       />
                                    <Label Grid.Row="4" 
                                       Grid.Column="0"
                                       HorizontalContentAlignment="Right"
                                       Margin="0 0 8 0"
                                       Content="RetryLimit"
                                       />

                                    <TextBox  Grid.Row="4" 
                                       Grid.Column="1"
                                          Text="{Binding Gem.GemCommManager.SecsCommInformData.HSMSRetryLimit}"
                                       />
                                    <Label Grid.Row="5" 
                                       Grid.Column="0"
                                       HorizontalContentAlignment="Right"
                                       VerticalContentAlignment="Center"
                                       Margin="0 0 8 0"
                                       Content="Passive"
                                       />

                                    <Grid Grid.Row="5" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <RadioButton Grid.Column="0"
                                                 Margin="2"
                                                 Content="Active"
                                          IsChecked="{Binding Gem.GemCommManager.SecsCommInformData.HSMSPassive,
                                        Converter={StaticResource GemPassiveToBoolConverter},
                                        ConverterParameter=ACTIVE}"
                                             />
                                        <RadioButton Grid.Column="1"
                                                 Margin="2"
                                                 Content="Passive"
                                          IsChecked="{Binding Gem.GemCommManager.SecsCommInformData.HSMSPassive,
                                        Converter={StaticResource GemPassiveToBoolConverter},
                                        ConverterParameter=PASSIVE}"
                                             />
                                    </Grid>

                                    <Label Grid.Row="0"
                                       Grid.Column="2"
                                       HorizontalContentAlignment="Right"
                                       Margin="0 0 8 0"
                                       Content="T3"
                                       />

                                    <TextBox  Grid.Row="0" 
                                          Grid.Column="3"
                                          Text="{Binding Gem.GemCommManager.SecsCommInformData.T3}"
                                       />

                                    <Label Grid.Row="1"
                                       Grid.Column="2"
                                       HorizontalContentAlignment="Right"
                                       Margin="0 0 8 0"
                                       Content="T5"
                                       />

                                    <TextBox  Grid.Row="1" 
                                          Grid.Column="3"
                                          Text="{Binding Gem.GemCommManager.SecsCommInformData.T5}"
                                       />

                                    <Label Grid.Row="2"
                                       Grid.Column="2"
                                       HorizontalContentAlignment="Right"
                                       Margin="0 0 8 0"
                                       Content="T6"
                                       />

                                    <TextBox  Grid.Row="2" 
                                          Grid.Column="3"
                                          Text="{Binding Gem.GemCommManager.SecsCommInformData.T6}"
                                       />

                                    <Label Grid.Row="3"
                                       Grid.Column="2"
                                       HorizontalContentAlignment="Right"
                                       Margin="0 0 8 0"
                                       Content="T7"
                                       />

                                    <TextBox  Grid.Row="3" 
                                          Grid.Column="3"
                                          Text="{Binding Gem.GemCommManager.SecsCommInformData.T7}"
                                       />

                                    <Label Grid.Row="4"
                                       Grid.Column="2"
                                       HorizontalContentAlignment="Right"
                                       Margin="0 0 8 0"
                                       Content="T8"
                                       />

                                    <TextBox  Grid.Row="4" 
                                          Grid.Column="3"
                                          Text="{Binding Gem.GemCommManager.SecsCommInformData.T8}"
                                       />

                                    <Button Grid.Row="5"
                                        Grid.Column="3"
                                        Margin="0 4"
                                        Content="Apply"
                                        Command="{Binding ApplyGemInfoCommand}"
                                        />
                                </Grid>
                            </GroupBox>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <TabItem Header="Ect"
                         Visibility ="{Binding Isshortcut, Mode=OneWay, Converter={StaticResource BtoVConv}}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonUp" >
                            <i:InvokeCommandAction Command="{Binding TabItem_MouseLeftButtonUpCommand}" CommandParameter="ECT"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Grid>
                        <Grid.Resources>
                            <Style TargetType="Label">
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="HorizontalContentAlignment" Value="Right"/>
                            </Style>
                            <Style TargetType="TextBox">
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Style>
                        </Grid.Resources>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1.6*"/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <!-- Gem Param Setting-->
                        <GroupBox   Grid.Row="0"
                                    Grid.Column="0"
                                    Header="GEM Param Setting"
                                    Background="#3C454F"
                                    FontWeight="DemiBold" 
                                    Foreground="WhiteSmoke" 
                                    BorderBrush="#3C454F"
                                    FontSize="12" 
                                    >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Label Grid.Column="0" Grid.Row="0" Content="SerialNumber : "/>
                                <Label Grid.Column="0" Grid.Row="1" Content="ConfigPath : "/>
                                <Label Grid.Column="0" Grid.Row="2" Content="ServiceHostAppPath : "/>
                                <Label Grid.Column="0" Grid.Row="3" Content="ServiceHostType : "/>
                                <Label Grid.Column="0" Grid.Row="4" Content="GemType : "/>
                                <Label Grid.Column="0" Grid.Row="5" Content="ReceiveProberType : "/>

                                <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding SerialNumber, Mode=TwoWay}"/>
                                <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding ConfigPath, Mode=TwoWay}"/>
                                <Button Grid.Column="2" Grid.Row="1" Background="Transparent" Command="{Binding FindPathCommand}" CommandParameter="Config" Padding="0" >
                                    <materialDesign:PackIcon Kind="File" Width="20" Height="20" Foreground="Black" Margin="0" Padding="0"/>
                                </Button>
                                <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding ServiceHostAppPath , Mode=TwoWay}"/>
                                <Button Grid.Column="2" Grid.Row="2" Background="Transparent" Command="{Binding FindPathCommand}" CommandParameter="HostApp" Padding="0" >
                                    <materialDesign:PackIcon Kind="File" Width="20" Height="20" Foreground="Black" Margin="0" Padding="0"/>
                                </Button>
                                <ComboBox x:Name="cb_gemApiType" Grid.Column="1" Grid.Row="3" ItemsSource="{Binding GemApITypeEnums}" SelectedItem="{Binding SelectedGemApIType, Mode=TwoWay}"/>
                                <ComboBox x:Name="cb_gemProcessorType" Grid.Column="1" Grid.Row="4" ItemsSource="{Binding GemProcessorTypeEnums}" SelectedItem="{Binding SelectedGemProcessorType, Mode=TwoWay}"/>
                                <TextBox Grid.Column="1" Grid.Row="5" Text="{Binding ReciverProberType, Mode=TwoWay}"/>
                                <Button Grid.Column="2" Grid.Row="5" Background="Transparent" Command="{Binding SetReceiverTypeCommand}" CommandParameter="Config" Padding="0" >
                                    <materialDesign:PackIcon Kind="DoneOutline" Width="20" Height="20" Foreground="Black" Margin="0" Padding="0"/>
                                </Button>
                                
                                <Button Grid.Column="1" Grid.Row="6" VerticalAlignment="Center" Content="SAVE"/>
                            </Grid>
                        </GroupBox>

                        <!-- Gem Connect-->
                        <GroupBox   Grid.Row="1"
                                    Grid.Column="0"
                                    Header="GEM Connect"
                                    Background="#3C454F"
                                    FontWeight="DemiBold" 
                                    Foreground="WhiteSmoke" 
                                    BorderBrush="#3C454F"
                                    FontSize="12" 
                                    >
                            <Grid>
                                <Grid.Resources>
                                    <Style TargetType="Button">
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="8"/>
                                    </Style>
                                </Grid.Resources>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Border BorderBrush="Black" BorderThickness="2" Margin="2"/>
                                <Grid Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" Content="START" Command="{Binding StartGemCommand}"/>
                                    <Button Grid.Column="1" Content="END" Command="{Binding EndGemCommand}"/>
                                </Grid>
                                <Border Grid.Row="1" BorderBrush="Black" BorderThickness="2" Margin="2"/>
                                <Grid Grid.Column="0" Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" Content="CONNECT"/>
                                    <Button Grid.Column="1" Content="DISCONNECT"/>
                                </Grid>

                            </Grid>
                        </GroupBox>
                        <GroupBox   Grid.Row="2"
                                    Grid.Column="0"
                                    Header="Test"
                                    Background="#3C454F"
                                    FontWeight="DemiBold" 
                                    Foreground="WhiteSmoke" 
                                    BorderBrush="#3C454F"
                                    FontSize="12" 
                                    >
                            <Grid>
                                <Grid.Resources>
                                    <Style TargetType="Label">
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="2"/>
                                    </Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="4"/>
                                    </Style>
                                </Grid.Resources>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0" Grid.ColumnSpan="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="CEID : " VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                        <TextBox x:Name="tx_eventId" Grid.Column="1" />
                                        <Label Content="EleID : " VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="2"/>
                                        <TextBox x:Name="tx_elementId" Grid.Column="3" Text="{Binding ElementID}"/>
                                    </Grid>


                                    <Grid Grid.Row="1" Grid.ColumnSpan="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Column="0" Content="VID : " VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                        <TextBox Grid.Column="1" Text="{Binding Vid}"/>
                                        <Label Grid.Column="2" Content="VALUE : " VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                        <TextBox Grid.Column="3" Text="{Binding VidValue}"/>
                                    </Grid>

                                    <Button Grid.Row="2" 
                                        Margin="4"
                                        Content="Send Event"
                                        Command="{Binding SendEventCommand}"
                                        CommandParameter="{Binding Text, ElementName=tx_eventId}"
                                        />

                                    <Button Grid.Row="2" Grid.Column="1" Margin="4"
                                        Content="Set Value"
                                        Command="{Binding SetVidValueCommand}"
                                        />
                                </Grid>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </TabItem>
            </mahapp:MetroAnimatedTabControl>
        </Grid>
    </Grid>
</UserControl>