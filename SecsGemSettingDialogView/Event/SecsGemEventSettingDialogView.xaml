<UserControl x:Class="UcSecsGemSettingDialog.SecsGemEventSettingDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UcSecsGemSettingDialog"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="680" d:DesignWidth="1170">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- Event Setting-->
        <GroupBox   Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,0,4"
                        Header="Gem Event"
                        Background="#3C454F"
                        FontWeight="DemiBold" 
                        Foreground="WhiteSmoke" 
                        BorderBrush="#3C454F"
                        FontSize="12"
                        >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.6*"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <DataGrid SelectedItem="{Binding SelectedGemEventProcess}" BorderBrush="DimGray" BorderThickness="0.5"
                                      ItemsSource="{Binding GemEventProcessList}" AutoGenerateColumns="False" CanUserResizeColumns="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="EventFullName" Width="400" Binding="{Binding EventFullName}"/>
                        <DataGridTextColumn Header="Parameter" Width="100" Binding="{Binding Parameter}"/>
                        <DataGridComboBoxColumn Header="Enable" Width="100" SelectedItemBinding="{Binding Enable}">
                            <DataGridComboBoxColumn.ItemsSource>
                                <x:Array Type="system:Boolean">
                                    <system:Boolean>True</system:Boolean>
                                    <system:Boolean>False</system:Boolean>
                                </x:Array>
                            </DataGridComboBoxColumn.ItemsSource>
                        </DataGridComboBoxColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                    <Button Content="←" FontSize="24" Height="40" Margin="4"
                            VerticalContentAlignment="Center" Padding="0"
                            Command="{Binding AddEventCommanad}"/>
                    <Button Content="→" FontSize="24" Height="40" Margin="4"
                            VerticalContentAlignment="Center"
                            Command="{Binding DeleteEventCommanad}"/>
                </StackPanel>
                
                <ListView Grid.Column="2" ItemsSource="{Binding OriginNotifyEventInfos}" BorderBrush="DimGray" BorderThickness="0.5"
                          SelectedItem="{Binding SelectedNotifyEventInfo}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Label Content="{Binding EventName}" IsEnabled="{Binding Enable}">
                                <Label.Style>
                                    <Style TargetType="{x:Type Label}">
                                        <Style.Triggers>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Foreground" Value="LightGray"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="True">
                                                <Setter Property="Foreground" Value="Black"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </Grid>
        </GroupBox>

        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Width="100" Height="48" Content="LOAD" FontSize="18" Margin="4"
                        Command="{Binding LoadParameterCommand}"/> 
                <Button Width="100" Height="48" Content="SAVE" FontSize="18"
                        Command="{Binding SaveParameterCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
