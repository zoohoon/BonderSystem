<UserControl x:Class="UcPnPButtonJog.JogBtn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UcPnPButtonJog"
             x:Name="ucwindow"
             mc:Ignorable="d" Height="85" Width="85">
    <Grid x:Name="mainGrid" MouseDown="mainGrid_MouseDown" MouseUp="mainGrid_MouseUp" MouseLeave="mainGrid_MouseLeave">
        <Path StrokeThickness="5" Stroke="#080808" Stretch="None" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Path.Style>
                <Style TargetType="{x:Type Path}">
                    <Style.Resources>
                        <DropShadowEffect x:Key="EnablePathEffect" BlurRadius="8" Direction="0" RenderingBias= "Quality" ShadowDepth="0" Color="#FF222222"/>
                    </Style.Resources>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=ucwindow, Path=IsEnabled}" Value="False">
                            <Setter Property="Effect" Value="{StaticResource EnablePathEffect}"/>
                            <Setter Property="Fill" Value="AliceBlue"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Path.Style>
            <Path.Fill>
                <RadialGradientBrush RadiusX="1.5" RadiusY="1.5">
                    <GradientStop Color="#FF2C2C2C" Offset="0"/>
                    <GradientStop Color="#FF252525" Offset="1"/>
                    <GradientStop Color="Black" Offset="0.723"/>
                    <GradientStop Color="#FF151515" Offset="0.297"/>
                </RadialGradientBrush>
            </Path.Fill>
            <Path.Effect>
                <DropShadowEffect BlurRadius="8" Direction="0" RenderingBias= "Quality" ShadowDepth="0" Color="#e8e8e8"/>
            </Path.Effect>
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="10, 0" IsClosed="true" >
                        <ArcSegment Point="0, 10" Size="10 10"/>
                        <LineSegment Point="0, 70"/>
                        <ArcSegment Point="10, 80" Size="10 10"/>
                        <LineSegment Point="70, 80"/>
                        <ArcSegment Point="80, 70" Size="10 10"/>
                        <LineSegment Point="80, 10"/>
                        <ArcSegment Point="70, 0" Size="10 10"/>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>

        <TextBlock Name="textBlock" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"
                   TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Width="70" TextAlignment="Center"/>
        <Grid Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image x:Name="btnImage" Grid.Row="0" Width="56" Height="56" MaxWidth="56" MaxHeight="56">
                <Image.BitmapEffect>
                    <DropShadowBitmapEffect x:Name="btnImageEffect" ShadowDepth="0" Color="White"/>
                </Image.BitmapEffect>
            </Image>
            <TextBlock Grid.Row="1" Name="IconText" Foreground="White" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" 
                       Margin="5 -2 5 0" TextAlignment="Center" FontSize="16" FontFamily="Consolas" />
        </Grid>
    </Grid>
</UserControl>
    
