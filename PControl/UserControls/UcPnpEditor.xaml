            </TreeView>-->
            <ListBox  Margin="8" Background="LightGray" ItemsSource="{Binding Path=AssemblyName ,ElementName=PNPEditor}" Foreground="Black" x:Name="lbox_AssemblyList"
                      MouseDown="lbox_AssemblyList_MouseDown" DragOver="lbox_AssemblyList_DragOver">
            </ListBox>
        </Grid>


