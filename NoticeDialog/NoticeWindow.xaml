<Window x:Class="NoticeDialog.NoticeWindow"
        x:Name="NoticeWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoticeDialog"
        mc:Ignorable="d" Height="230.534" Width="414.326" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF4B4B4B" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="0,0,0,-0.6" MouseLeftButtonDown="Grid_MouseLeftButtonDown" Background="#FFE4E2E2">
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text=" Failed to upload Files " VerticalAlignment="Top" Height="25" Width="235" FontWeight="Bold" Foreground="#FFE7E7E7" Panel.ZIndex="1" FontSize="14" Margin="2,2,0,0"/>
        <Rectangle HorizontalAlignment="Left" Height="26" Stroke="Black" VerticalAlignment="Top" Width="414" Margin="0" Fill="#FF1F1D1D"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="313,186,0,0" VerticalAlignment="Top" Width="94" Height="37" FontWeight="Bold" Command="{Binding BtnClose}" CommandParameter="{Binding ElementName=NoticeWnd}"/>
        <Button Content="Detail" HorizontalAlignment="Left" Margin="200,186,0,0" VerticalAlignment="Top" Width="94" Height="37" FontWeight="Bold" Command="{Binding BtnDetail}" CommandParameter="{Binding ElementName=NoticeWnd}"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="88" Width="394" FontSize="18" FontStyle="Italic" FontWeight="Bold" Foreground="#FF090909"><Run FontStyle="Normal" Text="Failed to upload '"/><Run Foreground="#FFC32B2B" FontStyle="Normal" Text="{Binding Name}"/><Run FontStyle="Normal" Text="' file."/><LineBreak/><Run FontStyle="Normal"/><LineBreak/><Run FontStyle="Normal" Text="Please check the network and setting status."/></TextBlock>
        <Button Content="X" HorizontalAlignment="Left" Margin="387,3,0,0" VerticalAlignment="Top" Width="21" FontWeight="Bold" Command="{Binding BtnClose}" CommandParameter="{Binding ElementName=NoticeWnd}"/>

    </Grid>
</Window>
