<Window x:Class="SorterPickTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SorterPickTester"
        xmlns:conv="clr-namespace:SorterPickTester.Converter"
        mc:Ignorable="d"
        Title="MainWindow" Height="697" Width="1137">
    <Window.Resources>
        <ResourceDictionary>
            <conv:IntToStringConvereter x:Key="IntToStringConvereter" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="260"/>
            <RowDefinition Height="230"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" >
                <Label Content="IP" Width="50"/>
                <TextBox  Width="200" Text="{Binding ServerAddress}" />
                <Label Content="Port" Width="50" />
                <TextBox Width="150" Text="{Binding ServerPort, Converter={StaticResource IntToStringConvereter}}" />
                <ToggleButton FocusVisualStyle="{x:Null}" IsChecked="{Binding IsConnected}" Width="80" Command="{Binding CommandConnect}">
                    <ToggleButton.Style>
                        <Style TargetType="{x:Type ToggleButton}">
                            <Setter Property="Content" Value="Connect" />
                            <Style.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Content" Value="Disconnect" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <Label Content="Data" Width="50" />
                <TextBox Width="400" Text="{Binding PacketDataString}" />
                <Button Content="Send" Width="80" Command="{Binding CommandSend}"/>
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                <CheckBox Content="Continuance" IsChecked="{Binding HeadBlock.SetContinuane}" Width="120" VerticalAlignment="Center"/>
                <Button Content="Send" Command="{Binding CommandSingle}" Width="120" />
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="1">
                <Button Content="Alarm Reset" Command="{Binding CommandAlarmReset}" Width="80" />
                <Button Content="Servo ON" Command="{Binding CommandServoOn}" Width="80" />
                <Button Content="Servo OFF" Command="{Binding CommandServoOff}" Width="80" />
                <Button Content="Home Return" Command="{Binding CommandHomeReturn}" Width="80" />
                <Button Content="Air Vacuum" Command="{Binding CommandAirVacuum}" Width="80" />
                <Button Content="Air Release" Command="{Binding CommandAirRelease}" Width="80" />
            </StackPanel>
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="1">
                <Button Content="Seq. Stop" Command="{Binding CommandSeqStop}" Width="80" />
                <Button Content="" Command="{Binding CommandServoOn}" Width="80" />
                <Button Content="" Command="{Binding CommandServoOff}" Width="80" />
                <Button Content="" Command="{Binding CommandHomeReturn}" Width="80" />
                <Button Content="" Command="{Binding CommandAirVacuum}" Width="80" />
                <Button Content="" Command="{Binding CommandAirRelease}" Width="80" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0">
                <CheckBox Content="Sequence Running" IsChecked="{Binding HeadBlock.PickerData.CntrStatus_SequenceNow}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0">
                <CheckBox Content="Sequence Stop" IsChecked="{Binding HeadBlock.PickerData.CntrStatus_SequenceStop}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="0">
                <CheckBox Content="Timeout Error" IsChecked="{Binding HeadBlock.PickerData.CntrStatus_TimeOutErr}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="0">
                <CheckBox Content="Waveform Block Transfer Error" IsChecked="{Binding HeadBlock.PickerData.CntrStatus_WaveDataErr}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="0">
                <CheckBox Content="Toggle" IsChecked="{Binding HeadBlock.PickerData.CntrStatus_Toggle}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1">
                <CheckBox Content="Head Control Circuit Fault" IsChecked="{Binding HeadBlock.PickerData.Alarm_Head_CIR_ERR}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1">
                <CheckBox Content="Controller Control Circuit Fault" IsChecked="{Binding HeadBlock.PickerData.Alarm_Ctrlr_CIR_ERR}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1">
                <CheckBox Content="Head Circuit and Motor Protection" IsChecked="{Binding HeadBlock.PickerData.Alarm_Motor_Guard}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1">
                <CheckBox Content="Communication Error between Head and Controller" IsChecked="{Binding HeadBlock.PickerData.Alarm_Head_Ctrlr_Com_ERR}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="1">
                <CheckBox Content="Servo On Error" IsChecked="{Binding HeadBlock.PickerData.Alarm_Servo_On_ERR}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.Column="1">
                <CheckBox Content="Home Return Error" IsChecked="{Binding HeadBlock.PickerData.Alarm_Origin_ERR}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="7" Grid.Column="1">
                <CheckBox Content="Head Operation Error" IsChecked="{Binding HeadBlock.PickerData.Alarm_Head_ACT_ERR}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="8" Grid.Column="1">
                <CheckBox Content="Command Error" IsChecked="{Binding HeadBlock.PickerData.Alarm_Order_ERR}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="9" Grid.Column="1">
                <CheckBox Content="Communication Error between PLC and Controller" IsChecked="{Binding HeadBlock.PickerData.Alarm_PLC_COM_ERR}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0">
                <CheckBox Content="Z/T Axis Servo On Status " IsChecked="{Binding HeadBlock.PickerData.ZTStatus_ServoOn_ZT}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0">
                <CheckBox Content="Z/T Axis Home Return Complete" IsChecked="{Binding HeadBlock.PickerData.ZTStatus_Origin_OK}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="0">
                <CheckBox Content="Z Axis Running" IsChecked="{Binding HeadBlock.PickerData.ZTStatus_Working_Z}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="0">
                <CheckBox Content="T Axis Running" IsChecked="{Binding HeadBlock.PickerData.ZTStatus_Working_T}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="0">
                <CheckBox Content="Z Axis Force Saturation" IsChecked="{Binding HeadBlock.PickerData.ZTStatus_Saturate_Z}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.Column="0">
                <CheckBox Content="T Axis Force Saturation" IsChecked="{Binding HeadBlock.PickerData.ZTStatus_Saturate_T}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="7" Grid.Column="0">
                <CheckBox Content="Z Axis Servo On" IsChecked="{Binding HeadBlock.PickerData.ZTStatus_ServoOn_Z}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="8" Grid.Column="0">
                <CheckBox Content="T Axis Servo On" IsChecked="{Binding HeadBlock.PickerData.ZTStatus_ServoOn_T}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1">
                <CheckBox Content="Vacuum Value" IsChecked="{Binding HeadBlock.PickerData.OtherStatus_Attract_Value}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1">
                <CheckBox Content="Release Value" IsChecked="{Binding HeadBlock.PickerData.OtherStatus_Release_Value}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1">
                <CheckBox Content="Brake Status" IsChecked="{Binding HeadBlock.PickerData.OtherStatus_Brake}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1">
                <CheckBox Content="Step Complete 1" IsChecked="{Binding HeadBlock.PickerData.OtherStatus_Step1_End}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="1">
                <CheckBox Content="Step Complete 2" IsChecked="{Binding HeadBlock.PickerData.OtherStatus_Step2_End}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.Column="1">
                <CheckBox Content="Step Complete 3" IsChecked="{Binding HeadBlock.PickerData.OtherStatus_Step3_End}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="7" Grid.Column="1">
                <CheckBox Content="Z Axis Return To Home Position Completed" IsChecked="{Binding HeadBlock.PickerData.OtherStatus_Origin_OK_Z}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="8" Grid.Column="1">
                <CheckBox Content="T Axis Return To Home Position Completed" IsChecked="{Binding HeadBlock.PickerData.OtherStatus_Origin_OK_T}" Width="300" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
