<UserControl x:Class="TempGraphControl.TempGraph" 
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:ext="http://schemas.abtsoftware.co.uk/scichart/exampleExternals" 
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:s="http://schemas.abtsoftware.co.uk/scichart" 
                d:DesignHeight="400" d:DesignWidth="600" mc:Ignorable="d">
        
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--  The SciChartInteractionToolbar adds zoom, pan, zoom extents and rotate functionality  -->
        <!--  to the chart and is included for example purposes.  -->
        <!--  If you wish to know how to zoom and pan a chart then do a search for Zoom Pan in the Examples suite!  -->
        <!--<ext:SciChartInteractionToolbar TargetSurface="{Binding ElementName=sciChart}"/>-->

        <!--  Create the chart surface  -->
        <s:SciChartSurface Name="sciChart" Grid.Column="1" RenderableSeries="{s:SeriesBinding RenderableSeriesViewModels}" Margin="0,0,0,-30">
            <s:SciChartSurface.Resources>
                <Style x:Key="LineSeriesStyle" TargetType="s:FastLineRenderableSeries">
                    <Setter Property="StrokeThickness" Value="3" />
                    <Setter Property="Opacity" Value="0.5" />
                    <!--<Setter Property="Stroke" Value="#ff99ed3f" />-->
                    <Setter Property="Focusable" Value="True"/>
                </Style>
            </s:SciChartSurface.Resources>
            
            <!--  Create an X Axis with Growby  -->
            <s:SciChartSurface.XAxis>
                <!--<s:DateTimeAxis AxisAlignment="left" AxisTitle="Time" DrawMajorBands="True" FlipCoordinates="True" GrowBy="0.1, 0.1" />-->
                <s:DateTimeAxis x:Name="xAxis" AxisAlignment="Bottom" AutoRange="Always" AxisTitle="Time"/>
            </s:SciChartSurface.XAxis>

            <!--  Create a Y Axis with Growby. Optional bands give a cool look and feel for minimal performance impact  -->
            <s:SciChartSurface.YAxis>
                <s:NumericAxis AxisAlignment="Left" AxisTitle="Temperature(&#x2103;)" DrawMajorBands="True" GrowBy="0.5, 0.5" TextFormatting="#.#"  AutoRange="Always"/>
            </s:SciChartSurface.YAxis>

            <s:SciChartSurface.ChartModifier>
                <s:ModifierGroup>
                    <s:CursorModifier ShowAxisLabels="True" ShowTooltip="False" UseInterpolation="True"/>
                    <s:RubberBandXyZoomModifier x:Name="RubberBandXyZoomModifierX" IsEnabled="True"/>
                    <s:ZoomPanModifier x:Name="ZoomPanModifierX" IsEnabled="False" ClipModeX="None"/>
                    <s:LegendModifier ShowLegend="False" LegendPlacement="Inside" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Right"/>
                    <s:RolloverModifier x:Name="RolloverModifierX" ShowAxisLabels="False" 
                                        UseInterpolation="True"
                                        ShowTooltipOn="Always"/>
                    
                    <s:XAxisDragModifier />
                    <s:YAxisDragModifier/>
                    <s:ZoomExtentsModifier/>
                </s:ModifierGroup>
            </s:SciChartSurface.ChartModifier>
            
        </s:SciChartSurface>
    </Grid>
</UserControl>
