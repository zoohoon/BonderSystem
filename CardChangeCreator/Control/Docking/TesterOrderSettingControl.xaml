<UserControl x:Class="CardChangeCreator.TesterOrderSettingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CardChangeCreator"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="720" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="160*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1" Grid.Column="0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="192*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="List"/>
            <ListBox x:Name="lbBehaviorList" Grid.Row="1" Margin="8"
                      PreviewMouseLeftButtonDown="ListBox_PreviewMouseLeftButtonDown"
                     />
        </Grid>

        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="4" Content="▲▲" Margin = "8, 0, 8, 0" Tag = "FirstOfOrder" Click="OrderChange_Click"/>
            <Button Grid.Column="5" Content="▲"  Margin = "8, 0, 8, 0" Tag = "OnceUP" Click="OrderChange_Click"/>
            <Button Grid.Column="6" Content="▼ " Margin = "8, 0, 8, 0" Tag = "OnceDown" Click="OrderChange_Click"/>
            <Button Grid.Column="7" Content="▼▼" Margin = "8, 0, 8, 0" Tag = "EndOfOrder" Click="OrderChange_Click"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="16*"/>
                    <RowDefinition Height="176*"/>
                </Grid.RowDefinitions>


                    <Label Grid.Column="0" Content="Load Interface"/>
                
                <ListBox x:Name="lbLoadInterfaceList" Grid.Row="1" Tag="LoadInterface"
                      AllowDrop="True" Drop="lbOrderList_Drop" GotFocus="lb_GotFocus"
                     >
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                            <EventSetter Event="MouseDoubleClick" Handler="ListBoxItem_MouseDoubleClick"></EventSetter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="1" Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="16*"/>
                    <RowDefinition Height="80*"/>
                </Grid.RowDefinitions>


                    <Label Grid.Column="0" Content="PreTreatment"/>
                <ListBox x:Name="lbLoadPreTreatment" Grid.Row="1" Tag="LoadPre"
                     AllowDrop="True" Drop="lbOrderList_Drop" GotFocus="lb_GotFocus"
                     >
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                            <EventSetter Event="MouseDoubleClick" Handler="ListBoxItem_MouseDoubleClick"></EventSetter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1" Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="16*"/>
                    <RowDefinition Height="80*"/>
                </Grid.RowDefinitions>

                    <Label Grid.Column="0" Content="PostTreatment"/>
                <ListBox x:Name="lbLoadPostTreatment" Grid.Row="1" Tag="LoadPost"
                     AllowDrop="True" Drop="lbOrderList_Drop" GotFocus="lb_GotFocus"
                     >
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                            <EventSetter Event="MouseDoubleClick" Handler="ListBoxItem_MouseDoubleClick"></EventSetter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="16*"/>
                    <RowDefinition Height="176*"/>
                </Grid.RowDefinitions>


                    <Label Grid.Column="0" Content="Unload Interface"/>
                <ListBox x:Name="lbUnloadInterfaceList" Grid.Row="1" Tag="UnloadInterface"
                      AllowDrop="True" Drop="lbOrderList_Drop" GotFocus="lb_GotFocus"
                     >
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                            <EventSetter Event="MouseDoubleClick" Handler="ListBoxItem_MouseDoubleClick"></EventSetter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="1" Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="16*"/>
                    <RowDefinition Height="80*"/>
                </Grid.RowDefinitions>

                    <Label Grid.Column="0" Content="PreTreatment"/>
                <ListBox x:Name="lbUnloadPreTreatment" Grid.Row="1" Tag="UnloadPre"
                     AllowDrop="True" Drop="lbOrderList_Drop" GotFocus="lb_GotFocus"
                     >
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                            <EventSetter Event="MouseDoubleClick" Handler="ListBoxItem_MouseDoubleClick"></EventSetter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1" Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="16*"/>
                    <RowDefinition Height="80*"/>
                </Grid.RowDefinitions>
                
                    <Label Grid.Column="0" Content="PostTreatment"/>
                <ListBox x:Name="lbUnloadPostTreatment" Grid.Row="1" Tag="UnloadPost"
                     AllowDrop="True" Drop="lbOrderList_Drop" GotFocus="lb_GotFocus"
                     >
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                            <EventSetter Event="MouseDoubleClick" Handler="ListBoxItem_MouseDoubleClick"></EventSetter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
