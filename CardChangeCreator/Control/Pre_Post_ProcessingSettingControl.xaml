<UserControl x:Class="CardChangeCreator.Pre_Post_ProcessingSettingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CardChangeCreator"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="176*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="List"/>
            <ListBox x:Name="lbBehaviorList" Grid.Row="1" ItemsSource="{Binding BehaviorCollection}"
                     SelectionChanged="lbBehaviorList_SelectionChanged"
                     />
        </Grid>

        <Grid Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="176*"/>
            </Grid.RowDefinitions>
            <Label Content="Safety"></Label>
            <ListBox x:Name="lbSafetyList" Grid.Row="1" ItemsSource="{Binding SafetyCollection}"
                      PreviewMouseLeftButtonDown="ListBox_PreviewMouseLeftButtonDown"
                     />
        </Grid>

        <Grid Grid.Row="0" Grid.Column="2" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="80*"/>
            </Grid.RowDefinitions>
            <Label Content="PreTreatment"></Label>
            <ListBox x:Name="lbPreTreatment" Grid.Row="1" ItemsSource="{Binding PreTreatmentCollection}"
                     AllowDrop="True" Drop="ListBox_Drop" GotFocus="lb_GotFocus"
                     >
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                        <EventSetter Event="MouseDoubleClick" Handler="ListBoxItem_MouseDoubleClick"></EventSetter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="2" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="80*"/>
            </Grid.RowDefinitions>
            <Label Content="PostTreatment"></Label>
            <ListBox x:Name="lbPostTreatment" Grid.Row="1" ItemsSource="{Binding PostTreatmentCollection}"
                     AllowDrop="True" Drop="ListBox_Drop" GotFocus="lb_GotFocus"
                     >
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                        <EventSetter Event="MouseDoubleClick" Handler="ListBoxItem_MouseDoubleClick"></EventSetter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Grid>

    </Grid>
</UserControl>
