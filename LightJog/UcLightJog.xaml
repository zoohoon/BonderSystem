<UserControl x:Class="LightJog.UcLightJog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" 
             xmlns:ValueConvert="clr-namespace:ValueConverters;assembly=ValueConverters"   
             xmlns:local="clr-namespace:LightJog"
             xmlns:cui="clr-namespace:CUI;assembly=CUI"
             mc:Ignorable="d" 
             x:Name="ucwindow"
             d:DesignHeight="100" d:DesignWidth="250">
    <UserControl.Resources>
        <ValueConvert:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" True="Collapsed" False="Visible"/>
        <local:LightValueConverter x:Key="LightvalueConverter"/>
    </UserControl.Resources>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1.1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Button AutomationProperties.AutomationId="LightjogHighbtn"
                x:Name="HighBtn" Grid.Row="0" Grid.Column="0" Margin="0 0 2 2"
                Content="{Binding HighBtnText}"  
                Background="{Binding HighBtnBrush}" 
                Command="{Binding HighBtnCommand}"
                FontWeight="Bold" FontSize="20"
                Style="{DynamicResource DisableLockBtnStyle}"/>
        <Button AutomationProperties.AutomationId="LightjogLowbtn"
                x:Name="LowBtn" Grid.Row="1" Grid.Column="0" Margin="0 2 2 0"  
                Content="{Binding LowBtnText}"  
                Background="{Binding LowBtnBrush}" 
                Command="{Binding LowBtnCommand}"
                FontWeight="Bold" FontSize="20"
                Style="{DynamicResource DisableLockBtnStyle}"/>

        <Button AutomationProperties.AutomationId="LightTypeUpbtn"
                Grid.Row="0" Grid.Column="1" Margin="2 0 2 2" Command="{Binding LightTypeUpCommand}" Style="{DynamicResource DisableLockBtnStyle}">
            <Button.Content>
                <ed:BlockArrow Fill="Black" Orientation="Left" Stroke="Black" Height="20" Width="20"/>
            </Button.Content>
        </Button>

        <Button AutomationProperties.AutomationId="LightTypeStringbtn"
                Grid.Row="0" Grid.Column="2" Margin="2 0 2 2"  FontSize="13" Style="{DynamicResource DisableLockBtnStyle}"
                Content="{Binding CurLightTypeStr}" Foreground="Black" Background="AntiqueWhite" FontWeight="Bold"/>

        <Button AutomationProperties.AutomationId="LightTypeDownbtn"
                Grid.Row="0" Grid.Column="3" Margin="2 0 0 2" Command="{Binding LightTypeDownCommand}" Style="{DynamicResource DisableLockBtnStyle}">
            <Button.Content>
                <ed:BlockArrow Fill="Black" Orientation="Right" Stroke="Black" Height="20" Width="20"/>
            </Button.Content>
        </Button>

        <RepeatButton AutomationProperties.AutomationId="LightValueUprbtn"
                      Grid.Row="1"  Grid.Column="1" Margin="2 2 2 0"
                      Command="{Binding LightValueUpCommand}"
                      Style="{DynamicResource DisableLockRepeatBtnStyle}">
            <RepeatButton.Content>
                <ed:BlockArrow Fill="Black" Orientation="Up" Stroke="Black" Height="20" Width="20"/>
            </RepeatButton.Content>
        </RepeatButton >
        
        <!--Content="{Binding CurLightValueStr}"-->
        <Button AutomationProperties.AutomationId="LightValueStringbtn"
                Grid.Row="1" Grid.Column="2" Margin="2 2 2 0"  FontSize="20" Style="{DynamicResource DisableLockBtnStyle}"
                Foreground="Black" Background="AntiqueWhite" FontWeight="Bold">
            <Label Foreground="Black" FontWeight="Bold" FontSize="18" Margin="2 2 0 0" 
                    Content="{Binding CurLightChannel.CurLightValue}"/>
                <!--<Label Foreground="Black" FontWeight="Bold" FontSize="18" Margin="2 2 0 0">
                <Label.Content>
                    <MultiBinding Converter="{StaticResource LightvalueConverter}">
                        <Binding Path="AssignedCamera.LightValueChanged"/>
                        <Binding Path="AssignedCamera"/>
                        <Binding Path="CurCameraLightType"/>
                    </MultiBinding>
                </Label.Content>
            </Label>-->

        </Button>

        <RepeatButton AutomationProperties.AutomationId="LightValueDownrbtn" Grid.Row="1" Grid.Column="3" Margin="2 2 0 0" 
                      Command="{Binding LightValueDownCommand}" 
                      Style="{DynamicResource DisableLockRepeatBtnStyle}">
            <RepeatButton.Content>
                <ed:BlockArrow Fill="Black" Orientation="Down" Stroke="Black" Height="20" Width="20"/>
            </RepeatButton.Content>
        </RepeatButton >

        <Viewbox Grid.RowSpan="2" Grid.ColumnSpan="4" Width="24" Height="24" VerticalAlignment="Top" HorizontalAlignment="Center" 
                     Visibility="{Binding Path = IsEnabled, ElementName=ucwindow, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Canvas Width="24" Height="24">
                <Canvas.Effect>
                    <DropShadowEffect Color="Green" Direction="90" Opacity="1" BlurRadius="2" ShadowDepth ="3"></DropShadowEffect>
                </Canvas.Effect>
                <Path Data="M12,17A2,2 0 0,0 14,15C14,13.89 13.1,13 12,13A2,2 0 0,0 10,15A2,2 0 0,0 12,17M18,8A2,2 0 0,1 20,10V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V10C4,8.89 4.9,8 6,8H7V6A5,5 0 0,1 12,1A5,5 0 0,1 17,6V8H18M12,3A3,3 0 0,0 9,6V8H15V6A3,3 0 0,0 12,3Z" 
                          Fill="#FEBE38">
                </Path>
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
