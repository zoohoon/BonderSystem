<UserControl x:Class="SystemPult.AxisPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SystemPult"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        </Grid.Resources>
        <Label Grid.Row="0" Background="Black" Foreground="White" Content="{Binding AxisObject.AxisType.Value}" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,0,0,0"/>
        <Label Grid.Row="1" Background="Black" Content="{Binding AxisObject.Status.State}" FontSize="15" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,0,0,0" />
        <Button Grid.Row="2" Background="LightGray" Content="POS" Visibility="{Binding PosButtonVisibility, Converter={StaticResource ResourceKey=BoolToVisConverter}}" FontSize="15" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,0,0,2" Command="{Binding PosRelMoveCommand}"/>
        <Button Grid.Row="3" Background="LightGray" Content="HOMING" Visibility="{Binding NegButtonVisibility,Converter={StaticResource ResourceKey=BoolToVisConverter}}" FontSize="15" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,0,0,2" Command="{Binding HomingCommand}"/>
        <Button Grid.Row="4" Background="LightGray" Content="NEG" Visibility="{Binding NegButtonVisibility, Converter={StaticResource ResourceKey=BoolToVisConverter}}" FontSize="15" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,0,0,2" Command="{Binding NegRelMoveCommand}"/>
        <TextBox Grid.Row="5" Background="DimGray" Text="{Binding RelMoveStepDist}" Foreground="Black" FontSize="20" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,2,0,0" Width="150"/>
        <Label Grid.Row="6" Background="Black" Content="{Binding AxisObject.Status.RawPosition.Actual}" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,0,0,0"
               ContentStringFormat="F0"/>
        <Label Grid.Row="7" Background="Black" Content="{Binding AxisObject.Status.IsLimitSensor}" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" Margin="4 0 0 0"/>
        <Label Grid.Row="8" Background="Black" Content="{Binding AxisObject.Status.IsHomeSensor}" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" Margin="4 0 0 0"/>
    </Grid>
</UserControl>
