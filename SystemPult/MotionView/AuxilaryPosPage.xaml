<UserControl x:Class="SystemPult.AuxilaryPosPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SystemPult"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Background="Black" Foreground="White" Content="Z0AuxPos:" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,0,0,0"/>
        <Label Grid.Row="1" Background="Black" Foreground="White" Content="Z1AuxPos:" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,0,0,0"/>
        <Label Grid.Row="2" Background="Black" Foreground="White" Content="Z2AuxPos:" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,0,0,0"/>
        <Label Grid.Row="3" Background="Black" Foreground="White" Content="ForcedValue:" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,0,0,0"/>
        <Label Grid.Row="4" Background="Black" Foreground="White" Content="DtoPRatio:" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,0,0,0"/>
        <Label Grid.Row="5" Background="Black" Foreground="White" Content="SetPos0:" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,0,0,0"/>
        <Label Grid.Row="6" Background="Black" Foreground="White" Content="SetPos1:" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,0,0,0"/>
        <Label Grid.Row="7" Background="Black" Foreground="White" Content="SetPos2:" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,0,0,0"/>

        <Label Grid.Row="0" Grid.Column="1" Background="Black" Foreground="White" Content="{Binding AxisZ0.Status.AuxPosition}" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,0,0,0"/>
        <Label Grid.Row="1" Grid.Column="1" Background="Black" Foreground="White" Content="{Binding AxisZ1.Status.AuxPosition}" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,0,0,0"/>
        <Label Grid.Row="2" Grid.Column="1" Background="Black" Foreground="White" Content="{Binding AxisZ2.Status.AuxPosition}" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,0,0,0"/>
        <Label Grid.Row="3" Grid.Column="1" Background="Black" Foreground="White" Content="{Binding ForcedValue, StringFormat= 0:0.0}" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,0,0,0"/>
        <Label Grid.Row="5" Grid.Column="1" Background="Black" Foreground="White" Content="{Binding FSensorOrg0}" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,0,0,0"/>
        <Label Grid.Row="6" Grid.Column="1" Background="Black" Foreground="White" Content="{Binding FSensorOrg1}" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,0,0,0"/>
        <Label Grid.Row="7" Grid.Column="1" Background="Black" Foreground="White" Content="{Binding FSensorOrg2}" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,0,0,0"/>
        <TextBox Grid.Row="4" Grid.Column="1"  Foreground="White" Text="{Binding SubDtoPRatio}" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,0,0,0"/>

        <Button Grid.Row="8" Grid.Column="1" Width="100" FontSize="16" Margin="4 0 0 0" Content="SetValue" Command="{Binding SetOrgValueCommand}"/>


    </Grid>
</UserControl>
