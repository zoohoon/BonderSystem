<Window x:Class="LoaderRecoveryControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoaderRecoveryControl"
        xmlns:conv="clr-namespace:ValueConverters;assembly=ValueConverters"
        mc:Ignorable="d"
         Title="Loader Recovery" Height="800" Width="800" Background="DimGray" >

    <Window.Resources>
        <ResourceDictionary>
            <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <conv:BoolToVisibleOrHiddenConverter x:Key="BtoVConv3" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Column="0" Grid.Row="0" x:Name="errorLabel" FontSize="20" Foreground="White">Error Msg:</Label>
                <Label Grid.Column="1" Grid.Row="0" x:Name="lbErrorCode" FontSize="20"></Label>
                <Label Grid.Column="0" Grid.Row="1" FontSize="20" Foreground="White" >Details:</Label>
                <Label Grid.Column="1" Grid.Row="1" x:Name="lbErrorDetail" FontSize="20" Foreground="White"></Label>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Margin="0 30 0 0">
            <StackPanel>
                <GroupBox Visibility="{Binding isRecoveryBeh, Converter={StaticResource BtoVConv3}}" Header="Recovery Sequence" FontSize="20" Height="300">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.7*"/>
                            <RowDefinition Height="0.3*"/>
                        </Grid.RowDefinitions>
                        <ListView ItemsSource="{Binding RecoveryBehavior.RecoveryStepList}">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border BorderThickness="2" Margin="5">
                                                    <Border.BorderBrush>
                                                        <MultiBinding Converter="{StaticResource BoolToColorConverter}">
                                                            <Binding Path="StepIdx"/>
                                                            <Binding Path="DataContext.CurrStepIdx" RelativeSource="{RelativeSource AncestorType={x:Type Window}}"/>
                                                            <Binding Path="ExecuteDone"/>
                                                        </MultiBinding>
                                                    </Border.BorderBrush>
                                                    <ContentPresenter />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.8*"/>
                                            <ColumnDefinition Width="0.2*"/>
                                        </Grid.ColumnDefinitions>
                                            <Label Grid.Column="0" FontSize="20" Content="{Binding Description}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <Button Grid.Row="1" FontSize="30" Content="Execute" IsEnabled="{Binding ExeButtonEnable}" Command="{Binding ExecuteCommand}"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3" Grid.ColumnSpan="2" VerticalAlignment="Bottom">
            <StackPanel>
                <Label FontSize="20" Foreground="Yellow" Margin="10,20,10,10">※ Please check the condition of the wafer or card directly and then recover it.</Label>
                <CheckBox x:Name="cbCheck" Foreground="White" VerticalAlignment="Center"  FontSize="20" Margin="10,0,0,0">I understand and Agree with all of the above.</CheckBox>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="4"  Grid.Column="0">
            <Button Name="OkBtn" IsEnabled="{Binding RecoveryFinished}" Click="OkBtn_Click" FontSize="30">OK</Button>
        </Grid>
        <Grid Grid.Row="5"  Grid.Column="1">
            <Button Name="CancelBtn" Click="CancelBtn_Click" FontSize="30">CANCEL</Button>
        </Grid>
    </Grid>
</Window>
