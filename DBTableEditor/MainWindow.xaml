<Window x:Class="DBTableEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
        xmlns:local="clr-namespace:DBTableEditor"
        mc:Ignorable="d"
        Title="Param Element Table Editor" Height="850" Width="1700">
    <Window.Resources>
        <local:CellColorConverter x:Key="CellColorConverter"/>
        <Style x:Key="CsvCellStyle" TargetType="DataGridCell" >
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF26ABEA"/>
                    <Setter Property="BorderBrush" Value="#FF26ABEA"/>
                </Trigger>
            </Style.Triggers>
            <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource Self}, Converter={StaticResource CellColorConverter}}"/>
            <Setter Property="BorderThickness" Value="1,0,1,1"/>
            <Setter Property="BorderBrush" Value="#FF000000"/>
        </Style>
        <!--<Style x:Key="RowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="{Binding ColorColumn}"/>
        </Style>-->
        <BooleanToVisibilityConverter x:Key="bool2vis" />
    </Window.Resources>
    <TabControl>
        <TabItem Header="Table Edit" DataContext="{Binding TableEditTabVM }">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <UniformGrid Grid.Row="0" Columns="3" Rows="1">
                        <Button Content="System" Command="{Binding ChangeSystemTableButtonCommand}"/>
                        <Button Content="Device" Command="{Binding ChangeDeviceTableButtonCommand}"/>
                        <Button Content="Common" Command="{Binding ChangeCommonTableButtonCommand}"/>
                    </UniformGrid>
                    <DataGrid Grid.Row="1" ItemsSource="{Binding DBDataTable.DefaultView}" SelectionMode="Single" CanUserAddRows="False"  CanUserDeleteRows="False" CanUserReorderColumns="False">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="CellEditEnding">
                                <ei:CallMethodAction TargetObject="{Binding}" MethodName="MainWindow_CellEditEnding"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </DataGrid>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="10*"/>
                    </Grid.RowDefinitions>
                    <ItemsControl ItemsSource="{Binding ColumnSearcherList}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Content="{Binding Content}" VerticalAlignment="Center" Foreground="Black"/>
                                    <TextBox Grid.Column="1" Text="{Binding Text}" VerticalAlignment="Center" Foreground="Black"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="1"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                    <Grid Grid.Row="1" >
                        <UniformGrid Columns="2">
                            <Button Content="Search" Command="{Binding SearchCommand}"/>
                            <Button Content="Clear" Command="{Binding ClearColumnCommand}"/>
                        </UniformGrid>
                    </Grid>
                </Grid>
            </Grid>
        </TabItem>
        <TabItem Header="Update" DataContext="{Binding UpdateTabVM}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <UniformGrid Grid.Row="0" Columns="2">
                    <GroupBox Header="Table" FontSize="10">
                        <UniformGrid Columns="3">
                            <Button Content="System" Command="{Binding ChangeSystemTableButtonCommand}" IsEnabled="{Binding SystemTableBtnEnable}" Margin="0" Padding="0"/>
                            <Button Content="Device" Command="{Binding ChangeDeviceTableButtonCommand}" IsEnabled="{Binding DeviceTableBtnEnable}" Margin="0" Padding="0"/>
                            <Button Content="Common" Command="{Binding ChangeCommonTableButtonCommand}" IsEnabled="{Binding CommonTableBtnEnable}" Margin="0" Padding="0"/>
                        </UniformGrid>
                    </GroupBox>
                    <GroupBox Header="Update" FontSize="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding CurrentTable}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <Button Grid.Column="1" Content="CSV Export" Command="{Binding CsvExportButtonCommand}"/>
                            <Button Grid.Column="2" Content="CSV Overwrite" Command="{Binding CsvOverwriteButtonCommand}"/>
                            <Grid Grid.Column="3" >
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0" Text="Update Csv(Source)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding UpdateCsvFilePath}" IsReadOnly="True"/>
                                <TextBlock Grid.Row="1" Text="Current Csv(Target)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CurrentCsvFilePath}" IsReadOnly="True"/>
                            </Grid>
                        </Grid>
                    </GroupBox>
                </UniformGrid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Header="Current CSV(Target)">
                        <DataGrid x:Name="currentCsvDataGrid" Grid.Row="0" ItemsSource="{Binding CurrentCsvDataTable.DefaultView}" 
                                  SelectedCellsChanged="CurrentCsvDataGrid_SelectedCellsChanged"
                                  AutoGenerateColumns="False" SelectionMode="Single" CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" IsReadOnly="True"
                                  SelectedItem="{Binding CurrentCsvSelectedItem}" CellStyle="{StaticResource CsvCellStyle}" ScrollViewer.ScrollChanged="CurrentCsvDataGrid_ScrollChanged" >

                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding PropertyPath}" Header="PropertyPath" />
                                <DataGridTextColumn Binding="{Binding ElementID}" Header="ElementID" />
                                <DataGridTextColumn Binding="{Binding ElementName}" Header="ElementName" />
                                <DataGridTextColumn Binding="{Binding ElementAdmin}" Header="ElementAdmin" />
                                <DataGridTextColumn Binding="{Binding AssociateElementID}" Header="AssociateElementID" />
                                <DataGridTextColumn Binding="{Binding CategoryID}" Header="CategoryID" />
                                <DataGridTextColumn Binding="{Binding Unit}" Header="Unit"/>
                                <DataGridTextColumn Binding="{Binding LowerLimit}" Header="LowerLimit"  Width="80"/>
                                <DataGridTextColumn Binding="{Binding UpperLimit}" Header="UpperLimit"  Width="80"/>
                                <DataGridTextColumn Binding="{Binding ReadMaskingLevel}" Header="ReadMaskingLevel"  Width="80"/>
                                <DataGridTextColumn Binding="{Binding WriteMaskingLevel}" Header="WriteMaskingLevel"  Width="80"/>
                                <DataGridTextColumn Binding="{Binding Description}" Header="Description" Width="400"/>
                                <DataGridTextColumn Binding="{Binding VID}" Header="VID" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                    <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ShowsPreview="True" Width="5"/>
                    <GroupBox Grid.Column="2" Header="Update CSV(Source)">
                        <DataGrid x:Name="updateCsvDataGrid" Grid.Row="0" ItemsSource="{Binding UpdateCsvDataTable.DefaultView}" 
                                  AutoGenerateColumns="False" SelectionMode="Single" CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False"
                                  SelectedItem="{Binding UpdateCsvSelectedItem}" CellStyle="{StaticResource CsvCellStyle}" ScrollViewer.ScrollChanged="UpdateCsvDataGrid_ScrollChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding PropertyPath}" Header="PropertyPath" />
                                <DataGridTextColumn Binding="{Binding ElementID}" Header="ElementID" />
                                <DataGridTextColumn Binding="{Binding ElementName}" Header="ElementName" />
                                <DataGridTextColumn Binding="{Binding ElementAdmin}" Header="ElementAdmin" />
                                <DataGridTextColumn Binding="{Binding AssociateElementID}" Header="AssociateElementID" />
                                <DataGridTextColumn Binding="{Binding CategoryID}" Header="CategoryID" />
                                <DataGridTextColumn Binding="{Binding Unit}" Header="Unit" />
                                <DataGridTextColumn Binding="{Binding LowerLimit}" Header="LowerLimit"  Width="80"/>
                                <DataGridTextColumn Binding="{Binding UpperLimit}" Header="UpperLimit"  Width="80"/>
                                <DataGridTextColumn Binding="{Binding ReadMaskingLevel}" Header="ReadMaskingLevel"  Width="80"/>
                                <DataGridTextColumn Binding="{Binding WriteMaskingLevel}" Header="WriteMaskingLevel"  Width="80"/>
                                <DataGridTextColumn Binding="{Binding Description}" Header="Description" Width="400"/>
                                <DataGridTextColumn Binding="{Binding VID}" Header="VID" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
                <UniformGrid Grid.Row="2" Columns="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="1">
                            <UniformGrid Columns="1">
                                <!--SEARCH-->
                                <Border BorderBrush="Black" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0"/>
                                        <Button Content="SEARCH" Grid.Column="1"/>
                                    </Grid>
                                </Border>
                                <!--EXPLORER-->
                                <UniformGrid Columns="5">
                                    <Button Content="&lt;&lt;" Command="{Binding Prev10xPageCommand}" FontSize="14"/>
                                    <Button Content="&lt;" Command="{Binding PrevPageCommand}" FontSize="14"/>
                                    <UniformGrid Columns="3">
                                        <TextBlock Text="{Binding CurPageIndex}"  FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                        <TextBlock Text="/"  FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding TotalPageCount}"  FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    </UniformGrid>
                                    <Button Content="&gt;" Command="{Binding NextPageCommand}" FontSize="14"/>
                                    <Button Content="&gt;&gt;" Command="{Binding Next10xPageCommand}" FontSize="14"/>
                                </UniformGrid>
                                <!--BACKUP-->
                                <UniformGrid Columns="2">
                                    <Button Content="Backup" Command="{Binding BackUpButtonCommand}"/>
                                    <Button Content="Backup Meta Data" Command="{Binding BackUpMetaDataButtonCommand}"/>
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                        
                        <!--Full Backup-->
                        <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <ScrollViewer>
                                    <ItemsControl ItemsSource="{Binding ColumnCheckerList}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="1*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Label Grid.Column="0" Content="{Binding Content}"/>
                                                    <CheckBox Grid.Column="1" HorizontalAlignment="Center" IsChecked="{Binding IsChecked}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid Columns="1"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </ScrollViewer>
                                <UniformGrid Grid.Column="1" Columns="1">
                                    <Button Content="Select All" Command="{Binding SelectAllColumnCommand}"/>
                                    <Button Content="Select None" Command="{Binding SelectNoneColumnCommand}"/>
                                    <Button Content="Full Backup" Command="{Binding FullBackupCommand}"/>
                                </UniformGrid>
                            </Grid>
                        </Border>

                    </Grid>

                    <UniformGrid Columns="3" Rows="2">
                        <Button Content="Delete" Command="{Binding DeleteButtonCommand}"/>
                    </UniformGrid>
                </UniformGrid>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
